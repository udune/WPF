<Window x:Class="ch33_애니메이션.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch33_애니메이션"
        mc:Ignorable="d"
        Title="ch33 애니메이션 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <TabItem Header="기본 애니메이션">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="DoubleAnimation 기본 사용법" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="WPF 애니메이션은 속성 값을 시간에 따라 부드럽게 변경합니다. DoubleAnimation은 숫자 타입 속성을 애니메이션하는 가장 기본적인 방법입니다."
                               TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <GroupBox Header="1. Opacity 애니메이션 (페이드 인)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Loaded 이벤트 시 Opacity를 0에서 1로 변경하여 페이드 인 효과를 만듭니다:" Margin="0,0,0,10"/>
                            <Border Background="LightBlue" Padding="20" CornerRadius="5">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <TextBlock Text="로드 시 페이드 인 효과" FontSize="16" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Border Background=&quot;LightBlue&quot;&gt;&#10;    &lt;Border.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;Loaded&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetProperty=&quot;Opacity&quot; &#10;                        From=&quot;0&quot; &#10;                        To=&quot;1&quot; &#10;                        Duration=&quot;0:0:2&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Border.Triggers&gt;&#10;&lt;/Border&gt;"/>
                    </Expander>

                    <GroupBox Header="2. Width 애니메이션" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="마우스를 올리면 너비가 확장됩니다:" Margin="0,0,0,10"/>
                            <Border Background="Salmon" Height="50" Width="100" CornerRadius="5">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width" To="300" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width" To="100" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <TextBlock Text="Hover" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Border Width=&quot;100&quot; Height=&quot;50&quot;&gt;&#10;    &lt;Border.Triggers&gt;&#10;        &lt;!-- 마우스 진입 시 확장 --&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;MouseEnter&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetProperty=&quot;Width&quot; &#10;                        To=&quot;300&quot; Duration=&quot;0:0:0.5&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;        &#10;        &lt;!-- 마우스 이탈 시 축소 --&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;MouseLeave&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetProperty=&quot;Width&quot; &#10;                        To=&quot;100&quot; Duration=&quot;0:0:0.5&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Border.Triggers&gt;&#10;&lt;/Border&gt;"/>
                    </Expander>

                    <GroupBox Header="3. Duration 형식" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Duration은 시:분:초 형식으로 지정합니다:" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#E3F2FD" Padding="10" Margin="0,0,5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">형식</TextBlock>
                                        <TextBlock FontFamily="Consolas" FontSize="11">
                                            시:분:초&#x0a;0:0:1 = 1초&#x0a;0:0:0.5 = 0.5초&#x0a;0:1:30 = 1분 30초
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <Border Background="#FFF3E0" Padding="10" Margin="5,0,0,0" CornerRadius="5" Grid.Column="1">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">From/To 속성</TextBlock>
                                        <TextBlock FontFamily="Consolas" FontSize="11">
                                            From: 시작 값&#x0a;To: 종료 값&#x0a;By: 상대적 증가량
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- Duration 예제 --&gt;&#10;Duration=&quot;0:0:1&quot;     &lt;!-- 1초 --&gt;&#10;Duration=&quot;0:0:0.5&quot;   &lt;!-- 0.5초 (500ms) --&gt;&#10;Duration=&quot;0:0:2.5&quot;   &lt;!-- 2.5초 --&gt;&#10;Duration=&quot;0:1:0&quot;     &lt;!-- 1분 --&gt;&#10;&#10;&lt;!-- From/To/By 예제 --&gt;&#10;&lt;DoubleAnimation From=&quot;0&quot; To=&quot;100&quot;/&gt;  &lt;!-- 0에서 100으로 --&gt;&#10;&lt;DoubleAnimation To=&quot;100&quot;/&gt;          &lt;!-- 현재값에서 100으로 --&gt;&#10;&lt;DoubleAnimation From=&quot;0&quot;/&gt;          &lt;!-- 0에서 원래값으로 --&gt;&#10;&lt;DoubleAnimation By=&quot;50&quot;/&gt;           &lt;!-- 현재값에서 +50 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Storyboard">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Storyboard 활용" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="Storyboard는 여러 애니메이션을 그룹화하고 제어하는 컨테이너입니다. 동시 실행, 순차 실행, 반복 등을 설정할 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <GroupBox Header="1. 여러 애니메이션 동시 실행" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 크기와 투명도가 동시에 변합니다:" Margin="0,0,0,10"/>
                            <Button Content="클릭하세요" Width="150" Height="50" Background="MediumPurple" Foreground="White" FontWeight="Bold">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width" To="250" Duration="0:0:0.5" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Height" To="80" Duration="0:0:0.5" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.5" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Storyboard&gt;&#10;    &lt;!-- 세 애니메이션이 동시에 실행 --&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Width&quot; &#10;                     To=&quot;250&quot; Duration=&quot;0:0:0.5&quot; AutoReverse=&quot;True&quot;/&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Height&quot; &#10;                     To=&quot;80&quot; Duration=&quot;0:0:0.5&quot; AutoReverse=&quot;True&quot;/&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Opacity&quot; &#10;                     To=&quot;0.5&quot; Duration=&quot;0:0:0.5&quot; AutoReverse=&quot;True&quot;/&gt;&#10;&lt;/Storyboard&gt;&#10;&#10;&lt;!-- AutoReverse=&quot;True&quot;: 애니메이션 후 원래 값으로 되돌아감 --&gt;"/>
                    </Expander>

                    <GroupBox Header="2. 순차 실행 (BeginTime)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 순서대로 애니메이션이 실행됩니다:" Margin="0,0,0,10"/>
                            <Button Content="순차 애니메이션" Width="150" Height="50" Background="Teal" Foreground="White" FontWeight="Bold">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width" To="250" Duration="0:0:0.3" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Height" To="80" Duration="0:0:0.3" BeginTime="0:0:0.3" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.3" Duration="0:0:0.3" BeginTime="0:0:0.6" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Storyboard&gt;&#10;    &lt;!-- 즉시 시작 --&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Width&quot; &#10;                     To=&quot;250&quot; Duration=&quot;0:0:0.3&quot;/&gt;&#10;    &#10;    &lt;!-- 0.3초 후 시작 --&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Height&quot; &#10;                     To=&quot;80&quot; Duration=&quot;0:0:0.3&quot; &#10;                     BeginTime=&quot;0:0:0.3&quot;/&gt;&#10;    &#10;    &lt;!-- 0.6초 후 시작 --&gt;&#10;    &lt;DoubleAnimation Storyboard.TargetProperty=&quot;Opacity&quot; &#10;                     To=&quot;0.3&quot; Duration=&quot;0:0:0.3&quot; &#10;                     BeginTime=&quot;0:0:0.6&quot;/&gt;&#10;&lt;/Storyboard&gt;"/>
                    </Expander>

                    <GroupBox Header="3. 무한 반복 (RepeatBehavior)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="무한히 반복되는 깜빡임 애니메이션:" Margin="0,0,0,10"/>
                            <Border Background="OrangeRed" Width="100" Height="50" CornerRadius="5">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.5" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <TextBlock Text="깜빡임" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- RepeatBehavior 옵션 --&gt;&#10;&#10;&lt;!-- 무한 반복 --&gt;&#10;&lt;Storyboard RepeatBehavior=&quot;Forever&quot;&gt;&#10;    &lt;DoubleAnimation .../&gt;&#10;&lt;/Storyboard&gt;&#10;&#10;&lt;!-- 3번 반복 --&gt;&#10;&lt;Storyboard RepeatBehavior=&quot;3x&quot;&gt;&#10;    &lt;DoubleAnimation .../&gt;&#10;&lt;/Storyboard&gt;&#10;&#10;&lt;!-- 10초 동안 반복 --&gt;&#10;&lt;Storyboard RepeatBehavior=&quot;0:0:10&quot;&gt;&#10;    &lt;DoubleAnimation .../&gt;&#10;&lt;/Storyboard&gt;"/>
                    </Expander>

                    <GroupBox Header="4. 대상 요소 지정 (TargetName)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="버튼 클릭 시 다른 요소를 애니메이션합니다:" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="애니메이션 시작" Margin="0,0,10,0" Padding="10,5">
                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="targetBorder" Storyboard.TargetProperty="Width" To="200" Duration="0:0:0.5" AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Border x:Name="targetBorder" Background="DodgerBlue" Width="80" Height="40" CornerRadius="5">
                                    <TextBlock Text="대상" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- x:Name으로 대상 지정 --&gt;&#10;&lt;Border x:Name=&quot;targetBorder&quot; Width=&quot;80&quot;/&gt;&#10;&#10;&lt;Button Content=&quot;애니메이션 시작&quot;&gt;&#10;    &lt;Button.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;Button.Click&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;!-- TargetName으로 다른 요소 지정 --&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetName=&quot;targetBorder&quot;&#10;                        Storyboard.TargetProperty=&quot;Width&quot; &#10;                        To=&quot;200&quot; Duration=&quot;0:0:0.5&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Button.Triggers&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="이징 함수">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="EasingFunction으로 자연스러운 애니메이션" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="이징 함수를 사용하면 선형이 아닌 가속/감속 효과로 더 자연스러운 애니메이션을 만들 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <GroupBox Header="1. BounceEase (바운스 효과)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 공이 튀는 것처럼 바운스됩니다:" Margin="0,0,0,10"/>
                            <Canvas Height="150">
                                <Ellipse x:Name="bounceBall" Width="50" Height="50" Fill="Orange" Canvas.Left="10" Canvas.Top="0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="100" Duration="0:0:1" AutoReverse="True">
                                                        <DoubleAnimation.EasingFunction>
                                                            <BounceEase EasingMode="EaseOut" Bounces="3"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </Canvas>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;DoubleAnimation Storyboard.TargetProperty=&quot;(Canvas.Top)&quot; &#10;                 To=&quot;100&quot; Duration=&quot;0:0:1&quot;&gt;&#10;    &lt;DoubleAnimation.EasingFunction&gt;&#10;        &lt;BounceEase EasingMode=&quot;EaseOut&quot; Bounces=&quot;3&quot;/&gt;&#10;    &lt;/DoubleAnimation.EasingFunction&gt;&#10;&lt;/DoubleAnimation&gt;&#10;&#10;&lt;!-- BounceEase 속성 --&gt;&#10;&lt;!-- Bounces: 바운스 횟수 --&gt;&#10;&lt;!-- Bounciness: 탄성 강도 --&gt;"/>
                    </Expander>

                    <GroupBox Header="2. ElasticEase (탄성 효과)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 탄성처럼 늘어났다 줄어듭니다:" Margin="0,0,0,10"/>
                            <Button Content="탄성 효과" Width="120" Height="40" Background="MediumSeaGreen" Foreground="White" FontWeight="Bold">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width" To="250" Duration="0:0:1">
                                                    <DoubleAnimation.EasingFunction>
                                                        <ElasticEase EasingMode="EaseOut" Oscillations="3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;DoubleAnimation Storyboard.TargetProperty=&quot;Width&quot; &#10;                 To=&quot;250&quot; Duration=&quot;0:0:1&quot;&gt;&#10;    &lt;DoubleAnimation.EasingFunction&gt;&#10;        &lt;ElasticEase EasingMode=&quot;EaseOut&quot; Oscillations=&quot;3&quot;/&gt;&#10;    &lt;/DoubleAnimation.EasingFunction&gt;&#10;&lt;/DoubleAnimation&gt;&#10;&#10;&lt;!-- ElasticEase 속성 --&gt;&#10;&lt;!-- Oscillations: 진동 횟수 --&gt;&#10;&lt;!-- Springiness: 탄성 강도 --&gt;"/>
                    </Expander>

                    <GroupBox Header="3. 주요 EasingFunction 종류" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="다양한 이징 함수와 EasingMode:" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#E8F5E9" Padding="10" Margin="0,0,5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">이징 함수</TextBlock>
                                        <TextBlock Text="• QuadraticEase: 2차 곡선" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• CubicEase: 3차 곡선" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• SineEase: 사인 곡선" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• BackEase: 뒤로 당김" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• BounceEase: 바운스" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• ElasticEase: 탄성" FontSize="11" Margin="0,1"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#FFF3E0" Padding="10" Margin="5,0,0,0" CornerRadius="5" Grid.Column="1">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">EasingMode</TextBlock>
                                        <TextBlock Text="• EaseIn: 시작 시 느림" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• EaseOut: 끝날 때 느림" FontSize="11" Margin="0,1"/>
                                        <TextBlock Text="• EaseInOut: 양쪽 느림" FontSize="11" Margin="0,1"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- 다양한 이징 함수 예제 --&gt;&#10;&#10;&lt;!-- 부드러운 시작과 끝 --&gt;&#10;&lt;QuadraticEase EasingMode=&quot;EaseInOut&quot;/&gt;&#10;&#10;&lt;!-- 더 강한 가속 --&gt;&#10;&lt;CubicEase EasingMode=&quot;EaseIn&quot;/&gt;&#10;&#10;&lt;!-- 뒤로 당겼다 앞으로 --&gt;&#10;&lt;BackEase EasingMode=&quot;EaseOut&quot; Amplitude=&quot;0.5&quot;/&gt;&#10;&#10;&lt;!-- 바운스 효과 --&gt;&#10;&lt;BounceEase EasingMode=&quot;EaseOut&quot; Bounces=&quot;3&quot;/&gt;&#10;&#10;&lt;!-- 탄성 효과 --&gt;&#10;&lt;ElasticEase EasingMode=&quot;EaseOut&quot; Oscillations=&quot;3&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Transform 애니메이션">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="RenderTransform 애니메이션" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="RenderTransform을 사용하면 회전, 크기 조절, 이동 등의 변환 애니메이션을 적용할 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <GroupBox Header="1. 회전 애니메이션 (RotateTransform)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 360도 회전합니다:" Margin="0,0,0,10"/>
                            <Button Content="회전" Width="80" Height="80" Background="Crimson" Foreground="White" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <RotateTransform x:Name="rotateTransform" Angle="0"/>
                                </Button.RenderTransform>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="rotateTransform" Storyboard.TargetProperty="Angle" By="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Button Content=&quot;회전&quot; RenderTransformOrigin=&quot;0.5,0.5&quot;&gt;&#10;    &lt;!-- RenderTransformOrigin: 회전 중심점 (0.5,0.5 = 가운데) --&gt;&#10;    &#10;    &lt;Button.RenderTransform&gt;&#10;        &lt;RotateTransform x:Name=&quot;rotateTransform&quot; Angle=&quot;0&quot;/&gt;&#10;    &lt;/Button.RenderTransform&gt;&#10;    &#10;    &lt;Button.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;Button.Click&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetName=&quot;rotateTransform&quot;&#10;                        Storyboard.TargetProperty=&quot;Angle&quot; &#10;                        By=&quot;360&quot; Duration=&quot;0:0:1&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Button.Triggers&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>

                    <GroupBox Header="2. 크기 애니메이션 (ScaleTransform)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="마우스를 올리면 확대됩니다:" Margin="0,0,0,10"/>
                            <Button Content="확대" Width="100" Height="50" Background="SlateBlue" Foreground="White" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                </Button.RenderTransform>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1.3" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1.3" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Button RenderTransformOrigin=&quot;0.5,0.5&quot;&gt;&#10;    &lt;Button.RenderTransform&gt;&#10;        &lt;ScaleTransform x:Name=&quot;scaleTransform&quot; ScaleX=&quot;1&quot; ScaleY=&quot;1&quot;/&gt;&#10;    &lt;/Button.RenderTransform&gt;&#10;    &#10;    &lt;Button.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;MouseEnter&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetName=&quot;scaleTransform&quot;&#10;                        Storyboard.TargetProperty=&quot;ScaleX&quot; &#10;                        To=&quot;1.3&quot; Duration=&quot;0:0:0.2&quot;/&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetName=&quot;scaleTransform&quot;&#10;                        Storyboard.TargetProperty=&quot;ScaleY&quot; &#10;                        To=&quot;1.3&quot; Duration=&quot;0:0:0.2&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Button.Triggers&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>

                    <GroupBox Header="3. 이동 애니메이션 (TranslateTransform)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="클릭하면 오른쪽으로 이동합니다:" Margin="0,0,0,10"/>
                            <Button Content="이동" Width="80" Height="40" Background="DarkCyan" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left">
                                <Button.RenderTransform>
                                    <TranslateTransform x:Name="translateTransform" X="0"/>
                                </Button.RenderTransform>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="translateTransform" Storyboard.TargetProperty="X" To="200" Duration="0:0:0.5" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Button&gt;&#10;    &lt;Button.RenderTransform&gt;&#10;        &lt;TranslateTransform x:Name=&quot;translateTransform&quot; X=&quot;0&quot;/&gt;&#10;    &lt;/Button.RenderTransform&gt;&#10;    &#10;    &lt;Button.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;Button.Click&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;DoubleAnimation &#10;                        Storyboard.TargetName=&quot;translateTransform&quot;&#10;                        Storyboard.TargetProperty=&quot;X&quot; &#10;                        To=&quot;200&quot; Duration=&quot;0:0:0.5&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Button.Triggers&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>

                    <GroupBox Header="4. Transform 종류 요약" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="WPF에서 사용 가능한 Transform들:" Margin="0,0,0,10"/>
                            <Border Background="#F5F5F5" Padding="10" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="RotateTransform" FontWeight="Bold" Grid.Row="0" Margin="0,2"/>
                                    <TextBlock Text="회전 (Angle)" Grid.Row="0" Grid.Column="1" Margin="10,2,0,2"/>
                                    <TextBlock Text="ScaleTransform" FontWeight="Bold" Grid.Row="1" Margin="0,2"/>
                                    <TextBlock Text="크기 조절 (ScaleX, ScaleY)" Grid.Row="1" Grid.Column="1" Margin="10,2,0,2"/>
                                    <TextBlock Text="TranslateTransform" FontWeight="Bold" Grid.Row="2" Margin="0,2"/>
                                    <TextBlock Text="이동 (X, Y)" Grid.Row="2" Grid.Column="1" Margin="10,2,0,2"/>
                                    <TextBlock Text="SkewTransform" FontWeight="Bold" Grid.Row="3" Margin="0,2"/>
                                    <TextBlock Text="기울이기 (AngleX, AngleY)" Grid.Row="3" Grid.Column="1" Margin="10,2,0,2"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- 여러 Transform 조합 (TransformGroup) --&gt;&#10;&lt;Button.RenderTransform&gt;&#10;    &lt;TransformGroup&gt;&#10;        &lt;RotateTransform x:Name=&quot;rotate&quot;/&gt;&#10;        &lt;ScaleTransform x:Name=&quot;scale&quot;/&gt;&#10;        &lt;TranslateTransform x:Name=&quot;translate&quot;/&gt;&#10;    &lt;/TransformGroup&gt;&#10;&lt;/Button.RenderTransform&gt;&#10;&#10;&lt;!-- 각각 애니메이션 --&gt;&#10;&lt;DoubleAnimation &#10;    Storyboard.TargetName=&quot;rotate&quot; &#10;    Storyboard.TargetProperty=&quot;Angle&quot; To=&quot;45&quot;/&gt;&#10;&lt;DoubleAnimation &#10;    Storyboard.TargetName=&quot;scale&quot; &#10;    Storyboard.TargetProperty=&quot;ScaleX&quot; To=&quot;1.5&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="ColorAnimation">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="ColorAnimation으로 색상 변경" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="ColorAnimation을 사용하면 색상을 부드럽게 전환할 수 있습니다. Background, Foreground 등의 색상 속성에 적용합니다."
                               TextWrapping="Wrap" Margin="0,0,0,20"/>

                    <GroupBox Header="1. 배경색 애니메이션" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="마우스를 올리면 배경색이 변합니다:" Margin="0,0,0,10"/>
                            <Border Width="200" Height="60" CornerRadius="5">
                                <Border.Background>
                                    <SolidColorBrush x:Name="bgBrush" Color="SteelBlue"/>
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="bgBrush" Storyboard.TargetProperty="Color" To="Coral" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="bgBrush" Storyboard.TargetProperty="Color" To="SteelBlue" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <TextBlock Text="Hover Me" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Border Width=&quot;200&quot; Height=&quot;60&quot;&gt;&#10;    &lt;!-- SolidColorBrush에 이름 지정 --&gt;&#10;    &lt;Border.Background&gt;&#10;        &lt;SolidColorBrush x:Name=&quot;bgBrush&quot; Color=&quot;SteelBlue&quot;/&gt;&#10;    &lt;/Border.Background&gt;&#10;    &#10;    &lt;Border.Triggers&gt;&#10;        &lt;EventTrigger RoutedEvent=&quot;MouseEnter&quot;&gt;&#10;            &lt;BeginStoryboard&gt;&#10;                &lt;Storyboard&gt;&#10;                    &lt;ColorAnimation &#10;                        Storyboard.TargetName=&quot;bgBrush&quot;&#10;                        Storyboard.TargetProperty=&quot;Color&quot; &#10;                        To=&quot;Coral&quot; Duration=&quot;0:0:0.5&quot;/&gt;&#10;                &lt;/Storyboard&gt;&#10;            &lt;/BeginStoryboard&gt;&#10;        &lt;/EventTrigger&gt;&#10;    &lt;/Border.Triggers&gt;&#10;&lt;/Border&gt;"/>
                    </Expander>

                    <GroupBox Header="2. 무지개 색상 순환" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="무한 반복하며 색상이 변합니다:" Margin="0,0,0,10"/>
                            <Border Width="200" Height="60" CornerRadius="5">
                                <Border.Background>
                                    <SolidColorBrush x:Name="rainbowBrush" Color="Red"/>
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Orange" Duration="0:0:1" BeginTime="0:0:0"/>
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Yellow" Duration="0:0:1" BeginTime="0:0:1"/>
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Green" Duration="0:0:1" BeginTime="0:0:2"/>
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Blue" Duration="0:0:1" BeginTime="0:0:3"/>
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Purple" Duration="0:0:1" BeginTime="0:0:4"/>
                                                <ColorAnimation Storyboard.TargetName="rainbowBrush" Storyboard.TargetProperty="Color" To="Red" Duration="0:0:1" BeginTime="0:0:5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <TextBlock Text="Rainbow" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;Storyboard RepeatBehavior=&quot;Forever&quot;&gt;&#10;    &lt;ColorAnimation To=&quot;Orange&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:0&quot;/&gt;&#10;    &lt;ColorAnimation To=&quot;Yellow&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:1&quot;/&gt;&#10;    &lt;ColorAnimation To=&quot;Green&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:2&quot;/&gt;&#10;    &lt;ColorAnimation To=&quot;Blue&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:3&quot;/&gt;&#10;    &lt;ColorAnimation To=&quot;Purple&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:4&quot;/&gt;&#10;    &lt;ColorAnimation To=&quot;Red&quot; Duration=&quot;0:0:1&quot; BeginTime=&quot;0:0:5&quot;/&gt;&#10;&lt;/Storyboard&gt;&#10;&#10;&lt;!-- BeginTime으로 순차 실행 --&gt;"/>
                    </Expander>

                    <GroupBox Header="3. 애니메이션 타입 요약" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="WPF 애니메이션 타입별 대상 속성:" Margin="0,0,0,10"/>
                            <Border Background="#F5F5F5" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontFamily="Consolas" FontSize="11">
                                        DoubleAnimation: Width, Height, Opacity, Angle...&#x0a;
                                        ColorAnimation: Color (Background, Foreground)&#x0a;
                                        PointAnimation: Point (위치)&#x0a;
                                        ThicknessAnimation: Margin, Padding, BorderThickness
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- DoubleAnimation: 숫자 값 --&gt;&#10;&lt;DoubleAnimation Storyboard.TargetProperty=&quot;Opacity&quot;/&gt;&#10;&lt;DoubleAnimation Storyboard.TargetProperty=&quot;Width&quot;/&gt;&#10;&#10;&lt;!-- ColorAnimation: 색상 값 --&gt;&#10;&lt;ColorAnimation Storyboard.TargetProperty=&quot;Color&quot;/&gt;&#10;&#10;&lt;!-- ThicknessAnimation: Thickness 값 --&gt;&#10;&lt;ThicknessAnimation Storyboard.TargetProperty=&quot;Margin&quot; &#10;                    To=&quot;20,20,20,20&quot;/&gt;&#10;&#10;&lt;!-- PointAnimation: Point 값 --&gt;&#10;&lt;PointAnimation Storyboard.TargetProperty=&quot;Center&quot; &#10;                To=&quot;100,100&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="4. 실전 활용 팁" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <TextBlock Text="애니메이션 사용 시 주의사항:" Margin="0,0,0,10"/>
                            <Border Background="#FFEBEE" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="• FillBehavior=&quot;Stop&quot;: 애니메이션 후 원래 값으로" Margin="0,2"/>
                                    <TextBlock Text="• FillBehavior=&quot;HoldEnd&quot;: 마지막 값 유지 (기본)" Margin="0,2"/>
                                    <TextBlock Text="• 많은 애니메이션은 성능에 영향" Margin="0,2"/>
                                    <TextBlock Text="• 의존성 속성만 애니메이션 가능" Margin="0,2"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                 Text="&lt;!-- FillBehavior 예제 --&gt;&#10;&#10;&lt;!-- 애니메이션 완료 후 마지막 값 유지 (기본) --&gt;&#10;&lt;DoubleAnimation To=&quot;200&quot; Duration=&quot;0:0:1&quot; &#10;                 FillBehavior=&quot;HoldEnd&quot;/&gt;&#10;&#10;&lt;!-- 애니메이션 완료 후 원래 값으로 복원 --&gt;&#10;&lt;DoubleAnimation To=&quot;200&quot; Duration=&quot;0:0:1&quot; &#10;                 FillBehavior=&quot;Stop&quot;/&gt;&#10;&#10;&lt;!-- AutoReverse로 왕복 --&gt;&#10;&lt;DoubleAnimation To=&quot;200&quot; Duration=&quot;0:0:1&quot; &#10;                 AutoReverse=&quot;True&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
