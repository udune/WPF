<Window x:Class="ch13_익스팬더.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch13_익스팬더"
        mc:Ignorable="d"
        Title="ch13 Expander 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 Expander" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Header 속성으로 제목 지정" Margin="0,0,0,8">
                        <Expander Header="클릭하여 펼치기">
                            <TextBlock Text="Expander 안에 들어가는 콘텐츠입니다." Margin="10"/>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;클릭하여 펼치기&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Expander 안에 들어가는 콘텐츠입니다.&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="2. IsExpanded (초기 상태)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="IsExpanded=True → 처음부터 펼쳐진 상태" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="접힌 상태 (기본)" IsExpanded="False" Margin="0,0,0,4">
                                <TextBlock Text="IsExpanded=False (기본값)" Margin="10"/>
                            </Expander>
                            <Expander Header="펼쳐진 상태" IsExpanded="True">
                                <TextBlock Text="IsExpanded=True" Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;접힌 상태 (기본)&quot; IsExpanded=&quot;False&quot;&gt;&#10;    &lt;TextBlock Text=&quot;IsExpanded=False (기본값)&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;&lt;Expander Header=&quot;펼쳐진 상태&quot; IsExpanded=&quot;True&quot;&gt;&#10;    &lt;TextBlock Text=&quot;IsExpanded=True&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 복합 콘텐츠" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Expander 안에 여러 컨트롤 배치" Margin="0,0,0,8">
                        <Expander Header="사용자 정보">
                            <StackPanel Margin="10">
                                <TextBlock Text="이름: 홍길동" Margin="0,0,0,4"/>
                                <TextBlock Text="나이: 30" Margin="0,0,0,4"/>
                                <Button Content="수정" HorizontalAlignment="Left" Padding="12,4"/>
                            </StackPanel>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;사용자 정보&quot;&gt;&#10;    &lt;StackPanel Margin=&quot;10&quot;&gt;&#10;        &lt;TextBlock Text=&quot;이름: 홍길동&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;나이: 30&quot;/&gt;&#10;        &lt;Button Content=&quot;수정&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="4. 커스텀 Header (아이콘 + 텍스트)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Header에 복합 콘텐츠 배치" Margin="0,0,0,8">
                        <Expander>
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="14" Height="14" Fill="Green" Margin="0,0,6,0"/>
                                    <TextBlock Text="상태: 활성" VerticalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>
                            </Expander.Header>
                            <TextBlock Text="현재 시스템이 정상 작동 중입니다." Margin="10"/>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander&gt;&#10;    &lt;Expander.Header&gt;&#10;        &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;            &lt;Ellipse Width=&quot;14&quot; Height=&quot;14&quot; Fill=&quot;Green&quot; Margin=&quot;0,0,6,0&quot;/&gt;&#10;            &lt;TextBlock Text=&quot;상태: 활성&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;        &lt;/StackPanel&gt;&#10;    &lt;/Expander.Header&gt;&#10;    &lt;TextBlock Text=&quot;현재 시스템이 정상 작동 중입니다.&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: ExpandDirection -->
        <TabItem Header="ExpandDirection">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. ExpandDirection 4가지 방향" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Down (기본)" Margin="0,0,0,8">
                        <Expander Header="Down (아래로 펼침)" ExpandDirection="Down" IsExpanded="True">
                            <Border Background="LightBlue" Padding="10">
                                <TextBlock Text="아래 방향 콘텐츠"/>
                            </Border>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;Down (아래로 펼침)&quot; ExpandDirection=&quot;Down&quot;&gt;&#10;    &lt;TextBlock Text=&quot;아래 방향 콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <GroupBox Header="Up (위로 펼침)" Margin="0,0,0,8">
                        <Expander Header="Up" ExpandDirection="Up" IsExpanded="True">
                            <Border Background="LightGreen" Padding="10">
                                <TextBlock Text="위 방향 콘텐츠"/>
                            </Border>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;Up&quot; ExpandDirection=&quot;Up&quot;&gt;&#10;    &lt;TextBlock Text=&quot;위 방향 콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <GroupBox Header="Left / Right (좌우 펼침)" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Expander Header="Left" ExpandDirection="Left" IsExpanded="True" Margin="0,0,20,0">
                                <Border Background="LightCoral" Padding="10">
                                    <TextBlock Text="왼쪽"/>
                                </Border>
                            </Expander>
                            <Expander Header="Right" ExpandDirection="Right" IsExpanded="True">
                                <Border Background="LightGoldenrodYellow" Padding="10">
                                    <TextBlock Text="오른쪽"/>
                                </Border>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;Left&quot; ExpandDirection=&quot;Left&quot;&gt;&#10;    &lt;TextBlock Text=&quot;왼쪽&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;&lt;Expander Header=&quot;Right&quot; ExpandDirection=&quot;Right&quot;&gt;&#10;    &lt;TextBlock Text=&quot;오른쪽&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="2. ExpandDirection 전체 비교 요약" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="ExpandDirection 값 정리" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <TextBlock Text="• Down  - 헤더 위, 콘텐츠 아래 (기본값)" Margin="0,0,0,4"/>
                            <TextBlock Text="• Up    - 콘텐츠 위, 헤더 아래" Margin="0,0,0,4"/>
                            <TextBlock Text="• Left  - 콘텐츠 왼쪽, 헤더 오른쪽" Margin="0,0,0,4"/>
                            <TextBlock Text="• Right - 헤더 왼쪽, 콘텐츠 오른쪽"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander ExpandDirection=&quot;Down&quot;/&gt;   &lt;!-- 기본값 --&gt;&#10;&lt;Expander ExpandDirection=&quot;Up&quot;/&gt;&#10;&lt;Expander ExpandDirection=&quot;Left&quot;/&gt;&#10;&lt;Expander ExpandDirection=&quot;Right&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 이벤트 -->
        <TabItem Header="이벤트">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Expanded / Collapsed 이벤트" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="펼침/접힘 시 이벤트 발생" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="이벤트 테스트" x:Name="expEvent"
                                      Expanded="expEvent_Expanded"
                                      Collapsed="expEvent_Collapsed">
                                <TextBlock Text="Expander 콘텐츠" Margin="10"/>
                            </Expander>
                            <TextBlock x:Name="tbEventResult" Text="Expander를 펼치거나 접어보세요" FontSize="14" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Expander Header=&quot;이벤트 테스트&quot;&#10;          Expanded=&quot;expEvent_Expanded&quot;&#10;          Collapsed=&quot;expEvent_Collapsed&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Expander 콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&lt;TextBlock x:Name=&quot;tbEventResult&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void expEvent_Expanded(object sender, RoutedEventArgs e)&#10;{&#10;    tbEventResult.Text = &quot;Expanded! 펼쳐졌습니다.&quot;;&#10;}&#10;private void expEvent_Collapsed(object sender, RoutedEventArgs e)&#10;{&#10;    tbEventResult.Text = &quot;Collapsed! 접혔습니다.&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. 코드비하인드로 IsExpanded 제어" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 Expander 열기/닫기" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander x:Name="expCodeBehind" Header="코드비하인드 제어">
                                <TextBlock Text="코드로 열고 닫을 수 있습니다." Margin="10"/>
                            </Expander>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="펼치기" Click="ExpandClick" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="접기" Click="CollapseClick" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="토글" Click="ToggleClick" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Expander x:Name=&quot;expCodeBehind&quot; Header=&quot;코드비하인드 제어&quot;&gt;&#10;    &lt;TextBlock Text=&quot;코드로 열고 닫을 수 있습니다.&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&lt;Button Content=&quot;펼치기&quot; Click=&quot;ExpandClick&quot;/&gt;&#10;&lt;Button Content=&quot;접기&quot; Click=&quot;CollapseClick&quot;/&gt;&#10;&lt;Button Content=&quot;토글&quot; Click=&quot;ToggleClick&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void ExpandClick(object sender, RoutedEventArgs e)&#10;{&#10;    expCodeBehind.IsExpanded = true;&#10;}&#10;private void CollapseClick(object sender, RoutedEventArgs e)&#10;{&#10;    expCodeBehind.IsExpanded = false;&#10;}&#10;private void ToggleClick(object sender, RoutedEventArgs e)&#10;{&#10;    expCodeBehind.IsExpanded = !expCodeBehind.IsExpanded;&#10;}"/>
                    </Expander>

                    <TextBlock Text="3. 아코디언 패턴 (하나만 펼치기)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="하나를 펼치면 나머지가 접히는 아코디언" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander x:Name="expAccordion1" Header="섹션 1" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 1의 내용입니다." Margin="10"/>
                            </Expander>
                            <Expander x:Name="expAccordion2" Header="섹션 2" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 2의 내용입니다." Margin="10"/>
                            </Expander>
                            <Expander x:Name="expAccordion3" Header="섹션 3" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 3의 내용입니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Expander x:Name=&quot;expAccordion1&quot; Header=&quot;섹션 1&quot; Expanded=&quot;Accordion_Expanded&quot;&gt;&#10;    &lt;TextBlock Text=&quot;섹션 1의 내용입니다.&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&lt;Expander x:Name=&quot;expAccordion2&quot; Header=&quot;섹션 2&quot; Expanded=&quot;Accordion_Expanded&quot;&gt;&#10;    &lt;TextBlock Text=&quot;섹션 2의 내용입니다.&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&lt;Expander x:Name=&quot;expAccordion3&quot; Header=&quot;섹션 3&quot; Expanded=&quot;Accordion_Expanded&quot;&gt;&#10;    &lt;TextBlock Text=&quot;섹션 3의 내용입니다.&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;// C# 코드비하인드&#10;private void Accordion_Expanded(object sender, RoutedEventArgs e)&#10;{&#10;    var current = sender as Expander;&#10;    if (current != expAccordion1) expAccordion1.IsExpanded = false;&#10;    if (current != expAccordion2) expAccordion2.IsExpanded = false;&#10;    if (current != expAccordion3) expAccordion3.IsExpanded = false;&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 데이터 바인딩 -->
        <TabItem Header="데이터 바인딩">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. IsExpanded 바인딩 (CheckBox 연동)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="CheckBox로 Expander 열기/닫기 제어" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox x:Name="chkExpand" Content="Expander 펼치기" IsChecked="True" Margin="0,0,0,8"/>
                            <Expander Header="바인딩된 Expander" IsExpanded="{Binding ElementName=chkExpand, Path=IsChecked}">
                                <TextBlock Text="CheckBox의 IsChecked와 동기화됩니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox x:Name=&quot;chkExpand&quot; Content=&quot;Expander 펼치기&quot; IsChecked=&quot;True&quot;/&gt;&#10;&#10;&lt;Expander Header=&quot;바인딩된 Expander&quot;&#10;          IsExpanded=&quot;{Binding ElementName=chkExpand, Path=IsChecked}&quot;&gt;&#10;    &lt;TextBlock Text=&quot;CheckBox의 IsChecked와 동기화됩니다.&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="2. Header 바인딩 (TextBox 연동)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="TextBox에 입력한 텍스트가 Header에 반영" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtHeader" Text="동적 헤더" Width="200" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <Expander Header="{Binding ElementName=txtHeader, Path=Text}" IsExpanded="True">
                                <TextBlock Text="Header가 TextBox와 연동됩니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;txtHeader&quot; Text=&quot;동적 헤더&quot;/&gt;&#10;&#10;&lt;Expander Header=&quot;{Binding ElementName=txtHeader, Path=Text}&quot;&#10;          IsExpanded=&quot;True&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Header가 TextBox와 연동됩니다.&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="3. Expander 중첩" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Expander 안에 Expander 배치" Margin="0,0,0,8">
                        <Expander Header="1단계" IsExpanded="True">
                            <StackPanel Margin="10,4,0,0">
                                <TextBlock Text="1단계 콘텐츠" Margin="0,0,0,4"/>
                                <Expander Header="2단계">
                                    <StackPanel Margin="10,4,0,0">
                                        <TextBlock Text="2단계 콘텐츠" Margin="0,0,0,4"/>
                                        <Expander Header="3단계">
                                            <TextBlock Text="3단계 콘텐츠 (최하위)" Margin="10,4,0,0"/>
                                        </Expander>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;1단계&quot; IsExpanded=&quot;True&quot;&gt;&#10;    &lt;StackPanel Margin=&quot;10,4,0,0&quot;&gt;&#10;        &lt;TextBlock Text=&quot;1단계 콘텐츠&quot;/&gt;&#10;        &lt;Expander Header=&quot;2단계&quot;&gt;&#10;            &lt;StackPanel Margin=&quot;10,4,0,0&quot;&gt;&#10;                &lt;TextBlock Text=&quot;2단계 콘텐츠&quot;/&gt;&#10;                &lt;Expander Header=&quot;3단계&quot;&gt;&#10;                    &lt;TextBlock Text=&quot;3단계 콘텐츠&quot;/&gt;&#10;                &lt;/Expander&gt;&#10;            &lt;/StackPanel&gt;&#10;        &lt;/Expander&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 스타일과 외관 -->
        <TabItem Header="스타일과 외관">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 외관 속성" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Background, BorderBrush, Padding" Margin="0,0,0,8">
                        <Expander Header="스타일이 적용된 Expander"
                                  Background="LightYellow"
                                  BorderBrush="DarkOrange"
                                  BorderThickness="2"
                                  Padding="8"
                                  IsExpanded="True">
                            <TextBlock Text="Background, BorderBrush, Padding이 적용된 모습" Margin="5"/>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;스타일이 적용된 Expander&quot;&#10;          Background=&quot;LightYellow&quot;&#10;          BorderBrush=&quot;DarkOrange&quot;&#10;          BorderThickness=&quot;2&quot;&#10;          Padding=&quot;8&quot;&#10;          IsExpanded=&quot;True&quot;&gt;&#10;    &lt;TextBlock Text=&quot;콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <TextBlock Text="2. FontSize, FontWeight, Foreground" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="헤더 폰트 스타일" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="FontSize=16, Bold" FontSize="16" FontWeight="Bold" Margin="0,0,0,4">
                                <TextBlock Text="큰 헤더 텍스트" Margin="10"/>
                            </Expander>
                            <Expander Header="Foreground=Blue" Foreground="Blue">
                                <TextBlock Text="파란색 헤더" Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
