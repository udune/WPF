<Window x:Class="ch13_익스팬더.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch13_익스팬더"
        mc:Ignorable="d"
        Title="ch13 Expander 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Expander 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 기본 Expander -->
                    <GroupBox Header="기본 Expander" Margin="0,0,0,8">
                        <Expander Header="클릭하여 펼치기">
                            <TextBlock Text="Expander 안에 들어가는 콘텐츠입니다." Margin="10"/>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;클릭하여 펼치기&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Expander 안에 들어가는 콘텐츠입니다.&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Header가 '정보 보기'인 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: Header=&quot;정보 보기&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- IsExpanded -->
                    <GroupBox Header="IsExpanded (초기 상태)" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="접힌 상태 (기본)" IsExpanded="False" Margin="0,0,0,4">
                                <TextBlock Text="IsExpanded=False (기본값)" Margin="10"/>
                            </Expander>
                            <Expander Header="펼쳐진 상태" IsExpanded="True">
                                <TextBlock Text="IsExpanded=True" Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;접힌 상태&quot; IsExpanded=&quot;False&quot;&gt;&#10;    &lt;TextBlock Text=&quot;기본값&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;&lt;Expander Header=&quot;펼쳐진 상태&quot; IsExpanded=&quot;True&quot;&gt;&#10;    &lt;TextBlock Text=&quot;처음부터 펼쳐짐&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsExpanded=True로 처음부터 펼쳐진 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;열린 상태&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: IsExpanded=&quot;True&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 복합 콘텐츠 -->
                    <GroupBox Header="복합 콘텐츠" Margin="0,0,0,8">
                        <Expander Header="사용자 정보">
                            <StackPanel Margin="10">
                                <TextBlock Text="이름: 홍길동" Margin="0,0,0,4"/>
                                <TextBlock Text="나이: 30" Margin="0,0,0,4"/>
                                <Button Content="수정" HorizontalAlignment="Left" Padding="12,4"/>
                            </StackPanel>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;사용자 정보&quot;&gt;&#10;    &lt;StackPanel Margin=&quot;10&quot;&gt;&#10;        &lt;TextBlock Text=&quot;이름: 홍길동&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;나이: 30&quot;/&gt;&#10;        &lt;Button Content=&quot;수정&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Expander 안에 StackPanel을 넣고 TextBlock 2개를 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;Expander Header=&quot;목록&quot;&gt;&#x0a;    &#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: StackPanel 안에 TextBlock을 여러 개 배치합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: ExpandDirection -->
        <TabItem Header="2. ExpandDirection">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Expander 펼침 방향" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Down -->
                    <GroupBox Header="Down (기본값 - 아래로 펼침)" Margin="0,0,0,8">
                        <Expander Header="Down" ExpandDirection="Down" IsExpanded="True">
                            <Border Background="LightBlue" Padding="10">
                                <TextBlock Text="아래 방향 콘텐츠"/>
                            </Border>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;Down&quot; ExpandDirection=&quot;Down&quot;&gt;&#10;    &lt;TextBlock Text=&quot;아래 방향 콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ExpandDirection을 Up으로 설정한 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;위로 펼침&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: ExpandDirection=&quot;Up&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Up -->
                    <GroupBox Header="Up (위로 펼침)" Margin="0,0,0,8">
                        <Expander Header="Up" ExpandDirection="Up" IsExpanded="True">
                            <Border Background="LightGreen" Padding="10">
                                <TextBlock Text="위 방향 콘텐츠"/>
                            </Border>
                        </Expander>
                    </GroupBox>

                    <!-- Left / Right -->
                    <GroupBox Header="Left / Right (좌우 펼침)" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Expander Header="Left" ExpandDirection="Left" IsExpanded="True" Margin="0,0,20,0">
                                <Border Background="LightCoral" Padding="10">
                                    <TextBlock Text="왼쪽"/>
                                </Border>
                            </Expander>
                            <Expander Header="Right" ExpandDirection="Right" IsExpanded="True">
                                <Border Background="LightGoldenrodYellow" Padding="10">
                                    <TextBlock Text="오른쪽"/>
                                </Border>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;Left&quot; ExpandDirection=&quot;Left&quot;&gt;&#10;    &lt;TextBlock Text=&quot;왼쪽&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;&lt;Expander Header=&quot;Right&quot; ExpandDirection=&quot;Right&quot;&gt;&#10;    &lt;TextBlock Text=&quot;오른쪽&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ExpandDirection을 Right로 설정한 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;오른쪽으로&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: ExpandDirection=&quot;Right&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 방향 요약 -->
                    <GroupBox Header="ExpandDirection 값 정리" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <TextBlock Text="• Down  - 헤더 위, 콘텐츠 아래 (기본값)" Margin="0,0,0,4"/>
                            <TextBlock Text="• Up    - 콘텐츠 위, 헤더 아래" Margin="0,0,0,4"/>
                            <TextBlock Text="• Left  - 콘텐츠 왼쪽, 헤더 오른쪽" Margin="0,0,0,4"/>
                            <TextBlock Text="• Right - 헤더 왼쪽, 콘텐츠 오른쪽"/>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 스타일과 외관 -->
        <TabItem Header="3. 스타일과 외관">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Expander 스타일과 외관" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Background / BorderBrush -->
                    <GroupBox Header="Background, BorderBrush, Padding" Margin="0,0,0,8">
                        <Expander Header="스타일이 적용된 Expander"
                                  Background="LightYellow"
                                  BorderBrush="DarkOrange"
                                  BorderThickness="2"
                                  Padding="8"
                                  IsExpanded="True">
                            <TextBlock Text="Background, BorderBrush, Padding이 적용된 모습" Margin="5"/>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;스타일 적용&quot;&#10;          Background=&quot;LightYellow&quot;&#10;          BorderBrush=&quot;DarkOrange&quot;&#10;          BorderThickness=&quot;2&quot;&#10;          Padding=&quot;8&quot;&gt;&#10;    &lt;TextBlock Text=&quot;콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Background를 LightBlue로 설정한 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;배경색&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: Background=&quot;LightBlue&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- FontSize, FontWeight -->
                    <GroupBox Header="FontSize, FontWeight, Foreground" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="FontSize=16, Bold" FontSize="16" FontWeight="Bold" Margin="0,0,0,4">
                                <TextBlock Text="큰 헤더 텍스트" Margin="10"/>
                            </Expander>
                            <Expander Header="Foreground=Blue" Foreground="Blue">
                                <TextBlock Text="파란색 헤더" Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;큰 글씨&quot; FontSize=&quot;16&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;Expander Header=&quot;파란색&quot; Foreground=&quot;Blue&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FontWeight를 Bold, Foreground를 Red로 설정한 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;빨간 굵은 글씨&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2"
                                       Text="힌트: FontWeight=&quot;Bold&quot;와 Foreground=&quot;Red&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- IsEnabled -->
                    <GroupBox Header="IsEnabled (비활성화)" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="활성화됨" IsEnabled="True" Margin="0,0,0,4">
                                <TextBlock Text="클릭 가능" Margin="10"/>
                            </Expander>
                            <Expander Header="비활성화됨" IsEnabled="False">
                                <TextBlock Text="클릭 불가" Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;활성화&quot; IsEnabled=&quot;True&quot;/&gt;&#10;&lt;Expander Header=&quot;비활성화&quot; IsEnabled=&quot;False&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: BorderBrush를 Green, BorderThickness를 3으로 설정한 Expander를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;Expander Header=&quot;테두리&quot;&gt;&#x0a;    &lt;TextBlock Text=&quot;내용&quot;/&gt;&#x0a;&lt;/Expander&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_3"
                                       Text="힌트: BorderBrush=&quot;Green&quot;과 BorderThickness=&quot;3&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 이벤트 -->
        <TabItem Header="4. 이벤트">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Expander 이벤트" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Expanded / Collapsed 이벤트 -->
                    <GroupBox Header="Expanded / Collapsed 이벤트" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander Header="이벤트 테스트" x:Name="expEvent"
                                      Expanded="expEvent_Expanded"
                                      Collapsed="expEvent_Collapsed">
                                <TextBlock Text="Expander 콘텐츠" Margin="10"/>
                            </Expander>
                            <TextBlock x:Name="tbEventResult" Text="Expander를 펼치거나 접어보세요" FontSize="14" Margin="0,8,0,0" FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;이벤트 테스트&quot;&#10;          Expanded=&quot;expEvent_Expanded&quot;&#10;          Collapsed=&quot;expEvent_Collapsed&quot;&gt;&#10;    &lt;TextBlock Text=&quot;콘텐츠&quot;/&gt;&#10;&lt;/Expander&gt;&#10;&#10;// C# 코드비하인드&#10;private void expEvent_Expanded(...)&#10;{&#10;    tbEventResult.Text = &quot;펼쳐졌습니다!&quot;;&#10;}&#10;private void expEvent_Collapsed(...)&#10;{&#10;    tbEventResult.Text = &quot;접혔습니다!&quot;;&#10;}"/>
                    </Expander>

                    <!-- 직접 해보기 4_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Expanded 이벤트 핸들러를 작성하세요. TextBlock의 Text를 '펼쳐짐!'으로 변경하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void Expander_Expanded(object sender, RoutedEventArgs e)&#x0a;{&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="4_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_1"
                                       Text="힌트: txtStatus.Text = &quot;펼쳐짐!&quot;; 형태로 작성합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult4_1"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- 코드로 IsExpanded 제어 -->
                    <GroupBox Header="코드비하인드로 IsExpanded 제어" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander x:Name="expCodeBehind" Header="코드비하인드 제어">
                                <TextBlock Text="코드로 열고 닫을 수 있습니다." Margin="10"/>
                            </Expander>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="펼치기" Click="ExpandClick" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="접기" Click="CollapseClick" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="토글" Click="ToggleClick" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="private void ExpandClick(...)&#10;{&#10;    expCodeBehind.IsExpanded = true;&#10;}&#10;private void CollapseClick(...)&#10;{&#10;    expCodeBehind.IsExpanded = false;&#10;}&#10;private void ToggleClick(...)&#10;{&#10;    expCodeBehind.IsExpanded = !expCodeBehind.IsExpanded;&#10;}"/>
                    </Expander>

                    <!-- 직접 해보기 4_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Expander의 IsExpanded를 토글하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void ToggleExpander()&#x0a;{&#x0a;    // myExpander의 IsExpanded를 토글&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="4_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_2"
                                       Text="힌트: !를 사용하여 현재 값을 반전시킵니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult4_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- 아코디언 패턴 -->
                    <GroupBox Header="아코디언 패턴 (하나만 펼치기)" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander x:Name="expAccordion1" Header="섹션 1" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 1의 내용입니다." Margin="10"/>
                            </Expander>
                            <Expander x:Name="expAccordion2" Header="섹션 2" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 2의 내용입니다." Margin="10"/>
                            </Expander>
                            <Expander x:Name="expAccordion3" Header="섹션 3" Expanded="Accordion_Expanded">
                                <TextBlock Text="섹션 3의 내용입니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 아코디언: 하나를 펼치면 나머지는 접기&#10;private void Accordion_Expanded(object sender, RoutedEventArgs e)&#10;{&#10;    var current = sender as Expander;&#10;    if (current != expAccordion1) expAccordion1.IsExpanded = false;&#10;    if (current != expAccordion2) expAccordion2.IsExpanded = false;&#10;    if (current != expAccordion3) expAccordion3.IsExpanded = false;&#10;}"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 데이터 바인딩 -->
        <TabItem Header="5. 데이터 바인딩">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Expander 데이터 바인딩" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- IsExpanded 바인딩 -->
                    <GroupBox Header="IsExpanded 바인딩 (CheckBox 연동)" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox x:Name="chkExpand" Content="Expander 펼치기" IsChecked="True" Margin="0,0,0,8"/>
                            <Expander Header="바인딩된 Expander" IsExpanded="{Binding ElementName=chkExpand, Path=IsChecked}">
                                <TextBlock Text="CheckBox의 IsChecked와 동기화됩니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox x:Name=&quot;chkExpand&quot; Content=&quot;펼치기&quot; IsChecked=&quot;True&quot;/&gt;&#10;&#10;&lt;Expander Header=&quot;바인딩&quot;&#10;          IsExpanded=&quot;{Binding ElementName=chkExpand, Path=IsChecked}&quot;&gt;&#10;    &lt;TextBlock Text=&quot;동기화됩니다&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 5_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ElementName 바인딩을 사용하여 CheckBox의 IsChecked를 Expander의 IsExpanded에 연결하는 XAML을 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="IsExpanded=&quot;{Binding }&quot;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_1"
                                       Text="힌트: ElementName=체크박스이름, Path=IsChecked 형식으로 작성합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_1"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- Header 바인딩 -->
                    <GroupBox Header="Header 바인딩 (TextBox 연동)" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtHeader" Text="동적 헤더" Width="200" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <Expander Header="{Binding ElementName=txtHeader, Path=Text}" IsExpanded="True">
                                <TextBlock Text="Header가 TextBox와 연동됩니다." Margin="10"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;txtHeader&quot; Text=&quot;동적 헤더&quot;/&gt;&#10;&#10;&lt;Expander Header=&quot;{Binding ElementName=txtHeader, Path=Text}&quot;&gt;&#10;    &lt;TextBlock Text=&quot;연동됩니다&quot;/&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 5_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: TextBox의 Text를 Expander의 Header에 바인딩하는 XAML을 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="Header=&quot;{Binding }&quot;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_2"
                                       Text="힌트: ElementName과 Path=Text를 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- 중첩 Expander -->
                    <GroupBox Header="Expander 중첩" Margin="0,0,0,8">
                        <Expander Header="1단계" IsExpanded="True">
                            <StackPanel Margin="10,4,0,0">
                                <TextBlock Text="1단계 콘텐츠" Margin="0,0,0,4"/>
                                <Expander Header="2단계">
                                    <StackPanel Margin="10,4,0,0">
                                        <TextBlock Text="2단계 콘텐츠" Margin="0,0,0,4"/>
                                        <Expander Header="3단계">
                                            <TextBlock Text="3단계 콘텐츠 (최하위)" Margin="10,4,0,0"/>
                                        </Expander>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Expander Header=&quot;1단계&quot;&gt;&#10;    &lt;StackPanel&gt;&#10;        &lt;TextBlock Text=&quot;1단계 콘텐츠&quot;/&gt;&#10;        &lt;Expander Header=&quot;2단계&quot;&gt;&#10;            &lt;Expander Header=&quot;3단계&quot;&gt;&#10;                &lt;TextBlock Text=&quot;최하위&quot;/&gt;&#10;            &lt;/Expander&gt;&#10;        &lt;/Expander&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Expander&gt;"/>
                    </Expander>

                    <!-- 동적 변경 -->
                    <GroupBox Header="코드비하인드로 Header 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <Expander x:Name="expDynamic" Header="기본 헤더" IsExpanded="True">
                                <TextBlock Text="동적으로 스타일이 변경됩니다." Margin="10"/>
                            </Expander>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="헤더 변경" Click="ChangeHeader_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="배경색 변경" Click="ChangeBackground_Click" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
