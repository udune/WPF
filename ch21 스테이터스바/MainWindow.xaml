<Window x:Class="ch21_스테이터스바.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch21_스테이터스바"
        mc:Ignorable="d"
        Title="ch21 StatusBar 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="StatusBar 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="StatusBar는 창 하단에 상태 정보를 표시하는 컨트롤입니다. StatusBarItem을 사용하여 여러 항목을 배치할 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 StatusBar -->
                    <GroupBox Header="기본 StatusBar" Margin="0,0,0,15">
                        <StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Height="150">
                                <DockPanel LastChildFill="False">
                                    <TextBlock DockPanel.Dock="Top" Text="(메인 콘텐츠 영역)"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Foreground="Gray" Margin="0,50,0,0"/>
                                    <StatusBar DockPanel.Dock="Bottom">
                                        <StatusBarItem Content="준비"/>
                                    </StatusBar>
                                </DockPanel>
                            </Border>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;DockPanel LastChildFill=&quot;False&quot;&gt;&#10;    &lt;!-- 메인 콘텐츠 --&gt;&#10;    &lt;StatusBar DockPanel.Dock=&quot;Bottom&quot;&gt;&#10;        &lt;StatusBarItem Content=&quot;준비&quot;/&gt;&#10;    &lt;/StatusBar&gt;&#10;&lt;/DockPanel&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 여러 항목 -->
                    <GroupBox Header="여러 StatusBarItem" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <StatusBarItem Content="항목 1"/>
                                <StatusBarItem Content="항목 2"/>
                                <StatusBarItem Content="항목 3"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem Content=&quot;항목 1&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;항목 2&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;항목 3&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: Separator 사용 -->
                    <GroupBox Header="Separator로 구분" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <StatusBarItem Content="파일"/>
                                <Separator/>
                                <StatusBarItem Content="줄: 42"/>
                                <Separator/>
                                <StatusBarItem Content="열: 15"/>
                                <Separator/>
                                <StatusBarItem Content="UTF-8"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem Content=&quot;파일&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;StatusBarItem Content=&quot;줄: 42&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;StatusBarItem Content=&quot;열: 15&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;StatusBarItem Content=&quot;UTF-8&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 직접 콘텐츠 -->
                    <GroupBox Header="StatusBarItem 없이 직접 콘텐츠" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <TextBlock Text="텍스트"/>
                                <Separator/>
                                <Button Content="버튼" Padding="5,0"/>
                                <Separator/>
                                <CheckBox Content="체크박스"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- StatusBarItem 없이 직접 배치 가능 --&gt;&#10;&lt;StatusBar&gt;&#10;    &lt;TextBlock Text=&quot;텍스트&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;Button Content=&quot;버튼&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;CheckBox Content=&quot;체크박스&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 레이아웃 -->
        <TabItem Header="레이아웃">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="StatusBar 레이아웃" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: ItemsPanel 변경 -->
                    <GroupBox Header="Grid로 레이아웃 (ItemsPanel)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="StatusBar의 ItemsPanel을 Grid로 변경하면 정확한 너비 조절이 가능합니다."
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <StatusBar Height="25">
                                <StatusBar.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                    </ItemsPanelTemplate>
                                </StatusBar.ItemsPanel>
                                <StatusBarItem Content="메시지 영역 (자동 확장)" Grid.Column="0"/>
                                <Separator Grid.Column="1"/>
                                <StatusBarItem Content="고정 100px" Grid.Column="2"/>
                                <Separator Grid.Column="3"/>
                                <StatusBarItem Content="고정 100px" Grid.Column="4"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBar.ItemsPanel&gt;&#10;        &lt;ItemsPanelTemplate&gt;&#10;            &lt;Grid&gt;&#10;                &lt;Grid.ColumnDefinitions&gt;&#10;                    &lt;ColumnDefinition Width=&quot;*&quot;/&gt;&#10;                    &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;&#10;                    &lt;ColumnDefinition Width=&quot;100&quot;/&gt;&#10;                &lt;/Grid.ColumnDefinitions&gt;&#10;            &lt;/Grid&gt;&#10;        &lt;/ItemsPanelTemplate&gt;&#10;    &lt;/StatusBar.ItemsPanel&gt;&#10;    &lt;StatusBarItem Content=&quot;메시지&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Separator Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;고정&quot; Grid.Column=&quot;2&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: HorizontalAlignment -->
                    <GroupBox Header="HorizontalAlignment" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="30">
                                <StatusBarItem Content="왼쪽" HorizontalAlignment="Left"/>
                                <StatusBarItem Content="중앙" HorizontalAlignment="Center"/>
                                <StatusBarItem Content="오른쪽" HorizontalAlignment="Right"/>
                            </StatusBar>
                            <TextBlock Text="※ 기본 StackPanel에서는 HorizontalAlignment가 제한적입니다."
                                       FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem Content=&quot;왼쪽&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;중앙&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;오른쪽&quot; HorizontalAlignment=&quot;Right&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: DockPanel 레이아웃 -->
                    <GroupBox Header="DockPanel로 레이아웃" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <StatusBar.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <DockPanel LastChildFill="True"/>
                                    </ItemsPanelTemplate>
                                </StatusBar.ItemsPanel>
                                <StatusBarItem Content="왼쪽 고정" DockPanel.Dock="Left"/>
                                <Separator DockPanel.Dock="Left"/>
                                <StatusBarItem Content="오른쪽 고정" DockPanel.Dock="Right"/>
                                <Separator DockPanel.Dock="Right"/>
                                <StatusBarItem Content="중앙 (나머지 공간 채움)" HorizontalContentAlignment="Center"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBar.ItemsPanel&gt;&#10;        &lt;ItemsPanelTemplate&gt;&#10;            &lt;DockPanel LastChildFill=&quot;True&quot;/&gt;&#10;        &lt;/ItemsPanelTemplate&gt;&#10;    &lt;/StatusBar.ItemsPanel&gt;&#10;    &lt;StatusBarItem Content=&quot;왼쪽&quot; DockPanel.Dock=&quot;Left&quot;/&gt;&#10;    &lt;Separator DockPanel.Dock=&quot;Left&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;오른쪽&quot; DockPanel.Dock=&quot;Right&quot;/&gt;&#10;    &lt;StatusBarItem Content=&quot;중앙&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 높이와 패딩 -->
                    <GroupBox Header="높이와 패딩" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Height=20" Margin="0,0,0,3"/>
                            <StatusBar Height="20" Margin="0,0,0,10">
                                <StatusBarItem Content="작은 상태바"/>
                            </StatusBar>

                            <TextBlock Text="Height=35, Padding 적용" Margin="0,0,0,3"/>
                            <StatusBar Height="35">
                                <StatusBarItem Content="큰 상태바" Padding="10,0"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar Height=&quot;20&quot;&gt;&#10;    &lt;StatusBarItem Content=&quot;작은 상태바&quot;/&gt;&#10;&lt;/StatusBar&gt;&#10;&#10;&lt;StatusBar Height=&quot;35&quot;&gt;&#10;    &lt;StatusBarItem Content=&quot;큰 상태바&quot; Padding=&quot;10,0&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 다양한 콘텐츠 -->
        <TabItem Header="다양한 콘텐츠">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="StatusBar에 다양한 콘텐츠 배치" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: ProgressBar -->
                    <GroupBox Header="ProgressBar 포함" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <StatusBarItem Content="다운로드 중..."/>
                                <StatusBarItem>
                                    <ProgressBar Width="150" Height="15" Value="65"/>
                                </StatusBarItem>
                                <StatusBarItem Content="65%"/>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem Content=&quot;다운로드 중...&quot;/&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;ProgressBar Width=&quot;150&quot; Height=&quot;15&quot; Value=&quot;65&quot;/&gt;&#10;    &lt;/StatusBarItem&gt;&#10;    &lt;StatusBarItem Content=&quot;65%&quot;/&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 버튼과 컨트롤 -->
                    <GroupBox Header="버튼과 컨트롤" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="30">
                                <StatusBarItem>
                                    <Button Content="새로고침" Padding="8,2" Click="RefreshButton_Click"/>
                                </StatusBarItem>
                                <Separator/>
                                <StatusBarItem>
                                    <ComboBox Width="100" SelectedIndex="0">
                                        <ComboBoxItem Content="옵션 1"/>
                                        <ComboBoxItem Content="옵션 2"/>
                                        <ComboBoxItem Content="옵션 3"/>
                                    </ComboBox>
                                </StatusBarItem>
                                <Separator/>
                                <StatusBarItem>
                                    <CheckBox Content="자동 저장" IsChecked="True"/>
                                </StatusBarItem>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;Button Content=&quot;새로고침&quot; Click=&quot;RefreshButton_Click&quot;/&gt;&#10;    &lt;/StatusBarItem&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;ComboBox Width=&quot;100&quot; SelectedIndex=&quot;0&quot;&gt;&#10;            &lt;ComboBoxItem Content=&quot;옵션 1&quot;/&gt;&#10;        &lt;/ComboBox&gt;&#10;    &lt;/StatusBarItem&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;CheckBox Content=&quot;자동 저장&quot;/&gt;&#10;    &lt;/StatusBarItem&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 이미지/아이콘 -->
                    <GroupBox Header="도형으로 아이콘 표현" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25">
                                <StatusBarItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="Green" Margin="0,0,5,0"/>
                                        <TextBlock Text="연결됨"/>
                                    </StackPanel>
                                </StatusBarItem>
                                <Separator/>
                                <StatusBarItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="10" Height="10" Fill="Orange" Margin="0,0,5,0"/>
                                        <TextBlock Text="대기 중"/>
                                    </StackPanel>
                                </StatusBarItem>
                                <Separator/>
                                <StatusBarItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="Red" Margin="0,0,5,0"/>
                                        <TextBlock Text="오류"/>
                                    </StackPanel>
                                </StatusBarItem>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBarItem&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Ellipse Width=&quot;10&quot; Height=&quot;10&quot; Fill=&quot;Green&quot; Margin=&quot;0,0,5,0&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;연결됨&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/StatusBarItem&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: Slider -->
                    <GroupBox Header="Slider (줌 컨트롤)" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="30">
                                <StatusBarItem Content="확대/축소:"/>
                                <StatusBarItem>
                                    <Slider x:Name="zoomSlider" Width="100" Minimum="50" Maximum="200" Value="100"
                                            ValueChanged="ZoomSlider_ValueChanged"/>
                                </StatusBarItem>
                                <StatusBarItem>
                                    <TextBlock x:Name="zoomText" Text="100%"/>
                                </StatusBarItem>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;StatusBar&gt;&#10;    &lt;StatusBarItem Content=&quot;확대/축소:&quot;/&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;Slider x:Name=&quot;zoomSlider&quot; Width=&quot;100&quot;&#10;                Minimum=&quot;50&quot; Maximum=&quot;200&quot; Value=&quot;100&quot;&#10;                ValueChanged=&quot;ZoomSlider_ValueChanged&quot;/&gt;&#10;    &lt;/StatusBarItem&gt;&#10;    &lt;StatusBarItem&gt;&#10;        &lt;TextBlock x:Name=&quot;zoomText&quot; Text=&quot;100%&quot;/&gt;&#10;    &lt;/StatusBarItem&gt;&#10;&lt;/StatusBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 동적 업데이트 -->
        <TabItem Header="동적 업데이트">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="StatusBar 동적 업데이트" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: 텍스트 업데이트 -->
                    <GroupBox Header="상태 텍스트 업데이트" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25" Margin="0,0,0,10">
                                <StatusBarItem x:Name="statusText" Content="준비"/>
                            </StatusBar>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="준비" Click="SetStatusReady_Click" Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="처리 중" Click="SetStatusProcessing_Click" Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="완료" Click="SetStatusComplete_Click" Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="오류" Click="SetStatusError_Click" Padding="10,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- XAML --&gt;&#10;&lt;StatusBarItem x:Name=&quot;statusText&quot; Content=&quot;준비&quot;/&gt;&#10;&lt;Button Content=&quot;처리 중&quot; Click=&quot;SetStatusProcessing_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void SetStatusProcessing_Click(object sender, RoutedEventArgs e)&#10;{&#10;    statusText.Content = &quot;처리 중...&quot;;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: ProgressBar 연동 -->
                    <GroupBox Header="Slider와 ProgressBar 연동" Margin="0,0,0,15">
                        <StackPanel>
                            <Slider x:Name="progressSlider" Maximum="100" Value="0"
                                    ValueChanged="ProgressSlider_ValueChanged" Margin="0,0,0,10"/>
                            <StatusBar Height="25">
                                <StatusBarItem x:Name="progressStatusText" Content="로딩 중..."/>
                                <StatusBarItem>
                                    <ProgressBar x:Name="progressBar" Height="12" Width="150" Value="0"/>
                                </StatusBarItem>
                                <StatusBarItem>
                                    <TextBlock x:Name="progressPercent" Text="0%"/>
                                </StatusBarItem>
                            </StatusBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="// C# 코드비하인드&#10;private void ProgressSlider_ValueChanged(object sender, RoutedEventArgs e)&#10;{&#10;    progressBar.Value = progressSlider.Value;&#10;    progressPercent.Text = $&quot;{progressSlider.Value:0}%&quot;;&#10;&#10;    if (progressSlider.Value == 100)&#10;        progressStatusText.Content = &quot;완료&quot;;&#10;    else&#10;        progressStatusText.Content = &quot;로딩 중...&quot;;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 시간 표시 -->
                    <GroupBox Header="실시간 시간 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25" Margin="0,0,0,10">
                                <StatusBarItem Content="현재 시간:"/>
                                <StatusBarItem>
                                    <TextBlock x:Name="timeText" Text="--:--:--"/>
                                </StatusBarItem>
                            </StatusBar>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="시계 시작" Click="StartClock_Click" Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="시계 정지" Click="StopClock_Click" Padding="10,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="// C# 코드비하인드&#10;private DispatcherTimer clockTimer;&#10;&#10;private void StartClock_Click(object sender, RoutedEventArgs e)&#10;{&#10;    if (clockTimer == null)&#10;    {&#10;        clockTimer = new DispatcherTimer();&#10;        clockTimer.Interval = TimeSpan.FromSeconds(1);&#10;        clockTimer.Tick += (s, args) =&gt;&#10;        {&#10;            timeText.Text = DateTime.Now.ToString(&quot;HH:mm:ss&quot;);&#10;        };&#10;    }&#10;    clockTimer.Start();&#10;    timeText.Text = DateTime.Now.ToString(&quot;HH:mm:ss&quot;);&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 연결 상태 -->
                    <GroupBox Header="연결 상태 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <StatusBar Height="25" Margin="0,0,0,10">
                                <StatusBarItem>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="connectionIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="connectionText" Text="연결 안 됨"/>
                                    </StackPanel>
                                </StatusBarItem>
                            </StatusBar>
                            <StackPanel Orientation="Horizontal">
