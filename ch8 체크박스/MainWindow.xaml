<Window x:Class="ch8_체크박스.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch8_체크박스"
        mc:Ignorable="d"
        Title="ch8 CheckBox 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Content 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <CheckBox>체크박스</CheckBox>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox&gt;체크박스&lt;/CheckBox&gt;"/>
                    </Expander>

                    <GroupBox Header="Content 속성으로 지정" Margin="0,0,0,8">
                        <CheckBox Content="체크박스"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;체크박스&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="복합 콘텐츠 (이미지 + 텍스트)" Margin="0,0,0,8">
                        <CheckBox VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" Fill="CornflowerBlue" Margin="0,0,6,0"/>
                                <TextBlock Text="아이콘 체크박스" VerticalAlignment="Center"/>
                            </StackPanel>
                        </CheckBox>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox VerticalContentAlignment=&quot;Center&quot;&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Ellipse Width=&quot;16&quot; Height=&quot;16&quot; Fill=&quot;CornflowerBlue&quot; Margin=&quot;0,0,6,0&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;아이콘 체크박스&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/CheckBox&gt;"/>
                    </Expander>

                    <TextBlock Text="2. IsChecked (체크 상태)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="기본값(False), True, IsThreeState" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox Content="체크 안 됨 (기본값)" Margin="0,0,0,4"/>
                            <CheckBox Content="체크됨" IsChecked="True" Margin="0,0,0,4"/>
                            <CheckBox Content="세 가지 상태 (True/False/Null)" IsThreeState="True" IsChecked="{x:Null}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;체크 안 됨&quot;/&gt;  &lt;!-- IsChecked=False (기본값) --&gt;&#10;&lt;CheckBox Content=&quot;체크됨&quot; IsChecked=&quot;True&quot;/&gt;&#10;&#10;&lt;!-- IsThreeState=True → True / False / Null(불확정) 세 상태 --&gt;&#10;&lt;CheckBox Content=&quot;세 가지 상태&quot;&#10;          IsThreeState=&quot;True&quot;&#10;          IsChecked=&quot;{x:Null}&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. IsEnabled" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="활성/비활성 상태" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox Content="활성 체크박스" Margin="0,0,0,4"/>
                            <CheckBox Content="비활성 체크박스 (체크 안 됨)" IsEnabled="False" Margin="0,0,0,4"/>
                            <CheckBox Content="비활성 체크박스 (체크됨)" IsEnabled="False" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;활성 체크박스&quot;/&gt;&#10;&lt;CheckBox Content=&quot;비활성 (체크 안 됨)&quot; IsEnabled=&quot;False&quot;/&gt;&#10;&lt;CheckBox Content=&quot;비활성 (체크됨)&quot; IsEnabled=&quot;False&quot; IsChecked=&quot;True&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. ClickMode" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="클릭 동작 방식" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox Content="Release (기본값 - 마우스 떼면 체크)" ClickMode="Release" Margin="0,0,0,4"/>
                            <CheckBox Content="Press (누르는 순간 체크)" ClickMode="Press" Margin="0,0,0,4"/>
                            <CheckBox Content="Hover (마우스 올리면 체크)" ClickMode="Hover"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Release&quot; ClickMode=&quot;Release&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Press&quot; ClickMode=&quot;Press&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Hover&quot; ClickMode=&quot;Hover&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Content를 '약관에 동의합니다'로 설정한 CheckBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;CheckBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: Content 속성에 텍스트를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsChecked를 True로 설정하여 기본으로 체크된 CheckBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;CheckBox Content=&quot;자동 로그인&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: IsChecked 속성을 True로 설정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsThreeState를 True로 설정하여 세 가지 상태를 가진 CheckBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;CheckBox Content=&quot;부분 선택&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: IsThreeState 속성을 True로 설정하면 True/False/Null 세 상태를 가집니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalAlignment (체크박스 자체 위치)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <CheckBox Content="Left" HorizontalAlignment="Left" Margin="0,2"/>
                    <CheckBox Content="Center" HorizontalAlignment="Center" Margin="0,2"/>
                    <CheckBox Content="Right" HorizontalAlignment="Right" Margin="0,2"/>
                    <CheckBox Content="Stretch (기본값)" HorizontalAlignment="Stretch" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Stretch&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="HorizontalContentAlignment (내부 텍스트 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <CheckBox Content="Left" HorizontalContentAlignment="Left" Margin="0,2" Background="#F5F5F5"/>
                    <CheckBox Content="Center" HorizontalContentAlignment="Center" Margin="0,2" Background="#F5F5F5"/>
                    <CheckBox Content="Right" HorizontalContentAlignment="Right" Margin="0,2" Background="#F5F5F5"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Left&quot; HorizontalContentAlignment=&quot;Left&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Center&quot; HorizontalContentAlignment=&quot;Center&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Right&quot; HorizontalContentAlignment=&quot;Right&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalContentAlignment (수직 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Grid Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Top" VerticalContentAlignment="Top" Height="100" Margin="4" Grid.Column="0"/>
                        <CheckBox Content="Center" VerticalContentAlignment="Center" Height="100" Margin="4" Grid.Column="1"/>
                        <CheckBox Content="Bottom" VerticalContentAlignment="Bottom" Height="100" Margin="4" Grid.Column="2"/>
                    </Grid>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Top&quot; VerticalContentAlignment=&quot;Top&quot; Height=&quot;100&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Center&quot; VerticalContentAlignment=&quot;Center&quot; Height=&quot;100&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Bottom&quot; VerticalContentAlignment=&quot;Bottom&quot; Height=&quot;100&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FlowDirection (체크박스 방향)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <GroupBox Header="체크 마크 위치 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <CheckBox Content="LeftToRight (기본값)" FlowDirection="LeftToRight" Margin="0,0,0,4"/>
                            <CheckBox Content="RightToLeft (체크 마크가 오른쪽)" FlowDirection="RightToLeft"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;LeftToRight&quot; FlowDirection=&quot;LeftToRight&quot;/&gt;&#10;&lt;CheckBox Content=&quot;RightToLeft&quot; FlowDirection=&quot;RightToLeft&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: HorizontalAlignment를 Center로 설정한 CheckBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;CheckBox Content=&quot;중앙 정렬&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: HorizontalAlignment 속성으로 컨트롤의 수평 위치를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FlowDirection을 RightToLeft로 설정하여 체크 마크가 오른쪽에 오는 CheckBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;CheckBox Content=&quot;오른쪽 체크&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: FlowDirection 속성을 RightToLeft로 설정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <CheckBox Content="12px" FontSize="12" Margin="0,2"/>
                    <CheckBox Content="16px" FontSize="16" Margin="0,2"/>
                    <CheckBox Content="20px" FontSize="20" Margin="0,2"/>
                    <CheckBox Content="28px" FontSize="28" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;12px&quot; FontSize=&quot;12&quot;/&gt;&#10;&lt;CheckBox Content=&quot;16px&quot; FontSize=&quot;16&quot;/&gt;&#10;&lt;CheckBox Content=&quot;20px&quot; FontSize=&quot;20&quot;/&gt;&#10;&lt;CheckBox Content=&quot;28px&quot; FontSize=&quot;28&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <CheckBox Content="Thin" FontWeight="Thin" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Light" FontWeight="Light" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Normal" FontWeight="Normal" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Bold" FontWeight="Bold" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="ExtraBold" FontWeight="ExtraBold" FontSize="14" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Thin&quot; FontWeight=&quot;Thin&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Light&quot; FontWeight=&quot;Light&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Normal&quot; FontWeight=&quot;Normal&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Bold&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;CheckBox Content=&quot;ExtraBold&quot; FontWeight=&quot;ExtraBold&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <CheckBox Content="Normal" FontStyle="Normal" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Italic" FontStyle="Italic" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Oblique" FontStyle="Oblique" FontSize="14" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Normal&quot; FontStyle=&quot;Normal&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Italic&quot; FontStyle=&quot;Italic&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Oblique&quot; FontStyle=&quot;Oblique&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontFamily" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <CheckBox Content="Arial - Hello 안녕하세요" FontFamily="Arial" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Times New Roman - Hello 안녕하세요" FontFamily="Times New Roman" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="Consolas - Hello 안녕하세요" FontFamily="Consolas" FontSize="14" Margin="0,2"/>
                    <CheckBox Content="맑은 고딕 - Hello 안녕하세요" FontFamily="맑은 고딕" FontSize="14" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox Content=&quot;Arial&quot; FontFamily=&quot;Arial&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Times New Roman&quot; FontFamily=&quot;Times New Roman&quot;/&gt;&#10;&lt;CheckBox Content=&quot;Consolas&quot; FontFamily=&quot;Consolas&quot;/&gt;&#10;&lt;CheckBox Content=&quot;맑은 고딕&quot; FontFamily=&quot;맑은 고딕&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
