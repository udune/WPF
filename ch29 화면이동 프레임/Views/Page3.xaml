<!-- 
    Page3.xaml - 세 번째 페이지
    Page2에서 이동한 마지막 페이지입니다.
    "첫 화면" 버튼을 클릭하면 Page1로 돌아갑니다.
-->
<Page x:Class="ch29_화면이동_프레임.Views.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ch29_화면이동_프레임.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" Background="LightGreen">
    <!-- 
        Background="LightGreen":
        - 연두색 배경
        - Page1 (Salmon), Page2 (LightBlue), Page3 (LightGreen) 구별
        
        탐색 경로:
        Page1 → Page2 → Page3 (마지막 페이지)
    -->

    <StackPanel>
        <Label FontSize="20">페이지3</Label>
        <!-- Label: 현재 페이지 표시 -->
        
        <Button Content="첫 화면" Click="Button_Click"></Button>
        <!-- 
            Button:
            - Page1로 돌아가기
            - NavigationService.Navigate(new Page1())
            
            순환 탐색:
            Page1 → Page2 → Page3 → Page1 (다시 시작)
            
            탐색 기록:
            이동 전: [Page1] → [Page2] → [Page3] ← 현재
            이동 후: [Page1] → [Page2] → [Page3] → [Page1] ← 현재
            
            "뒤로" 버튼으로 되돌아가기:
            Page1 ← Page3 ← Page2 ← Page1 (원래 첫 페이지)
        -->
    </StackPanel>
</Page>
