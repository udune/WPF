<Window x:Class="ch2_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch2_Label"
        mc:Ignorable="d"
        Title="ch2 Label 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Label 콘텐츠 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 예제 1-1: 태그 사이에 직접 작성 -->
                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <Label>안녕하세요</Label>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label&gt;안녕하세요&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '반갑습니다'라는 텍스트를 표시하는 Label을 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice1_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1" Text="힌트: Label 태그 사이에 텍스트를 직접 입력하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 1-2: Content 속성으로 지정 -->
                    <GroupBox Header="Content 속성으로 지정" Margin="0,0,0,8">
                        <Label Content="안녕하세요"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;안녕하세요&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Content 속성을 사용하여 'WPF 학습중'이라는 텍스트를 표시하세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice1_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2" Text="힌트: Content=&quot;텍스트&quot; 형식으로 작성하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 1-3: 코드 비하인드에서 동적 설정 -->
                    <GroupBox Header="코드 비하인드에서 동적 설정" Margin="0,0,0,8">
                        <Label x:Name="lblDynamic" Content="초기 텍스트"/>
                    </GroupBox>
                    <Button Content="텍스트 변경" Click="BtnChangeText_Click" Width="120" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Label x:Name=&quot;lblDynamic&quot; Content=&quot;초기 텍스트&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 변경&quot; Click=&quot;BtnChangeText_Click&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private int _clickCount;&#10;private void BtnChangeText_Click(object sender, RoutedEventArgs e)&#10;{&#10;    _clickCount++;&#10;    lblDynamic.Content = $&quot;코드에서 변경된 텍스트 (클릭 {_clickCount}회)&quot;;&#10;}"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 클릭할 때마다 카운트가 증가하는 이벤트 핸들러를 완성하세요. _count 변수를 1 증가시키고, lblCounter의 Content를 '클릭 횟수: N회' 형식으로 표시하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3" Style="{StaticResource PracticeInputStyle}" Height="120" AcceptsReturn="True" Text="private void BtnCount_Click(object sender, RoutedEventArgs e)&#x0a;{&#x0a;    &#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3" Text="힌트: _count++로 변수를 증가시키고, $&quot;클릭 횟수: {_count}회&quot; 형식의 문자열 보간을 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult1_3" Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="2. 복합 콘텐츠" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <!-- 예제 1-4: ToolTip 표시 -->
                    <GroupBox Header="ToolTip 표시" Margin="0,0,0,8">
                        <Label Content="마우스를 올려보세요" ToolTip="이것은 Label의 ToolTip입니다"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;마우스를 올려보세요&quot; ToolTip=&quot;이것은 Label의 ToolTip입니다&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '도움말'이라는 텍스트와 '클릭하면 도움말이 열립니다'라는 ToolTip을 가진 Label을 만드세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_4" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_4"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_4"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_4"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_4" Text="힌트: Content와 ToolTip 두 속성을 모두 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_4" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_4"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- 예제 2-1: HorizontalContentAlignment -->
                    <TextBlock Text="HorizontalContentAlignment (내부 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label HorizontalContentAlignment="Left" Background="#E3F2FD" Margin="0,2">Left</Label>
                    <Label HorizontalContentAlignment="Center" Background="#E8F5E9" Margin="0,2">Center</Label>
                    <Label HorizontalContentAlignment="Right" Background="#FFF3E0" Margin="0,2">Right</Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label HorizontalContentAlignment=&quot;Left&quot; Background=&quot;#E3F2FD&quot;&gt;Left&lt;/Label&gt;&#10;&lt;Label HorizontalContentAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot;&gt;Center&lt;/Label&gt;&#10;&lt;Label HorizontalContentAlignment=&quot;Right&quot; Background=&quot;#FFF3E0&quot;&gt;Right&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '가운데 정렬'이라는 텍스트를 Center로 정렬하고 배경색을 LightBlue로 설정하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1" Text="힌트: HorizontalContentAlignment=&quot;Center&quot;와 Background 속성을 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 2-2: HorizontalAlignment -->
                    <TextBlock Text="HorizontalAlignment (컨트롤 자체 정렬)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <Label HorizontalAlignment="Left" Background="#E3F2FD" Margin="0,2">Left</Label>
                    <Label HorizontalAlignment="Center" Background="#E8F5E9" Margin="0,2">Center</Label>
                    <Label HorizontalAlignment="Right" Background="#FFF3E0" Margin="0,2">Right</Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label HorizontalAlignment=&quot;Left&quot; Background=&quot;#E3F2FD&quot;&gt;Left&lt;/Label&gt;&#10;&lt;Label HorizontalAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot;&gt;Center&lt;/Label&gt;&#10;&lt;Label HorizontalAlignment=&quot;Right&quot; Background=&quot;#FFF3E0&quot;&gt;Right&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '오른쪽 정렬'이라는 Label을 화면 오른쪽에 배치하고 배경색을 Gold로 설정하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2" Text="힌트: HorizontalAlignment=&quot;Right&quot;를 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 2-3: VerticalContentAlignment -->
                    <TextBlock Text="VerticalContentAlignment (수직 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label VerticalContentAlignment="Top" Background="#E3F2FD" Height="60" Width="100" Margin="4">Top</Label>
                        <Label VerticalContentAlignment="Center" Background="#E8F5E9" Height="60" Width="100" Margin="4">Center</Label>
                        <Label VerticalContentAlignment="Bottom" Background="#FFF3E0" Height="60" Width="100" Margin="4">Bottom</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label VerticalContentAlignment=&quot;Top&quot; Background=&quot;#E3F2FD&quot; Height=&quot;60&quot; Width=&quot;100&quot;&gt;Top&lt;/Label&gt;&#10;&lt;Label VerticalContentAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot; Height=&quot;60&quot; Width=&quot;100&quot;&gt;Center&lt;/Label&gt;&#10;&lt;Label VerticalContentAlignment=&quot;Bottom&quot; Background=&quot;#FFF3E0&quot; Height=&quot;60&quot; Width=&quot;100&quot;&gt;Bottom&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '아래 정렬'이라는 텍스트를 Bottom으로 정렬하고, Height=80, Width=120, 배경색 LightPink로 설정하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_3" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_3" Text="힌트: VerticalContentAlignment=&quot;Bottom&quot;과 Height, Width, Background 속성을 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder2_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- 예제 3-1: FontSize -->
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontSize="12" VerticalAlignment="Bottom">12px</Label>
                        <Label FontSize="18" VerticalAlignment="Bottom">18px</Label>
                        <Label FontSize="24" VerticalAlignment="Bottom">24px</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontSize=&quot;12&quot;&gt;12px&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;18&quot;&gt;18px&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;24&quot;&gt;24px&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '큰 글자'라는 텍스트를 FontSize 30으로 표시하세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice3_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1" Text="힌트: FontSize=&quot;30&quot; 속성을 추가하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 3-2: FontWeight -->
                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontWeight="Light" FontSize="16">Light</Label>
                        <Label FontWeight="Normal" FontSize="16">Normal</Label>
                        <Label FontWeight="Bold" FontSize="16">Bold</Label>
                        <Label FontWeight="ExtraBold" FontSize="16">ExtraBold</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontWeight=&quot;Light&quot;&gt;Light&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;Normal&quot;&gt;Normal&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;Bold&quot;&gt;Bold&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;ExtraBold&quot;&gt;ExtraBold&lt;/Label&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '굵은 텍스트'라는 Label을 Bold로 설정하고 FontSize는 20으로 설정하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Label&gt;&lt;/Label&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2" Text="힌트: FontWeight=&quot;Bold&quot;와 FontSize 속성을 함께 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder3_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 예제 3-3: FontStyle -->
                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontStyle="Normal" FontSize="16">Normal</Label>
                        <Label FontStyle="Italic" FontSize="16">Italic</Label>
                        <Label FontStyle="Oblique" FontSize="16">Oblique</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontStyle=&quot;Normal&quot;&gt;Normal&lt;/Label&gt;&#10;&lt;Label FontStyle=&quot;Italic&quot;&gt;Italic&lt;/Label&gt;&#10;&lt;Label FontStyle=&quot;Oblique&quot;&gt;Oblique&lt;/Label&gt;"/>
