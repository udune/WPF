<Window x:Class="ch2_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch2_Label"
        mc:Ignorable="d"
        Title="ch2 Label 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Label 콘텐츠 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <Label>안녕하세요</Label>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label&gt;안녕하세요&lt;/Label&gt;"/>
                    </Expander>

                    <GroupBox Header="Content 속성으로 지정" Margin="0,0,0,8">
                        <Label Content="안녕하세요"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;안녕하세요&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="코드 비하인드에서 동적 설정" Margin="0,0,0,8">
                        <Label x:Name="lblDynamic" Content="초기 텍스트"/>
                    </GroupBox>
                    <Button Content="텍스트 변경" Click="BtnChangeText_Click" Width="120" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Label x:Name=&quot;lblDynamic&quot; Content=&quot;초기 텍스트&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 변경&quot; Click=&quot;BtnChangeText_Click&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private int _clickCount;&#10;private void BtnChangeText_Click(object sender, RoutedEventArgs e)&#10;{&#10;    _clickCount++;&#10;    lblDynamic.Content = $&quot;코드에서 변경된 텍스트 (클릭 {_clickCount}회)&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. 복합 콘텐츠" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Label 안에 여러 컨트롤 배치" Margin="0,0,0,8">
                        <Label>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="20" Height="20" Fill="CornflowerBlue" Margin="0,0,8,0"/>
                                <TextBlock Text="아이콘 + 텍스트 조합" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Label>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Ellipse Width=&quot;20&quot; Height=&quot;20&quot; Fill=&quot;CornflowerBlue&quot; Margin=&quot;0,0,8,0&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;아이콘 + 텍스트 조합&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Label&gt;"/>
                    </Expander>

                    <GroupBox Header="AccessText로 단축키 지정 (Alt+N)" Margin="0,0,0,8">
                        <StackPanel>
                            <Label Target="{Binding ElementName=txtName}">
                                <AccessText Text="_Name"/>
                            </Label>
                            <TextBox x:Name="txtName" Margin="4"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Target=&quot;{Binding ElementName=txtName}&quot;&gt;&#10;    &lt;AccessText Text=&quot;_Name&quot;/&gt;&#10;&lt;/Label&gt;&#10;&lt;TextBox x:Name=&quot;txtName&quot; Margin=&quot;4&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="ToolTip 표시" Margin="0,0,0,8">
                        <Label Content="마우스를 올려보세요" ToolTip="이것은 Label의 ToolTip입니다"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;마우스를 올려보세요&quot; ToolTip=&quot;이것은 Label의 ToolTip입니다&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalContentAlignment (내부 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label HorizontalContentAlignment="Left" Background="#E3F2FD" Margin="0,2">Left</Label>
                    <Label HorizontalContentAlignment="Center" Background="#E8F5E9" Margin="0,2">Center</Label>
                    <Label HorizontalContentAlignment="Right" Background="#FFF3E0" Margin="0,2">Right</Label>
                    <Label HorizontalContentAlignment="Stretch" Background="#FCE4EC" Margin="0,2">Stretch</Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label HorizontalContentAlignment=&quot;Left&quot; Background=&quot;#E3F2FD&quot;&gt;Left&lt;/Label&gt;&#10;&lt;Label HorizontalContentAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot;&gt;Center&lt;/Label&gt;&#10;&lt;Label HorizontalContentAlignment=&quot;Right&quot; Background=&quot;#FFF3E0&quot;&gt;Right&lt;/Label&gt;&#10;&lt;Label HorizontalContentAlignment=&quot;Stretch&quot; Background=&quot;#FCE4EC&quot;&gt;Stretch&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="HorizontalAlignment (컨트롤 자체 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Label HorizontalAlignment="Left" Background="#E3F2FD" Margin="0,2">Left</Label>
                    <Label HorizontalAlignment="Center" Background="#E8F5E9" Margin="0,2">Center</Label>
                    <Label HorizontalAlignment="Right" Background="#FFF3E0" Margin="0,2">Right</Label>
                    <Label HorizontalAlignment="Stretch" Background="#FCE4EC" Margin="0,2">Stretch</Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label HorizontalAlignment=&quot;Left&quot; Background=&quot;#E3F2FD&quot;&gt;Left&lt;/Label&gt;&#10;&lt;Label HorizontalAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot;&gt;Center&lt;/Label&gt;&#10;&lt;Label HorizontalAlignment=&quot;Right&quot; Background=&quot;#FFF3E0&quot;&gt;Right&lt;/Label&gt;&#10;&lt;Label HorizontalAlignment=&quot;Stretch&quot; Background=&quot;#FCE4EC&quot;&gt;Stretch&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalContentAlignment (수직 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label VerticalContentAlignment="Top" Background="#E3F2FD" Height="80" Width="120" Margin="4">Top</Label>
                        <Label VerticalContentAlignment="Center" Background="#E8F5E9" Height="80" Width="120" Margin="4">Center</Label>
                        <Label VerticalContentAlignment="Bottom" Background="#FFF3E0" Height="80" Width="120" Margin="4">Bottom</Label>
                        <Label VerticalContentAlignment="Stretch" Background="#FCE4EC" Height="80" Width="120" Margin="4">Stretch</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Label VerticalContentAlignment=&quot;Top&quot; Background=&quot;#E3F2FD&quot; Height=&quot;80&quot; Width=&quot;120&quot;&gt;Top&lt;/Label&gt;&#10;    &lt;Label VerticalContentAlignment=&quot;Center&quot; Background=&quot;#E8F5E9&quot; Height=&quot;80&quot; Width=&quot;120&quot;&gt;Center&lt;/Label&gt;&#10;    &lt;Label VerticalContentAlignment=&quot;Bottom&quot; Background=&quot;#FFF3E0&quot; Height=&quot;80&quot; Width=&quot;120&quot;&gt;Bottom&lt;/Label&gt;&#10;    &lt;Label VerticalContentAlignment=&quot;Stretch&quot; Background=&quot;#FCE4EC&quot; Height=&quot;80&quot; Width=&quot;120&quot;&gt;Stretch&lt;/Label&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontSize="12" VerticalAlignment="Bottom">12px</Label>
                        <Label FontSize="18" VerticalAlignment="Bottom">18px</Label>
                        <Label FontSize="24" VerticalAlignment="Bottom">24px</Label>
                        <Label FontSize="36" VerticalAlignment="Bottom">36px</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontSize=&quot;12&quot;&gt;12px&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;18&quot;&gt;18px&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;24&quot;&gt;24px&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;36&quot;&gt;36px&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontWeight="Thin" FontSize="16">Thin</Label>
                        <Label FontWeight="Light" FontSize="16">Light</Label>
                        <Label FontWeight="Normal" FontSize="16">Normal</Label>
                        <Label FontWeight="Bold" FontSize="16">Bold</Label>
                        <Label FontWeight="ExtraBold" FontSize="16">ExtraBold</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontWeight=&quot;Thin&quot;&gt;Thin&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;Light&quot;&gt;Light&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;Normal&quot;&gt;Normal&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;Bold&quot;&gt;Bold&lt;/Label&gt;&#10;&lt;Label FontWeight=&quot;ExtraBold&quot;&gt;ExtraBold&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label FontStyle="Normal" FontSize="16">Normal</Label>
                        <Label FontStyle="Italic" FontSize="16">Italic</Label>
                        <Label FontStyle="Oblique" FontSize="16">Oblique</Label>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontStyle=&quot;Normal&quot;&gt;Normal&lt;/Label&gt;&#10;&lt;Label FontStyle=&quot;Italic&quot;&gt;Italic&lt;/Label&gt;&#10;&lt;Label FontStyle=&quot;Oblique&quot;&gt;Oblique&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="FontFamily" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Label FontFamily="Arial" FontSize="16">Arial - Hello 안녕하세요</Label>
                    <Label FontFamily="Times New Roman" FontSize="16">Times New Roman - Hello 안녕하세요</Label>
                    <Label FontFamily="Consolas" FontSize="16">Consolas - Hello 안녕하세요</Label>
                    <Label FontFamily="맑은 고딕" FontSize="16">맑은 고딕 - Hello 안녕하세요</Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontFamily=&quot;Arial&quot;&gt;Arial - Hello 안녕하세요&lt;/Label&gt;&#10;&lt;Label FontFamily=&quot;Times New Roman&quot;&gt;Times New Roman - Hello 안녕하세요&lt;/Label&gt;&#10;&lt;Label FontFamily=&quot;Consolas&quot;&gt;Consolas - Hello 안녕하세요&lt;/Label&gt;&#10;&lt;Label FontFamily=&quot;맑은 고딕&quot;&gt;맑은 고딕 - Hello 안녕하세요&lt;/Label&gt;"/>
                    </Expander>

                    <TextBlock Text="TextDecorations (밑줄/취소선)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Label FontSize="16">
                        <TextBlock TextDecorations="Underline">밑줄 텍스트</TextBlock>
                    </Label>
                    <Label FontSize="16">
                        <TextBlock TextDecorations="Strikethrough">취소선 텍스트</TextBlock>
                    </Label>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label FontSize=&quot;16&quot;&gt;&#10;    &lt;TextBlock TextDecorations=&quot;Underline&quot;&gt;밑줄 텍스트&lt;/TextBlock&gt;&#10;&lt;/Label&gt;&#10;&lt;Label FontSize=&quot;16&quot;&gt;&#10;    &lt;TextBlock TextDecorations=&quot;Strikethrough&quot;&gt;취소선 텍스트&lt;/TextBlock&gt;&#10;&lt;/Label&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 색상과 외관 -->
        <TabItem Header="색상과 외관">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Background / Foreground" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label Content="Salmon 배경 + White 텍스트" FontSize="16" FontWeight="Bold" Background="Salmon" Foreground="White" Margin="0,2"/>
                    <Label Content="SteelBlue 배경 + Yellow 텍스트" FontSize="16" FontWeight="Bold" Background="SteelBlue" Foreground="Yellow" Margin="0,2"/>
                    <Label Content="DarkGreen 배경 + LightGreen 텍스트" FontSize="16" FontWeight="Bold" Background="DarkGreen" Foreground="LightGreen" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;Salmon 배경 + White 텍스트&quot; Background=&quot;Salmon&quot; Foreground=&quot;White&quot;/&gt;&#10;&lt;Label Content=&quot;SteelBlue 배경 + Yellow 텍스트&quot; Background=&quot;SteelBlue&quot; Foreground=&quot;Yellow&quot;/&gt;&#10;&lt;Label Content=&quot;DarkGreen 배경 + LightGreen 텍스트&quot; Background=&quot;DarkGreen&quot; Foreground=&quot;LightGreen&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="BorderBrush / BorderThickness" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Label Content="테두리 1px" BorderBrush="Gray" BorderThickness="1" Margin="0,4" Padding="8"/>
                    <Label Content="테두리 3px" BorderBrush="CornflowerBlue" BorderThickness="3" Margin="0,4" Padding="8"/>
                    <Label Content="각 변 다른 두께 (좌2 상4 우2 하4)" BorderBrush="Tomato" BorderThickness="2,4,2,4" Margin="0,4" Padding="8"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;테두리 1px&quot; BorderBrush=&quot;Gray&quot; BorderThickness=&quot;1&quot; Padding=&quot;8&quot;/&gt;&#10;&lt;Label Content=&quot;테두리 3px&quot; BorderBrush=&quot;CornflowerBlue&quot; BorderThickness=&quot;3&quot; Padding=&quot;8&quot;/&gt;&#10;&lt;Label Content=&quot;각 변 다른 두께&quot; BorderBrush=&quot;Tomato&quot; BorderThickness=&quot;2,4,2,4&quot; Padding=&quot;8&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="Opacity (투명도)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="100%" Background="CornflowerBlue" Foreground="White" Opacity="1.0" FontSize="16" Margin="4" Padding="8"/>
                        <Label Content="75%" Background="CornflowerBlue" Foreground="White" Opacity="0.75" FontSize="16" Margin="4" Padding="8"/>
                        <Label Content="50%" Background="CornflowerBlue" Foreground="White" Opacity="0.5" FontSize="16" Margin="4" Padding="8"/>
                        <Label Content="25%" Background="CornflowerBlue" Foreground="White" Opacity="0.25" FontSize="16" Margin="4" Padding="8"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;100%&quot; Background=&quot;CornflowerBlue&quot; Foreground=&quot;White&quot; Opacity=&quot;1.0&quot;/&gt;&#10;&lt;Label Content=&quot;75%&quot; Background=&quot;CornflowerBlue&quot; Foreground=&quot;White&quot; Opacity=&quot;0.75&quot;/&gt;&#10;&lt;Label Content=&quot;50%&quot; Background=&quot;CornflowerBlue&quot; Foreground=&quot;White&quot; Opacity=&quot;0.5&quot;/&gt;&#10;&lt;Label Content=&quot;25%&quot; Background=&quot;CornflowerBlue&quot; Foreground=&quot;White&quot; Opacity=&quot;0.25&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="Padding (내부 여백)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Padding 0" Background="#FFCDD2" Padding="0" Margin="4"/>
                        <Label Content="Padding 10" Background="#C8E6C9" Padding="10" Margin="4"/>
                        <Label Content="Padding 20" Background="#BBDEFB" Padding="20" Margin="4"/>
                        <Label Content="Padding 10,20" Background="#FFF9C4" Padding="10,20" Margin="4"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;Padding 0&quot; Background=&quot;#FFCDD2&quot; Padding=&quot;0&quot;/&gt;&#10;&lt;Label Content=&quot;Padding 10&quot; Background=&quot;#C8E6C9&quot; Padding=&quot;10&quot;/&gt;&#10;&lt;Label Content=&quot;Padding 20&quot; Background=&quot;#BBDEFB&quot; Padding=&quot;20&quot;/&gt;&#10;&lt;Label Content=&quot;Padding 10,20&quot; Background=&quot;#FFF9C4&quot; Padding=&quot;10,20&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="Margin (외부 여백)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal" Background="#F5F5F5">
                        <Label Content="Margin 0" Background="#FFCDD2" Margin="0"/>
                        <Label Content="Margin 10" Background="#C8E6C9" Margin="10"/>
                        <Label Content="Margin 20" Background="#BBDEFB" Margin="20"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Label Content=&quot;Margin 0&quot; Background=&quot;#FFCDD2&quot; Margin=&quot;0&quot;/&gt;&#10;    &lt;Label Content=&quot;Margin 10&quot; Background=&quot;#C8E6C9&quot; Margin=&quot;10&quot;/&gt;&#10;    &lt;Label Content=&quot;Margin 20&quot; Background=&quot;#BBDEFB&quot; Margin=&quot;20&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: Target과 상호작용 -->
        <TabItem Header="Target과 상호작용">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Target 속성 (Label과 입력 컨트롤 연결)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Alt+U → 이름 TextBox로 포커스 이동" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="_User Name" Target="{Binding ElementName=txtUserName}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtUserName" Width="200" Margin="4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;_User Name&quot; Target=&quot;{Binding ElementName=txtUserName}&quot;/&gt;&#10;&lt;TextBox x:Name=&quot;txtUserName&quot; Width=&quot;200&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="Alt+E → 이메일 TextBox로 포커스 이동" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="_Email" Target="{Binding ElementName=txtEmail}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmail" Width="200" Margin="4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;_Email&quot; Target=&quot;{Binding ElementName=txtEmail}&quot;/&gt;&#10;&lt;TextBox x:Name=&quot;txtEmail&quot; Width=&quot;200&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="Alt+P → PasswordBox로 포커스 이동" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="_Password" Target="{Binding ElementName=txtPassword}" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtPassword" Width="200" Margin="4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Label Content=&quot;_Password&quot; Target=&quot;{Binding ElementName=txtPassword}&quot;/&gt;&#10;&lt;PasswordBox x:Name=&quot;txtPassword&quot; Width=&quot;200&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="코드 비하인드에서 Label 제어" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>

                    <GroupBox Header="동적 스타일 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <Label x:Name="lblStyleDemo" Content="스타일이 변경됩니다" FontSize="20" HorizontalAlignment="Left" Padding="10" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="빨간 스타일" Click="BtnRedStyle_Click" Margin="4" Padding="8,4"/>
                                <Button Content="파란 스타일" Click="BtnBlueStyle_Click" Margin="4" Padding="8,4"/>
                                <Button Content="초기화" Click="BtnResetStyle_Click" Margin="4" Padding="8,4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
