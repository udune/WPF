<Window x:Class="ch25_데이터바인딩1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch25_데이터바인딩1"
        mc:Ignorable="d"
        Title="ch25 데이터 바인딩 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- 탭 1: 기본 사용법 -->
            <TabItem Header="기본 사용법">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="데이터 바인딩 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- ElementName 바인딩 -->
                        <GroupBox Header="ElementName 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="ElementName으로 다른 컨트롤의 속성을 바인딩합니다:" Margin="0,0,0,5"/>
                                <TextBlock Text="소스 TextBox:" Margin="0,5,0,2"/>
                                <TextBox x:Name="sourceTextBox1" Text="여기에 입력하세요" Padding="5"/>
                                <TextBlock Text="타겟 TextBlock (바인딩됨):" Margin="0,10,0,2"/>
                                <TextBlock Text="{Binding ElementName=sourceTextBox1, Path=Text}"
                                           Background="LightYellow" Padding="5"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;sourceTextBox1&quot; Text=&quot;여기에 입력하세요&quot;/&gt;&#10;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=sourceTextBox1, Path=Text}&quot;/&gt;&#10;&#10;// ElementName: 바인딩할 소스 요소의 이름&#10;// Path: 바인딩할 속성 이름"/>
                        </Expander>

                        <!-- 다양한 속성 바인딩 -->
                        <GroupBox Header="다양한 속성 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Text 외에도 다양한 속성을 바인딩할 수 있습니다:" Margin="0,0,0,5"/>

                                <TextBlock Text="Width 바인딩 (슬라이더로 조절):" Margin="0,5,0,2"/>
                                <Slider x:Name="widthSlider" Minimum="50" Maximum="300" Value="150"/>
                                <Rectangle Width="{Binding ElementName=widthSlider, Path=Value}"
                                           Height="30" Fill="SteelBlue" HorizontalAlignment="Left" Margin="0,5,0,0"/>

                                <TextBlock Text="Opacity 바인딩:" Margin="0,15,0,2"/>
                                <Slider x:Name="opacitySlider" Minimum="0" Maximum="1" Value="1"/>
                                <TextBlock Text="투명도가 변합니다" FontSize="16" Background="Coral" Padding="10"
                                           Opacity="{Binding ElementName=opacitySlider, Path=Value}"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- Width 바인딩 --&gt;&#10;&lt;Slider x:Name=&quot;widthSlider&quot; Minimum=&quot;50&quot; Maximum=&quot;300&quot; Value=&quot;150&quot;/&gt;&#10;&lt;Rectangle Width=&quot;{Binding ElementName=widthSlider, Path=Value}&quot; Height=&quot;30&quot; Fill=&quot;SteelBlue&quot;/&gt;&#10;&#10;&lt;!-- Opacity 바인딩 --&gt;&#10;&lt;Slider x:Name=&quot;opacitySlider&quot; Minimum=&quot;0&quot; Maximum=&quot;1&quot; Value=&quot;1&quot;/&gt;&#10;&lt;TextBlock Opacity=&quot;{Binding ElementName=opacitySlider, Path=Value}&quot;/&gt;"/>
                        </Expander>

                        <!-- Background 바인딩 -->
                        <GroupBox Header="Background 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="배경색도 바인딩할 수 있습니다:" Margin="0,0,0,5"/>
                                <Button x:Name="colorSourceBtn" Content="소스 버튼 (배경색 클릭)"
                                        Background="Salmon" Padding="10,5" Click="ChangeColor_Click"/>
                                <Button Content="타겟 버튼 (배경색 바인딩됨)" Padding="10,5" Margin="0,5,0,0"
                                        Background="{Binding ElementName=colorSourceBtn, Path=Background}"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button x:Name=&quot;colorSourceBtn&quot; Background=&quot;Salmon&quot; Content=&quot;소스 버튼&quot;/&gt;&#10;&lt;Button Background=&quot;{Binding ElementName=colorSourceBtn, Path=Background}&quot; Content=&quot;타겟 버튼&quot;/&gt;&#10;&#10;// 소스 버튼의 Background가 변경되면 타겟 버튼도 자동으로 변경됩니다"/>
                        </Expander>

                        <!-- IsEnabled 바인딩 -->
                        <GroupBox Header="IsEnabled 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="CheckBox의 IsChecked를 Button의 IsEnabled에 바인딩:" Margin="0,0,0,5"/>
                                <CheckBox x:Name="enableCheckBox" Content="버튼 활성화" IsChecked="True"/>
                                <Button Content="활성화/비활성화 버튼" Padding="10,5" Margin="0,5,0,0"
                                        IsEnabled="{Binding ElementName=enableCheckBox, Path=IsChecked}"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;CheckBox x:Name=&quot;enableCheckBox&quot; Content=&quot;버튼 활성화&quot; IsChecked=&quot;True&quot;/&gt;&#10;&lt;Button Content=&quot;활성화/비활성화 버튼&quot;&#10;        IsEnabled=&quot;{Binding ElementName=enableCheckBox, Path=IsChecked}&quot;/&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 2: 바인딩 모드 -->
            <TabItem Header="바인딩 모드">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="바인딩 모드 (Mode)" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- OneWay -->
                        <GroupBox Header="OneWay (소스 → 타겟)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="소스가 변경되면 타겟에 반영됩니다 (단방향):" Margin="0,0,0,5"/>
                                <TextBlock Text="소스:" Margin="0,5,0,2"/>
                                <TextBox x:Name="oneWaySource" Text="OneWay 소스" Padding="5"/>
                                <TextBlock Text="타겟 (OneWay):" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding ElementName=oneWaySource, Path=Text, Mode=OneWay}"
                                         Padding="5" Background="LightCyan"/>
                                <TextBlock Text="※ 타겟을 수정해도 소스에 반영되지 않습니다" FontStyle="Italic"
                                           Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;oneWaySource&quot; Text=&quot;OneWay 소스&quot;/&gt;&#10;&lt;TextBox Text=&quot;{Binding ElementName=oneWaySource, Path=Text, Mode=OneWay}&quot;/&gt;&#10;&#10;// OneWay: 소스 → 타겟 방향으로만 데이터 전달&#10;// 대부분의 바인딩의 기본값"/>
                        </Expander>

                        <!-- TwoWay -->
                        <GroupBox Header="TwoWay (소스 ↔ 타겟)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="소스와 타겟이 양방향으로 동기화됩니다:" Margin="0,0,0,5"/>
                                <TextBlock Text="소스:" Margin="0,5,0,2"/>
                                <TextBox x:Name="twoWaySource" Text="TwoWay 소스" Padding="5"/>
                                <TextBlock Text="타겟 (TwoWay) - 포커스 이동 시 반영:" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding ElementName=twoWaySource, Path=Text, Mode=TwoWay}"
                                         Padding="5" Background="LightGreen"/>
                                <TextBlock Text="※ 타겟 수정 후 Tab이나 다른 곳 클릭하면 소스에 반영" FontStyle="Italic"
                                           Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;twoWaySource&quot; Text=&quot;TwoWay 소스&quot;/&gt;&#10;&lt;TextBox Text=&quot;{Binding ElementName=twoWaySource, Path=Text, Mode=TwoWay}&quot;/&gt;&#10;&#10;// TwoWay: 소스 ↔ 타겟 양방향 데이터 전달&#10;// TextBox의 기본 바인딩 모드"/>
                        </Expander>

                        <!-- OneWayToSource -->
                        <GroupBox Header="OneWayToSource (타겟 → 소스)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="타겟이 변경되면 소스에 반영됩니다 (역방향):" Margin="0,0,0,5"/>
                                <TextBlock Text="소스 (여기에 반영됨):" Margin="0,5,0,2"/>
                                <TextBox x:Name="oneWayToSourceTarget" Text="초기값" Padding="5" Background="LightPink"/>
                                <TextBlock Text="타겟 (OneWayToSource) - 여기서 입력:" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding ElementName=oneWayToSourceTarget, Path=Text, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="5"/>
                                <TextBlock Text="※ 아래 텍스트박스에 입력하면 위에 반영됩니다" FontStyle="Italic"
                                           Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;oneWayToSourceTarget&quot; Text=&quot;초기값&quot;/&gt;&#10;&lt;TextBox Text=&quot;{Binding ElementName=oneWayToSourceTarget, Path=Text, &#10;         Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}&quot;/&gt;&#10;&#10;// OneWayToSource: 타겟 → 소스 방향으로만 데이터 전달"/>
                        </Expander>

                        <!-- OneTime -->
                        <GroupBox Header="OneTime (초기화 시 한 번만)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="바인딩 초기화 시 한 번만 값을 가져옵니다:" Margin="0,0,0,5"/>
                                <TextBlock Text="소스:" Margin="0,5,0,2"/>
                                <TextBox x:Name="oneTimeSource" Text="OneTime 소스 (수정해도 반영 안 됨)" Padding="5"/>
                                <TextBlock Text="타겟 (OneTime):" Margin="0,10,0,2"/>
                                <TextBox Text="{Binding ElementName=oneTimeSource, Path=Text, Mode=OneTime}"
                                         Padding="5" Background="LightGray" IsReadOnly="True"/>
                                <TextBlock Text="※ 소스를 수정해도 타겟에 반영되지 않습니다 (초기값만 복사)" FontStyle="Italic"
                                           Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;oneTimeSource&quot; Text=&quot;OneTime 소스&quot;/&gt;&#10;&lt;TextBox Text=&quot;{Binding ElementName=oneTimeSource, Path=Text, Mode=OneTime}&quot;/&gt;&#10;&#10;// OneTime: 바인딩 초기화 시 한 번만 값을 가져옴&#10;// 이후 소스가 변경되어도 타겟에 반영되지 않음"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 3: UpdateSourceTrigger -->
            <TabItem Header="UpdateSourceTrigger">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="UpdateSourceTrigger" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <TextBlock Text="TwoWay/OneWayToSource 바인딩에서 소스 업데이트 시점을 지정합니다."
                                   Margin="0,0,0,15" Foreground="Gray"/>

                        <!-- 공통 소스 -->
                        <GroupBox Header="공통 소스" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="소스 TextBox (모든 타겟이 이 값을 바인딩):" Margin="0,0,0,5"/>
                                <TextBox x:Name="triggerSource" Text="공통 소스" Padding="5" FontSize="14"
                                         Background="LightYellow" FontWeight="Bold"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- PropertyChanged -->
                        <GroupBox Header="PropertyChanged (즉시 반영)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="타겟 값이 변경될 때마다 즉시 소스에 반영:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding ElementName=triggerSource, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="5" Background="LightGreen"/>
                                <TextBlock Text="※ 타이핑할 때마다 즉시 소스가 업데이트됩니다" FontStyle="Italic"
                                           Foreground="Green" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;{Binding ElementName=triggerSource, Path=Text, &#10;         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}&quot;/&gt;&#10;&#10;// PropertyChanged: 속성이 변경될 때마다 즉시 소스 업데이트&#10;// 실시간 검색, 자동 완성 등에 유용"/>
                        </Expander>

                        <!-- LostFocus -->
                        <GroupBox Header="LostFocus (포커스 잃을 때)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="타겟이 포커스를 잃을 때 소스에 반영:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding ElementName=triggerSource, Path=Text, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                         Padding="5" Background="LightCyan"/>
                                <TextBlock Text="※ Tab 키나 다른 곳을 클릭하면 소스가 업데이트됩니다" FontStyle="Italic"
                                           Foreground="DarkCyan" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;{Binding ElementName=triggerSource, Path=Text, &#10;         Mode=TwoWay, UpdateSourceTrigger=LostFocus}&quot;/&gt;&#10;&#10;// LostFocus: 포커스를 잃을 때 소스 업데이트&#10;// TextBox.Text의 기본값 (Default와 동일)"/>
                        </Expander>

                        <!-- Default -->
                        <GroupBox Header="Default (속성의 기본 동작)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="각 속성의 기본 UpdateSourceTrigger 동작을 따름:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding ElementName=triggerSource, Path=Text, Mode=TwoWay, UpdateSourceTrigger=Default}"
                                         Padding="5" Background="LightSteelBlue"/>
                                <TextBlock Text="※ TextBox.Text는 LostFocus가 기본값입니다" FontStyle="Italic"
                                           Foreground="SteelBlue" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;{Binding ElementName=triggerSource, Path=Text, &#10;         Mode=TwoWay, UpdateSourceTrigger=Default}&quot;/&gt;&#10;&#10;// Default: 속성의 기본 UpdateSourceTrigger 사용&#10;// TextBox.Text → LostFocus&#10;// Slider.Value → PropertyChanged"/>
                        </Expander>

                        <!-- Explicit -->
                        <GroupBox Header="Explicit (명시적 호출 필요)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="코드에서 명시적으로 UpdateSource()를 호출해야 반영:" Margin="0,0,0,5"/>
                                <TextBox x:Name="explicitTextBox"
                                         Text="{Binding ElementName=triggerSource, Path=Text, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                         Padding="5" Background="LightPink"/>
                                <Button Content="소스 업데이트" Click="UpdateExplicit_Click"
                                        Padding="10,5" Margin="0,5,0,0" HorizontalAlignment="Left"/>
                                <TextBlock Text="※ 버튼을 클릭해야만 소스가 업데이트됩니다" FontStyle="Italic"
                                           Foreground="IndianRed" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox x:Name=&quot;explicitTextBox&quot;&#10;         Text=&quot;{Binding ElementName=triggerSource, Path=Text, &#10;                  Mode=TwoWay, UpdateSourceTrigger=Explicit}&quot;/&gt;&#10;&lt;Button Content=&quot;소스 업데이트&quot; Click=&quot;UpdateExplicit_Click&quot;/&gt;&#10;&#10;// C# 코드&#10;private void UpdateExplicit_Click(object sender, RoutedEventArgs e)&#10;{&#10;    var binding = explicitTextBox.GetBindingExpression(TextBox.TextProperty);&#10;    binding?.UpdateSource();&#10;}"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 4: 바인딩 표현식 -->
            <TabItem Header="바인딩 표현식">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="바인딩 표현식" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 기본 문법 -->
                        <GroupBox Header="바인딩 기본 문법" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    <Run FontWeight="Bold">기본 형식:</Run>
                                    <Run>{Binding ElementName=소스이름, Path=속성이름}</Run>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    <Run FontWeight="Bold">전체 형식:</Run>
                                    <Run>{Binding ElementName=소스이름, Path=속성이름, Mode=모드, UpdateSourceTrigger=트리거}</Run>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 기본 바인딩&#10;{Binding ElementName=sourceControl, Path=Text}&#10;&#10;// 축약형 (Path가 첫 번째면 생략 가능)&#10;{Binding Text, ElementName=sourceControl}&#10;&#10;// 전체 옵션 지정&#10;{Binding ElementName=sourceControl, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Expander>

                        <!-- Self 바인딩 -->
                        <GroupBox Header="RelativeSource Self (자기 자신)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="자기 자신의 다른 속성을 바인딩합니다:" Margin="0,0,0,5"/>
                                <TextBox x:Name="selfBindingBox" Text="자기 자신의 너비:" Padding="5"
                                         ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
                                <TextBlock Text="※ TextBox 위에 마우스를 올리면 ToolTip에 Text가 표시됩니다"
                                           FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>

                                <Border Margin="0,15,0,0" BorderBrush="Gray" BorderThickness="1" Padding="10"
                                        Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">
                                    <TextBlock Text="정사각형 Border (Width=Height)" TextWrapping="Wrap"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- ToolTip에 자신의 Text 바인딩 --&gt;&#10;&lt;TextBox Text=&quot;텍스트&quot; ToolTip=&quot;{Binding RelativeSource={RelativeSource Self}, Path=Text}&quot;/&gt;&#10;&#10;&lt;!-- 정사각형 만들기 (Width = Height) --&gt;&#10;&lt;Border Width=&quot;{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}&quot;&gt;&#10;    &lt;TextBlock Text=&quot;정사각형&quot;/&gt;&#10;&lt;/Border&gt;"/>
                        </Expander>

                        <!-- TemplatedParent -->
                        <GroupBox Header="StringFormat (문자열 포맷)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="바인딩 값에 포맷을 적용합니다:" Margin="0,0,0,5"/>
                                <Slider x:Name="formatSlider" Minimum="0" Maximum="100" Value="50"/>
                                <TextBlock Text="{Binding ElementName=formatSlider, Path=Value, StringFormat=값: {0:F1}}"
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ElementName=formatSlider, Path=Value, StringFormat=퍼센트: {0:F0}%}"
                                           Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ElementName=formatSlider, Path=Value, StringFormat=통화: {0:C0}}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider x:Name=&quot;formatSlider&quot; Value=&quot;50&quot;/&gt;&#10;&#10;&lt;!-- 소수점 1자리 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=formatSlider, Path=Value, StringFormat=값: {0:F1}}&quot;/&gt;&#10;&#10;&lt;!-- 퍼센트 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=formatSlider, Path=Value, StringFormat={}{0:F0}%}&quot;/&gt;&#10;&#10;&lt;!-- 통화 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=formatSlider, Path=Value, StringFormat={}{0:C0}}&quot;/&gt;"/>
                        </Expander>

                        <!-- FallbackValue, TargetNullValue -->
                        <GroupBox Header="FallbackValue / TargetNullValue" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="바인딩 실패 시 또는 null 값일 때 대체 값을 지정합니다:" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding NonExistentProperty, FallbackValue=바인딩 실패 시 표시되는 값}"
                                           Background="LightCoral" Padding="5"/>
                                <TextBlock Text="※ FallbackValue: 바인딩이 실패하면 표시되는 값"
                                           FontStyle="Italic" Foreground="Gray" Margin="0,5,0,10"/>

                                <TextBox x:Name="nullableTextBox" Padding="5"/>
                                <TextBlock Text="※ TargetNullValue: 값이 null이면 표시되는 값"
                                           FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 바인딩 실패 시 대체값 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding NonExistent, FallbackValue=기본값}&quot;/&gt;&#10;&#10;&lt;!-- null일 때 대체값 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding NullableProperty, TargetNullValue=값 없음}&quot;/&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 5: 실용 예제 -->
            <TabItem Header="실용 예제">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="실용 예제" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 로그인 폼 -->
                        <GroupBox Header="로그인 폼 미리보기" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="입력 폼:" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="사용자명:"/>
                                    <TextBox x:Name="usernameInput" Padding="5" Margin="0,2,0,10"/>
                                    <TextBlock Text="이메일:"/>
                                    <TextBox x:Name="emailInput" Padding="5" Margin="0,2,0,10"/>
                                    <CheckBox x:Name="agreeCheck" Content="이용약관 동의"/>
                                    <Button Content="가입하기" Padding="10,5" Margin="0,10,0,0"
                                            IsEnabled="{Binding ElementName=agreeCheck, Path=IsChecked}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Background="LightGray" Padding="10">
                                    <TextBlock Text="미리보기:" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="사용자명:"/>
                                    <TextBlock Text="{Binding ElementName=usernameInput, Path=Text}"
                                               FontWeight="Bold" Margin="0,2,0,10"/>
                                    <TextBlock Text="이메일:"/>
                                    <TextBlock Text="{Binding ElementName=emailInput, Path=Text}"
                                               FontWeight="Bold" Margin="0,2,0,10"/>
                                    <TextBlock Text="{Binding ElementName=agreeCheck, Path=IsChecked,
                                               StringFormat=동의 여부: {0}}"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 입력과 미리보기 동기화 --&gt;&#10;&lt;TextBox x:Name=&quot;usernameInput&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=usernameInput, Path=Text}&quot;/&gt;&#10;&#10;&lt;!-- 체크박스로 버튼 활성화 --&gt;&#10;&lt;CheckBox x:Name=&quot;agreeCheck&quot; Content=&quot;이용약관 동의&quot;/&gt;&#10;&lt;Button Content=&quot;가입하기&quot; IsEnabled=&quot;{Binding ElementName=agreeCheck, Path=IsChecked}&quot;/&gt;"/>
                        </Expander>

                        <!-- 슬라이더 컨트롤 -->
                        <GroupBox Header="슬라이더로 스타일 조절" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="글자 크기:" VerticalAlignment="Center"/>
                                    <Slider x:Name="fontSizeSlider" Grid.Column="1" Minimum="10" Maximum="36" Value="16" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ElementName=fontSizeSlider, Path=Value, StringFormat={}{0:F0}}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Row="1" Text="두께:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <Slider x:Name="borderSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="10" Value="2"
                                            VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=borderSlider, Path=Value, StringFormat={}{0:F0}}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0"/>

                                    <TextBlock Grid.Row="2" Text="회전:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <Slider x:Name="rotateSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="360" Value="0"
                                            VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=rotateSlider, Path=Value, StringFormat={}{0:F0}°}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </Grid>

                                <Border Margin="0,20,0,0" BorderBrush="DarkBlue" Padding="20" HorizontalAlignment="Center"
                                        BorderThickness="{Binding ElementName=borderSlider, Path=Value}">
                                    <Border.RenderTransform>
                                        <RotateTransform Angle="{Binding ElementName=rotateSlider, Path=Value}"/>
                                    </Border.RenderTransform>
                                    <TextBlock Text="스타일 미리보기" HorizontalAlignment="Center"
                                               FontSize="{Binding ElementName=fontSizeSlider, Path=Value}"/>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider x:Name=&quot;fontSizeSlider&quot; Minimum=&quot;10&quot; Maximum=&quot;36&quot; Value=&quot;16&quot;/&gt;&#10;&lt;Slider x:Name=&quot;borderSlider&quot; Minimum=&quot;0&quot; Maximum=&quot;10&quot; Value=&quot;2&quot;/&gt;&#10;&lt;Slider x:Name=&quot;rotateSlider&quot; Minimum=&quot;0&quot; Maximum=&quot;360&quot; Value=&quot;0&quot;/&gt;&#10;&#10;&lt;Border BorderThickness=&quot;{Binding ElementName=borderSlider, Path=Value}&quot;&gt;&#10;    &lt;Border.RenderTransform&gt;&#10;        &lt;RotateTransform Angle=&quot;{Binding ElementName=rotateSlider, Path=Value}&quot;/&gt;&#10;    &lt;/Border.RenderTransform&gt;&#10;    &lt;TextBlock FontSize=&quot;{Binding ElementName=fontSizeSlider, Path=Value}&quot;/&gt;&#10;&lt;/Border&gt;"/>
                        </Expander>

                        <!-- 동기화된 슬라이더들 -->
                        <GroupBox Header="동기화된 슬라이더" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="여러 슬라이더를 TwoWay로 동기화:" Margin="0,0,0,10"/>
                                <Slider x:Name="syncSlider1" Minimum="0" Maximum="100" Value="50"/>
                                <Slider Value="{Binding ElementName=syncSlider1, Path=Value, Mode=TwoWay}"
                                        Minimum="0" Maximum="100" Margin="0,5,0,0"/>
                                <Slider Value="{Binding ElementName=syncSlider1, Path=Value, Mode=TwoWay}"
                                        Minimum="0" Maximum="100" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ElementName=syncSlider1, Path=Value, StringFormat=현재 값: {0:F0}}"
                                           FontSize="14" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider x:Name=&quot;syncSlider1&quot; Value=&quot;50&quot;/&gt;&#10;&lt;Slider Value=&quot;{Binding ElementName=syncSlider1, Path=Value, Mode=TwoWay}&quot;/&gt;&#10;&lt;Slider Value=&quot;{Binding ElementName=syncSlider1, Path=Value, Mode=TwoWay}&quot;/&gt;&#10;&#10;// 모든 슬라이더가 TwoWay로 연결되어 어느 것을 움직여도 동기화됩니다"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
