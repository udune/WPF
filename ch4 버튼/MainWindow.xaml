<Window x:Class="ch4_버튼.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch4_버튼"
        mc:Ignorable="d"
        Title="ch4 Button 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Button 콘텐츠 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <Button HorizontalAlignment="Left" Padding="12,6">버튼</Button>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button&gt;버튼&lt;/Button&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '클릭하세요'라는 텍스트를 가진 Button을 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice1_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button&gt;&lt;/Button&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1" Text="힌트: Button 태그 사이에 텍스트를 직접 입력하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <GroupBox Header="Content 속성으로 지정" Margin="0,0,0,8">
                        <Button Content="버튼" HorizontalAlignment="Left" Padding="12,6"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;버튼&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Content 속성을 사용하여 '저장하기'라는 버튼을 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice1_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2" Text="힌트: Content=&quot;텍스트&quot; 형식으로 작성하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <GroupBox Header="복합 콘텐츠 (아이콘 + 텍스트)" Margin="0,0,0,8">
                        <Button HorizontalAlignment="Left" Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" Fill="CornflowerBlue" Margin="0,0,8,0"/>
                                <TextBlock Text="아이콘 버튼" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button HorizontalAlignment=&quot;Left&quot; Padding=&quot;12,6&quot;&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Ellipse Width=&quot;16&quot; Height=&quot;16&quot; Fill=&quot;CornflowerBlue&quot; Margin=&quot;0,0,8,0&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;아이콘 버튼&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>

                    <TextBlock Text="2. ToolTip" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="마우스를 올리면 툴팁 표시" Margin="0,0,0,8">
                        <Button Content="마우스를 올려보세요" ToolTip="이것은 Button의 ToolTip입니다" HorizontalAlignment="Left" Padding="12,6"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;마우스를 올려보세요&quot; ToolTip=&quot;이것은 Button의 ToolTip입니다&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '도움말' 버튼에 '도움말을 표시합니다'라는 ToolTip을 추가하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;도움말&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3" Text="힌트: ToolTip=&quot;텍스트&quot; 속성을 추가하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="3. IsDefault / IsCancel" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="IsDefault=True → Enter 키로 실행, IsCancel=True → Esc 키로 실행" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="확인 (Enter)" IsDefault="True" Padding="12,6" Margin="0,0,8,0"/>
                            <Button Content="취소 (Esc)" IsCancel="True" Padding="12,6"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;확인 (Enter)&quot; IsDefault=&quot;True&quot;/&gt;&#10;&lt;Button Content=&quot;취소 (Esc)&quot; IsCancel=&quot;True&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. IsEnabled" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="비활성화된 버튼" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="활성 버튼" Padding="12,6" Margin="0,0,8,0"/>
                            <Button Content="비활성 버튼" IsEnabled="False" Padding="12,6"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;활성 버튼&quot;/&gt;&#10;&lt;Button Content=&quot;비활성 버튼&quot; IsEnabled=&quot;False&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '수정 불가'라는 버튼을 비활성화 상태로 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice1_4" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;수정 불가&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_4"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_4"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_4"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_4" Text="힌트: IsEnabled=&quot;False&quot;를 추가하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder1_4" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_4"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalAlignment (버튼 자체 위치)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Left" HorizontalAlignment="Left" Padding="12,6" Margin="0,2"/>
                    <Button Content="Center" HorizontalAlignment="Center" Padding="12,6" Margin="0,2"/>
                    <Button Content="Right" HorizontalAlignment="Right" Padding="12,6" Margin="0,2"/>
                    <Button Content="Stretch (기본값)" HorizontalAlignment="Stretch" Padding="12,6" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;&lt;Button Content=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;&lt;Button Content=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot;/&gt;&#10;&lt;Button Content=&quot;Stretch&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '오른쪽 정렬' 버튼을 화면 오른쪽에 배치하세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice2_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;오른쪽 정렬&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1" Text="힌트: HorizontalAlignment=&quot;Right&quot;를 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="HorizontalContentAlignment (내부 콘텐츠 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Button Content="Left" HorizontalContentAlignment="Left" Padding="12,6" Margin="0,2"/>
                    <Button Content="Center" HorizontalContentAlignment="Center" Padding="12,6" Margin="0,2"/>
                    <Button Content="Right" HorizontalContentAlignment="Right" Padding="12,6" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;Left&quot; HorizontalContentAlignment=&quot;Left&quot;/&gt;&#10;&lt;Button Content=&quot;Center&quot; HorizontalContentAlignment=&quot;Center&quot;/&gt;&#10;&lt;Button Content=&quot;Right&quot; HorizontalContentAlignment=&quot;Right&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalAlignment (수직 위치)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Grid Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Top" VerticalAlignment="Top" Padding="12,6" Margin="4" Grid.Column="0"/>
                        <Button Content="Center" VerticalAlignment="Center" Padding="12,6" Margin="4" Grid.Column="1"/>
                        <Button Content="Bottom" VerticalAlignment="Bottom" Padding="12,6" Margin="4" Grid.Column="2"/>
                    </Grid>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid Height=&quot;120&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;Button Content=&quot;Top&quot; VerticalAlignment=&quot;Top&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; VerticalAlignment=&quot;Center&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;Bottom&quot; VerticalAlignment=&quot;Bottom&quot; Grid.Column=&quot;2&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <TextBlock Text="Width / Height 고정 크기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="100x30" Width="100" Height="30" Margin="4"/>
                        <Button Content="150x40" Width="150" Height="40" Margin="4"/>
                        <Button Content="200x50" Width="200" Height="50" Margin="4"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;100x30&quot; Width=&quot;100&quot; Height=&quot;30&quot;/&gt;&#10;&lt;Button Content=&quot;150x40&quot; Width=&quot;150&quot; Height=&quot;40&quot;/&gt;&#10;&lt;Button Content=&quot;200x50&quot; Width=&quot;200&quot; Height=&quot;50&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '큰 버튼'이라는 텍스트를 가진 Width=180, Height=60 크기의 버튼을 만드세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;큰 버튼&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2" Text="힌트: Width=&quot;180&quot;과 Height=&quot;60&quot;을 추가하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="12px" FontSize="12" Padding="8,4" Margin="4" VerticalAlignment="Bottom"/>
                        <Button Content="16px" FontSize="16" Padding="8,4" Margin="4" VerticalAlignment="Bottom"/>
                        <Button Content="20px" FontSize="20" Padding="8,4" Margin="4" VerticalAlignment="Bottom"/>
                        <Button Content="28px" FontSize="28" Padding="8,4" Margin="4" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;12px&quot; FontSize=&quot;12&quot;/&gt;&#10;&lt;Button Content=&quot;16px&quot; FontSize=&quot;16&quot;/&gt;&#10;&lt;Button Content=&quot;20px&quot; FontSize=&quot;20&quot;/&gt;&#10;&lt;Button Content=&quot;28px&quot; FontSize=&quot;28&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '큰 글자 버튼'을 FontSize 24로 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice3_1" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;큰 글자 버튼&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1" Text="힌트: FontSize=&quot;24&quot;를 추가하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Thin" FontWeight="Thin" FontSize="14" Padding="8,4" Margin="4"/>
                        <Button Content="Light" FontWeight="Light" FontSize="14" Padding="8,4" Margin="4"/>
                        <Button Content="Normal" FontWeight="Normal" FontSize="14" Padding="8,4" Margin="4"/>
                        <Button Content="Bold" FontWeight="Bold" FontSize="14" Padding="8,4" Margin="4"/>
                        <Button Content="ExtraBold" FontWeight="ExtraBold" FontSize="14" Padding="8,4" Margin="4"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Button Content=&quot;Thin&quot; FontWeight=&quot;Thin&quot;/&gt;&#10;&lt;Button Content=&quot;Light&quot; FontWeight=&quot;Light&quot;/&gt;&#10;&lt;Button Content=&quot;Normal&quot; FontWeight=&quot;Normal&quot;/&gt;&#10;&lt;Button Content=&quot;Bold&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;Button Content=&quot;ExtraBold&quot; FontWeight=&quot;ExtraBold&quot;/&gt;"/>
                    </Expander>
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: '강조 버튼'을 Bold, FontSize 18로 만드세요." FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPractice3_2" Style="{StaticResource PracticeInputStyle}" Text="&lt;Button Content=&quot;강조 버튼&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2" Text="힌트: FontWeight=&quot;Bold&quot;와 FontSize=&quot;18&quot;을 함께 사용하세요." Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed"/>
