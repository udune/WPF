<Window x:Class="ch5_텍스트박스.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch5_텍스트박스"
        mc:Ignorable="d"
        Title="ch5 TextBox 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Text 속성 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <TextBox HorizontalAlignment="Left" Width="300" Padding="4">텍스트박스</TextBox>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox&gt;텍스트박스&lt;/TextBox&gt;"/>
                    </Expander>

                    <GroupBox Header="Text 속성으로 지정" Margin="0,0,0,8">
                        <TextBox Text="텍스트박스" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;텍스트박스&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. TextWrapping (줄 바꿈)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="NoWrap (기본값) - 한 줄로 표시, 넘치면 스크롤" Margin="0,0,0,8">
                        <TextBox Text="긴 텍스트를 입력하면 한 줄로 계속 이어집니다. TextWrapping이 NoWrap이면 줄 바꿈 없이 수평 스크롤됩니다." TextWrapping="NoWrap" Width="400" HorizontalAlignment="Left" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="Wrap - 자동 줄 바꿈" Margin="0,0,0,8">
                        <TextBox Text="긴 텍스트를 입력하면 자동으로 줄이 바뀝니다. TextWrapping이 Wrap이면 컨트롤 너비에 맞춰 줄 바꿈됩니다." TextWrapping="Wrap" Width="400" HorizontalAlignment="Left" Height="60" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="WrapWithOverflow - 단어 단위 줄 바꿈 (단어가 길면 넘침)" Margin="0,0,0,8">
                        <TextBox Text="WrapWithOverflow는 단어 경계에서 줄바꿈하되, 단어가 너비보다 길면 넘칠 수 있습니다." TextWrapping="WrapWithOverflow" Width="400" HorizontalAlignment="Left" Height="60" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;...&quot; TextWrapping=&quot;NoWrap&quot;/&gt;&#10;&lt;TextBox Text=&quot;...&quot; TextWrapping=&quot;Wrap&quot;/&gt;&#10;&lt;TextBox Text=&quot;...&quot; TextWrapping=&quot;WrapWithOverflow&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. AcceptsReturn (여러 줄 입력)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="AcceptsReturn=True → Enter 키로 줄 바꿈 가능" Margin="0,0,0,8">
                        <TextBox Text="여기에 Enter 키를 눌러보세요" AcceptsReturn="True" TextWrapping="Wrap" Height="80" Width="400" HorizontalAlignment="Left" Padding="4" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;여기에 Enter 키를 눌러보세요&quot;&#10;        AcceptsReturn=&quot;True&quot;&#10;        TextWrapping=&quot;Wrap&quot;&#10;        Height=&quot;80&quot;&#10;        VerticalScrollBarVisibility=&quot;Auto&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. MaxLength (최대 글자 수)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="MaxLength=10 → 최대 10자까지 입력 가능" Margin="0,0,0,8">
                        <TextBox MaxLength="10" Width="300" HorizontalAlignment="Left" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox MaxLength=&quot;10&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="5. IsReadOnly / IsEnabled" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="읽기 전용 및 비활성화" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox Text="IsReadOnly=True (선택/복사 가능, 편집 불가)" IsReadOnly="True" Width="400" HorizontalAlignment="Left" Padding="4" Margin="0,0,0,4"/>
                            <TextBox Text="IsEnabled=False (완전 비활성화)" IsEnabled="False" Width="400" HorizontalAlignment="Left" Padding="4"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;읽기 전용&quot; IsReadOnly=&quot;True&quot;/&gt;&#10;&lt;TextBox Text=&quot;비활성화&quot; IsEnabled=&quot;False&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="6. AcceptsTab / SpellCheck" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="AcceptsTab=True → Tab 키가 탭 문자로 입력됨" Margin="0,0,0,8">
                        <TextBox Text="Tab 키를 눌러보세요" AcceptsTab="True" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Width="400" HorizontalAlignment="Left" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox AcceptsTab=&quot;True&quot; AcceptsReturn=&quot;True&quot;&#10;        TextWrapping=&quot;Wrap&quot; Height=&quot;60&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalAlignment (텍스트박스 자체 위치)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox Text="Left" HorizontalAlignment="Left" Width="200" Padding="4" Margin="0,2"/>
                    <TextBox Text="Center" HorizontalAlignment="Center" Width="200" Padding="4" Margin="0,2"/>
                    <TextBox Text="Right" HorizontalAlignment="Right" Width="200" Padding="4" Margin="0,2"/>
                    <TextBox Text="Stretch (기본값)" HorizontalAlignment="Stretch" Padding="4" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot; Width=&quot;200&quot;/&gt;&#10;&lt;TextBox Text=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot; Width=&quot;200&quot;/&gt;&#10;&lt;TextBox Text=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot; Width=&quot;200&quot;/&gt;&#10;&lt;TextBox Text=&quot;Stretch&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="TextAlignment (텍스트 내부 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="Left (기본값)" TextAlignment="Left" Padding="4" Margin="0,2"/>
                    <TextBox Text="Center" TextAlignment="Center" Padding="4" Margin="0,2"/>
                    <TextBox Text="Right" TextAlignment="Right" Padding="4" Margin="0,2"/>
                    <TextBox Text="Justify" TextAlignment="Justify" Padding="4" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Left&quot; TextAlignment=&quot;Left&quot;/&gt;&#10;&lt;TextBox Text=&quot;Center&quot; TextAlignment=&quot;Center&quot;/&gt;&#10;&lt;TextBox Text=&quot;Right&quot; TextAlignment=&quot;Right&quot;/&gt;&#10;&lt;TextBox Text=&quot;Justify&quot; TextAlignment=&quot;Justify&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalContentAlignment (수직 텍스트 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Grid Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="Top" VerticalContentAlignment="Top" Padding="4" Margin="4" Grid.Column="0"/>
                        <TextBox Text="Center" VerticalContentAlignment="Center" Padding="4" Margin="4" Grid.Column="1"/>
                        <TextBox Text="Bottom" VerticalContentAlignment="Bottom" Padding="4" Margin="4" Grid.Column="2"/>
                    </Grid>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid Height=&quot;120&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;TextBox Text=&quot;Top&quot; VerticalContentAlignment=&quot;Top&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;TextBox Text=&quot;Center&quot; VerticalContentAlignment=&quot;Center&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;TextBox Text=&quot;Bottom&quot; VerticalContentAlignment=&quot;Bottom&quot; Grid.Column=&quot;2&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <TextBlock Text="Width / Height 고정 크기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="200x30" Width="200" Height="30" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                        <TextBox Text="250x40" Width="250" Height="40" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                        <TextBox Text="300x50" Width="300" Height="50" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;200x30&quot; Width=&quot;200&quot; Height=&quot;30&quot;/&gt;&#10;&lt;TextBox Text=&quot;250x40&quot; Width=&quot;250&quot; Height=&quot;40&quot;/&gt;&#10;&lt;TextBox Text=&quot;300x50&quot; Width=&quot;300&quot; Height=&quot;50&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox Text="12px" FontSize="12" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="16px" FontSize="16" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="20px" FontSize="20" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="28px" FontSize="28" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;12px&quot; FontSize=&quot;12&quot;/&gt;&#10;&lt;TextBox Text=&quot;16px&quot; FontSize=&quot;16&quot;/&gt;&#10;&lt;TextBox Text=&quot;20px&quot; FontSize=&quot;20&quot;/&gt;&#10;&lt;TextBox Text=&quot;28px&quot; FontSize=&quot;28&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="Thin" FontWeight="Thin" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="Light" FontWeight="Light" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="Normal" FontWeight="Normal" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="Bold" FontWeight="Bold" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="ExtraBold" FontWeight="ExtraBold" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Thin&quot; FontWeight=&quot;Thin&quot;/&gt;&#10;&lt;TextBox Text=&quot;Light&quot; FontWeight=&quot;Light&quot;/&gt;&#10;&lt;TextBox Text=&quot;Normal&quot; FontWeight=&quot;Normal&quot;/&gt;&#10;&lt;TextBox Text=&quot;Bold&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;TextBox Text=&quot;ExtraBold&quot; FontWeight=&quot;ExtraBold&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="Normal" FontStyle="Normal" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="Italic" FontStyle="Italic" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="Oblique" FontStyle="Oblique" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Normal&quot; FontStyle=&quot;Normal&quot;/&gt;&#10;&lt;TextBox Text=&quot;Italic&quot; FontStyle=&quot;Italic&quot;/&gt;&#10;&lt;TextBox Text=&quot;Oblique&quot; FontStyle=&quot;Oblique&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontFamily" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="Arial - Hello 안녕하세요" FontFamily="Arial" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="Times New Roman - Hello 안녕하세요" FontFamily="Times New Roman" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="Consolas - Hello 안녕하세요" FontFamily="Consolas" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="맑은 고딕 - Hello 안녕하세요" FontFamily="맑은 고딕" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Arial&quot; FontFamily=&quot;Arial&quot;/&gt;&#10;&lt;TextBox Text=&quot;Times New Roman&quot; FontFamily=&quot;Times New Roman&quot;/&gt;&#10;&lt;TextBox Text=&quot;Consolas&quot; FontFamily=&quot;Consolas&quot;/&gt;&#10;&lt;TextBox Text=&quot;맑은 고딕&quot; FontFamily=&quot;맑은 고딕&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="TextDecorations (텍스트 장식)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="밑줄 텍스트" TextDecorations="Underline" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="취소선 텍스트" TextDecorations="Strikethrough" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;밑줄 텍스트&quot; TextDecorations=&quot;Underline&quot;/&gt;&#10;&lt;TextBox Text=&quot;취소선 텍스트&quot; TextDecorations=&quot;Strikethrough&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 색상과 외관 -->
        <TabItem Header="색상과 외관">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Background / Foreground" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox Text="Salmon 배경 + White 글자" Background="Salmon" Foreground="White" FontSize="14" FontWeight="Bold" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="SteelBlue 배경 + Yellow 글자" Background="SteelBlue" Foreground="Yellow" FontSize="14" FontWeight="Bold" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="DarkGreen 배경 + LightGreen 글자" Background="DarkGreen" Foreground="LightGreen" FontSize="14" FontWeight="Bold" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="400"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Salmon + White&quot; Background=&quot;Salmon&quot; Foreground=&quot;White&quot;/&gt;&#10;&lt;TextBox Text=&quot;SteelBlue + Yellow&quot; Background=&quot;SteelBlue&quot; Foreground=&quot;Yellow&quot;/&gt;&#10;&lt;TextBox Text=&quot;DarkGreen + LightGreen&quot; Background=&quot;DarkGreen&quot; Foreground=&quot;LightGreen&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="BorderBrush / BorderThickness" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="테두리 1px" BorderBrush="Gray" BorderThickness="1" Padding="6" Margin="0,4" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="테두리 3px" BorderBrush="CornflowerBlue" BorderThickness="3" Padding="6" Margin="0,4" HorizontalAlignment="Left" Width="400"/>
                    <TextBox Text="각 변 다른 두께 (좌2 상4 우2 하4)" BorderBrush="Tomato" BorderThickness="2,4,2,4" Padding="6" Margin="0,4" HorizontalAlignment="Left" Width="400"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;테두리 1px&quot; BorderBrush=&quot;Gray&quot; BorderThickness=&quot;1&quot;/&gt;&#10;&lt;TextBox Text=&quot;테두리 3px&quot; BorderBrush=&quot;CornflowerBlue&quot; BorderThickness=&quot;3&quot;/&gt;&#10;&lt;TextBox Text=&quot;각 변 다른 두께&quot; BorderBrush=&quot;Tomato&quot; BorderThickness=&quot;2,4,2,4&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="Opacity (투명도)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBox Text="100%" Background="CornflowerBlue" Foreground="White" Opacity="1.0" FontSize="14" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="75%" Background="CornflowerBlue" Foreground="White" Opacity="0.75" FontSize="14" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="50%" Background="CornflowerBlue" Foreground="White" Opacity="0.5" FontSize="14" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <TextBox Text="25%" Background="CornflowerBlue" Foreground="White" Opacity="0.25" FontSize="14" Padding="6" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;100%&quot; Background=&quot;CornflowerBlue&quot; Opacity=&quot;1.0&quot;/&gt;&#10;&lt;TextBox Text=&quot;75%&quot; Background=&quot;CornflowerBlue&quot; Opacity=&quot;0.75&quot;/&gt;&#10;&lt;TextBox Text=&quot;50%&quot; Background=&quot;CornflowerBlue&quot; Opacity=&quot;0.5&quot;/&gt;&#10;&lt;TextBox Text=&quot;25%&quot; Background=&quot;CornflowerBlue&quot; Opacity=&quot;0.25&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="Padding / Margin" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBlock Text="Padding (내부 여백)" FontSize="14" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="Padding 0" Background="#FFCDD2" Padding="0" Margin="4" Width="120"/>
                        <TextBox Text="Padding 10" Background="#C8E6C9" Padding="10" Margin="4" Width="140"/>
                        <TextBox Text="Padding 20" Background="#BBDEFB" Padding="20" Margin="4" Width="160"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;Padding 0&quot; Padding=&quot;0&quot;/&gt;&#10;&lt;TextBox Text=&quot;Padding 10&quot; Padding=&quot;10&quot;/&gt;&#10;&lt;TextBox Text=&quot;Padding 20&quot; Padding=&quot;20&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="CaretBrush / SelectionBrush" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <GroupBox Header="커서 색상과 선택 영역 색상 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox Text="빨간 커서 (클릭해서 확인)" CaretBrush="Red" FontSize="14" Padding="6" Margin="0,0,0,4" HorizontalAlignment="Left" Width="400"/>
                            <TextBox Text="텍스트를 드래그하면 초록색 선택" SelectionBrush="Green" FontSize="14" Padding="6" HorizontalAlignment="Left" Width="400"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBox Text=&quot;빨간 커서&quot; CaretBrush=&quot;Red&quot;/&gt;&#10;&lt;TextBox Text=&quot;초록 선택&quot; SelectionBrush=&quot;Green&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 이벤트와 상호작용 -->
        <TabItem Header="이벤트와 상호작용">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="TextChanged 이벤트" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="텍스트 변경 시 실시간 글자 수 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtInput" TextChanged="TxtInput_TextChanged" FontSize="14" Padding="4" Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtCharCount" Text="글자 수: 0" FontSize="14"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBox x:Name=&quot;txtInput&quot; TextChanged=&quot;TxtInput_TextChanged&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;txtCharCount&quot; Text=&quot;글자 수: 0&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private void TxtInput_TextChanged(object sender, TextChangedEventArgs e)&#10;{&#10;    txtCharCount.Text = $&quot;글자 수: {txtInput.Text.Length}&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="SelectionChanged 이벤트" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="텍스트를 드래그하면 선택된 텍스트 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtSelection" Text="이 텍스트를 마우스로 드래그해서 선택해보세요" FontSize="14" Padding="4" Margin="0,0,0,4" SelectionChanged="TxtSelection_SelectionChanged"/>
                            <TextBlock x:Name="txtSelectedText" Text="선택된 텍스트: (없음)" FontSize="14"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBox x:Name=&quot;txtSelection&quot; Text=&quot;텍스트를 선택해보세요&quot;&#10;        SelectionChanged=&quot;TxtSelection_SelectionChanged&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;txtSelectedText&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private void TxtSelection_SelectionChanged(object sender, RoutedEventArgs e)&#10;{&#10;    string selected = txtSelection.SelectedText;&#10;    txtSelectedText.Text = string.IsNullOrEmpty(selected)&#10;        ? &quot;선택된 텍스트: (없음)&quot;&#10;        : $&quot;선택된 텍스트: {selected}&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="GotFocus / LostFocus 이벤트" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="포커스 획득/해제 시 스타일 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtFocus" Text="클릭해서 포커스를 주세요" FontSize="14" Padding="6"
                                     GotFocus="TxtFocus_GotFocus" LostFocus="TxtFocus_LostFocus"
                                     HorizontalAlignment="Left" Width="400" Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtFocusStatus" Text="포커스 상태: 없음" FontSize="14"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBox x:Name=&quot;txtFocus&quot; Text=&quot;클릭해서 포커스를 주세요&quot;&#10;        GotFocus=&quot;TxtFocus_GotFocus&quot;&#10;        LostFocus=&quot;TxtFocus_LostFocus&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;txtFocusStatus&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private void TxtFocus_GotFocus(object sender, RoutedEventArgs e)&#10;{&#10;    txtFocus.Background = Brushes.LightYellow;&#10;    txtFocus.BorderBrush = Brushes.Orange;&#10;    txtFocusStatus.Text = &quot;포커스 상태: 획득 (GotFocus)&quot;;&#10;}&#10;&#10;private void TxtFocus_LostFocus(object sender, RoutedEventArgs e)&#10;{&#10;    txtFocus.ClearValue(TextBox.BackgroundProperty);&#10;    txtFocus.ClearValue(TextBox.BorderBrushProperty);&#10;    txtFocusStatus.Text = &quot;포커스 상태: 해제 (LostFocus)&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="KeyDown 이벤트" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Enter 키를 누르면 입력 확정" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtKeyDown" FontSize="14" Padding="4" Margin="0,0,0,4"
                                     KeyDown="TxtKeyDown_KeyDown" HorizontalAlignment="Left" Width="400"/>
                            <TextBlock x:Name="txtKeyResult" Text="Enter 키를 눌러 입력을 확정하세요" FontSize="14"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBox x:Name=&quot;txtKeyDown&quot; KeyDown=&quot;TxtKeyDown_KeyDown&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;txtKeyResult&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private void TxtKeyDown_KeyDown(object sender, KeyEventArgs e)&#10;{&#10;    if (e.Key == Key.Enter)&#10;    {&#10;        txtKeyResult.Text = $&quot;입력 확정: {txtKeyDown.Text}&quot;;&#10;    }&#10;}"/>
                    </Expander>

                    <TextBlock Text="동적 텍스트 조작" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 텍스트 제어" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBox x:Name="txtDynamic" Text="동적으로 변경됩니다" FontSize="16" Padding="6" Margin="0,0,0,8" HorizontalAlignment="Left" Width="400"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="텍스트 추가" Click="BtnAppend_Click" Margin="4" Padding="8,4"/>
                                <Button Content="텍스트 지우기" Click="BtnClear_Click" Margin="4" Padding="8,4"/>
                                <Button Content="대문자 변환" Click="BtnUpperCase_Click" Margin="4" Padding="8,4"/>
                                <Button Content="초기화" Click="BtnReset_Click" Margin="4" Padding="8,4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBox x:Name=&quot;txtDynamic&quot; Text=&quot;동적으로 변경됩니다&quot; FontSize=&quot;16&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 추가&quot; Click=&quot;BtnAppend_Click&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 지우기&quot; Click=&quot;BtnClear_Click&quot;/&gt;&#10;&lt;Button Content=&quot;대문자 변환&quot; Click=&quot;BtnUpperCase_Click&quot;/&gt;&#10;&lt;Button Content=&quot;초기화&quot; Click=&quot;BtnReset_Click&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private void BtnAppend_Click(object sender, RoutedEventArgs e)&#10;{&#10;    txtDynamic.Text += &quot; [추가됨]&quot;;&#10;}&#10;&#10;private void BtnClear_Click(object sender, RoutedEventArgs e)&#10;{&#10;    txtDynamic.Clear();&#10;}&#10;&#10;private void BtnUpperCase_Click(object sender, RoutedEventArgs e)&#10;{&#10;    txtDynamic.Text = txtDynamic.Text.ToUpper();&#10;}&#10;&#10;private void BtnReset_Click(object sender, RoutedEventArgs e)&#10;{&#10;    txtDynamic.Text = &quot;동적으로 변경됩니다&quot;;&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
