<Window x:Class="ch6_패스워드박스.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch6_패스워드박스"
        mc:Ignorable="d"
        Title="ch6 PasswordBox 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 PasswordBox" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="기본 상태 (마스킹 문자: ●)" Margin="0,0,0,8">
                        <PasswordBox HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. PasswordChar (마스킹 문자 변경)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="기본값 ●" Margin="0,0,0,8">
                        <PasswordBox Password="abc" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="PasswordChar=* (별표)" Margin="0,0,0,8">
                        <PasswordBox PasswordChar="*" Password="abc" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="PasswordChar=# (샵)" Margin="0,0,0,8">
                        <PasswordBox PasswordChar="#" Password="abc" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="PasswordChar=- (대시)" Margin="0,0,0,8">
                        <PasswordBox PasswordChar="-" Password="abc" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox/&gt;  &lt;!-- 기본값 ● --&gt;&#10;&lt;PasswordBox PasswordChar=&quot;*&quot;/&gt;&#10;&lt;PasswordBox PasswordChar=&quot;#&quot;/&gt;&#10;&lt;PasswordBox PasswordChar=&quot;-&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. MaxLength (최대 글자 수)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="MaxLength=4 → 최대 4자리 (PIN 번호 등)" Margin="0,0,0,8">
                        <PasswordBox MaxLength="4" PasswordChar="*" HorizontalAlignment="Left" Width="200" Padding="4"/>
                    </GroupBox>
                    <GroupBox Header="MaxLength=16 → 최대 16자리" Margin="0,0,0,8">
                        <PasswordBox MaxLength="16" HorizontalAlignment="Left" Width="300" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox MaxLength=&quot;4&quot; PasswordChar=&quot;*&quot;/&gt;&#10;&lt;PasswordBox MaxLength=&quot;16&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. IsEnabled" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="활성/비활성 상태" Margin="0,0,0,8">
                        <StackPanel>
                            <PasswordBox Password="active" HorizontalAlignment="Left" Width="300" Padding="4" Margin="0,0,0,4"/>
                            <PasswordBox Password="disabled" IsEnabled="False" HorizontalAlignment="Left" Width="300" Padding="4"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox Password=&quot;active&quot;/&gt;&#10;&lt;PasswordBox Password=&quot;disabled&quot; IsEnabled=&quot;False&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="5. Password 속성 (주의사항)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Password는 보안상 DependencyProperty가 아님 → 바인딩 불가" Margin="0,0,0,8">
                        <StackPanel>
                            <PasswordBox Password="초기값설정가능" HorizontalAlignment="Left" Width="300" Padding="4"/>
                            <TextBlock Text="※ Password 속성은 XAML에서 초기값 설정은 가능하지만,&#x0a;   데이터 바인딩은 지원되지 않습니다 (보안 목적)." FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox Password=&quot;초기값설정가능&quot;/&gt;&#10;&#10;// Password는 DependencyProperty가 아니므로&#10;// {Binding ...} 사용 불가&#10;// 코드 비하인드에서 직접 접근:&#10;string pw = myPasswordBox.Password;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: PasswordChar를 '*'로 설정한 PasswordBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: PasswordChar 속성에 마스킹할 문자를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: MaxLength를 6으로 설정하여 6자리 PIN 입력용 PasswordBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: MaxLength 속성으로 최대 입력 글자 수를 제한합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Password 속성에 'test1234' 초기값을 설정하고, PasswordChar를 '#'으로 변경해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: Password=&quot;값&quot;과 PasswordChar=&quot;문자&quot;를 함께 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalAlignment (PasswordBox 자체 위치)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <PasswordBox Password="Left" HorizontalAlignment="Left" Width="200" Padding="4" Margin="0,2"/>
                    <PasswordBox Password="Center" HorizontalAlignment="Center" Width="200" Padding="4" Margin="0,2"/>
                    <PasswordBox Password="Right" HorizontalAlignment="Right" Width="200" Padding="4" Margin="0,2"/>
                    <PasswordBox Password="Stretch" HorizontalAlignment="Stretch" Padding="4" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox HorizontalAlignment=&quot;Left&quot; Width=&quot;200&quot;/&gt;&#10;&lt;PasswordBox HorizontalAlignment=&quot;Center&quot; Width=&quot;200&quot;/&gt;&#10;&lt;PasswordBox HorizontalAlignment=&quot;Right&quot; Width=&quot;200&quot;/&gt;&#10;&lt;PasswordBox HorizontalAlignment=&quot;Stretch&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="HorizontalContentAlignment (내부 텍스트 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <PasswordBox Password="Left" HorizontalContentAlignment="Left" Padding="4" Margin="0,2"/>
                    <PasswordBox Password="Center" HorizontalContentAlignment="Center" Padding="4" Margin="0,2"/>
                    <PasswordBox Password="Right" HorizontalContentAlignment="Right" Padding="4" Margin="0,2"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox HorizontalContentAlignment=&quot;Left&quot;/&gt;&#10;&lt;PasswordBox HorizontalContentAlignment=&quot;Center&quot;/&gt;&#10;&lt;PasswordBox HorizontalContentAlignment=&quot;Right&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalContentAlignment (수직 텍스트 정렬)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Grid Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox Password="Top" VerticalContentAlignment="Top" Padding="4" Margin="4" Grid.Column="0"/>
                        <PasswordBox Password="Center" VerticalContentAlignment="Center" Padding="4" Margin="4" Grid.Column="1"/>
                        <PasswordBox Password="Bottom" VerticalContentAlignment="Bottom" Padding="4" Margin="4" Grid.Column="2"/>
                    </Grid>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid Height=&quot;120&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;PasswordBox VerticalContentAlignment=&quot;Top&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;PasswordBox VerticalContentAlignment=&quot;Center&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;PasswordBox VerticalContentAlignment=&quot;Bottom&quot; Grid.Column=&quot;2&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <TextBlock Text="Width / Height 고정 크기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox Password="200x30" Width="200" Height="30" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                        <PasswordBox Password="250x40" Width="250" Height="40" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                        <PasswordBox Password="300x50" Width="300" Height="50" VerticalContentAlignment="Center" Padding="4" Margin="4"/>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox Width=&quot;200&quot; Height=&quot;30&quot;/&gt;&#10;&lt;PasswordBox Width=&quot;250&quot; Height=&quot;40&quot;/&gt;&#10;&lt;PasswordBox Width=&quot;300&quot; Height=&quot;50&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: HorizontalAlignment를 Center로 설정하고 Width를 250으로 지정한 PasswordBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: HorizontalAlignment 속성으로 컨트롤의 수평 위치를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: HorizontalContentAlignment을 Right로 설정하여 내부 텍스트가 오른쪽 정렬되는 PasswordBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: HorizontalContentAlignment 속성으로 내부 콘텐츠의 수평 정렬을 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <PasswordBox Password="12px" FontSize="12" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="16px" FontSize="16" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="20px" FontSize="20" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="28px" FontSize="28" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox FontSize=&quot;12&quot;/&gt;&#10;&lt;PasswordBox FontSize=&quot;16&quot;/&gt;&#10;&lt;PasswordBox FontSize=&quot;20&quot;/&gt;&#10;&lt;PasswordBox FontSize=&quot;28&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <PasswordBox Password="Thin" FontWeight="Thin" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Light" FontWeight="Light" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Normal" FontWeight="Normal" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Bold" FontWeight="Bold" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="ExtraBold" FontWeight="ExtraBold" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox FontWeight=&quot;Thin&quot;/&gt;&#10;&lt;PasswordBox FontWeight=&quot;Light&quot;/&gt;&#10;&lt;PasswordBox FontWeight=&quot;Normal&quot;/&gt;&#10;&lt;PasswordBox FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;PasswordBox FontWeight=&quot;ExtraBold&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <PasswordBox Password="Normal" FontStyle="Normal" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Italic" FontStyle="Italic" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Oblique" FontStyle="Oblique" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox FontStyle=&quot;Normal&quot;/&gt;&#10;&lt;PasswordBox FontStyle=&quot;Italic&quot;/&gt;&#10;&lt;PasswordBox FontStyle=&quot;Oblique&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="FontFamily" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <PasswordBox Password="Arial" FontFamily="Arial" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="TimesNewRoman" FontFamily="Times New Roman" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="Consolas" FontFamily="Consolas" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <PasswordBox Password="맑은고딕" FontFamily="맑은 고딕" FontSize="14" Padding="4" Margin="0,2" HorizontalAlignment="Left" Width="300"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;PasswordBox FontFamily=&quot;Arial&quot;/&gt;&#10;&lt;PasswordBox FontFamily=&quot;Times New Roman&quot;/&gt;&#10;&lt;PasswordBox FontFamily=&quot;Consolas&quot;/&gt;&#10;&lt;PasswordBox FontFamily=&quot;맑은 고딕&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FontSize를 20으로 설정한 PasswordBox를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;PasswordBox /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
