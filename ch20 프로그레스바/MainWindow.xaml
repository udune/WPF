<Window x:Class="ch20_프로그레스바.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch20_프로그레스바"
        mc:Ignorable="d"
        Title="ch20 ProgressBar 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ProgressBar 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="ProgressBar는 작업의 진행 상태를 시각적으로 표시하는 컨트롤입니다. Value, Minimum, Maximum 속성으로 진행률을 설정합니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 ProgressBar -->
                    <GroupBox Header="기본 ProgressBar" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Value=30 (기본 범위 0~100)" Margin="0,0,0,5"/>
                            <ProgressBar Height="25" Value="30" Margin="0,0,0,10"/>

                            <TextBlock Text="Value=75" Margin="0,0,0,5"/>
                            <ProgressBar Height="25" Value="75" Margin="0,0,0,10"/>

                            <TextBlock Text="Value=100 (완료)" Margin="0,0,0,5"/>
                            <ProgressBar Height="25" Value="100"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ProgressBar Height=&quot;25&quot; Value=&quot;30&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;75&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;100&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: Minimum과 Maximum -->
                    <GroupBox Header="Minimum과 Maximum 설정" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Minimum=0, Maximum=200, Value=150" Margin="0,0,0,5"/>
                            <ProgressBar Height="25" Minimum="0" Maximum="200" Value="150" Margin="0,0,0,10"/>

                            <TextBlock Text="Minimum=50, Maximum=150, Value=100 (50%)" Margin="0,0,0,5"/>
                            <ProgressBar Height="25" Minimum="50" Maximum="150" Value="100"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 0~200 범위에서 150 (75%) --&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Minimum=&quot;0&quot; Maximum=&quot;200&quot; Value=&quot;150&quot;/&gt;&#10;&#10;&lt;!-- 50~150 범위에서 100 (50%) --&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Minimum=&quot;50&quot; Maximum=&quot;150&quot; Value=&quot;100&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 코드로 값 변경 -->
                    <GroupBox Header="코드로 값 변경" Margin="0,0,0,15">
                        <StackPanel>
                            <ProgressBar x:Name="basicProgressBar" Height="25" Value="0" Maximum="100" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="+10" Click="IncreaseValue_Click" Padding="15,5" Margin="0,0,10,0"/>
                                <Button Content="-10" Click="DecreaseValue_Click" Padding="15,5" Margin="0,0,10,0"/>
                                <Button Content="초기화" Click="ResetValue_Click" Padding="15,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- XAML --&gt;&#10;&lt;ProgressBar x:Name=&quot;basicProgressBar&quot; Height=&quot;25&quot;&#10;             Value=&quot;0&quot; Maximum=&quot;100&quot;/&gt;&#10;&lt;Button Content=&quot;+10&quot; Click=&quot;IncreaseValue_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void IncreaseValue_Click(object sender, RoutedEventArgs e)&#10;{&#10;    if (basicProgressBar.Value &lt; basicProgressBar.Maximum)&#10;        basicProgressBar.Value += 10;&#10;}&#10;private void DecreaseValue_Click(object sender, RoutedEventArgs e)&#10;{&#10;    if (basicProgressBar.Value &gt; basicProgressBar.Minimum)&#10;        basicProgressBar.Value -= 10;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 진행 모드 -->
        <TabItem Header="진행 모드">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ProgressBar 진행 모드" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="ProgressBar는 두 가지 모드로 동작합니다: 확정적(Determinate) 모드와 불확정(Indeterminate) 모드입니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 확정적 모드 -->
                    <GroupBox Header="확정적 모드 (Determinate)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="진행률을 정확히 알 수 있을 때 사용합니다. IsIndeterminate=False (기본값)"
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <ProgressBar Height="25" Value="65" IsIndeterminate="False"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 확정적 모드 (기본값) --&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;65&quot; IsIndeterminate=&quot;False&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 불확정 모드 -->
                    <GroupBox Header="불확정 모드 (Indeterminate)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="진행률을 알 수 없을 때 사용합니다. 애니메이션이 계속 반복됩니다."
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <ProgressBar Height="25" IsIndeterminate="True"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 불확정 모드 - 진행률을 알 수 없을 때 --&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; IsIndeterminate=&quot;True&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 모드 전환 -->
                    <GroupBox Header="모드 전환" Margin="0,0,0,15">
                        <StackPanel>
                            <ProgressBar x:Name="modeProgressBar" Height="25" Value="50" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="확정 모드" Click="SetDeterminate_Click" Padding="15,5" Margin="0,0,10,0"/>
                                <Button Content="불확정 모드" Click="SetIndeterminate_Click" Padding="15,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- XAML --&gt;&#10;&lt;ProgressBar x:Name=&quot;modeProgressBar&quot; Height=&quot;25&quot; Value=&quot;50&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void SetDeterminate_Click(object sender, RoutedEventArgs e)&#10;{&#10;    modeProgressBar.IsIndeterminate = false;&#10;}&#10;private void SetIndeterminate_Click(object sender, RoutedEventArgs e)&#10;{&#10;    modeProgressBar.IsIndeterminate = true;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 사용 시나리오 -->
                    <GroupBox Header="사용 시나리오" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                <Run FontWeight="Bold">확정적 모드 사용:</Run>
                                <LineBreak/>• 파일 다운로드 (전체 크기를 알 때)
                                <LineBreak/>• 파일 복사/이동
                                <LineBreak/>• 설치 진행률
                                <LineBreak/>
                                <LineBreak/><Run FontWeight="Bold">불확정 모드 사용:</Run>
                                <LineBreak/>• 서버 연결 대기
                                <LineBreak/>• 검색 중
                                <LineBreak/>• 로딩 중 (완료 시점을 모를 때)
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 스타일과 색상 -->
        <TabItem Header="스타일과 색상">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="스타일과 색상" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: Foreground 색상 -->
                    <GroupBox Header="Foreground (진행 막대 색상)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Green" Margin="0,0,0,3"/>
                            <ProgressBar Height="25" Value="70" Foreground="Green" Margin="0,0,0,10"/>

                            <TextBlock Text="Orange" Margin="0,0,0,3"/>
                            <ProgressBar Height="25" Value="70" Foreground="Orange" Margin="0,0,0,10"/>

                            <TextBlock Text="Red" Margin="0,0,0,3"/>
                            <ProgressBar Height="25" Value="70" Foreground="Red" Margin="0,0,0,10"/>

                            <TextBlock Text="LinearGradientBrush" Margin="0,0,0,3"/>
                            <ProgressBar Height="25" Value="70">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Yellow" Offset="0"/>
                                        <GradientStop Color="Orange" Offset="0.5"/>
                                        <GradientStop Color="Red" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ProgressBar Height=&quot;25&quot; Value=&quot;70&quot; Foreground=&quot;Green&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;70&quot; Foreground=&quot;Orange&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;70&quot; Foreground=&quot;Red&quot;/&gt;&#10;&#10;&lt;!-- 그라데이션 --&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;70&quot;&gt;&#10;    &lt;ProgressBar.Foreground&gt;&#10;        &lt;LinearGradientBrush StartPoint=&quot;0,0&quot; EndPoint=&quot;1,0&quot;&gt;&#10;            &lt;GradientStop Color=&quot;Yellow&quot; Offset=&quot;0&quot;/&gt;&#10;            &lt;GradientStop Color=&quot;Orange&quot; Offset=&quot;0.5&quot;/&gt;&#10;            &lt;GradientStop Color=&quot;Red&quot; Offset=&quot;1&quot;/&gt;&#10;        &lt;/LinearGradientBrush&gt;&#10;    &lt;/ProgressBar.Foreground&gt;&#10;&lt;/ProgressBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: Background 색상 -->
                    <GroupBox Header="Background (배경 색상)" Margin="0,0,0,15">
                        <StackPanel>
                            <ProgressBar Height="25" Value="60" Background="LightGray" Foreground="DodgerBlue" Margin="0,0,0,10"/>
                            <ProgressBar Height="25" Value="60" Background="#333333" Foreground="LimeGreen" Margin="0,0,0,10"/>
                            <ProgressBar Height="25" Value="60" Background="LightPink" Foreground="DeepPink"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ProgressBar Height=&quot;25&quot; Value=&quot;60&quot;&#10;             Background=&quot;LightGray&quot; Foreground=&quot;DodgerBlue&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;60&quot;&#10;             Background=&quot;#333333&quot; Foreground=&quot;LimeGreen&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;25&quot; Value=&quot;60&quot;&#10;             Background=&quot;LightPink&quot; Foreground=&quot;DeepPink&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 높이와 테두리 -->
                    <GroupBox Header="높이와 테두리" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Height=10 (얇은)" Margin="0,0,0,3"/>
                            <ProgressBar Height="10" Value="50" Margin="0,0,0,10"/>

                            <TextBlock Text="Height=30 (기본)" Margin="0,0,0,3"/>
                            <ProgressBar Height="30" Value="50" Margin="0,0,0,10"/>

                            <TextBlock Text="Height=40, BorderBrush, BorderThickness" Margin="0,0,0,3"/>
                            <ProgressBar Height="40" Value="50" BorderBrush="Navy" BorderThickness="2"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ProgressBar Height=&quot;10&quot; Value=&quot;50&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;30&quot; Value=&quot;50&quot;/&gt;&#10;&lt;ProgressBar Height=&quot;40&quot; Value=&quot;50&quot;&#10;             BorderBrush=&quot;Navy&quot; BorderThickness=&quot;2&quot;/&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 상태별 색상 -->
                    <GroupBox Header="상태별 색상 변경" Margin="0,0,0,15">
                        <StackPanel>
                            <ProgressBar x:Name="statusProgressBar" Height="30" Value="50" Margin="0,0,0,10"/>
                            <Slider x:Name="statusSlider" Minimum="0" Maximum="100" Value="50"
                                    ValueChanged="StatusSlider_ValueChanged"/>
                            <TextBlock x:Name="statusText" Text="50% - 진행 중" Margin="0,5,0,0"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="// C# 코드비하인드 - 값에 따라 색상 변경&#10;private void StatusSlider_ValueChanged(object sender, RoutedEventArgs e)&#10;{&#10;    double value = statusSlider.Value;&#10;    statusProgressBar.Value = value;&#10;&#10;    if (value &lt; 30)&#10;    {&#10;        statusProgressBar.Foreground = Brushes.Red;&#10;        statusText.Text = $&quot;{value:0}% - 위험&quot;;&#10;    }&#10;    else if (value &lt; 70)&#10;    {&#10;        statusProgressBar.Foreground = Brushes.Orange;&#10;        statusText.Text = $&quot;{value:0}% - 진행 중&quot;;&#10;    }&#10;    else&#10;    {&#10;        statusProgressBar.Foreground = Brushes.Green;&#10;        statusText.Text = $&quot;{value:0}% - 양호&quot;;&#10;    }&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 값 표시 -->
        <TabItem Header="값 표시">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ProgressBar와 값 표시" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="ProgressBar 자체는 텍스트를 표시하지 않습니다. Grid를 사용하여 TextBlock을 겹쳐 값을 표시할 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 값 표시 -->
                    <GroupBox Header="퍼센트 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar x:Name="percentBar1" Height="30" Value="75"/>
                                <TextBlock Text="{Binding ElementName=percentBar1, Path=Value, StringFormat={}{0:0}%}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Grid&gt;&#10;    &lt;ProgressBar x:Name=&quot;percentBar1&quot; Height=&quot;30&quot; Value=&quot;75&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;{Binding ElementName=percentBar1,&#10;               Path=Value, StringFormat={}{0:0}%}&quot;&#10;               HorizontalAlignment=&quot;Center&quot;&#10;               VerticalAlignment=&quot;Center&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 다양한 형식 -->
                    <GroupBox Header="다양한 표시 형식" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="정수 퍼센트" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="25" Value="66.7"/>
                                <TextBlock Text="67%" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="소수점 포함" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="25" Value="66.7"/>
                                <TextBlock Text="66.7%" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            <TextBlock Text="분수 형식" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="25" Value="7" Maximum="10"/>
                                <TextBlock Text="7 / 10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 정수 퍼센트: StringFormat={}{0:0}% --&gt;&#10;&lt;!-- 소수점 1자리: StringFormat={}{0:0.0}% --&gt;&#10;&lt;!-- 분수 형식: 별도 텍스트 구성 --&gt;&#10;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;25&quot; Value=&quot;7&quot; Maximum=&quot;10&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;7 / 10&quot;&#10;               HorizontalAlignment=&quot;Center&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 스타일링된 값 표시 -->
                    <GroupBox Header="스타일링된 값 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="35" Value="85" Foreground="#4CAF50" Background="#E0E0E0"/>
                                <TextBlock Text="85%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="14" FontWeight="Bold" Foreground="White">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Grid>

                            <Grid>
                                <ProgressBar Height="40" Value="60" Foreground="#2196F3"/>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock Text="다운로드 중... " Foreground="#333"/>
                                    <TextBlock Text="60%" FontWeight="Bold" Foreground="#333"/>
                                </StackPanel>
                            </Grid>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;35&quot; Value=&quot;85&quot;&#10;                 Foreground=&quot;#4CAF50&quot; Background=&quot;#E0E0E0&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;85%&quot; FontSize=&quot;14&quot; FontWeight=&quot;Bold&quot;&#10;               Foreground=&quot;White&quot;&gt;&#10;        &lt;TextBlock.Effect&gt;&#10;            &lt;DropShadowEffect ShadowDepth=&quot;1&quot;&#10;                Color=&quot;Black&quot; Opacity=&quot;0.5&quot;/&gt;&#10;        &lt;/TextBlock.Effect&gt;&#10;    &lt;/TextBlock&gt;&#10;&lt;/Grid&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 동적 값 표시 -->
                    <GroupBox Header="동적 값 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar x:Name="dynamicValueBar" Height="30" Value="0" Maximum="100"/>
                                <TextBlock x:Name="dynamicValueText" Text="0%"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                            <Slider x:Name="valueSlider" Minimum="0" Maximum="100" Value="0"
                                    ValueChanged="ValueSlider_ValueChanged"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- XAML --&gt;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar x:Name=&quot;dynamicValueBar&quot; Height=&quot;30&quot;/&gt;&#10;    &lt;TextBlock x:Name=&quot;dynamicValueText&quot; Text=&quot;0%&quot;/&gt;&#10;&lt;/Grid&gt;&#10;&lt;Slider x:Name=&quot;valueSlider&quot;&#10;        ValueChanged=&quot;ValueSlider_ValueChanged&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void ValueSlider_ValueChanged(object sender, RoutedEventArgs e)&#10;{&#10;    dynamicValueBar.Value = valueSlider.Value;&#10;    dynamicValueText.Text = $&quot;{valueSlider.Value:0}%&quot;;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 실용 예제 -->
        <TabItem Header="실용 예제">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ProgressBar 실용 예제" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: 타이머 기반 진행 -->
                    <GroupBox Header="타이머 기반 진행" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar x:Name="timerProgressBar" Height="30" Value="0" Maximum="100"/>
                                <TextBlock x:Name="timerProgressText" Text="0%"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="시작" Click="StartTimer_Click" Padding="15,5" Margin="0,0,10,0"/>
                                <Button Content="일시정지" Click="PauseTimer_Click" Padding="15,5" Margin="0,0,10,0"/>
                                <Button Content="초기화" Click="ResetTimer_Click" Padding="15,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="// C# 코드비하인드&#10;private DispatcherTimer timer;&#10;&#10;private void StartTimer_Click(object sender, RoutedEventArgs e)&#10;{&#10;    if (timer == null)&#10;    {&#10;        timer = new DispatcherTimer();&#10;        timer.Interval = TimeSpan.FromMilliseconds(100);&#10;        timer.Tick += (s, args) =&gt;&#10;        {&#10;            if (timerProgressBar.Value &lt; 100)&#10;            {&#10;                timerProgressBar.Value += 1;&#10;                timerProgressText.Text = $&quot;{timerProgressBar.Value}%&quot;;&#10;            }&#10;            else&#10;                timer.Stop();&#10;        };&#10;    }&#10;    timer.Start();&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 파일 다운로드 시뮬레이션 -->
                    <GroupBox Header="다운로드 시뮬레이션" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="downloadStatusText" Text="대기 중..." Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar x:Name="downloadProgressBar" Height="25" Value="0"/>
                                <TextBlock x:Name="downloadPercentText" Text=""
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <Button Content="다운로드 시작" Click="StartDownload_Click"
                                    HorizontalAlignment="Left" Padding="15,5"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="// async/await를 사용한 비동기 시뮬레이션&#10;private async void StartDownload_Click(object sender, RoutedEventArgs e)&#10;{&#10;    downloadProgressBar.Value = 0;&#10;    downloadProgressBar.IsIndeterminate = true;&#10;    downloadStatusText.Text = &quot;연결 중...&quot;;&#10;&#10;    await Task.Delay(1000);  // 연결 시뮬레이션&#10;&#10;    downloadProgressBar.IsIndeterminate = false;&#10;    downloadStatusText.Text = &quot;다운로드 중...&quot;;&#10;&#10;    for (int i = 0; i &lt;= 100; i += 5)&#10;    {&#10;        downloadProgressBar.Value = i;&#10;        downloadPercentText.Text = $&quot;{i}%&quot;;&#10;        await Task.Delay(100);&#10;    }&#10;&#10;    downloadStatusText.Text = &quot;완료!&quot;;&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 다중 진행률 표시 -->
                    <GroupBox Header="다중 진행률 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="파일 1: document.pdf" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="20" Value="100" Foreground="Green"/>
                                <TextBlock Text="완료" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>

                            <TextBlock Text="파일 2: image.png" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="20" Value="65" Foreground="DodgerBlue"/>
                                <TextBlock Text="65%" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>

                            <TextBlock Text="파일 3: video.mp4" Margin="0,0,0,3"/>
                            <Grid Margin="0,0,0,10">
                                <ProgressBar Height="20" Value="30" Foreground="Orange"/>
                                <TextBlock Text="30%" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>

                            <TextBlock Text="파일 4: data.zip" Margin="0,0,0,3"/>
                            <Grid>
                                <ProgressBar Height="20" IsIndeterminate="True"/>
                                <TextBlock Text="대기 중..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 완료된 파일 --&gt;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;20&quot; Value=&quot;100&quot; Foreground=&quot;Green&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;완료&quot; .../&gt;&#10;&lt;/Grid&gt;&#10;&#10;&lt;!-- 진행 중인 파일 --&gt;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;20&quot; Value=&quot;65&quot; Foreground=&quot;DodgerBlue&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;65%&quot; .../&gt;&#10;&lt;/Grid&gt;&#10;&#10;&lt;!-- 대기 중인 파일 --&gt;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;20&quot; IsIndeterminate=&quot;True&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;대기 중...&quot; .../&gt;&#10;&lt;/Grid&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 전체 진행률 -->
                    <GroupBox Header="전체 진행률 표시" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="전체 진행률" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <ProgressBar Height="35" Value="48" Foreground="#673AB7" Background="#E0E0E0"/>
                                <TextBlock Text="3 / 6 파일 완료 (48%)"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                            </Grid>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 전체 진행률은 개별 파일들의 합산 --&gt;&#10;&lt;Grid&gt;&#10;    &lt;ProgressBar Height=&quot;35&quot; Value=&quot;48&quot;&#10;                 Foreground=&quot;#673AB7&quot; Background=&quot;#E0E0E0&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;3 / 6 파일 완료 (48%)&quot;&#10;               HorizontalAlignment=&quot;Center&quot;&#10;               FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
