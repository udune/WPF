<Window x:Class="ch7_이미지.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch7_이미지"
        mc:Ignorable="d"
        Title="ch7 Image 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Source 속성 (이미지 경로)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="로컬 이미지 (프로젝트 내 상대 경로)" Margin="0,0,0,8">
                        <Image Source="/1.png" Width="100" Height="100" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 프로젝트 폴더 내 img/1.png --&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;100&quot; Height=&quot;100&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="웹 URL 이미지" Margin="0,0,0,8">
                        <Image Source="https://cdn2.iconfinder.com/data/icons/free-1/128/Android__logo__robot-512.png" Width="100" Height="100" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;https://example.com/image.png&quot; Width=&quot;100&quot; Height=&quot;100&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="pack URI (리소스로 포함된 이미지)" Margin="0,0,0,8">
                        <TextBlock Text="pack://application:,,,/1.png 형식으로 지정 가능" FontSize="12" Foreground="Gray" Padding="4"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 절대 pack URI --&gt;&#10;&lt;Image Source=&quot;pack://application:,,,/1.png&quot;/&gt;&#10;&#10;&lt;!-- 다른 어셈블리의 리소스 --&gt;&#10;&lt;Image Source=&quot;pack://application:,,,/OtherAssembly;component/images/logo.png&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. Width / Height" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="크기 지정" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,16,0">
                                <Image Source="/1.png" Width="50" Height="50"/>
                                <TextBlock Text="50x50" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,16,0">
                                <Image Source="/1.png" Width="80" Height="80"/>
                                <TextBlock Text="80x80" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,16,0">
                                <Image Source="/1.png" Width="120" Height="120"/>
                                <TextBlock Text="120x120" HorizontalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Width=&quot;50&quot; Height=&quot;50&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;80&quot; Height=&quot;80&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;120&quot; Height=&quot;120&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. Image를 Button 안에 넣기" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="이미지 버튼 (아이콘 + 텍스트)" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Button HorizontalAlignment="Left" Padding="8" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/1.png" Width="24" Height="24" Margin="0,0,6,0"/>
                                    <TextBlock Text="이미지 버튼" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button HorizontalAlignment="Left" Padding="8">
                                <StackPanel>
                                    <Image Source="/1.png" Width="40" Height="40"/>
                                    <TextBlock Text="아이콘" HorizontalAlignment="Center" FontSize="11"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 가로 배치: 아이콘 + 텍스트 --&gt;&#10;&lt;Button Padding=&quot;8&quot;&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Image Source=&quot;/1.png&quot; Width=&quot;24&quot; Height=&quot;24&quot; Margin=&quot;0,0,6,0&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;이미지 버튼&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Button&gt;&#10;&#10;&lt;!-- 세로 배치: 아이콘 위 + 텍스트 아래 --&gt;&#10;&lt;Button Padding=&quot;8&quot;&gt;&#10;    &lt;StackPanel&gt;&#10;        &lt;Image Source=&quot;/1.png&quot; Width=&quot;40&quot; Height=&quot;40&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;아이콘&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Button&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>
                    <TextBlock Text="※ 직접 해보기에서는 웹 URL 이미지를 사용합니다." FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Image 컨트롤에 웹 URL 이미지를 표시해보세요. (https://via.placeholder.com/100)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Image /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: Source 속성에 이미지 URL을 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Image에 Width=80, Height=80을 설정해보세요. (Source: https://via.placeholder.com/150)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Image Source=&quot;https://via.placeholder.com/150&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: Width와 Height 속성에 숫자를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 -->
        <TabItem Header="정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="HorizontalAlignment (이미지 자체 위치)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="4" Margin="0,0,0,4">
                        <Image Source="/1.png" Width="60" Height="60" HorizontalAlignment="Left"/>
                    </Border>
                    <TextBlock Text="Left" FontSize="11" Foreground="Gray" Margin="0,0,0,4"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="4" Margin="0,0,0,4">
                        <Image Source="/1.png" Width="60" Height="60" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Center" FontSize="11" Foreground="Gray" Margin="0,0,0,4"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="4" Margin="0,0,0,4">
                        <Image Source="/1.png" Width="60" Height="60" HorizontalAlignment="Right"/>
                    </Border>
                    <TextBlock Text="Right" FontSize="11" Foreground="Gray" Margin="0,0,0,4"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; HorizontalAlignment=&quot;Right&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="VerticalAlignment (수직 위치)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Grid Height="150" Background="#F5F5F5" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <Image Source="/1.png" Width="50" Height="50" VerticalAlignment="Top"/>
                            <TextBlock Text="Top" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/1.png" Width="50" Height="50" VerticalAlignment="Center"/>
                            <TextBlock Text="Center" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Image Source="/1.png" Width="50" Height="50" VerticalAlignment="Bottom"/>
                            <TextBlock Text="Bottom" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid Height=&quot;150&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;Image Source=&quot;/1.png&quot; Width=&quot;50&quot; VerticalAlignment=&quot;Top&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Image Source=&quot;/1.png&quot; Width=&quot;50&quot; VerticalAlignment=&quot;Center&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;Image Source=&quot;/1.png&quot; Width=&quot;50&quot; VerticalAlignment=&quot;Bottom&quot; Grid.Column=&quot;2&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <TextBlock Text="Margin (외부 여백)" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal" Background="#F5F5F5">
                        <Border BorderBrush="Salmon" BorderThickness="1">
                            <Image Source="/1.png" Width="60" Height="60" Margin="0"/>
                        </Border>
                        <Border BorderBrush="Salmon" BorderThickness="1">
                            <Image Source="/1.png" Width="60" Height="60" Margin="10"/>
                        </Border>
                        <Border BorderBrush="Salmon" BorderThickness="1">
                            <Image Source="/1.png" Width="60" Height="60" Margin="20"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Margin: 0 / 10 / 20 (빨간 테두리가 Border)" FontSize="11" Foreground="Gray" Margin="0,4,0,0"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; Margin=&quot;0&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; Margin=&quot;10&quot;/&gt;&#10;&lt;Image Source=&quot;/1.png&quot; Width=&quot;60&quot; Height=&quot;60&quot; Margin=&quot;20&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: HorizontalAlignment를 Center로 설정한 Image를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Image Source=&quot;https://via.placeholder.com/60&quot; Width=&quot;60&quot; Height=&quot;60&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: HorizontalAlignment 속성으로 수평 위치를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Margin을 15로 설정한 Image를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Image Source=&quot;https://via.placeholder.com/60&quot; Width=&quot;60&quot; Height=&quot;60&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: Margin 속성으로 외부 여백을 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: Stretch 모드 -->
        <TabItem Header="Stretch 모드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Stretch (이미지 채우기 방식)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="고정된 200x120 영역에서 각 Stretch 모드 비교" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>

                    <GroupBox Header="None - 원본 크기 그대로 (잘릴 수 있음)" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="None"/>
                        </Border>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Stretch=&quot;None&quot;/&gt;&#10;&#10;&lt;!-- 원본 크기 그대로 표시.&#10;     영역보다 크면 잘리고, 작으면 여백 발생 --&gt;"/>
                    </Expander>

                    <GroupBox Header="Fill - 영역에 꽉 채움 (비율 무시, 찌그러질 수 있음)" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="Fill"/>
                        </Border>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Stretch=&quot;Fill&quot;/&gt;&#10;&#10;&lt;!-- 가로/세로 비율 무시하고 영역에 꽉 채움.&#10;     이미지가 찌그러질 수 있음 --&gt;"/>
                    </Expander>

                    <GroupBox Header="Uniform (기본값) - 비율 유지하며 영역 안에 맞춤" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="Uniform"/>
                        </Border>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Stretch=&quot;Uniform&quot;/&gt;&#10;&#10;&lt;!-- 가로/세로 비율 유지하며 영역 안에 맞춤.&#10;     여백이 생길 수 있음 (Letterbox) --&gt;"/>
                    </Expander>

                    <GroupBox Header="UniformToFill - 비율 유지하며 영역을 꽉 채움 (잘릴 수 있음)" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left" ClipToBounds="True">
                            <Image Source="/1.png" Stretch="UniformToFill"/>
                        </Border>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Image Source=&quot;/1.png&quot; Stretch=&quot;UniformToFill&quot;/&gt;&#10;&#10;&lt;!-- 가로/세로 비율 유지하며 영역을 꽉 채움.&#10;     넘치는 부분은 잘림 (Crop) --&gt;"/>
                    </Expander>

                    <TextBlock Text="StretchDirection" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>

                    <GroupBox Header="UpOnly - 원본보다 작을 때만 확대 (축소 안 함)" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="Uniform" StretchDirection="UpOnly"/>
                        </Border>
                    </GroupBox>
                    <GroupBox Header="DownOnly - 원본보다 클 때만 축소 (확대 안 함)" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="Uniform" StretchDirection="DownOnly"/>
                        </Border>
                    </GroupBox>
                    <GroupBox Header="Both (기본값) - 확대/축소 모두 허용" Margin="0,0,0,8">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="120" HorizontalAlignment="Left">
                            <Image Source="/1.png" Stretch="Uniform" StretchDirection="Both"/>
                        </Border>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
