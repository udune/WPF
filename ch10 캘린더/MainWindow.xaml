<Window x:Class="ch10_캘린더.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch10_캘린더"
        mc:Ignorable="d"
        Title="ch10 Calendar 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 Calendar" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="기본 캘린더 표시" Margin="0,0,0,8">
                        <Calendar HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. DisplayMode (표시 모드)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Month / Year / Decade 모드 비교" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Month (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Month"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Year" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Year"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Decade" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Decade"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayMode=&quot;Month&quot;/&gt;&#10;&lt;Calendar DisplayMode=&quot;Year&quot;/&gt;&#10;&lt;Calendar DisplayMode=&quot;Decade&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. SelectedDate (선택된 날짜)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜를 미리 선택" Margin="0,0,0,8">
                        <Calendar SelectedDate="2025-06-15" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectedDate=&quot;2025-06-15&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. DisplayDate (표시 시작 날짜)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="캘린더가 열릴 때 보여줄 월 지정" Margin="0,0,0,8">
                        <Calendar DisplayDate="2025-12-01" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayDate=&quot;2025-12-01&quot;/&gt;&#10;&#10;&lt;!-- 캘린더가 열릴 때 2025년 12월을 표시 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 날짜 범위 제한 -->
        <TabItem Header="날짜 범위 제한">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. DisplayDateStart / DisplayDateEnd" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="표시 가능한 날짜 범위 제한" Margin="0,0,0,8">
                        <Calendar DisplayDateStart="2025-01-01" DisplayDateEnd="2025-12-31" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayDateStart=&quot;2025-01-01&quot;&#10;          DisplayDateEnd=&quot;2025-12-31&quot;/&gt;&#10;&#10;&lt;!-- 2025년만 탐색 가능 --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. BlackoutDates (선택 불가 날짜)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜 범위를 선택 불가로 설정" Margin="0,0,0,8">
                        <Calendar x:Name="calBlackout" HorizontalAlignment="Left">
                            <Calendar.BlackoutDates>
                                <CalendarDateRange Start="2025-02-01" End="2025-02-05"/>
                                <CalendarDateRange Start="2025-02-14" End="2025-02-14"/>
                            </Calendar.BlackoutDates>
                        </Calendar>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar&gt;&#10;    &lt;Calendar.BlackoutDates&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-01&quot; End=&quot;2025-02-05&quot;/&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-14&quot; End=&quot;2025-02-14&quot;/&gt;&#10;    &lt;/Calendar.BlackoutDates&gt;&#10;&lt;/Calendar&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 코드비하인드로 BlackoutDates 추가" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼 클릭으로 오늘 이전 날짜를 모두 선택 불가 처리" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calBlackoutCode" HorizontalAlignment="Left"/>
                            <Button Content="오늘 이전 날짜 비활성화" Click="BlackoutPastDates_Click" HorizontalAlignment="Left" Padding="12,6" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Calendar x:Name=&quot;calBlackoutCode&quot;/&gt;&#10;&lt;Button Content=&quot;오늘 이전 날짜 비활성화&quot; Click=&quot;BlackoutPastDates_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void BlackoutPastDates_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calBlackoutCode.BlackoutDates.AddDatesInPast();&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 선택 모드와 이벤트 -->
        <TabItem Header="선택 모드와 이벤트">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. SelectionMode" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="SingleDate (기본) - 하나만 선택" Margin="0,0,0,8">
                        <Calendar SelectionMode="SingleDate" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;SingleDate&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="SingleRange - 연속 범위 선택 (Shift+클릭)" Margin="0,0,0,8">
                        <Calendar SelectionMode="SingleRange" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;SingleRange&quot;/&gt;&#10;&#10;&lt;!-- Shift + 클릭으로 연속 범위 선택 --&gt;"/>
                    </Expander>

                    <GroupBox Header="MultipleRange - 여러 범위 선택 (Ctrl+클릭)" Margin="0,0,0,8">
                        <Calendar SelectionMode="MultipleRange" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;MultipleRange&quot;/&gt;&#10;&#10;&lt;!-- Ctrl + 클릭으로 여러 날짜/범위 선택 --&gt;"/>
                    </Expander>

                    <GroupBox Header="None - 선택 불가" Margin="0,0,0,8">
                        <Calendar SelectionMode="None" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;None&quot;/&gt;&#10;&#10;&lt;!-- 날짜 선택 불가, 보기만 가능 --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. SelectedDatesChanged 이벤트" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="날짜 선택 시 TextBlock에 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calEvent" SelectedDatesChanged="calEvent_SelectedDatesChanged" HorizontalAlignment="Left"/>
                            <TextBlock x:Name="tbSelectedDate" Text="날짜를 선택하세요" FontSize="14" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Calendar x:Name=&quot;calEvent&quot; SelectedDatesChanged=&quot;calEvent_SelectedDatesChanged&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;tbSelectedDate&quot; Text=&quot;날짜를 선택하세요&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void calEvent_SelectedDatesChanged(object sender, SelectionChangedEventArgs e)&#10;{&#10;    if (calEvent.SelectedDate.HasValue)&#10;    {&#10;        tbSelectedDate.Text = &quot;선택된 날짜: &quot; + calEvent.SelectedDate.Value.ToString(&quot;yyyy-MM-dd&quot;);&#10;    }&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 데이터 바인딩 -->
        <TabItem Header="데이터 바인딩">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. SelectedDate 바인딩" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="ElementName 바인딩으로 선택 날짜 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calBind" HorizontalAlignment="Left"/>
                            <TextBlock FontSize="14" Margin="0,8,0,0"
                                       Text="{Binding ElementName=calBind, Path=SelectedDate, StringFormat='선택: {0:yyyy-MM-dd}'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar x:Name=&quot;calBind&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calBind,&#10;                   Path=SelectedDate,&#10;                   StringFormat='선택: {0:yyyy-MM-dd}'}&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. StringFormat 다양한 형식" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="다양한 날짜 포맷으로 바인딩" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calFormat" HorizontalAlignment="Left"/>
                            <TextBlock FontSize="13" Margin="0,8,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='yyyy-MM-dd: {0:yyyy-MM-dd}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='yyyy년 M월 d일: {0:yyyy년 M월 d일}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='ddd 요일 포함: {0:yyyy-MM-dd (ddd)}', ConverterCulture='ko-KR'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,0"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='긴 형식: {0:D}', ConverterCulture='ko-KR'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar x:Name=&quot;calFormat&quot;/&gt;&#10;&#10;&lt;!-- yyyy-MM-dd --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calFormat,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy-MM-dd}'}&quot;/&gt;&#10;&#10;&lt;!-- 한국어 형식 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calFormat,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy년 M월 d일}'}&quot;/&gt;&#10;&#10;&lt;!-- 요일 포함 (ConverterCulture 필요) --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calFormat,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy-MM-dd (ddd)}',&#10;                   ConverterCulture='ko-KR'}&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 두 Calendar 동기화" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="하나의 Calendar에서 선택하면 다른 Calendar의 DisplayDate가 변경" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="날짜 선택" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar x:Name="calSource" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="DisplayDate 동기화" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayDate="{Binding ElementName=calSource, Path=SelectedDate}" SelectionMode="None" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar x:Name=&quot;calSource&quot;/&gt;&#10;&#10;&lt;Calendar DisplayDate=&quot;{Binding ElementName=calSource, Path=SelectedDate}&quot;&#10;          SelectionMode=&quot;None&quot;/&gt;&#10;&#10;&lt;!-- 왼쪽에서 날짜를 선택하면 오른쪽 캘린더가 해당 월로 이동 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 스타일과 코드비하인드 -->
        <TabItem Header="스타일과 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 외관 속성" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Background, BorderBrush, FontSize" Margin="0,0,0,8">
                        <Calendar Background="LightYellow" BorderBrush="DarkOrange" BorderThickness="2" FontSize="14" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar Background=&quot;LightYellow&quot;&#10;          BorderBrush=&quot;DarkOrange&quot;&#10;          BorderThickness=&quot;2&quot;&#10;          FontSize=&quot;14&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. IsTodayHighlighted" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="오늘 날짜 강조 On/Off 비교" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="IsTodayHighlighted=True (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar IsTodayHighlighted="True" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="IsTodayHighlighted=False" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar IsTodayHighlighted="False" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar IsTodayHighlighted=&quot;True&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;Calendar IsTodayHighlighted=&quot;False&quot;/&gt; &lt;!-- 오늘 강조 비활성화 --&gt;"/>
                    </Expander>

                    <TextBlock Text="3. FirstDayOfWeek" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="한 주의 시작 요일 변경" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Sunday (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar FirstDayOfWeek="Sunday" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Monday" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar FirstDayOfWeek="Monday" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar FirstDayOfWeek=&quot;Sunday&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;Calendar FirstDayOfWeek=&quot;Monday&quot;/&gt; &lt;!-- 월요일 시작 --&gt;"/>
                    </Expander>

                    <TextBlock Text="4. 코드비하인드로 날짜 제어" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 오늘 날짜 선택 / 선택 해제" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calCodeBehind" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="오늘 선택" Click="SelectToday_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="선택 해제" Click="ClearSelection_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbCodeBehind" Text="" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;Calendar x:Name=&quot;calCodeBehind&quot;/&gt;&#10;&lt;Button Content=&quot;오늘 선택&quot; Click=&quot;SelectToday_Click&quot;/&gt;&#10;&lt;Button Content=&quot;선택 해제&quot; Click=&quot;ClearSelection_Click&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;tbCodeBehind&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void SelectToday_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calCodeBehind.SelectedDate = DateTime.Today;&#10;    tbCodeBehind.Text = &quot;오늘 날짜 선택: &quot; + DateTime.Today.ToString(&quot;yyyy-MM-dd&quot;);&#10;}&#10;&#10;private void ClearSelection_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calCodeBehind.SelectedDate = null;&#10;    tbCodeBehind.Text = &quot;선택이 해제되었습니다.&quot;;&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
