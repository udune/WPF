<Window x:Class="ch10_캘린더.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch10_캘린더"
        mc:Ignorable="d"
        Title="ch10 Calendar 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Calendar 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="기본 캘린더 표시" Margin="0,0,0,8">
                        <Calendar HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 기본 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;!-- Calendar 태그를 작성하세요 --&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: &lt;Calendar/&gt; 태그만 작성하면 됩니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="DisplayMode (표시 모드)" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Month / Year / Decade 모드 비교" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Month (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Month"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Year" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Year"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Decade" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayMode="Decade"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayMode=&quot;Month&quot;/&gt;&#10;&lt;Calendar DisplayMode=&quot;Year&quot;/&gt;&#10;&lt;Calendar DisplayMode=&quot;Decade&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DisplayMode를 Year로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: DisplayMode=&quot;Year&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="SelectedDate (선택된 날짜)" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜를 미리 선택" Margin="0,0,0,8">
                        <Calendar SelectedDate="2025-06-15" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectedDate=&quot;2025-06-15&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: SelectedDate를 2025-12-25로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: SelectedDate=&quot;2025-12-25&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="DisplayDate (표시 시작 날짜)" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="캘린더가 열릴 때 보여줄 월 지정" Margin="0,0,0,8">
                        <Calendar DisplayDate="2025-12-01" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayDate=&quot;2025-12-01&quot;/&gt;&#10;&#10;&lt;!-- 캘린더가 열릴 때 2025년 12월을 표시 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 날짜 범위 제한 -->
        <TabItem Header="2. 날짜 범위 제한">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Calendar 날짜 범위 제한" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="DisplayDateStart / DisplayDateEnd" Margin="0,0,0,8">
                        <Calendar DisplayDateStart="2025-01-01" DisplayDateEnd="2025-12-31" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar DisplayDateStart=&quot;2025-01-01&quot;&#10;          DisplayDateEnd=&quot;2025-12-31&quot;/&gt;&#10;&#10;&lt;!-- 2025년만 탐색 가능 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DisplayDateStart를 2025-03-01, DisplayDateEnd를 2025-03-31로 설정해 3월만 표시하는 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: DisplayDateStart와 DisplayDateEnd 속성을 모두 설정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="BlackoutDates (선택 불가 날짜)" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜 범위를 선택 불가로 설정" Margin="0,0,0,8">
                        <Calendar x:Name="calBlackout" HorizontalAlignment="Left">
                            <Calendar.BlackoutDates>
                                <CalendarDateRange Start="2025-02-01" End="2025-02-05"/>
                                <CalendarDateRange Start="2025-02-14" End="2025-02-14"/>
                            </Calendar.BlackoutDates>
                        </Calendar>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar&gt;&#10;    &lt;Calendar.BlackoutDates&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-01&quot; End=&quot;2025-02-05&quot;/&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-14&quot; End=&quot;2025-02-14&quot;/&gt;&#10;    &lt;/Calendar.BlackoutDates&gt;&#10;&lt;/Calendar&gt;"/>
                    </Expander>

                    <TextBlock Text="코드비하인드로 BlackoutDates 추가" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼 클릭으로 오늘 이전 날짜를 모두 선택 불가 처리" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calBlackoutCode" HorizontalAlignment="Left"/>
                            <Button Content="오늘 이전 날짜 비활성화" Click="BlackoutPastDates_Click" HorizontalAlignment="Left" Padding="12,6" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// C# 코드비하인드&#10;private void BlackoutPastDates_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calBlackoutCode.BlackoutDates.AddDatesInPast();&#10;}"/>
                    </Expander>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 과거 날짜를 선택 불가로 만드는 코드를 작성하세요. BlackoutDates.AddDatesInPast() 메서드를 사용합니다." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void DisablePastDates()&#x0a;{&#x0a;    // calendarControl의 과거 날짜를 비활성화&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: calendarControl.BlackoutDates.AddDatesInPast()를 호출합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult2_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 선택 모드와 이벤트 -->
        <TabItem Header="3. 선택 모드와 이벤트">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Calendar 선택 모드와 이벤트" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="SingleDate (기본) - 하나만 선택" Margin="0,0,0,8">
                        <Calendar SelectionMode="SingleDate" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;SingleDate&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="SingleRange - 연속 범위 선택 (Shift+클릭)" Margin="0,0,0,8">
                        <Calendar SelectionMode="SingleRange" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;SingleRange&quot;/&gt;&#10;&#10;&lt;!-- Shift + 클릭으로 연속 범위 선택 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: SelectionMode를 MultipleRange로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: SelectionMode=&quot;MultipleRange&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <GroupBox Header="None - 선택 불가" Margin="0,0,0,8">
                        <Calendar SelectionMode="None" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar SelectionMode=&quot;None&quot;/&gt;&#10;&#10;&lt;!-- 날짜 선택 불가, 보기만 가능 --&gt;"/>
                    </Expander>

                    <TextBlock Text="SelectedDatesChanged 이벤트" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="날짜 선택 시 TextBlock에 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calEvent" SelectedDatesChanged="calEvent_SelectedDatesChanged" HorizontalAlignment="Left"/>
                            <TextBlock x:Name="tbSelectedDate" Text="날짜를 선택하세요" FontSize="14" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// C# 코드비하인드&#10;private void calEvent_SelectedDatesChanged(object sender, SelectionChangedEventArgs e)&#10;{&#10;    if (calEvent.SelectedDate.HasValue)&#10;    {&#10;        tbSelectedDate.Text = &quot;선택된 날짜: &quot; + &#10;            calEvent.SelectedDate.Value.ToString(&quot;yyyy-MM-dd&quot;);&#10;    }&#10;}"/>
                    </Expander>

                    <!-- 직접 해보기 3_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: SelectedDatesChanged 이벤트 핸들러를 작성하세요. SelectedDate.HasValue로 확인 후 날짜를 표시합니다." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="private void Calendar_SelectedDatesChanged(object sender, SelectionChangedEventArgs e)&#x0a;{&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2"
                                       Text="힌트: SelectedDate.HasValue로 확인하고 SelectedDate.Value를 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult3_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 데이터 바인딩 -->
        <TabItem Header="4. 데이터 바인딩">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Calendar 데이터 바인딩" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="ElementName 바인딩으로 선택 날짜 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calBind" HorizontalAlignment="Left"/>
                            <TextBlock FontSize="14" Margin="0,8,0,0"
                                       Text="{Binding ElementName=calBind, Path=SelectedDate, StringFormat='선택: {0:yyyy-MM-dd}'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar x:Name=&quot;calBind&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calBind,&#10;                   Path=SelectedDate,&#10;                   StringFormat='선택: {0:yyyy-MM-dd}'}&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsTodayHighlighted를 False로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_1"
                                       Text="힌트: IsTodayHighlighted=&quot;False&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="StringFormat 다양한 형식" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="다양한 날짜 포맷으로 바인딩" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calFormat" HorizontalAlignment="Left"/>
                            <TextBlock FontSize="13" Margin="0,8,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='yyyy-MM-dd: {0:yyyy-MM-dd}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='yyyy년 M월 d일: {0:yyyy년 M월 d일}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='ddd 요일 포함: {0:yyyy-MM-dd (ddd)}', ConverterCulture='ko-KR'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,0"
                                       Text="{Binding ElementName=calFormat, Path=SelectedDate, StringFormat='긴 형식: {0:D}', ConverterCulture='ko-KR'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- yyyy-MM-dd --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calFormat,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy-MM-dd}'}&quot;/&gt;&#10;&#10;&lt;!-- 한국어 형식 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=calFormat,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy년 M월 d일}'}&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="두 Calendar 동기화" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="하나의 Calendar에서 선택하면 다른 Calendar의 DisplayDate가 변경" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="날짜 선택" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar x:Name="calSource" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="DisplayDate 동기화" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar DisplayDate="{Binding ElementName=calSource, Path=SelectedDate}" SelectionMode="None" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar x:Name=&quot;calSource&quot;/&gt;&#10;&#10;&lt;Calendar DisplayDate=&quot;{Binding ElementName=calSource, Path=SelectedDate}&quot;&#10;          SelectionMode=&quot;None&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 스타일과 코드비하인드 -->
        <TabItem Header="5. 스타일과 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Calendar 스타일과 코드비하인드" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Background, BorderBrush, FontSize" Margin="0,0,0,8">
                        <Calendar Background="LightYellow" BorderBrush="DarkOrange" BorderThickness="2" FontSize="14" HorizontalAlignment="Left"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar Background=&quot;LightYellow&quot;&#10;          BorderBrush=&quot;DarkOrange&quot;&#10;          BorderThickness=&quot;2&quot;&#10;          FontSize=&quot;14&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 5_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Background를 LightBlue, BorderBrush를 Navy로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="5_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_1"
                                       Text="힌트: Background=&quot;LightBlue&quot;와 BorderBrush=&quot;Navy&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder5_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel5_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="IsTodayHighlighted" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="오늘 날짜 강조 On/Off 비교" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="IsTodayHighlighted=True (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar IsTodayHighlighted="True" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="IsTodayHighlighted=False" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar IsTodayHighlighted="False" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar IsTodayHighlighted=&quot;True&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;Calendar IsTodayHighlighted=&quot;False&quot;/&gt; &lt;!-- 오늘 강조 비활성화 --&gt;"/>
                    </Expander>

                    <TextBlock Text="FirstDayOfWeek" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="한 주의 시작 요일 변경" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Sunday (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar FirstDayOfWeek="Sunday" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Monday" FontWeight="Bold" Margin="0,0,0,4"/>
                                <Calendar FirstDayOfWeek="Monday" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Calendar FirstDayOfWeek=&quot;Sunday&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;Calendar FirstDayOfWeek=&quot;Monday&quot;/&gt; &lt;!-- 월요일 시작 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 5_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FirstDayOfWeek를 Monday로 설정한 Calendar를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Calendar /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="5_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_2"
                                       Text="힌트: FirstDayOfWeek=&quot;Monday&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder5_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel5_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <TextBlock Text="코드비하인드로 날짜 제어" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 오늘 날짜 선택 / 선택 해제" Margin="0,0,0,8">
                        <StackPanel>
                            <Calendar x:Name="calCodeBehind" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="오늘 선택" Click="SelectToday_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="선택 해제" Click="ClearSelection_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbCodeBehind" Text="" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// C# 코드비하인드&#10;private void SelectToday_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calCodeBehind.SelectedDate = DateTime.Today;&#10;}&#10;&#10;private void ClearSelection_Click(object sender, RoutedEventArgs e)&#10;{&#10;    calCodeBehind.SelectedDate = null;&#10;}"/>
                    </Expander>

                    <!-- 직접 해보기 5_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Calendar의 SelectedDate를 DateTime.Today로 설정하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void SelectTodayDate()&#x0a;{&#x0a;    // myCalendar의 선택 날짜를 오늘로 설정&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_3"
                                       Text="힌트: myCalendar.SelectedDate = DateTime.Today;를 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_3"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
