<Window x:Class="ch12_슬라이더.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch12_슬라이더"
        mc:Ignorable="d"
        Title="ch12 Slider 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="200"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- ==================== 탭 1: 기본 사용법 ==================== -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="Slider 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 기본 Slider -->
                    <GroupBox Header="기본 Slider" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <Slider Margin="0,5"/>
                            <TextBlock Text="→ 기본 Slider는 0~10 범위, 왼쪽에서 오른쪽으로 드래그합니다." Margin="0,5,0,0" Foreground="Gray" FontSize="11"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 기본 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: &lt;Slider /&gt; 태그만 작성하면 됩니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Minimum / Maximum -->
                    <GroupBox Header="Minimum / Maximum (범위 설정)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="0 ~ 100 범위:" Margin="0,0,0,3"/>
                            <Slider Minimum="0" Maximum="100" Value="50" Margin="0,0,0,10"/>
                            <TextBlock Text="1 ~ 10 범위:" Margin="0,0,0,3"/>
                            <Slider Minimum="1" Maximum="10" Value="5" Margin="0,0,0,10"/>
                            <TextBlock Text="-50 ~ 50 범위:" Margin="0,0,0,3"/>
                            <Slider Minimum="-50" Maximum="50" Value="0"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Minimum=&quot;0&quot; Maximum=&quot;100&quot; Value=&quot;50&quot; /&gt;&#10;&lt;Slider Minimum=&quot;1&quot; Maximum=&quot;10&quot; Value=&quot;5&quot; /&gt;&#10;&lt;Slider Minimum=&quot;-50&quot; Maximum=&quot;50&quot; Value=&quot;0&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Minimum=0, Maximum=200, Value=100인 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: Minimum, Maximum, Value 속성을 설정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- SmallChange / LargeChange -->
                    <GroupBox Header="SmallChange / LargeChange (증감 단위)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="SmallChange=1 (화살표키), LargeChange=10 (트랙 클릭):" Margin="0,0,0,3"/>
                            <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" Value="50"/>
                            <TextBlock Text="→ 키보드 화살표: SmallChange 만큼, 트랙 클릭: LargeChange 만큼 이동" Margin="0,5,0,0" Foreground="Gray" FontSize="11"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Minimum=&quot;0&quot; Maximum=&quot;100&quot;&#10;        SmallChange=&quot;1&quot; LargeChange=&quot;10&quot;&#10;        Value=&quot;50&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: SmallChange=5, LargeChange=20인 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: SmallChange와 LargeChange 속성을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- IsEnabled -->
                    <GroupBox Header="IsEnabled (활성화/비활성화)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="활성화된 슬라이더:" Margin="0,0,0,3"/>
                            <Slider Value="30" Margin="0,0,0,10"/>
                            <TextBlock Text="비활성화된 슬라이더:" Margin="0,0,0,3"/>
                            <Slider Value="70" IsEnabled="False"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Value=&quot;30&quot; /&gt;&#10;&lt;Slider Value=&quot;70&quot; IsEnabled=&quot;False&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- ==================== 탭 2: 방향과 크기 ==================== -->
        <TabItem Header="2. 방향과 크기">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="Slider 방향과 크기" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Orientation -->
                    <GroupBox Header="Orientation (방향)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Horizontal (기본값):" Margin="0,0,0,3"/>
                            <Slider Orientation="Horizontal" Width="300" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                            <TextBlock Text="Vertical:" Margin="0,0,0,3"/>
                            <Slider Orientation="Vertical" Height="100" HorizontalAlignment="Left"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Orientation=&quot;Horizontal&quot; Width=&quot;300&quot; /&gt;&#10;&lt;Slider Orientation=&quot;Vertical&quot; Height=&quot;100&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Orientation을 Vertical로 설정하고 Height가 150인 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: Orientation=&quot;Vertical&quot;과 Height=&quot;150&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Width / Height -->
                    <GroupBox Header="Width / Height (크기)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Width=200:" Margin="0,0,0,3"/>
                            <Slider Width="200" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                            <TextBlock Text="Width=400:" Margin="0,0,0,3"/>
                            <Slider Width="400" HorizontalAlignment="Left"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Width=&quot;200&quot; HorizontalAlignment=&quot;Left&quot; /&gt;&#10;&lt;Slider Width=&quot;400&quot; HorizontalAlignment=&quot;Left&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Width가 300인 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: Width=&quot;300&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- IsDirectionReversed -->
                    <GroupBox Header="IsDirectionReversed (방향 반전)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="기본 방향 (왼쪽→오른쪽):" Margin="0,0,0,3"/>
                            <Slider Width="300" HorizontalAlignment="Left" Value="3" Margin="0,0,0,10"/>
                            <TextBlock Text="반전 방향 (오른쪽→왼쪽):" Margin="0,0,0,3"/>
                            <Slider Width="300" HorizontalAlignment="Left" Value="3" IsDirectionReversed="True"/>
                            <TextBlock Text="→ IsDirectionReversed=True로 설정하면 방향이 반대가 됩니다." Margin="0,5,0,0" Foreground="Gray" FontSize="11"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Value=&quot;3&quot; /&gt;&#10;&lt;Slider Value=&quot;3&quot; IsDirectionReversed=&quot;True&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 2_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsDirectionReversed를 True로 설정한 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_3"
                                       Text="힌트: IsDirectionReversed=&quot;True&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- HorizontalAlignment -->
                    <GroupBox Header="HorizontalAlignment" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <Slider Width="200" HorizontalAlignment="Left" Margin="0,3"/>
                            <Slider Width="200" HorizontalAlignment="Center" Margin="0,3"/>
                            <Slider Width="200" HorizontalAlignment="Right" Margin="0,3"/>
                            <Slider HorizontalAlignment="Stretch" Margin="0,3"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider Width=&quot;200&quot; HorizontalAlignment=&quot;Left&quot; /&gt;&#10;&lt;Slider Width=&quot;200&quot; HorizontalAlignment=&quot;Center&quot; /&gt;&#10;&lt;Slider Width=&quot;200&quot; HorizontalAlignment=&quot;Right&quot; /&gt;&#10;&lt;Slider HorizontalAlignment=&quot;Stretch&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- ==================== 탭 3: 틱과 스냅 ==================== -->
        <TabItem Header="3. 틱과 스냅">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="Slider 틱과 스냅" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- TickPlacement -->
                    <GroupBox Header="TickPlacement (틱 위치)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="None (기본값 - 틱 없음):" Margin="0,0,0,3"/>
                            <Slider TickPlacement="None" Margin="0,0,0,15"/>
                            <TextBlock Text="TopLeft:" Margin="0,0,0,3"/>
                            <Slider TickPlacement="TopLeft" Margin="0,0,0,15"/>
                            <TextBlock Text="BottomRight:" Margin="0,0,0,3"/>
                            <Slider TickPlacement="BottomRight" Margin="0,0,0,15"/>
                            <TextBlock Text="Both:" Margin="0,0,0,3"/>
                            <Slider TickPlacement="Both"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider TickPlacement=&quot;None&quot; /&gt;&#10;&lt;Slider TickPlacement=&quot;TopLeft&quot; /&gt;&#10;&lt;Slider TickPlacement=&quot;BottomRight&quot; /&gt;&#10;&lt;Slider TickPlacement=&quot;Both&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: TickPlacement을 Both로 설정한 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: TickPlacement=&quot;Both&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- TickFrequency -->
                    <GroupBox Header="TickFrequency (틱 간격)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="TickFrequency=1 (기본값):" Margin="0,0,0,3"/>
                            <Slider TickPlacement="BottomRight" TickFrequency="1" Margin="0,0,0,15"/>
                            <TextBlock Text="TickFrequency=2:" Margin="0,0,0,3"/>
                            <Slider TickPlacement="BottomRight" TickFrequency="2" Margin="0,0,0,15"/>
                            <TextBlock Text="TickFrequency=5:" Margin="0,0,0,3"/>
                            <Slider TickPlacement="BottomRight" TickFrequency="5"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Slider TickPlacement=&quot;BottomRight&quot; TickFrequency=&quot;1&quot; /&gt;&#10;&lt;Slider TickPlacement=&quot;BottomRight&quot; TickFrequency=&quot;2&quot; /&gt;&#10;&lt;Slider TickPlacement=&quot;BottomRight&quot; TickFrequency=&quot;5&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 3_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: TickPlacement=TopLeft, TickFrequency=2인 Slider를 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;Slider /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2"
                                       Text="힌트: TickPlacement과 TickFrequency 속성을 함께 설정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_2"/>
                            </Border>
