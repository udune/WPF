<Window x:Class="ch3_텍스트블럭.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch3_텍스트블럭"
        mc:Ignorable="d"
        Title="ch3 TextBlock 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. TextBlock 콘텐츠 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <TextBlock>안녕하세요</TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock&gt;안녕하세요&lt;/TextBlock&gt;"/>
                    </Expander>

                    <GroupBox Header="Text 속성으로 지정" Margin="0,0,0,8">
                        <TextBlock Text="안녕하세요"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock Text=&quot;안녕하세요&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="코드 비하인드에서 동적 설정" Margin="0,0,0,8">
                        <TextBlock x:Name="tbDynamic" Text="초기 텍스트" FontSize="14"/>
                    </GroupBox>
                    <Button Content="텍스트 변경" Click="BtnChangeText_Click" Width="120" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBlock x:Name=&quot;tbDynamic&quot; Text=&quot;초기 텍스트&quot; FontSize=&quot;14&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 변경&quot; Click=&quot;BtnChangeText_Click&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private int _clickCount;&#10;private void BtnChangeText_Click(object sender, RoutedEventArgs e)&#10;{&#10;    _clickCount++;&#10;    tbDynamic.Text = $&quot;코드에서 변경된 텍스트 (클릭 {_clickCount}회)&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. 줄바꿈과 링크" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="LineBreak으로 줄바꿈" Margin="0,0,0,8">
                        <TextBlock FontSize="14">
                            첫 번째 줄<LineBreak/>두 번째 줄<LineBreak/>세 번째 줄
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock&gt;&#10;    첫 번째 줄&lt;LineBreak/&gt;두 번째 줄&lt;LineBreak/&gt;세 번째 줄&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <GroupBox Header="Hyperlink (클릭 시 브라우저 열기)" Margin="0,0,0,8">
                        <TextBlock FontSize="14">
                            검색은 <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                                             NavigateUri="https://google.co.kr"
                                             Cursor="Hand">구글 바로가기</Hyperlink>를 이용하세요.
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBlock&gt;&#10;    검색은 &lt;Hyperlink RequestNavigate=&quot;Hyperlink_RequestNavigate&quot;&#10;                     NavigateUri=&quot;https://google.co.kr&quot;&#10;                     Cursor=&quot;Hand&quot;&gt;구글 바로가기&lt;/Hyperlink&gt;를 이용하세요.&#10;&lt;/TextBlock&gt;&#10;&#10;// C# 코드 비하인드&#10;private void Hyperlink_RequestNavigate(object sender, RequestNavigateEventArgs e)&#10;{&#10;    Process.Start(new ProcessStartInfo(e.Uri.AbsoluteUri) { UseShellExecute = true });&#10;}"/>
                    </Expander>

                    <GroupBox Header="ToolTip 표시" Margin="0,0,0,8">
                        <TextBlock Text="마우스를 올려보세요" FontSize="14" ToolTip="이것은 TextBlock의 ToolTip입니다"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock Text=&quot;마우스를 올려보세요&quot; ToolTip=&quot;이것은 TextBlock의 ToolTip입니다&quot;/&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 인라인 요소 -->
        <TabItem Header="인라인 요소">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Bold / Italic / Underline" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <GroupBox Header="기본 인라인 서식" Margin="0,0,0,8">
                        <TextBlock FontSize="16">
                            <Bold>굵은 텍스트</Bold>, <Italic>기울임 텍스트</Italic>, <Underline>밑줄 텍스트</Underline>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot;&gt;&#10;    &lt;Bold&gt;굵은 텍스트&lt;/Bold&gt;, &lt;Italic&gt;기울임 텍스트&lt;/Italic&gt;, &lt;Underline&gt;밑줄 텍스트&lt;/Underline&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="Run 요소" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="Run으로 개별 텍스트 스타일 지정" Margin="0,0,0,8">
                        <TextBlock FontSize="16">
                            <Run Text="빨간색" Foreground="Red"/>
                            <Run Text=" + "/>
                            <Run Text="파란색 굵게" Foreground="Blue" FontWeight="Bold"/>
                            <Run Text=" + "/>
                            <Run Text="초록색 기울임" Foreground="Green" FontStyle="Italic"/>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot;&gt;&#10;    &lt;Run Text=&quot;빨간색&quot; Foreground=&quot;Red&quot;/&gt;&#10;    &lt;Run Text=&quot; + &quot;/&gt;&#10;    &lt;Run Text=&quot;파란색 굵게&quot; Foreground=&quot;Blue&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;    &lt;Run Text=&quot; + &quot;/&gt;&#10;    &lt;Run Text=&quot;초록색 기울임&quot; Foreground=&quot;Green&quot; FontStyle=&quot;Italic&quot;/&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="Span 요소" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="Span으로 구간별 스타일 적용" Margin="0,0,0,8">
                        <TextBlock FontSize="16" TextWrapping="Wrap">
                            일반 텍스트 <Span Foreground="Tomato" FontWeight="Bold">강조된 구간</Span> 다시 일반 <Span Background="Yellow" FontStyle="Italic">하이라이트 구간</Span> 끝
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot; TextWrapping=&quot;Wrap&quot;&gt;&#10;    일반 텍스트 &lt;Span Foreground=&quot;Tomato&quot; FontWeight=&quot;Bold&quot;&gt;강조된 구간&lt;/Span&gt;&#10;    다시 일반 &lt;Span Background=&quot;Yellow&quot; FontStyle=&quot;Italic&quot;&gt;하이라이트 구간&lt;/Span&gt; 끝&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="InlineUIContainer" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="텍스트 안에 컨트롤 삽입" Margin="0,0,0,8">
                        <TextBlock FontSize="14" VerticalAlignment="Center">
                            상태: <InlineUIContainer>
                                <Ellipse Width="12" Height="12" Fill="LimeGreen"/>
                            </InlineUIContainer> 온라인
                            <InlineUIContainer>
                                <Button Content="클릭" Padding="4,0" FontSize="11"/>
                            </InlineUIContainer> 버튼도 가능
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;14&quot;&gt;&#10;    상태: &lt;InlineUIContainer&gt;&#10;        &lt;Ellipse Width=&quot;12&quot; Height=&quot;12&quot; Fill=&quot;LimeGreen&quot;/&gt;&#10;    &lt;/InlineUIContainer&gt; 온라인&#10;    &lt;InlineUIContainer&gt;&#10;        &lt;Button Content=&quot;클릭&quot; Padding=&quot;4,0&quot; FontSize=&quot;11&quot;/&gt;&#10;    &lt;/InlineUIContainer&gt; 버튼도 가능&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="복합 인라인 조합" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="여러 인라인 요소 혼합 사용" Margin="0,0,0,8">
                        <TextBlock FontSize="16" TextWrapping="Wrap">
                            <Bold>WPF</Bold>의 <Italic>TextBlock</Italic>은
                            <Span Foreground="CornflowerBlue" FontSize="20">다양한</Span> 인라인 요소를
                            <Underline>자유롭게</Underline> 조합할 수 있습니다.<LineBreak/>
                            <Span Foreground="Gray" FontSize="12">— WPF 튜토리얼 中</Span>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot; TextWrapping=&quot;Wrap&quot;&gt;&#10;    &lt;Bold&gt;WPF&lt;/Bold&gt;의 &lt;Italic&gt;TextBlock&lt;/Italic&gt;은&#10;    &lt;Span Foreground=&quot;CornflowerBlue&quot; FontSize=&quot;20&quot;&gt;다양한&lt;/Span&gt; 인라인 요소를&#10;    &lt;Underline&gt;자유롭게&lt;/Underline&gt; 조합할 수 있습니다.&lt;LineBreak/&gt;&#10;    &lt;Span Foreground=&quot;Gray&quot; FontSize=&quot;12&quot;&gt;— WPF 튜토리얼 中&lt;/Span&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 텍스트 레이아웃 -->
        <TabItem Header="텍스트 레이아웃">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="TextWrapping (줄바꿈)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <GroupBox Header="NoWrap (기본값 — 잘림)" Margin="0,0,0,4">
                        <TextBlock FontSize="14" TextWrapping="NoWrap" Background="#E3F2FD" Padding="4">
                            WPF의 TextBlock은 기본적으로 줄바꿈을 하지 않으며, 긴 텍스트는 컨트롤 영역을 넘어서 잘리게 됩니다.
                        </TextBlock>
                    </GroupBox>
                    <GroupBox Header="Wrap (단어 단위 줄바꿈)" Margin="0,0,0,4">
                        <TextBlock FontSize="14" TextWrapping="Wrap" Background="#E8F5E9" Padding="4">
                            WPF의 TextBlock은 기본적으로 줄바꿈을 하지 않으며, 긴 텍스트는 컨트롤 영역을 넘어서 잘리게 됩니다.
                        </TextBlock>
                    </GroupBox>
                    <GroupBox Header="WrapWithOverflow (단어가 넘치면 허용)" Margin="0,0,0,8">
                        <TextBlock FontSize="14" TextWrapping="WrapWithOverflow" Background="#FFF3E0" Padding="4">
                            WPF의TextBlock은기본적으로줄바꿈을하지않으며긴텍스트는컨트롤영역을넘어서잘리게됩니다.
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock TextWrapping=&quot;NoWrap&quot;&gt;긴 텍스트...&lt;/TextBlock&gt;&#10;&lt;TextBlock TextWrapping=&quot;Wrap&quot;&gt;긴 텍스트...&lt;/TextBlock&gt;&#10;&lt;TextBlock TextWrapping=&quot;WrapWithOverflow&quot;&gt;공백없는긴텍스트...&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="TextTrimming (말줄임)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="None (기본값)" Margin="0,0,0,4">
                        <TextBlock FontSize="14" TextTrimming="None" Background="#E3F2FD" Padding="4">
                            이 텍스트는 말줄임 처리가 없어 잘릴 수 있습니다.
                        </TextBlock>
                    </GroupBox>
                    <GroupBox Header="CharacterEllipsis (글자 단위 ...)" Margin="0,0,0,4">
                        <TextBlock FontSize="14" TextTrimming="CharacterEllipsis" Background="#E8F5E9" Padding="4">
                            이 텍스트는 글자 단위로 말줄임 처리되어 ... 으로 표시됩니다.
                        </TextBlock>
                    </GroupBox>
                    <GroupBox Header="WordEllipsis (단어 단위 ...)" Margin="0,0,0,8">
                        <TextBlock FontSize="14" TextTrimming="WordEllipsis" Background="#FFF3E0" Padding="4">
                            이 텍스트는 단어 단위로 말줄임 처리되어 ... 으로 표시됩니다.
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock TextTrimming=&quot;None&quot;&gt;텍스트...&lt;/TextBlock&gt;&#10;&lt;TextBlock TextTrimming=&quot;CharacterEllipsis&quot;&gt;텍스트...&lt;/TextBlock&gt;&#10;&lt;TextBlock TextTrimming=&quot;WordEllipsis&quot;&gt;텍스트...&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="TextAlignment (텍스트 정렬)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <TextBlock FontSize="14" TextAlignment="Left" Background="#E3F2FD" Padding="4" Margin="0,2">Left 정렬</TextBlock>
                    <TextBlock FontSize="14" TextAlignment="Center" Background="#E8F5E9" Padding="4" Margin="0,2">Center 정렬</TextBlock>
                    <TextBlock FontSize="14" TextAlignment="Right" Background="#FFF3E0" Padding="4" Margin="0,2">Right 정렬</TextBlock>
                    <TextBlock FontSize="14" TextAlignment="Justify" Background="#FCE4EC" Padding="4" Margin="0,2" TextWrapping="Wrap">Justify 정렬 — 긴 텍스트에서 양쪽 정렬이 적용됩니다. 단어 사이 간격을 조절하여 좌우 끝을 맞춥니다.</TextBlock>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock TextAlignment=&quot;Left&quot;&gt;Left 정렬&lt;/TextBlock&gt;&#10;&lt;TextBlock TextAlignment=&quot;Center&quot;&gt;Center 정렬&lt;/TextBlock&gt;&#10;&lt;TextBlock TextAlignment=&quot;Right&quot;&gt;Right 정렬&lt;/TextBlock&gt;&#10;&lt;TextBlock TextAlignment=&quot;Justify&quot; TextWrapping=&quot;Wrap&quot;&gt;Justify 정렬...&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="LineHeight (줄 간격)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <GroupBox Header="기본" Width="240" Margin="0,0,8,8">
                            <TextBlock FontSize="14" TextWrapping="Wrap">첫 번째 줄입니다. 두 번째 줄입니다. 세 번째 줄입니다.</TextBlock>
                        </GroupBox>
                        <GroupBox Header="LineHeight=30" Width="240" Margin="0,0,8,8">
                            <TextBlock FontSize="14" TextWrapping="Wrap" LineHeight="30">첫 번째 줄입니다. 두 번째 줄입니다. 세 번째 줄입니다.</TextBlock>
                        </GroupBox>
                        <GroupBox Header="LineHeight=40" Width="240" Margin="0,0,0,8">
                            <TextBlock FontSize="14" TextWrapping="Wrap" LineHeight="40">첫 번째 줄입니다. 두 번째 줄입니다. 세 번째 줄입니다.</TextBlock>
                        </GroupBox>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock TextWrapping=&quot;Wrap&quot;&gt;기본 줄 간격&lt;/TextBlock&gt;&#10;&lt;TextBlock TextWrapping=&quot;Wrap&quot; LineHeight=&quot;30&quot;&gt;줄 간격 30&lt;/TextBlock&gt;&#10;&lt;TextBlock TextWrapping=&quot;Wrap&quot; LineHeight=&quot;40&quot;&gt;줄 간격 40&lt;/TextBlock&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 폰트와 스타일 -->
        <TabItem Header="폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="FontSize" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="12" VerticalAlignment="Bottom" Margin="4">12px</TextBlock>
                        <TextBlock FontSize="18" VerticalAlignment="Bottom" Margin="4">18px</TextBlock>
                        <TextBlock FontSize="24" VerticalAlignment="Bottom" Margin="4">24px</TextBlock>
                        <TextBlock FontSize="36" VerticalAlignment="Bottom" Margin="4">36px</TextBlock>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;12&quot;&gt;12px&lt;/TextBlock&gt;&#10;&lt;TextBlock FontSize=&quot;18&quot;&gt;18px&lt;/TextBlock&gt;&#10;&lt;TextBlock FontSize=&quot;24&quot;&gt;24px&lt;/TextBlock&gt;&#10;&lt;TextBlock FontSize=&quot;36&quot;&gt;36px&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="FontWeight" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontWeight="Thin" FontSize="16" Margin="4">Thin</TextBlock>
                        <TextBlock FontWeight="Light" FontSize="16" Margin="4">Light</TextBlock>
                        <TextBlock FontWeight="Normal" FontSize="16" Margin="4">Normal</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="16" Margin="4">Bold</TextBlock>
                        <TextBlock FontWeight="ExtraBold" FontSize="16" Margin="4">ExtraBold</TextBlock>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontWeight=&quot;Thin&quot;&gt;Thin&lt;/TextBlock&gt;&#10;&lt;TextBlock FontWeight=&quot;Light&quot;&gt;Light&lt;/TextBlock&gt;&#10;&lt;TextBlock FontWeight=&quot;Normal&quot;&gt;Normal&lt;/TextBlock&gt;&#10;&lt;TextBlock FontWeight=&quot;Bold&quot;&gt;Bold&lt;/TextBlock&gt;&#10;&lt;TextBlock FontWeight=&quot;ExtraBold&quot;&gt;ExtraBold&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="FontStyle" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontStyle="Normal" FontSize="16" Margin="4">Normal</TextBlock>
                        <TextBlock FontStyle="Italic" FontSize="16" Margin="4">Italic</TextBlock>
                        <TextBlock FontStyle="Oblique" FontSize="16" Margin="4">Oblique</TextBlock>
                    </StackPanel>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontStyle=&quot;Normal&quot;&gt;Normal&lt;/TextBlock&gt;&#10;&lt;TextBlock FontStyle=&quot;Italic&quot;&gt;Italic&lt;/TextBlock&gt;&#10;&lt;TextBlock FontStyle=&quot;Oblique&quot;&gt;Oblique&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="FontFamily" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
                    <TextBlock FontFamily="Arial" FontSize="16" Margin="0,2">Arial — Hello 안녕하세요</TextBlock>
                    <TextBlock FontFamily="Times New Roman" FontSize="16" Margin="0,2">Times New Roman — Hello 안녕하세요</TextBlock>
                    <TextBlock FontFamily="Consolas" FontSize="16" Margin="0,2">Consolas — Hello 안녕하세요</TextBlock>
                    <TextBlock FontFamily="맑은 고딕" FontSize="16" Margin="0,2">맑은 고딕 — Hello 안녕하세요</TextBlock>
