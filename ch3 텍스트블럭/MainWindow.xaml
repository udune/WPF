<Window x:Class="ch3_텍스트블럭.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch3_텍스트블럭"
        mc:Ignorable="d"
        Title="ch3 TextBlock 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <!-- 코드 보기 스타일 -->
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. TextBlock 콘텐츠 지정 방법" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="태그 사이에 직접 작성" Margin="0,0,0,8">
                        <TextBlock>안녕하세요</TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock&gt;안녕하세요&lt;/TextBlock&gt;"/>
                    </Expander>

                    <GroupBox Header="Text 속성으로 지정" Margin="0,0,0,8">
                        <TextBlock Text="안녕하세요"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock Text=&quot;안녕하세요&quot;/&gt;"/>
                    </Expander>

                    <GroupBox Header="코드 비하인드에서 동적 설정" Margin="0,0,0,8">
                        <TextBlock x:Name="tbDynamic" Text="초기 텍스트" FontSize="14"/>
                    </GroupBox>
                    <Button Content="텍스트 변경" Click="BtnChangeText_Click" Width="120" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBlock x:Name=&quot;tbDynamic&quot; Text=&quot;초기 텍스트&quot; FontSize=&quot;14&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 변경&quot; Click=&quot;BtnChangeText_Click&quot;/&gt;&#10;&#10;// C# 코드 비하인드&#10;private int _clickCount;&#10;private void BtnChangeText_Click(object sender, RoutedEventArgs e)&#10;{&#10;    _clickCount++;&#10;    tbDynamic.Text = $&quot;코드에서 변경된 텍스트 (클릭 {_clickCount}회)&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. 줄바꿈과 링크" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="LineBreak으로 줄바꿈" Margin="0,0,0,8">
                        <TextBlock FontSize="14">
                            첫 번째 줄<LineBreak/>두 번째 줄<LineBreak/>세 번째 줄
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock&gt;&#10;    첫 번째 줄&lt;LineBreak/&gt;두 번째 줄&lt;LineBreak/&gt;세 번째 줄&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <GroupBox Header="Hyperlink (클릭 시 브라우저 열기)" Margin="0,0,0,8">
                        <TextBlock FontSize="14">
                            검색은 <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                                             NavigateUri="https://google.co.kr"
                                             Cursor="Hand">구글 바로가기</Hyperlink>를 이용하세요.
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;TextBlock&gt;&#10;    검색은 &lt;Hyperlink RequestNavigate=&quot;Hyperlink_RequestNavigate&quot;&#10;                     NavigateUri=&quot;https://google.co.kr&quot;&#10;                     Cursor=&quot;Hand&quot;&gt;구글 바로가기&lt;/Hyperlink&gt;를 이용하세요.&#10;&lt;/TextBlock&gt;&#10;&#10;// C# 코드 비하인드&#10;private void Hyperlink_RequestNavigate(object sender, RequestNavigateEventArgs e)&#10;{&#10;    Process.Start(new ProcessStartInfo(e.Uri.AbsoluteUri) { UseShellExecute = true });&#10;}"/>
                    </Expander>

                    <GroupBox Header="ToolTip 표시" Margin="0,0,0,8">
                        <TextBlock Text="마우스를 올려보세요" FontSize="14" ToolTip="이것은 TextBlock의 ToolTip입니다"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock Text=&quot;마우스를 올려보세요&quot; ToolTip=&quot;이것은 TextBlock의 ToolTip입니다&quot;/&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 1: 태그 사이에 '환영합니다'라는 텍스트를 가진 TextBlock을 만드세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;TextBlock&gt;&lt;/TextBlock&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: &lt;TextBlock&gt; 태그 사이에 텍스트를 직접 입력하세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 2: Text 속성을 사용하여 'WPF 학습중'이라는 텍스트를 표시하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;TextBlock /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: Text=&quot;내용&quot; 형식으로 속성을 지정하세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 3: 클릭 횟수를 세어 TextBlock에 표시하는 이벤트 핸들러를 작성하세요. (tbCounter.Text에 횟수 표시)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="private void BtnCount_Click(object sender, RoutedEventArgs e)&#x0a;{&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: _count++ 로 증가시키고, tbCounter.Text = $&quot;클릭 횟수: {_count}회&quot;; 로 표시하세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult1_3"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 4: LineBreak를 사용하여 '첫째줄', '둘째줄', '셋째줄'을 각각 다른 줄에 표시하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_4"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;TextBlock&gt;첫째줄&lt;/TextBlock&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_4"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_4"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_4"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_4"
                                       Text="힌트: &lt;LineBreak/&gt; 태그를 텍스트 사이에 넣으세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_4" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_4"/>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 인라인 요소 -->
        <TabItem Header="인라인 요소">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Bold / Italic / Underline" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <GroupBox Header="기본 인라인 서식" Margin="0,0,0,8">
                        <TextBlock FontSize="16">
                            <Bold>굵은 텍스트</Bold>, <Italic>기울임 텍스트</Italic>, <Underline>밑줄 텍스트</Underline>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot;&gt;&#10;    &lt;Bold&gt;굵은 텍스트&lt;/Bold&gt;, &lt;Italic&gt;기울임 텍스트&lt;/Italic&gt;, &lt;Underline&gt;밑줄 텍스트&lt;/Underline&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="Run 요소" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="Run으로 개별 텍스트 스타일 지정" Margin="0,0,0,8">
                        <TextBlock FontSize="16">
                            <Run Text="빨간색" Foreground="Red"/>
                            <Run Text=" + "/>
                            <Run Text="파란색 굵게" Foreground="Blue" FontWeight="Bold"/>
                            <Run Text=" + "/>
                            <Run Text="초록색 기울임" Foreground="Green" FontStyle="Italic"/>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot;&gt;&#10;    &lt;Run Text=&quot;빨간색&quot; Foreground=&quot;Red&quot;/&gt;&#10;    &lt;Run Text=&quot; + &quot;/&gt;&#10;    &lt;Run Text=&quot;파란색 굵게&quot; Foreground=&quot;Blue&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;    &lt;Run Text=&quot; + &quot;/&gt;&#10;    &lt;Run Text=&quot;초록색 기울임&quot; Foreground=&quot;Green&quot; FontStyle=&quot;Italic&quot;/&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="Span 요소" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="Span으로 구간별 스타일 적용" Margin="0,0,0,8">
                        <TextBlock FontSize="16" TextWrapping="Wrap">
                            일반 텍스트 <Span Foreground="Tomato" FontWeight="Bold">강조된 구간</Span> 다시 일반 <Span Background="Yellow" FontStyle="Italic">하이라이트 구간</Span> 끝
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot; TextWrapping=&quot;Wrap&quot;&gt;&#10;    일반 텍스트 &lt;Span Foreground=&quot;Tomato&quot; FontWeight=&quot;Bold&quot;&gt;강조된 구간&lt;/Span&gt;&#10;    다시 일반 &lt;Span Background=&quot;Yellow&quot; FontStyle=&quot;Italic&quot;&gt;하이라이트 구간&lt;/Span&gt; 끝&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="InlineUIContainer" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="텍스트 안에 컨트롤 삽입" Margin="0,0,0,8">
                        <TextBlock FontSize="14" VerticalAlignment="Center">
                            상태: <InlineUIContainer>
                                <Ellipse Width="12" Height="12" Fill="LimeGreen"/>
                            </InlineUIContainer> 온라인
                            <InlineUIContainer>
                                <Button Content="클릭" Padding="4,0" FontSize="11"/>
                            </InlineUIContainer> 버튼도 가능
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;14&quot;&gt;&#10;    상태: &lt;InlineUIContainer&gt;&#10;        &lt;Ellipse Width=&quot;12&quot; Height=&quot;12&quot; Fill=&quot;LimeGreen&quot;/&gt;&#10;    &lt;/InlineUIContainer&gt; 온라인&#10;    &lt;InlineUIContainer&gt;&#10;        &lt;Button Content=&quot;클릭&quot; Padding=&quot;4,0&quot; FontSize=&quot;11&quot;/&gt;&#10;    &lt;/InlineUIContainer&gt; 버튼도 가능&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <TextBlock Text="복합 인라인 조합" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <GroupBox Header="여러 인라인 요소 혼합 사용" Margin="0,0,0,8">
                        <TextBlock FontSize="16" TextWrapping="Wrap">
                            <Bold>WPF</Bold>의 <Italic>TextBlock</Italic>은
                            <Span Foreground="CornflowerBlue" FontSize="20">다양한</Span> 인라인 요소를
                            <Underline>자유롭게</Underline> 조합할 수 있습니다.<LineBreak/>
                            <Span Foreground="Gray" FontSize="12">— WPF 튜토리얼 中</Span>
                        </TextBlock>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;TextBlock FontSize=&quot;16&quot; TextWrapping=&quot;Wrap&quot;&gt;&#10;    &lt;Bold&gt;WPF&lt;/Bold&gt;의 &lt;Italic&gt;TextBlock&lt;/Italic&gt;은&#10;    &lt;Span Foreground=&quot;CornflowerBlue&quot; FontSize=&quot;20&quot;&gt;다양한&lt;/Span&gt; 인라인 요소를&#10;    &lt;Underline&gt;자유롭게&lt;/Underline&gt; 조합할 수 있습니다.&lt;LineBreak/&gt;&#10;    &lt;Span Foreground=&quot;Gray&quot; FontSize=&quot;12&quot;&gt;— WPF 튜토리얼 中&lt;/Span&gt;&#10;&lt;/TextBlock&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 -->
                    <TextBlock Text="직접 해보기" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" Foreground="#1976D2"/>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 1: Bold와 Italic을 사용하여 '굵게'와 '기울임'이라는 텍스트를 만드세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;TextBlock&gt;&lt;/TextBlock&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: &lt;Bold&gt;텍스트&lt;/Bold&gt;와 &lt;Italic&gt;텍스트&lt;/Italic&gt; 형식을 사용하세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제 2: Run 요소로 '빨강'(Red), '파랑'(Blue) 텍스트를 각각의 색상으로 표시하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;TextBlock&gt;&lt;/TextBlock&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: &lt;Run Text=&quot;텍스트&quot; Foreground=&quot;색상&quot;/&gt; 형식을 사용하세요."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Expander Style="{StaticResource PracticeExpanderStyle}">
