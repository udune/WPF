<Window x:Class="ch9_라디오버튼.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch9_라디오버튼"
        mc:Ignorable="d"
        Title="ch9 RadioButton 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="200"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- ==================== 탭 1: 기본 사용법 ==================== -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="RadioButton 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 기본 RadioButton -->
                    <GroupBox Header="기본 RadioButton" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="옵션 A" Margin="0,2"/>
                            <RadioButton Content="옵션 B" IsChecked="True" Margin="0,2"/>
                            <RadioButton Content="옵션 C" Margin="0,2"/>
                            <TextBlock Text="→ 같은 부모 안의 RadioButton은 자동으로 하나만 선택됩니다." Margin="0,5,0,0" Foreground="Gray" FontSize="11"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;옵션 A&quot; /&gt;&#10;&lt;RadioButton Content=&quot;옵션 B&quot; IsChecked=&quot;True&quot; /&gt;&#10;&lt;RadioButton Content=&quot;옵션 C&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Content가 '좋아요'인 RadioButton을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;RadioButton /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: Content 속성에 텍스트를 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- GroupName -->
                    <GroupBox Header="GroupName (그룹 분리)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="좋아하는 색상:" FontWeight="Bold" Margin="0,0,0,3"/>
                            <RadioButton GroupName="Color" Content="빨강" Margin="0,2"/>
                            <RadioButton GroupName="Color" Content="파랑" IsChecked="True" Margin="0,2"/>
                            <RadioButton GroupName="Color" Content="초록" Margin="0,2"/>

                            <TextBlock Text="좋아하는 계절:" FontWeight="Bold" Margin="0,10,0,3"/>
                            <RadioButton GroupName="Season" Content="봄" Margin="0,2"/>
                            <RadioButton GroupName="Season" Content="여름" Margin="0,2"/>
                            <RadioButton GroupName="Season" Content="가을" IsChecked="True" Margin="0,2"/>
                            <RadioButton GroupName="Season" Content="겨울" Margin="0,2"/>

                            <TextBlock Text="→ GroupName이 다르면 독립적으로 선택할 수 있습니다." Margin="0,5,0,0" Foreground="Gray" FontSize="11"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton GroupName=&quot;Color&quot; Content=&quot;빨강&quot; /&gt;&#10;&lt;RadioButton GroupName=&quot;Color&quot; Content=&quot;파랑&quot; IsChecked=&quot;True&quot; /&gt;&#10;&lt;RadioButton GroupName=&quot;Color&quot; Content=&quot;초록&quot; /&gt;&#10;&#10;&lt;RadioButton GroupName=&quot;Season&quot; Content=&quot;봄&quot; /&gt;&#10;&lt;RadioButton GroupName=&quot;Season&quot; Content=&quot;여름&quot; /&gt;&#10;&lt;RadioButton GroupName=&quot;Season&quot; Content=&quot;가을&quot; IsChecked=&quot;True&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: GroupName이 'Fruit'인 RadioButton 2개를 만들어보세요 (사과, 바나나)." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="60"
                                     Text="&lt;StackPanel&gt;&#x0a;    &#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: GroupName=&quot;Fruit&quot;로 같은 그룹을 지정합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- GroupBox로 그룹 분리 -->
                    <GroupBox Header="GroupBox로 자동 그룹 분리" Margin="0,0,0,10" Padding="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <GroupBox Header="음료" Padding="10" Margin="0,0,15,0">
                                <StackPanel>
                                    <RadioButton Content="커피" IsChecked="True" Margin="0,2"/>
                                    <RadioButton Content="녹차" Margin="0,2"/>
                                    <RadioButton Content="주스" Margin="0,2"/>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="디저트" Padding="10">
                                <StackPanel>
                                    <RadioButton Content="케이크" Margin="0,2"/>
                                    <RadioButton Content="마카롱" IsChecked="True" Margin="0,2"/>
                                    <RadioButton Content="쿠키" Margin="0,2"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- IsEnabled -->
                    <GroupBox Header="IsEnabled (비활성화)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="선택 가능" IsChecked="True" Margin="0,2"/>
                            <RadioButton Content="비활성화됨" IsEnabled="False" Margin="0,2"/>
                            <RadioButton Content="비활성 + 체크" IsEnabled="False" IsChecked="True" Margin="0,2"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;비활성화됨&quot; IsEnabled=&quot;False&quot; /&gt;&#10;&lt;RadioButton Content=&quot;비활성 + 체크&quot; IsEnabled=&quot;False&quot; IsChecked=&quot;True&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 1_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: IsChecked=&quot;True&quot;로 기본 선택된 RadioButton을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;RadioButton Content=&quot;기본 선택&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: IsChecked 속성을 True로 설정하면 기본 선택됩니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 리치 Content -->
                    <GroupBox Header="리치 Content (이미지 + 텍스트)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Margin="0,3" VerticalContentAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="16" Height="16" Fill="Orange"/>
                                    <TextBlock Text="  오렌지" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Margin="0,3" VerticalContentAlignment="Center" IsChecked="True">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="16" Height="16" Fill="Red"/>
                                    <TextBlock Text="  빨간색" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Margin="0,3" VerticalContentAlignment="Center">
                                <TextBlock>
                                    <Bold>굵은</Bold> 텍스트와 <Italic>기울임</Italic>
                                </TextBlock>
                            </RadioButton>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton VerticalContentAlignment=&quot;Center&quot;&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Ellipse Width=&quot;16&quot; Height=&quot;16&quot; Fill=&quot;Orange&quot;/&gt;&#10;        &lt;TextBlock Text=&quot;  오렌지&quot; /&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/RadioButton&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- ==================== 탭 2: 정렬 ==================== -->
        <TabItem Header="2. 정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="RadioButton 정렬" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- HorizontalAlignment -->
                    <GroupBox Header="HorizontalAlignment" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="Left" HorizontalAlignment="Left" Margin="0,2"/>
                            <RadioButton Content="Center" HorizontalAlignment="Center" Margin="0,2"/>
                            <RadioButton Content="Right" HorizontalAlignment="Right" Margin="0,2"/>
                            <RadioButton Content="Stretch (기본값)" HorizontalAlignment="Stretch" Margin="0,2"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot; /&gt;&#10;&lt;RadioButton Content=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot; /&gt;&#10;&lt;RadioButton Content=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: HorizontalAlignment를 Center로 설정한 RadioButton을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;RadioButton Content=&quot;가운데 정렬&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: HorizontalAlignment=&quot;Center&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- HorizontalContentAlignment -->
                    <GroupBox Header="HorizontalContentAlignment" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="Left" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Margin="0,2" Background="#F0F0F0" Padding="5"/>
                            <RadioButton Content="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="0,2" Background="#F0F0F0" Padding="5"/>
                            <RadioButton Content="Right" HorizontalContentAlignment="Right" HorizontalAlignment="Stretch" Margin="0,2" Background="#F0F0F0" Padding="5"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;Center&quot;&#10;             HorizontalContentAlignment=&quot;Center&quot;&#10;             HorizontalAlignment=&quot;Stretch&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 가로 배치 -->
                    <GroupBox Header="가로 배치 (StackPanel Orientation)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton Content="옵션 1" Margin="10,0"/>
                                <RadioButton Content="옵션 2" Margin="10,0" IsChecked="True"/>
                                <RadioButton Content="옵션 3" Margin="10,0"/>
                                <RadioButton Content="옵션 4" Margin="10,0"/>
                            </StackPanel>
                            <TextBlock Text="→ StackPanel Orientation=&quot;Horizontal&quot;로 가로 배치" Margin="0,5,0,0" Foreground="Gray" FontSize="11" HorizontalAlignment="Center"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;RadioButton Content=&quot;옵션 1&quot; Margin=&quot;10,0&quot; /&gt;&#10;    &lt;RadioButton Content=&quot;옵션 2&quot; Margin=&quot;10,0&quot; /&gt;&#10;    &lt;RadioButton Content=&quot;옵션 3&quot; Margin=&quot;10,0&quot; /&gt;&#10;&lt;/StackPanel&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: StackPanel을 사용해 RadioButton 2개를 가로로 배치해보세요 (예, 아니오)." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="70"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;RadioButton Content=&quot;예&quot; /&gt;&#x0a;    &lt;RadioButton Content=&quot;아니오&quot; /&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: StackPanel에 Orientation=&quot;Horizontal&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- WrapPanel 배치 -->
                    <GroupBox Header="WrapPanel 배치 (자동 줄바꿈)" Margin="0,0,0,10" Padding="10">
                        <WrapPanel>
                            <RadioButton Content="항목 A" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 B" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 C" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 D" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 E" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 F" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 G" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                            <RadioButton Content="항목 H" GroupName="Wrap" Margin="5,3" Padding="5,2"/>
                        </WrapPanel>
                    </GroupBox>

                    <!-- FlowDirection -->
                    <GroupBox Header="FlowDirection (텍스트 방향)" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="LeftToRight (기본)" FlowDirection="LeftToRight" Margin="0,2"/>
                            <RadioButton Content="RightToLeft (오른쪽→왼쪽)" FlowDirection="RightToLeft" Margin="0,2"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;RightToLeft&quot; FlowDirection=&quot;RightToLeft&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- ==================== 탭 3: 폰트와 스타일 ==================== -->
        <TabItem Header="3. 폰트와 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="RadioButton 폰트와 스타일" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- FontSize -->
                    <GroupBox Header="FontSize" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <RadioButton Content="FontSize=10" FontSize="10" Margin="0,3"/>
                            <RadioButton Content="FontSize=14 (기본)" FontSize="14" Margin="0,3"/>
                            <RadioButton Content="FontSize=18" FontSize="18" Margin="0,3"/>
                            <RadioButton Content="FontSize=24" FontSize="24" Margin="0,3"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;RadioButton Content=&quot;크게&quot; FontSize=&quot;24&quot; /&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FontSize를 20으로 설정한 RadioButton을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Text="&lt;RadioButton Content=&quot;큰 글씨&quot; /&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: FontSize=&quot;20&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
