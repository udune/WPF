<Window x:Class="ch26_데이터바인딩2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch26_데이터바인딩2"
        mc:Ignorable="d"
        Title="ch26 데이터바인딩2 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- 탭 1: DataContext 기본 -->
            <TabItem Header="DataContext 기본">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="DataContext 기본 개념" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- DataContext 개념 -->
                        <GroupBox Header="DataContext란?" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    <Run FontWeight="Bold">DataContext</Run>
                                    <Run>는 데이터 바인딩의 기본 소스입니다.</Run>
                                    <LineBreak/>
                                    <Run>ElementName 없이 {Binding 속성명}만 사용하면 DataContext에서 속성을 찾습니다.</Run>
                                </TextBlock>
                                <Border Background="LightYellow" Padding="10" CornerRadius="5">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run FontWeight="Bold">핵심:</Run>
                                        <Run>DataContext = 바인딩할 데이터 객체</Run>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// ElementName 바인딩 (명시적 소스 지정)&#10;{Binding ElementName=textBox1, Path=Text}&#10;&#10;// DataContext 바인딩 (DataContext가 소스)&#10;{Binding Path=이름}&#10;{Binding 이름}  // Path 생략 가능"/>
                        </Expander>

                        <!-- Window에 DataContext 설정 -->
                        <GroupBox Header="Window에 DataContext 설정" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Window의 DataContext를 this(자기 자신)로 설정:" Margin="0,0,0,10"/>
                                <Border Background="LightCyan" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Window 속성 바인딩 결과:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding WindowTitle}" FontSize="14"/>
                                        <TextBlock Text="{Binding WindowSize}" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// MainWindow.xaml.cs&#10;public partial class MainWindow : Window&#10;{&#10;    public string WindowTitle =&gt; &quot;데이터바인딩 튜토리얼&quot;;&#10;    public string WindowSize =&gt; $&quot;{Width} x {Height}&quot;;&#10;&#10;    public MainWindow()&#10;    {&#10;        InitializeComponent();&#10;        DataContext = this;  // Window 자신을 DataContext로 설정&#10;    }&#10;}&#10;&#10;// XAML&#10;&lt;TextBlock Text=&quot;{Binding WindowTitle}&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding WindowSize}&quot;/&gt;"/>
                        </Expander>

                        <!-- 객체를 DataContext로 설정 -->
                        <GroupBox Header="객체를 DataContext로 설정" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Person 객체를 DataContext로 설정한 예제:" Margin="0,0,0,10"/>
                                <Border x:Name="personBorder1" Background="LightGreen" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Person 정보:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="이름: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding 이름}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="나이: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding 나이}"/>
                                            <TextBlock Text="세"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Person 클래스&#10;public class Person&#10;{&#10;    public string 이름 { get; set; }&#10;    public int 나이 { get; set; }&#10;}&#10;&#10;// 코드 비하인드&#10;Person person = new Person { 이름 = &quot;홍길동&quot;, 나이 = 25 };&#10;personBorder1.DataContext = person;&#10;&#10;// XAML&#10;&lt;Border x:Name=&quot;personBorder1&quot;&gt;&#10;    &lt;TextBlock Text=&quot;{Binding 이름}&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;{Binding 나이}&quot;/&gt;&#10;&lt;/Border&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 2: DataContext 상속 -->
            <TabItem Header="DataContext 상속">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="DataContext 상속" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 상속 개념 -->
                        <GroupBox Header="DataContext 상속 원리" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    자식 요소는 부모의 DataContext를 자동으로 상속받습니다.
                                    명시적으로 DataContext를 설정하면 해당 요소와 자손들이 새 DataContext를 사용합니다.
                                </TextBlock>
                                <Border Background="LightYellow" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="상속 규칙:" FontWeight="Bold"/>
                                        <TextBlock Text="• 자식은 부모의 DataContext를 상속"/>
                                        <TextBlock Text="• 명시적 설정 시 상속 체인이 끊김"/>
                                        <TextBlock Text="• 형제 요소는 서로 영향 없음"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Window DataContext=&quot;{데이터A}&quot;&gt;        &lt;!-- 데이터A --&gt;&#10;    &lt;StackPanel&gt;                         &lt;!-- 데이터A 상속 --&gt;&#10;        &lt;TextBlock Text=&quot;{Binding}&quot;/&gt;     &lt;!-- 데이터A 사용 --&gt;&#10;        &lt;Border DataContext=&quot;{데이터B}&quot;&gt;  &lt;!-- 데이터B로 재정의 --&gt;&#10;            &lt;TextBlock Text=&quot;{Binding}&quot;/&gt; &lt;!-- 데이터B 사용 --&gt;&#10;        &lt;/Border&gt;&#10;        &lt;TextBlock Text=&quot;{Binding}&quot;/&gt;     &lt;!-- 데이터A 사용 (형제는 영향 없음) --&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/Window&gt;"/>
                        </Expander>

                        <!-- 상속 시각화 -->
                        <GroupBox Header="DataContext 상속 시각화" Margin="0,0,0,10">
                            <StackPanel x:Name="inheritanceDemo" Margin="10">
                                <TextBlock Text="Window DataContext (MainWindow):" FontWeight="Bold" Foreground="DarkBlue"/>
                                <Border Background="LightBlue" Padding="10" Margin="0,5,0,10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding WindowTitle, StringFormat=제목: {0}}"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="├─ WrapPanel DataContext (Person1: 홍길동):" FontWeight="Bold" Foreground="DarkGreen" Margin="20,0,0,0"/>
                                <Border x:Name="wpDemo" Background="LightGreen" Padding="10" Margin="20,5,0,10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding 이름, StringFormat=이름: {0}}"/>
                                        <TextBlock Text="{Binding 나이, StringFormat=나이: {0}세}"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="├─ StackPanel DataContext (Person2: 임꺽정):" FontWeight="Bold" Foreground="DarkOrange" Margin="20,0,0,0"/>
                                <Border x:Name="stpDemo" Background="LightSalmon" Padding="10" Margin="20,5,0,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding 이름, StringFormat=이름: {0}}"/>
                                        <TextBlock Text="{Binding 나이, StringFormat=나이: {0}세}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 코드 비하인드에서 각 컨테이너에 다른 DataContext 설정&#10;DataContext = this;  // Window&#10;&#10;Person person1 = new Person { 이름 = &quot;홍길동&quot;, 나이 = 30 };&#10;wpDemo.DataContext = person1;&#10;&#10;Person person2 = new Person { 이름 = &quot;임꺽정&quot;, 나이 = 40 };&#10;stpDemo.DataContext = person2;&#10;&#10;// 각 Border 내부의 바인딩은 자신의 DataContext를 사용"/>
                        </Expander>

                        <!-- 동적 DataContext 변경 -->
                        <GroupBox Header="동적 DataContext 변경" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="버튼을 클릭하여 DataContext를 변경해보세요:" Margin="0,0,0,10"/>
                                <Border x:Name="dynamicContextBorder" Background="LightPink" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="현재 Person:" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding 이름, StringFormat=이름: {0}}" FontSize="14"/>
                                        <TextBlock Text="{Binding 나이, StringFormat=나이: {0}세}" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Person A" Click="SetPersonA_Click" Padding="15,5" Margin="0,0,10,0"/>
                                    <Button Content="Person B" Click="SetPersonB_Click" Padding="15,5" Margin="0,0,10,0"/>
                                    <Button Content="Person C" Click="SetPersonC_Click" Padding="15,5"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="private void SetPersonA_Click(object sender, RoutedEventArgs e)&#10;{&#10;    dynamicContextBorder.DataContext = new Person { 이름 = &quot;김철수&quot;, 나이 = 25 };&#10;}&#10;&#10;private void SetPersonB_Click(object sender, RoutedEventArgs e)&#10;{&#10;    dynamicContextBorder.DataContext = new Person { 이름 = &quot;이영희&quot;, 나이 = 30 };&#10;}&#10;&#10;// DataContext가 변경되면 바인딩된 UI가 자동으로 업데이트됩니다"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 3: INotifyPropertyChanged -->
            <TabItem Header="INotifyPropertyChanged">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="INotifyPropertyChanged" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 개념 설명 -->
                        <GroupBox Header="속성 변경 알림이 필요한 이유" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    일반 속성은 값이 변경되어도 UI가 자동으로 업데이트되지 않습니다.
                                    INotifyPropertyChanged 인터페이스를 구현하면 속성 변경 시 UI에 알려줄 수 있습니다.
                                </TextBlock>
                                <Border Background="LightCoral" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="❌ 일반 속성 (업데이트 안 됨)" FontWeight="Bold"/>
                                        <TextBlock Text="public string Name { get; set; }" FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="LightGreen" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="✓ INotifyPropertyChanged 구현 (자동 업데이트)" FontWeight="Bold"/>
                                        <TextBlock Text="PropertyChanged?.Invoke(this, ...);" FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// INotifyPropertyChanged 구현&#10;public class NotifyPerson : INotifyPropertyChanged&#10;{&#10;    public event PropertyChangedEventHandler? PropertyChanged;&#10;&#10;    private string _name;&#10;    public string Name&#10;    {&#10;        get =&gt; _name;&#10;        set&#10;        {&#10;            _name = value;&#10;            PropertyChanged?.Invoke(this, &#10;                new PropertyChangedEventArgs(nameof(Name)));&#10;        }&#10;    }&#10;}"/>
                        </Expander>

                        <!-- 비교 데모 -->
                        <GroupBox Header="일반 속성 vs INotifyPropertyChanged 비교" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 일반 속성 -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="일반 속성 (업데이트 안 됨)" FontWeight="Bold" Foreground="Red" Margin="0,0,0,5"/>
                                    <Border x:Name="normalPersonBorder" Background="MistyRose" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding 이름, StringFormat=이름: {0}}"/>
                                            <TextBlock Text="{Binding 나이, StringFormat=나이: {0}세}"/>
                                        </StackPanel>
                                    </Border>
                                    <Button Content="나이 +1 (반영 안 됨)" Click="IncrementNormalAge_Click" Padding="10,5"/>
                                </StackPanel>

                                <!-- INotifyPropertyChanged -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="INotifyPropertyChanged (자동 업데이트)" FontWeight="Bold" Foreground="Green" Margin="0,0,0,5"/>
                                    <Border x:Name="notifyPersonBorder" Background="Honeydew" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name, StringFormat=이름: {0}}"/>
                                            <TextBlock Text="{Binding Age, StringFormat=나이: {0}세}"/>
                                        </StackPanel>
                                    </Border>
                                    <Button Content="나이 +1 (자동 반영)" Click="IncrementNotifyAge_Click" Padding="10,5"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 일반 속성 - UI 업데이트 안 됨&#10;private Person normalPerson = new Person { 이름 = &quot;일반&quot;, 나이 = 20 };&#10;normalPerson.나이++;  // UI는 여전히 20 표시&#10;&#10;// INotifyPropertyChanged - UI 자동 업데이트&#10;private NotifyPerson notifyPerson = new NotifyPerson { Name = &quot;알림&quot;, Age = 20 };&#10;notifyPerson.Age++;  // UI가 21로 업데이트됨"/>
                        </Expander>

                        <!-- 양방향 바인딩 -->
                        <GroupBox Header="TwoWay 바인딩과 INotifyPropertyChanged" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    TwoWay 바인딩을 사용하면 UI 변경이 소스에 반영되고,
                                    INotifyPropertyChanged가 있으면 소스 변경이 UI에 반영됩니다.
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="입력 (TwoWay 바인딩):" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="twoWayNameInput" Padding="5" Margin="0,0,0,5"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox x:Name="twoWayAgeInput" Padding="5"
                                                 Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" x:Name="twoWayDisplayBorder" Background="LightCyan" Padding="10" CornerRadius="5" Margin="10,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="표시 (OneWay 바인딩):" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Name, StringFormat=이름: {0}}" FontSize="14"/>
                                            <TextBlock Text="{Binding Age, StringFormat=나이: {0}세}" FontSize="14"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- TwoWay 바인딩: UI ↔ 소스 양방향 동기화 --&gt;&#10;&lt;TextBox Text=&quot;{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}&quot;/&gt;&#10;&#10;&lt;!-- OneWay 바인딩: 소스 → UI 단방향 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding Name}&quot;/&gt;&#10;&#10;// INotifyPropertyChanged 덕분에 양쪽 모두 동기화됨"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 4: 바인딩 경로 -->
            <TabItem Header="바인딩 경로">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="바인딩 경로 (Path)" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 중첩 속성 바인딩 -->
                        <GroupBox Header="중첩 속성 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    객체 내부의 객체 속성에 접근할 때 점(.) 표기법을 사용합니다.
                                </TextBlock>
                                <Border x:Name="nestedBorder" Background="Lavender" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="회사 정보:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CompanyName, StringFormat=회사명: {0}}"/>
                                        <TextBlock Text="{Binding CEO.Name, StringFormat=CEO: {0}}"/>
                                        <TextBlock Text="{Binding CEO.Age, StringFormat=CEO 나이: {0}세}"/>
                                        <TextBlock Text="{Binding EmployeeCount, StringFormat=직원 수: {0}명}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Company 클래스&#10;public class Company&#10;{&#10;    public string CompanyName { get; set; }&#10;    public NotifyPerson CEO { get; set; }  // 중첩 객체&#10;    public int EmployeeCount { get; set; }&#10;}&#10;&#10;// 바인딩&#10;&lt;TextBlock Text=&quot;{Binding CompanyName}&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding CEO.Name}&quot;/&gt;     &lt;!-- 중첩 속성 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding CEO.Age}&quot;/&gt;"/>
                        </Expander>

                        <!-- 컬렉션 인덱서 -->
                        <GroupBox Header="컬렉션 인덱서 바인딩" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    컬렉션의 특정 인덱스에 바인딩할 수 있습니다.
                                </TextBlock>
                                <Border x:Name="indexerBorder" Background="LightYellow" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="팀원 목록 (인덱서로 접근):" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Members[0].Name, StringFormat=첫 번째: {0}}"/>
                                        <TextBlock Text="{Binding Members[1].Name, StringFormat=두 번째: {0}}"/>
                                        <TextBlock Text="{Binding Members[2].Name, StringFormat=세 번째: {0}}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Team 클래스&#10;public class Team&#10;{&#10;    public List&lt;NotifyPerson&gt; Members { get; set; }&#10;}&#10;&#10;// 인덱서 바인딩&#10;&lt;TextBlock Text=&quot;{Binding Members[0].Name}&quot;/&gt;  &lt;!-- 첫 번째 멤버 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding Members[1].Name}&quot;/&gt;  &lt;!-- 두 번째 멤버 --&gt;"/>
                        </Expander>

                        <!-- 현재 항목 바인딩 -->
                        <GroupBox Header="빈 Path (현재 DataContext 자체)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    Path를 비워두면 DataContext 자체에 바인딩됩니다.
                                    주로 문자열이나 기본 타입에 유용합니다.
                                </TextBlock>
                                <Border x:Name="emptyPathBorder" Background="LightGreen" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="DataContext = '안녕하세요'" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding}" FontSize="16"/>
                                        <TextBlock Text="{Binding Path=.}" FontSize="16"/>
                                        <TextBlock Text="{Binding Path=Length, StringFormat=길이: {0}자}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 문자열을 DataContext로 설정&#10;emptyPathBorder.DataContext = &quot;안녕하세요&quot;;&#10;&#10;// 빈 Path 바인딩&#10;&lt;TextBlock Text=&quot;{Binding}&quot;/&gt;           &lt;!-- &quot;안녕하세요&quot; --&gt;&#10;&lt;TextBlock Text=&quot;{Binding Path=.}&quot;/&gt;    &lt;!-- &quot;안녕하세요&quot; (동일) --&gt;&#10;&lt;TextBlock Text=&quot;{Binding Length}&quot;/&gt;    &lt;!-- 5 (문자열 길이) --&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 5: 실용 예제 -->
            <TabItem Header="실용 예제">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="실용 예제" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 프로필 카드 -->
                        <GroupBox Header="프로필 카드" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 입력 폼 -->
                                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                        <TextBlock Text="프로필 입력:" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock Text="이름:"/>
                                        <TextBox x:Name="profileNameInput" Padding="5" Margin="0,2,0,10"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Text="나이:"/>
                                        <TextBox Padding="5" Margin="0,2,0,10"
                                                 Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Text="직업:"/>
                                        <TextBox Padding="5" Margin="0,2,0,10"
                                                 Text="{Binding Job, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <!-- 프로필 카드 -->
                                    <Border Grid.Column="1" x:Name="profileCard" CornerRadius="10" Padding="20">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#667eea" Offset="0"/>
                                                <GradientStop Color="#764ba2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel>
                                            <Ellipse Width="60" Height="60" Fill="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"
                                                       Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Job}" FontSize="14"
                                                       Foreground="LightGray" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                                            <Border CornerRadius="15" Padding="10,5" HorizontalAlignment="Center">
                                                <Border.Background>
                                                    <SolidColorBrush Color="White" Opacity="0.2"/>
                                                </Border.Background>
                                                <TextBlock Text="{Binding Age, StringFormat={}{0}세}"
                                                           Foreground="White" FontSize="12"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// ProfilePerson 클래스 (INotifyPropertyChanged 구현)&#10;public class ProfilePerson : INotifyPropertyChanged&#10;{&#10;    public string Name { get; set; }&#10;    public int Age { get; set; }&#10;    public string Job { get; set; }&#10;    // PropertyChanged 구현...&#10;}&#10;&#10;// TwoWay 바인딩으로 입력과 표시 동기화&#10;&lt;TextBox Text=&quot;{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding Name}&quot;/&gt;"/>
                        </Expander>

                        <!-- 카운터 -->
                        <GroupBox Header="바인딩 카운터" Margin="0,0,0,10">
                            <Border x:Name="counterBorder" Margin="10">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Count}" FontSize="48" FontWeight="Bold"
                                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content=" - " FontSize="24" Width="60" Height="60" Click="DecrementCount_Click"/>
                                        <Button Content=" 0 " FontSize="24" Width="60" Height="60" Margin="10,0" Click="ResetCount_Click"/>
                                        <Button Content=" + " FontSize="24" Width="60" Height="60" Click="IncrementCount_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Counter 클래스&#10;public class Counter : INotifyPropertyChanged&#10;{&#10;    private int _count;&#10;    public int Count&#10;    {&#10;        get =&gt; _count;&#10;        set { _count = value; OnPropertyChanged(); }&#10;    }&#10;}&#10;&#10;// 버튼 클릭 핸들러&#10;private void IncrementCount_Click(...) =&gt; counter.Count++;&#10;private void DecrementCount_Click(...) =&gt; counter.Count--;&#10;private void ResetCount_Click(...) =&gt; counter.Count = 0;"/>
                        </Expander>

                        <!-- 상태 표시 -->
                        <GroupBox Header="실시간 상태 모니터링" Margin="0,0,0,10">
                            <StackPanel x:Name="statusPanel" Margin="10">
                                <TextBlock Text="슬라이더를 조절하여 상태를 확인하세요:" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="CPU:" VerticalAlignment="Center"/>
                                    <Slider x:Name="cpuSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="30" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ElementName=cpuSlider, Path=Value, StringFormat={}{0:F0}%}"
                                               VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                    <TextBlock Grid.Row="1" Text="메모리:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <Slider x:Name="memorySlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="100" Value="65"
                                            VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ElementName=memorySlider, Path=Value, StringFormat={}{0:F0}%}"
                                               VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0"/>

                                    <TextBlock Grid.Row="2" Text="디스크:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <Slider x:Name="diskSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="100" Value="45"
                                            VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding ElementName=diskSlider, Path=Value, StringFormat={}{0:F0}%}"
                                               VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                                </Grid>

                                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                    <ProgressBar Width="200" Height="20" Value="{Binding ElementName=cpuSlider, Path=Value}"
                                                 Maximum="100" Foreground="SteelBlue"/>
                                    <TextBlock Text=" CPU" VerticalAlignment="Center" Margin="5,0,20,0"/>
                                    <ProgressBar Width="200" Height="20" Value="{Binding ElementName=memorySlider, Path=Value}"
                                                 Maximum="100" Foreground="Green"/>
                                    <TextBlock Text=" MEM" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 슬라이더와 프로그레스바 동기화 --&gt;&#10;&lt;Slider x:Name=&quot;cpuSlider&quot; Maximum=&quot;100&quot; Value=&quot;30&quot;/&gt;&#10;&lt;ProgressBar Value=&quot;{Binding ElementName=cpuSlider, Path=Value}&quot; Maximum=&quot;100&quot;/&gt;&#10;&#10;&lt;!-- StringFormat으로 퍼센트 표시 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=cpuSlider, Path=Value, StringFormat={}{0:F0}%}&quot;/&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
