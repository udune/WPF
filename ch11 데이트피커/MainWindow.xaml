<Window x:Class="ch11_데이트피커.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch11_데이트피커"
        mc:Ignorable="d"
        Title="ch11 DatePicker 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 DatePicker" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="기본 DatePicker (빈 상태)" Margin="0,0,0,8">
                        <DatePicker HorizontalAlignment="Left" Width="200"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. SelectedDate (미리 선택된 날짜)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜를 미리 지정" Margin="0,0,0,8">
                        <DatePicker SelectedDate="2025-06-15" HorizontalAlignment="Left" Width="200"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker SelectedDate=&quot;2025-06-15&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. SelectedDateFormat (표시 형식)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Short vs Long 비교" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Short (기본): " VerticalAlignment="Center" Width="120"/>
                                <DatePicker SelectedDate="2025-06-15" SelectedDateFormat="Short" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Long: " VerticalAlignment="Center" Width="120"/>
                                <DatePicker SelectedDate="2025-06-15" SelectedDateFormat="Long" Width="280"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker SelectedDate=&quot;2025-06-15&quot; SelectedDateFormat=&quot;Short&quot;/&gt;&#10;&lt;DatePicker SelectedDate=&quot;2025-06-15&quot; SelectedDateFormat=&quot;Long&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. DisplayDate (달력 시작 월)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="달력 팝업이 열릴 때 표시할 월 지정" Margin="0,0,0,8">
                        <DatePicker DisplayDate="2025-12-01" HorizontalAlignment="Left" Width="200"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker DisplayDate=&quot;2025-12-01&quot;/&gt;&#10;&#10;&lt;!-- 달력이 열릴 때 2025년 12월을 표시 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 날짜 범위 제한 -->
        <TabItem Header="날짜 범위 제한">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. DisplayDateStart / DisplayDateEnd" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="선택 가능한 날짜 범위 제한" Margin="0,0,0,8">
                        <DatePicker DisplayDateStart="2025-01-01" DisplayDateEnd="2025-12-31" HorizontalAlignment="Left" Width="200"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker DisplayDateStart=&quot;2025-01-01&quot;&#10;            DisplayDateEnd=&quot;2025-12-31&quot;/&gt;&#10;&#10;&lt;!-- 2025년 범위만 선택 가능 --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. BlackoutDates (선택 불가 날짜)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="특정 날짜를 선택 불가로 설정" Margin="0,0,0,8">
                        <DatePicker HorizontalAlignment="Left" Width="200">
                            <DatePicker.BlackoutDates>
                                <CalendarDateRange Start="2025-02-01" End="2025-02-05"/>
                                <CalendarDateRange Start="2025-02-14" End="2025-02-14"/>
                            </DatePicker.BlackoutDates>
                        </DatePicker>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker&gt;&#10;    &lt;DatePicker.BlackoutDates&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-01&quot; End=&quot;2025-02-05&quot;/&gt;&#10;        &lt;CalendarDateRange Start=&quot;2025-02-14&quot; End=&quot;2025-02-14&quot;/&gt;&#10;    &lt;/DatePicker.BlackoutDates&gt;&#10;&lt;/DatePicker&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 코드비하인드로 BlackoutDates 추가" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼 클릭으로 오늘 이전 날짜를 비활성화" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpBlackoutCode" HorizontalAlignment="Left" Width="200"/>
                            <Button Content="오늘 이전 날짜 비활성화" Click="BlackoutPastDates_Click" HorizontalAlignment="Left" Padding="12,6" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;DatePicker x:Name=&quot;dpBlackoutCode&quot;/&gt;&#10;&lt;Button Content=&quot;오늘 이전 날짜 비활성화&quot; Click=&quot;BlackoutPastDates_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void BlackoutPastDates_Click(object sender, RoutedEventArgs e)&#10;{&#10;    dpBlackoutCode.BlackoutDates.AddDatesInPast();&#10;}"/>
                    </Expander>

                    <TextBlock Text="4. FirstDayOfWeek" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="달력 팝업의 시작 요일 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Sunday (기본): " VerticalAlignment="Center" Width="120"/>
                                <DatePicker FirstDayOfWeek="Sunday" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Monday: " VerticalAlignment="Center" Width="120"/>
                                <DatePicker FirstDayOfWeek="Monday" Width="200"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker FirstDayOfWeek=&quot;Sunday&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;DatePicker FirstDayOfWeek=&quot;Monday&quot;/&gt; &lt;!-- 월요일 시작 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 이벤트와 텍스트 입력 -->
        <TabItem Header="이벤트와 텍스트 입력">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. SelectedDateChanged 이벤트" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="날짜 변경 시 TextBlock에 표시" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpEvent" SelectedDateChanged="dpEvent_SelectedDateChanged" HorizontalAlignment="Left" Width="200"/>
                            <TextBlock x:Name="tbEventResult" Text="날짜를 선택하세요" FontSize="14" Margin="0,8,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;DatePicker x:Name=&quot;dpEvent&quot; SelectedDateChanged=&quot;dpEvent_SelectedDateChanged&quot;/&gt;&#10;&lt;TextBlock x:Name=&quot;tbEventResult&quot; Text=&quot;날짜를 선택하세요&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void dpEvent_SelectedDateChanged(object sender, SelectionChangedEventArgs e)&#10;{&#10;    if (dpEvent.SelectedDate.HasValue)&#10;    {&#10;        tbEventResult.Text = &quot;선택: &quot; + dpEvent.SelectedDate.Value.ToString(&quot;yyyy-MM-dd&quot;);&#10;    }&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. Text 속성 (직접 입력)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Text 속성으로 초기값 지정 (사용자가 직접 타이핑 가능)" Margin="0,0,0,8">
                        <DatePicker Text="2025/06/15" HorizontalAlignment="Left" Width="200"/>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker Text=&quot;2025/06/15&quot;/&gt;&#10;&#10;&lt;!-- Text 속성으로 문자열 형태의 날짜를 지정 --&gt;&#10;&lt;!-- 사용자가 텍스트 박스에 직접 날짜를 입력할 수도 있음 --&gt;"/>
                    </Expander>

                    <TextBlock Text="3. IsDropDownOpen" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="코드비하인드로 달력 팝업 열기/닫기" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpDropDown" HorizontalAlignment="Left" Width="200"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="달력 열기" Click="OpenDropDown_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="달력 닫기" Click="CloseDropDown_Click" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;DatePicker x:Name=&quot;dpDropDown&quot;/&gt;&#10;&lt;Button Content=&quot;달력 열기&quot; Click=&quot;OpenDropDown_Click&quot;/&gt;&#10;&lt;Button Content=&quot;달력 닫기&quot; Click=&quot;CloseDropDown_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void OpenDropDown_Click(object sender, RoutedEventArgs e)&#10;{&#10;    dpDropDown.IsDropDownOpen = true;&#10;}&#10;private void CloseDropDown_Click(object sender, RoutedEventArgs e)&#10;{&#10;    dpDropDown.IsDropDownOpen = false;&#10;}"/>
                    </Expander>

                    <TextBlock Text="4. IsTodayHighlighted" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="오늘 날짜 강조 On/Off" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="True (기본): " VerticalAlignment="Center" Width="120"/>
                                <DatePicker IsTodayHighlighted="True" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="False: " VerticalAlignment="Center" Width="120"/>
                                <DatePicker IsTodayHighlighted="False" Width="200"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker IsTodayHighlighted=&quot;True&quot;/&gt;  &lt;!-- 기본값 --&gt;&#10;&lt;DatePicker IsTodayHighlighted=&quot;False&quot;/&gt; &lt;!-- 오늘 강조 비활성화 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 데이터 바인딩 -->
        <TabItem Header="데이터 바인딩">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Text 속성 바인딩" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="DatePicker의 Text를 TextBlock에 바인딩" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpBindText" HorizontalAlignment="Left" Width="200"/>
                            <TextBlock FontSize="14" Margin="0,8,0,0"
                                       Text="{Binding ElementName=dpBindText, Path=Text, StringFormat='Text: {0}'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker x:Name=&quot;dpBindText&quot;/&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=dpBindText, Path=Text}&quot;/&gt;&#10;&#10;&lt;!-- Text 속성은 표시 문자열 그대로 바인딩 --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. SelectedDate 속성 바인딩 + StringFormat" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="다양한 날짜 포맷으로 바인딩" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpBindDate" SelectedDate="2025-06-15" HorizontalAlignment="Left" Width="200"/>
                            <TextBlock FontSize="13" Margin="0,8,0,2"
                                       Text="{Binding ElementName=dpBindDate, Path=SelectedDate, StringFormat='yyyy-MM-dd: {0:yyyy-MM-dd}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=dpBindDate, Path=SelectedDate, StringFormat='yyyy년 M월 d일: {0:yyyy년 M월 d일}'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,2"
                                       Text="{Binding ElementName=dpBindDate, Path=SelectedDate, StringFormat='요일 포함: {0:yyyy-MM-dd (ddd)}', ConverterCulture='ko-KR'}"/>
                            <TextBlock FontSize="13" Margin="0,2,0,0"
                                       Text="{Binding ElementName=dpBindDate, Path=SelectedDate, StringFormat='긴 형식: {0:D}', ConverterCulture='ko-KR'}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker x:Name=&quot;dpBindDate&quot; SelectedDate=&quot;2025-06-15&quot;/&gt;&#10;&#10;&lt;!-- yyyy-MM-dd --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=dpBindDate,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy-MM-dd}'}&quot;/&gt;&#10;&#10;&lt;!-- 한국어 형식 --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=dpBindDate,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy년 M월 d일}'}&quot;/&gt;&#10;&#10;&lt;!-- 요일 포함 (ConverterCulture 필요) --&gt;&#10;&lt;TextBlock Text=&quot;{Binding ElementName=dpBindDate,&#10;                   Path=SelectedDate,&#10;                   StringFormat='{0:yyyy-MM-dd (ddd)}',&#10;                   ConverterCulture='ko-KR'}&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 두 DatePicker 동기화" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="시작일 / 종료일 연동 (시작일을 선택하면 종료일의 DisplayDateStart가 변경)" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="시작일: " VerticalAlignment="Center" Width="60"/>
                                <DatePicker x:Name="dpStart" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="종료일: " VerticalAlignment="Center" Width="60"/>
                                <DatePicker DisplayDateStart="{Binding ElementName=dpStart, Path=SelectedDate}" Width="200"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker x:Name=&quot;dpStart&quot;/&gt;&#10;&#10;&lt;DatePicker DisplayDateStart=&quot;{Binding ElementName=dpStart, Path=SelectedDate}&quot;/&gt;&#10;&#10;&lt;!-- 시작일 이전 날짜는 종료일에서 선택 불가 --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 스타일과 코드비하인드 -->
        <TabItem Header="스타일과 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 외관 속성" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Width, FontSize, FontFamily" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker Width="250" FontSize="16" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <DatePicker Width="300" FontSize="18" FontFamily="Georgia" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker Width=&quot;250&quot; FontSize=&quot;16&quot;/&gt;&#10;&lt;DatePicker Width=&quot;300&quot; FontSize=&quot;18&quot; FontFamily=&quot;Georgia&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="2. Background, Foreground, BorderBrush" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="색상 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker Background="LightYellow" BorderBrush="DarkOrange" BorderThickness="2" Width="200" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <DatePicker Background="LightCyan" Foreground="DarkBlue" BorderBrush="SteelBlue" BorderThickness="2" Width="200" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker Background=&quot;LightYellow&quot;&#10;            BorderBrush=&quot;DarkOrange&quot;&#10;            BorderThickness=&quot;2&quot;/&gt;&#10;&#10;&lt;DatePicker Background=&quot;LightCyan&quot;&#10;            Foreground=&quot;DarkBlue&quot;&#10;            BorderBrush=&quot;SteelBlue&quot;&#10;            BorderThickness=&quot;2&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="3. IsEnabled / Visibility" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="비활성화 및 숨김" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="IsEnabled=False: " VerticalAlignment="Center" Width="140"/>
                                <DatePicker IsEnabled="False" SelectedDate="2025-01-01" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Visibility=Hidden: " VerticalAlignment="Center" Width="140"/>
                                <DatePicker Visibility="Hidden" Width="200"/>
                                <TextBlock Text="(여기에 숨겨진 DatePicker 있음)" VerticalAlignment="Center" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DatePicker IsEnabled=&quot;False&quot; SelectedDate=&quot;2025-01-01&quot;/&gt;&#10;&#10;&lt;DatePicker Visibility=&quot;Hidden&quot;/&gt;&#10;&lt;DatePicker Visibility=&quot;Collapsed&quot;/&gt;"/>
                    </Expander>

                    <TextBlock Text="4. 코드비하인드로 날짜 제어" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 오늘 선택 / 선택 해제 / 형식 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <DatePicker x:Name="dpCodeBehind" HorizontalAlignment="Left" Width="280"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="오늘 선택" Click="SelectToday_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="선택 해제" Click="ClearDate_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="Long 형식 전환" Click="ToggleFormat_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbCodeBehindResult" Text="" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
