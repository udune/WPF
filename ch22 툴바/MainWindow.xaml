<Window x:Class="ch22_툴바.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch22_툴바"
        mc:Ignorable="d"
        Title="ch22 ToolBar 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ToolBar 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="ToolBar는 명령 버튼들을 그룹화하여 표시하는 컨트롤입니다. ToolBarTray 안에 배치하면 사용자가 드래그하여 위치를 변경할 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 ToolBar -->
                    <GroupBox Header="기본 ToolBar" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="30">
                                <Button Content="새로 만들기"/>
                                <Button Content="열기"/>
                                <Button Content="저장"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot;/&gt;&#10;    &lt;Button Content=&quot;저장&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: ToolBarTray 사용 -->
                    <GroupBox Header="ToolBarTray (드래그 가능)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ToolBarTray 안의 ToolBar는 드래그하여 위치를 변경할 수 있습니다." Margin="0,0,0,10"/>
                            <Border BorderBrush="Gray" BorderThickness="1" Height="120">
                                <DockPanel>
                                    <ToolBarTray DockPanel.Dock="Top">
                                        <ToolBar Header="파일">
                                            <Button Content="새로 만들기"/>
                                            <Button Content="열기"/>
                                            <Button Content="저장"/>
                                        </ToolBar>
                                        <ToolBar Header="편집">
                                            <Button Content="잘라내기"/>
                                            <Button Content="복사"/>
                                            <Button Content="붙여넣기"/>
                                        </ToolBar>
                                    </ToolBarTray>
                                    <TextBlock Text="(콘텐츠 영역)" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                                </DockPanel>
                            </Border>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;DockPanel&gt;&#10;    &lt;ToolBarTray DockPanel.Dock=&quot;Top&quot;&gt;&#10;        &lt;ToolBar Header=&quot;파일&quot;&gt;&#10;            &lt;Button Content=&quot;새로 만들기&quot;/&gt;&#10;            &lt;Button Content=&quot;열기&quot;/&gt;&#10;            &lt;Button Content=&quot;저장&quot;/&gt;&#10;        &lt;/ToolBar&gt;&#10;        &lt;ToolBar Header=&quot;편집&quot;&gt;&#10;            &lt;Button Content=&quot;잘라내기&quot;/&gt;&#10;            &lt;Button Content=&quot;복사&quot;/&gt;&#10;            &lt;Button Content=&quot;붙여넣기&quot;/&gt;&#10;        &lt;/ToolBar&gt;&#10;    &lt;/ToolBarTray&gt;&#10;    &lt;!-- 콘텐츠 --&gt;&#10;&lt;/DockPanel&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: Separator 사용 -->
                    <GroupBox Header="Separator로 구분" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="30">
                                <Button Content="새로 만들기"/>
                                <Button Content="열기"/>
                                <Button Content="저장"/>
                                <Separator/>
                                <Button Content="잘라내기"/>
                                <Button Content="복사"/>
                                <Button Content="붙여넣기"/>
                                <Separator/>
                                <Button Content="실행 취소"/>
                                <Button Content="다시 실행"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot;/&gt;&#10;    &lt;Button Content=&quot;저장&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;Button Content=&quot;잘라내기&quot;/&gt;&#10;    &lt;Button Content=&quot;복사&quot;/&gt;&#10;    &lt;Button Content=&quot;붙여넣기&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;Button Content=&quot;실행 취소&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: Header 속성 -->
                    <GroupBox Header="Header 속성" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBarTray>
                                <ToolBar Header="서식">
                                    <Button Content="굵게"/>
                                    <Button Content="기울임"/>
                                    <Button Content="밑줄"/>
                                </ToolBar>
                            </ToolBarTray>
                            <TextBlock Text="※ Header는 ToolBar 왼쪽에 작은 핸들로 표시됩니다." FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBarTray&gt;&#10;    &lt;ToolBar Header=&quot;서식&quot;&gt;&#10;        &lt;Button Content=&quot;굵게&quot;/&gt;&#10;        &lt;Button Content=&quot;기울임&quot;/&gt;&#10;        &lt;Button Content=&quot;밑줄&quot;/&gt;&#10;    &lt;/ToolBar&gt;&#10;&lt;/ToolBarTray&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 다양한 컨트롤 -->
        <TabItem Header="다양한 컨트롤">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ToolBar에 다양한 컨트롤 배치" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: 도형으로 아이콘 표현 -->
                    <GroupBox Header="도형으로 아이콘 버튼" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="35">
                                <Button ToolTip="새 문서" Padding="5">
                                    <Rectangle Width="16" Height="16" Fill="SteelBlue"/>
                                </Button>
                                <Button ToolTip="폴더 열기" Padding="5">
                                    <Rectangle Width="16" Height="14" Fill="Goldenrod" RadiusX="2" RadiusY="2"/>
                                </Button>
                                <Button ToolTip="저장" Padding="5">
                                    <Polygon Points="8,0 16,8 8,16 0,8" Fill="Green"/>
                                </Button>
                                <Separator/>
                                <Button ToolTip="삭제" Padding="5">
                                    <Ellipse Width="16" Height="16" Fill="Crimson"/>
                                </Button>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;Button ToolTip=&quot;새 문서&quot; Padding=&quot;5&quot;&gt;&#10;        &lt;Rectangle Width=&quot;16&quot; Height=&quot;16&quot; Fill=&quot;SteelBlue&quot;/&gt;&#10;    &lt;/Button&gt;&#10;    &lt;Button ToolTip=&quot;폴더 열기&quot; Padding=&quot;5&quot;&gt;&#10;        &lt;Rectangle Width=&quot;16&quot; Height=&quot;14&quot; Fill=&quot;Goldenrod&quot;/&gt;&#10;    &lt;/Button&gt;&#10;    &lt;Button ToolTip=&quot;저장&quot; Padding=&quot;5&quot;&gt;&#10;        &lt;Polygon Points=&quot;8,0 16,8 8,16 0,8&quot; Fill=&quot;Green&quot;/&gt;&#10;    &lt;/Button&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: ComboBox -->
                    <GroupBox Header="ComboBox와 TextBox" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="35">
                                <TextBlock Text="글꼴:" VerticalAlignment="Center" Margin="5,0"/>
                                <ComboBox Width="100" SelectedIndex="0">
                                    <ComboBoxItem Content="맑은 고딕"/>
                                    <ComboBoxItem Content="굴림"/>
                                    <ComboBoxItem Content="돋움"/>
                                    <ComboBoxItem Content="바탕"/>
                                </ComboBox>
                                <Separator/>
                                <TextBlock Text="크기:" VerticalAlignment="Center" Margin="5,0"/>
                                <ComboBox x:Name="fontSizeCombo" Width="60" SelectedIndex="2">
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="12"/>
                                    <ComboBoxItem Content="14"/>
                                    <ComboBoxItem Content="16"/>
                                </ComboBox>
                                <Separator/>
                                <TextBlock Text="검색:" VerticalAlignment="Center" Margin="5,0"/>
                                <TextBox Width="120"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;TextBlock Text=&quot;글꼴:&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;ComboBox Width=&quot;100&quot; SelectedIndex=&quot;0&quot;&gt;&#10;        &lt;ComboBoxItem Content=&quot;맑은 고딕&quot;/&gt;&#10;        &lt;ComboBoxItem Content=&quot;굴림&quot;/&gt;&#10;    &lt;/ComboBox&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;TextBlock Text=&quot;크기:&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;ComboBox Width=&quot;60&quot;&gt;...&lt;/ComboBox&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;TextBlock Text=&quot;검색:&quot;/&gt;&#10;    &lt;TextBox Width=&quot;120&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: ToggleButton과 CheckBox -->
                    <GroupBox Header="ToggleButton과 CheckBox" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="35">
                                <ToggleButton Content="B" FontWeight="Bold" Width="30" ToolTip="굵게"/>
                                <ToggleButton Content="I" FontStyle="Italic" Width="30" ToolTip="기울임"/>
                                <ToggleButton Width="30" ToolTip="밑줄">
                                    <TextBlock Text="U" TextDecorations="Underline"/>
                                </ToggleButton>
                                <Separator/>
                                <CheckBox Content="자동 저장" VerticalAlignment="Center"/>
                                <Separator/>
                                <RadioButton Content="왼쪽" GroupName="Align" VerticalAlignment="Center" Margin="5,0"/>
                                <RadioButton Content="가운데" GroupName="Align" VerticalAlignment="Center" IsChecked="True" Margin="5,0"/>
                                <RadioButton Content="오른쪽" GroupName="Align" VerticalAlignment="Center" Margin="5,0"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;ToggleButton Content=&quot;B&quot; FontWeight=&quot;Bold&quot; Width=&quot;30&quot;/&gt;&#10;    &lt;ToggleButton Content=&quot;I&quot; FontStyle=&quot;Italic&quot; Width=&quot;30&quot;/&gt;&#10;    &lt;ToggleButton Width=&quot;30&quot;&gt;&#10;        &lt;TextBlock Text=&quot;U&quot; TextDecorations=&quot;Underline&quot;/&gt;&#10;    &lt;/ToggleButton&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;CheckBox Content=&quot;자동 저장&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;RadioButton Content=&quot;왼쪽&quot; GroupName=&quot;Align&quot;/&gt;&#10;    &lt;RadioButton Content=&quot;가운데&quot; GroupName=&quot;Align&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: Slider와 ProgressBar -->
                    <GroupBox Header="Slider와 ProgressBar" Margin="0,0,0,15">
                        <StackPanel>
                            <ToolBar Height="35">
                                <TextBlock Text="볼륨:" VerticalAlignment="Center" Margin="5,0"/>
                                <Slider x:Name="volumeSlider" Width="100" Minimum="0" Maximum="100" Value="50"
                                        VerticalAlignment="Center" ValueChanged="VolumeSlider_ValueChanged"/>
                                <TextBlock x:Name="volumeText" Text="50%" VerticalAlignment="Center" Width="35"/>
                                <Separator/>
                                <TextBlock Text="진행:" VerticalAlignment="Center" Margin="5,0"/>
                                <ProgressBar Width="100" Height="15" Value="65"/>
                                <TextBlock Text="65%" VerticalAlignment="Center" Margin="5,0"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar&gt;&#10;    &lt;TextBlock Text=&quot;볼륨:&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Slider Width=&quot;100&quot; Minimum=&quot;0&quot; Maximum=&quot;100&quot; Value=&quot;50&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;50%&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;TextBlock Text=&quot;진행:&quot;/&gt;&#10;    &lt;ProgressBar Width=&quot;100&quot; Height=&quot;15&quot; Value=&quot;65&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;65%&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 오버플로우 -->
        <TabItem Header="오버플로우">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ToolBar 오버플로우" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="ToolBar 너비가 부족할 때 항목들이 오버플로우 메뉴로 이동합니다. ToolBar.OverflowMode 연결 속성으로 동작을 제어합니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 오버플로우 -->
                    <GroupBox Header="기본 오버플로우 동작" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ToolBar 너비를 좁게 설정하면 오른쪽에 오버플로우 버튼(▼)이 나타납니다." Margin="0,0,0,10"/>
                            <ToolBar Width="250" HorizontalAlignment="Left">
                                <Button Content="새로 만들기"/>
                                <Button Content="열기"/>
                                <Button Content="저장"/>
                                <Button Content="잘라내기"/>
                                <Button Content="복사"/>
                                <Button Content="붙여넣기"/>
                                <Button Content="실행 취소"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- 너비가 좁으면 자동으로 오버플로우 --&gt;&#10;&lt;ToolBar Width=&quot;250&quot;&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot;/&gt;&#10;    &lt;Button Content=&quot;저장&quot;/&gt;&#10;    &lt;Button Content=&quot;잘라내기&quot;/&gt;&#10;    &lt;Button Content=&quot;복사&quot;/&gt;&#10;    &lt;Button Content=&quot;붙여넣기&quot;/&gt;&#10;    &lt;Button Content=&quot;실행 취소&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: OverflowMode 속성 -->
                    <GroupBox Header="OverflowMode 속성" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                <Run FontWeight="Bold">AsNeeded</Run>: 공간 부족 시 오버플로우 (기본값)
                                <LineBreak/><Run FontWeight="Bold">Always</Run>: 항상 오버플로우 메뉴로
                                <LineBreak/><Run FontWeight="Bold">Never</Run>: 절대 오버플로우 안 함
                            </TextBlock>
                            <ToolBar Width="300" HorizontalAlignment="Left">
                                <Button Content="AsNeeded" ToolBar.OverflowMode="AsNeeded"/>
                                <Button Content="Always" ToolBar.OverflowMode="Always"/>
                                <Button Content="Never" ToolBar.OverflowMode="Never"/>
                                <Button Content="AsNeeded" ToolBar.OverflowMode="AsNeeded"/>
                                <Button Content="AsNeeded" ToolBar.OverflowMode="AsNeeded"/>
                            </ToolBar>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar Width=&quot;300&quot;&gt;&#10;    &lt;Button Content=&quot;AsNeeded&quot;&#10;            ToolBar.OverflowMode=&quot;AsNeeded&quot;/&gt;&#10;    &lt;Button Content=&quot;Always&quot;&#10;            ToolBar.OverflowMode=&quot;Always&quot;/&gt;&#10;    &lt;Button Content=&quot;Never&quot;&#10;            ToolBar.OverflowMode=&quot;Never&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 항상 오버플로우 예제 -->
                    <GroupBox Header="자주 사용하지 않는 명령은 Always" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="자주 사용하는 명령은 툴바에, 드물게 사용하는 명령은 오버플로우에 배치합니다." Margin="0,0,0,10"/>
                            <ToolBar Width="350" HorizontalAlignment="Left">
                                <Button Content="새로 만들기" ToolBar.OverflowMode="Never"/>
                                <Button Content="열기" ToolBar.OverflowMode="Never"/>
                                <Button Content="저장" ToolBar.OverflowMode="Never"/>
                                <Separator/>
                                <Button Content="인쇄 미리보기" ToolBar.OverflowMode="Always"/>
                                <Button Content="페이지 설정" ToolBar.OverflowMode="Always"/>
                                <Button Content="속성" ToolBar.OverflowMode="Always"/>
                            </ToolBar>
                            <TextBlock Text="※ '인쇄 미리보기', '페이지 설정', '속성'은 항상 오버플로우 메뉴에 있습니다."
                                       FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBar Width=&quot;350&quot;&gt;&#10;    &lt;!-- 자주 사용 - Never로 항상 표시 --&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot; ToolBar.OverflowMode=&quot;Never&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot; ToolBar.OverflowMode=&quot;Never&quot;/&gt;&#10;    &lt;Button Content=&quot;저장&quot; ToolBar.OverflowMode=&quot;Never&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;!-- 드물게 사용 - Always로 오버플로우에 --&gt;&#10;    &lt;Button Content=&quot;인쇄 미리보기&quot; ToolBar.OverflowMode=&quot;Always&quot;/&gt;&#10;    &lt;Button Content=&quot;페이지 설정&quot; ToolBar.OverflowMode=&quot;Always&quot;/&gt;&#10;&lt;/ToolBar&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 배치와 Band -->
        <TabItem Header="배치와 Band">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ToolBar 배치와 Band" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 예제 1: Band와 BandIndex -->
                    <GroupBox Header="Band와 BandIndex" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                <Run FontWeight="Bold">Band</Run>: 툴바가 위치할 행 (0부터 시작)
                                <LineBreak/><Run FontWeight="Bold">BandIndex</Run>: 같은 Band 내에서의 순서
                            </TextBlock>
                            <ToolBarTray Height="70">
                                <ToolBar Band="0" BandIndex="0" Header="Band0-0">
                                    <Button Content="A"/>
                                    <Button Content="B"/>
                                </ToolBar>
                                <ToolBar Band="0" BandIndex="1" Header="Band0-1">
                                    <Button Content="C"/>
                                    <Button Content="D"/>
                                </ToolBar>
                                <ToolBar Band="1" BandIndex="0" Header="Band1-0">
                                    <Button Content="E"/>
                                    <Button Content="F"/>
                                    <Button Content="G"/>
                                </ToolBar>
                            </ToolBarTray>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;ToolBarTray&gt;&#10;    &lt;!-- 첫 번째 행 --&gt;&#10;    &lt;ToolBar Band=&quot;0&quot; BandIndex=&quot;0&quot;&gt;&#10;        &lt;Button Content=&quot;A&quot;/&gt;&lt;Button Content=&quot;B&quot;/&gt;&#10;    &lt;/ToolBar&gt;&#10;    &lt;ToolBar Band=&quot;0&quot; BandIndex=&quot;1&quot;&gt;&#10;        &lt;Button Content=&quot;C&quot;/&gt;&lt;Button Content=&quot;D&quot;/&gt;&#10;    &lt;/ToolBar&gt;&#10;    &lt;!-- 두 번째 행 --&gt;&#10;    &lt;ToolBar Band=&quot;1&quot; BandIndex=&quot;0&quot;&gt;&#10;        &lt;Button Content=&quot;E&quot;/&gt;&lt;Button Content=&quot;F&quot;/&gt;&#10;    &lt;/ToolBar&gt;&#10;&lt;/ToolBarTray&gt;"/>
