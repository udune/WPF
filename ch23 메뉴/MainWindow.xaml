<Window x:Class="ch23_메뉴.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch23_메뉴"
        mc:Ignorable="d"
        Title="ch23 Menu 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- 탭 1: 기본 사용법 -->
            <TabItem Header="기본 사용법">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Menu 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 기본 Menu -->
                        <GroupBox Header="기본 Menu와 MenuItem" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Menu는 MenuItem들을 포함하는 메뉴 바입니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="파일"/>
                                    <MenuItem Header="편집"/>
                                    <MenuItem Header="보기"/>
                                    <MenuItem Header="도움말"/>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Menu&gt;&#10;    &lt;MenuItem Header=&quot;파일&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;편집&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;보기&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;도움말&quot;/&gt;&#10;&lt;/Menu&gt;"/>
                        </Expander>

                        <!-- DockPanel과 함께 사용 -->
                        <GroupBox Header="DockPanel과 함께 사용" Margin="0,0,0,10">
                            <DockPanel Height="120" Background="White" LastChildFill="True">
                                <Menu DockPanel.Dock="Top" Background="#F0F0F0">
                                    <MenuItem Header="File"/>
                                    <MenuItem Header="Edit"/>
                                    <MenuItem Header="View"/>
                                </Menu>
                                <TextBlock Text="메뉴 아래 콘텐츠 영역" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DockPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel LastChildFill=&quot;True&quot;&gt;&#10;    &lt;Menu DockPanel.Dock=&quot;Top&quot; Background=&quot;#F0F0F0&quot;&gt;&#10;        &lt;MenuItem Header=&quot;File&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;Edit&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;View&quot;/&gt;&#10;    &lt;/Menu&gt;&#10;    &lt;TextBlock Text=&quot;메뉴 아래 콘텐츠 영역&quot;/&gt;&#10;&lt;/DockPanel&gt;"/>
                        </Expander>

                        <!-- 접근 키 (Access Key) -->
                        <GroupBox Header="접근 키 (Access Key) - Alt+문자" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Header에 _를 붙이면 접근 키가 됩니다 (Alt 누르면 밑줄 표시):" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="_File"/>
                                    <MenuItem Header="_Edit"/>
                                    <MenuItem Header="_View"/>
                                    <MenuItem Header="_Help"/>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Menu&gt;&#10;    &lt;MenuItem Header=&quot;_File&quot;/&gt;   &lt;!-- Alt+F --&gt;&#10;    &lt;MenuItem Header=&quot;_Edit&quot;/&gt;   &lt;!-- Alt+E --&gt;&#10;    &lt;MenuItem Header=&quot;_View&quot;/&gt;   &lt;!-- Alt+V --&gt;&#10;    &lt;MenuItem Header=&quot;_Help&quot;/&gt;   &lt;!-- Alt+H --&gt;&#10;&lt;/Menu&gt;"/>
                        </Expander>

                        <!-- 클릭 이벤트 -->
                        <GroupBox Header="클릭 이벤트 처리" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="MenuItem의 Click 이벤트로 동작을 처리합니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="동작">
                                        <MenuItem Header="메시지 표시" Click="ShowMessage_Click"/>
                                        <MenuItem Header="시간 표시" Click="ShowTime_Click"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;메시지 표시&quot; Click=&quot;ShowMessage_Click&quot;/&gt;&#10;&#10;// C# 코드&#10;private void ShowMessage_Click(object sender, RoutedEventArgs e)&#10;{&#10;    MessageBox.Show(&quot;메뉴가 클릭되었습니다!&quot;, &quot;알림&quot;);&#10;}"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 2: 계층 구조 -->
            <TabItem Header="계층 구조">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Menu 계층 구조" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 서브메뉴 -->
                        <GroupBox Header="서브메뉴 (중첩 MenuItem)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="MenuItem 안에 MenuItem을 중첩하여 서브메뉴를 만듭니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="파일">
                                        <MenuItem Header="새로 만들기"/>
                                        <MenuItem Header="열기"/>
                                        <MenuItem Header="저장"/>
                                        <MenuItem Header="다른 이름으로 저장"/>
                                        <MenuItem Header="종료"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;파일&quot;&gt;&#10;    &lt;MenuItem Header=&quot;새로 만들기&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;열기&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;저장&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;다른 이름으로 저장&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;종료&quot;/&gt;&#10;&lt;/MenuItem&gt;"/>
                        </Expander>

                        <!-- 다단계 서브메뉴 -->
                        <GroupBox Header="다단계 서브메뉴" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="여러 단계로 중첩된 서브메뉴:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="새로 만들기">
                                        <MenuItem Header="프로젝트">
                                            <MenuItem Header="WPF 앱"/>
                                            <MenuItem Header="콘솔 앱"/>
                                            <MenuItem Header="클래스 라이브러리"/>
                                        </MenuItem>
                                        <MenuItem Header="파일">
                                            <MenuItem Header="클래스"/>
                                            <MenuItem Header="인터페이스"/>
                                            <MenuItem Header="XAML 페이지"/>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;새로 만들기&quot;&gt;&#10;    &lt;MenuItem Header=&quot;프로젝트&quot;&gt;&#10;        &lt;MenuItem Header=&quot;WPF 앱&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;콘솔 앱&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;클래스 라이브러리&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;    &lt;MenuItem Header=&quot;파일&quot;&gt;&#10;        &lt;MenuItem Header=&quot;클래스&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;인터페이스&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;&lt;/MenuItem&gt;"/>
                        </Expander>

                        <!-- Separator -->
                        <GroupBox Header="Separator (구분선)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Separator로 메뉴 항목을 그룹화합니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="편집">
                                        <MenuItem Header="실행 취소"/>
                                        <MenuItem Header="다시 실행"/>
                                        <Separator/>
                                        <MenuItem Header="잘라내기"/>
                                        <MenuItem Header="복사"/>
                                        <MenuItem Header="붙여넣기"/>
                                        <Separator/>
                                        <MenuItem Header="모두 선택"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;편집&quot;&gt;&#10;    &lt;MenuItem Header=&quot;실행 취소&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;다시 실행&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;MenuItem Header=&quot;잘라내기&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;복사&quot;/&gt;&#10;    &lt;MenuItem Header=&quot;붙여넣기&quot;/&gt;&#10;    &lt;Separator/&gt;&#10;    &lt;MenuItem Header=&quot;모두 선택&quot;/&gt;&#10;&lt;/MenuItem&gt;"/>
                        </Expander>

                        <!-- IsEnabled -->
                        <GroupBox Header="IsEnabled (활성화/비활성화)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="IsEnabled로 메뉴 항목을 비활성화할 수 있습니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="편집">
                                        <MenuItem Header="실행 취소" IsEnabled="False"/>
                                        <MenuItem Header="다시 실행" IsEnabled="False"/>
                                        <Separator/>
                                        <MenuItem Header="잘라내기"/>
                                        <MenuItem Header="복사"/>
                                        <MenuItem Header="붙여넣기" IsEnabled="False"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;실행 취소&quot; IsEnabled=&quot;False&quot;/&gt;&#10;&lt;MenuItem Header=&quot;다시 실행&quot; IsEnabled=&quot;False&quot;/&gt;&#10;&lt;Separator/&gt;&#10;&lt;MenuItem Header=&quot;잘라내기&quot;/&gt;&#10;&lt;MenuItem Header=&quot;복사&quot;/&gt;&#10;&lt;MenuItem Header=&quot;붙여넣기&quot; IsEnabled=&quot;False&quot;/&gt;"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 3: 아이콘과 단축키 -->
            <TabItem Header="아이콘과 단축키">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="아이콘과 단축키" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 아이콘 (도형) -->
                        <GroupBox Header="아이콘 (Icon) - 도형 사용" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="MenuItem.Icon에 도형을 넣어 아이콘을 표시합니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="파일">
                                        <MenuItem Header="새로 만들기">
                                            <MenuItem.Icon>
                                                <Rectangle Width="14" Height="14" Fill="LightBlue" Stroke="DarkBlue"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="열기">
                                            <MenuItem.Icon>
                                                <Ellipse Width="14" Height="14" Fill="Yellow" Stroke="Orange"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="저장">
                                            <MenuItem.Icon>
                                                <Polygon Points="7,0 14,14 0,14" Fill="Green"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;새로 만들기&quot;&gt;&#10;    &lt;MenuItem.Icon&gt;&#10;        &lt;Rectangle Width=&quot;14&quot; Height=&quot;14&quot; Fill=&quot;LightBlue&quot; Stroke=&quot;DarkBlue&quot;/&gt;&#10;    &lt;/MenuItem.Icon&gt;&#10;&lt;/MenuItem&gt;&#10;&lt;MenuItem Header=&quot;열기&quot;&gt;&#10;    &lt;MenuItem.Icon&gt;&#10;        &lt;Ellipse Width=&quot;14&quot; Height=&quot;14&quot; Fill=&quot;Yellow&quot; Stroke=&quot;Orange&quot;/&gt;&#10;    &lt;/MenuItem.Icon&gt;&#10;&lt;/MenuItem&gt;"/>
                        </Expander>

                        <!-- InputGestureText -->
                        <GroupBox Header="InputGestureText (단축키 표시)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="InputGestureText로 단축키를 표시합니다 (표시만, 실제 동작은 별도 구현):" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="편집">
                                        <MenuItem Header="실행 취소" InputGestureText="Ctrl+Z"/>
                                        <MenuItem Header="다시 실행" InputGestureText="Ctrl+Y"/>
                                        <Separator/>
                                        <MenuItem Header="잘라내기" InputGestureText="Ctrl+X"/>
                                        <MenuItem Header="복사" InputGestureText="Ctrl+C"/>
                                        <MenuItem Header="붙여넣기" InputGestureText="Ctrl+V"/>
                                        <Separator/>
                                        <MenuItem Header="모두 선택" InputGestureText="Ctrl+A"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;실행 취소&quot; InputGestureText=&quot;Ctrl+Z&quot;/&gt;&#10;&lt;MenuItem Header=&quot;다시 실행&quot; InputGestureText=&quot;Ctrl+Y&quot;/&gt;&#10;&lt;Separator/&gt;&#10;&lt;MenuItem Header=&quot;잘라내기&quot; InputGestureText=&quot;Ctrl+X&quot;/&gt;&#10;&lt;MenuItem Header=&quot;복사&quot; InputGestureText=&quot;Ctrl+C&quot;/&gt;&#10;&lt;MenuItem Header=&quot;붙여넣기&quot; InputGestureText=&quot;Ctrl+V&quot;/&gt;"/>
                        </Expander>

                        <!-- IsCheckable -->
                        <GroupBox Header="IsCheckable (체크 가능 메뉴)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="IsCheckable=True로 토글 가능한 메뉴를 만듭니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="보기">
                                        <MenuItem Header="도구 모음" IsCheckable="True" IsChecked="True"/>
                                        <MenuItem Header="상태 표시줄" IsCheckable="True" IsChecked="True"/>
                                        <MenuItem Header="탐색기" IsCheckable="True"/>
                                        <Separator/>
                                        <MenuItem Header="전체 화면" IsCheckable="True" InputGestureText="F11"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem Header=&quot;도구 모음&quot; IsCheckable=&quot;True&quot; IsChecked=&quot;True&quot;/&gt;&#10;&lt;MenuItem Header=&quot;상태 표시줄&quot; IsCheckable=&quot;True&quot; IsChecked=&quot;True&quot;/&gt;&#10;&lt;MenuItem Header=&quot;탐색기&quot; IsCheckable=&quot;True&quot;/&gt;&#10;&lt;Separator/&gt;&#10;&lt;MenuItem Header=&quot;전체 화면&quot; IsCheckable=&quot;True&quot; InputGestureText=&quot;F11&quot;/&gt;"/>
                        </Expander>

                        <!-- 라디오 버튼 스타일 -->
                        <GroupBox Header="라디오 버튼 스타일 (상호 배타적 선택)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Checked 이벤트로 라디오 버튼처럼 동작하게 합니다:" Margin="0,0,0,5"/>
                                <Menu>
                                    <MenuItem Header="정렬">
                                        <MenuItem x:Name="sortByName" Header="이름순" IsCheckable="True" IsChecked="True" Checked="SortOption_Checked"/>
                                        <MenuItem x:Name="sortByDate" Header="날짜순" IsCheckable="True" Checked="SortOption_Checked"/>
                                        <MenuItem x:Name="sortBySize" Header="크기순" IsCheckable="True" Checked="SortOption_Checked"/>
                                    </MenuItem>
                                </Menu>
                                <TextBlock x:Name="sortStatusText" Text="현재 정렬: 이름순" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;MenuItem x:Name=&quot;sortByName&quot; Header=&quot;이름순&quot; IsCheckable=&quot;True&quot; IsChecked=&quot;True&quot; Checked=&quot;SortOption_Checked&quot;/&gt;&#10;&lt;MenuItem x:Name=&quot;sortByDate&quot; Header=&quot;날짜순&quot; IsCheckable=&quot;True&quot; Checked=&quot;SortOption_Checked&quot;/&gt;&#10;&lt;MenuItem x:Name=&quot;sortBySize&quot; Header=&quot;크기순&quot; IsCheckable=&quot;True&quot; Checked=&quot;SortOption_Checked&quot;/&gt;&#10;&#10;// C# - 라디오 버튼처럼 동작&#10;private void SortOption_Checked(object sender, RoutedEventArgs e)&#10;{&#10;    var item = sender as MenuItem;&#10;    sortByName.IsChecked = (item == sortByName);&#10;    sortByDate.IsChecked = (item == sortByDate);&#10;    sortBySize.IsChecked = (item == sortBySize);&#10;    sortStatusText.Text = $&quot;현재 정렬: {item?.Header}&quot;;&#10;}"/>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 탭 4: 스타일과 외관 -->
            <TabItem Header="스타일과 외관">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="스타일과 외관" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- 배경색 -->
                        <GroupBox Header="Menu 배경색" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Menu와 MenuItem의 배경색을 지정합니다:" Margin="0,0,0,5"/>
                                <Menu Background="LightSteelBlue">
                                    <MenuItem Header="파일" Background="LightCyan">
                                        <MenuItem Header="새로 만들기"/>
                                        <MenuItem Header="열기"/>
                                    </MenuItem>
                                    <MenuItem Header="편집" Background="LightPink">
                                        <MenuItem Header="복사"/>
                                        <MenuItem Header="붙여넣기"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Menu Background=&quot;LightSteelBlue&quot;&gt;&#10;    &lt;MenuItem Header=&quot;파일&quot; Background=&quot;LightCyan&quot;&gt;&#10;        &lt;MenuItem Header=&quot;새로 만들기&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;열기&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;    &lt;MenuItem Header=&quot;편집&quot; Background=&quot;LightPink&quot;&gt;&#10;        &lt;MenuItem Header=&quot;복사&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;붙여넣기&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;&lt;/Menu&gt;"/>
                        </Expander>

                        <!-- 글꼴 스타일 -->
                        <GroupBox Header="글꼴 스타일" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="FontFamily, FontSize, FontWeight 등을 지정합니다:" Margin="0,0,0,5"/>
                                <Menu FontFamily="맑은 고딕" FontSize="14">
                                    <MenuItem Header="파일" FontWeight="Bold">
                                        <MenuItem Header="새로 만들기" FontStyle="Italic"/>
                                        <MenuItem Header="열기"/>
                                    </MenuItem>
                                    <MenuItem Header="편집">
                                        <MenuItem Header="복사" Foreground="Blue"/>
                                        <MenuItem Header="붙여넣기" Foreground="Green"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </GroupBox>
                        <Expander Style="{StaticResource CodeExpanderStyle}">
                            <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Menu FontFamily=&quot;맑은 고딕&quot; FontSize=&quot;14&quot;&gt;&#10;    &lt;MenuItem Header=&quot;파일&quot; FontWeight=&quot;Bold&quot;&gt;&#10;        &lt;MenuItem Header=&quot;새로 만들기&quot; FontStyle=&quot;Italic&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;열기&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;    &lt;MenuItem Header=&quot;편집&quot;&gt;&#10;        &lt;MenuItem Header=&quot;복사&quot; Foreground=&quot;Blue&quot;/&gt;&#10;        &lt;MenuItem Header=&quot;붙여넣기&quot; Foreground=&quot;Green&quot;/&gt;&#10;    &lt;/MenuItem&gt;&#10;&lt;/Menu&gt;"/>
                        </Expander>

                        <!-- 세로 메뉴 -->
                        <GroupBox Header="세로 메뉴 (ItemsPanel 변경)" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="ItemsPanel을 변경하여 세로 메뉴를 만듭니다:" Margin="0,0,0,5"/>
                                <Menu Width="150" HorizontalAlignment="Left">
                                    <Menu.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
