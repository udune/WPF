<Window x:Class="ch17_그리드.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ch17 Grid 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="Grid 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="Grid는 행(Row)과 열(Column)로 구성된 테이블 형태의 레이아웃 패널입니다. WPF에서 가장 강력하고 유연한 레이아웃 컨트롤입니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- 기본 Grid -->
                    <GroupBox Header="행과 열 정의" Margin="0,0,0,8">
                        <Grid Height="150" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Row=0, Col=0" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Row=0, Col=1" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Row=0, Col=2" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Row=1, Col=0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Row=1, Col=1" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Row=1, Col=2" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid ShowGridLines=&quot;True&quot;&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;TextBlock Text=&quot;Row=0, Col=0&quot; Grid.Row=&quot;0&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;Row=0, Col=1&quot; Grid.Row=&quot;0&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;!-- Grid.Row, Grid.Column은 0부터 시작 --&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <!-- ShowGridLines -->
                    <GroupBox Header="ShowGridLines (디버깅용 격자선)" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="ShowGridLines=True로 설정하면 격자선이 표시되어 디버깅에 유용합니다. 배포 시에는 False로 설정하세요." TextWrapping="Wrap" Margin="8"/>
                            <Grid Height="100" ShowGridLines="True" Background="#FFF8E1" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Content="버튼1" Grid.Row="0" Grid.Column="0" Margin="4"/>
                                <Button Content="버튼2" Grid.Row="0" Grid.Column="1" Margin="4"/>
                                <Button Content="버튼3" Grid.Row="1" Grid.Column="0" Margin="4"/>
                                <Button Content="버튼4" Grid.Row="1" Grid.Column="1" Margin="4"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid ShowGridLines=&quot;True&quot;&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;Button Content=&quot;버튼1&quot; Grid.Row=&quot;0&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼2&quot; Grid.Row=&quot;0&quot; Grid.Column=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼3&quot; Grid.Row=&quot;1&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼4&quot; Grid.Row=&quot;1&quot; Grid.Column=&quot;1&quot;/&gt;&#10;&lt;/Grid&gt;&#10;&#10;&lt;!-- ShowGridLines는 디버깅 전용입니다.&#10;     점선으로 표시되며 실제 배포 시에는 False로 설정하세요. --&gt;"/>
                    </Expander>

                    <!-- Grid.Row/Column 생략 시 -->
                    <GroupBox Header="Grid.Row / Grid.Column 생략 시 기본값" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Grid.Row와 Grid.Column을 생략하면 모두 0으로 처리됩니다." Margin="8" TextWrapping="Wrap"/>
                            <Grid Height="80" ShowGridLines="True" Background="#F5F5F5" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Content="Row/Col 생략 → (0,0)" Margin="4"/>
                                <Button Content="Col=1 지정" Grid.Column="1" Margin="4"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;!-- Grid.Row, Grid.Column 생략 시 기본값 0 --&gt;&#10;    &lt;Button Content=&quot;(0,0)에 배치&quot;/&gt;&#10;    &lt;Button Content=&quot;Col=1&quot; Grid.Column=&quot;1&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭2: 크기 지정 방식 -->
        <TabItem Header="크기 지정 (Auto/Star/Pixel)">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="행/열 크기 지정 방식" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="Grid의 행과 열은 세 가지 방식으로 크기를 지정할 수 있습니다: Auto(콘텐츠 크기), Star(비율), Pixel(고정)." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- Auto 크기 -->
                    <GroupBox Header="Auto - 콘텐츠에 맞춤" Margin="0,0,0,8">
                        <Grid ShowGridLines="True" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="짧은 텍스트" Grid.Column="0" Margin="4" Padding="8,4"/>
                            <Button Content="좀 더 긴 텍스트가 들어갑니다" Grid.Column="1" Margin="4" Padding="8,4"/>
                            <TextBlock Text="← Auto 열: 콘텐츠 크기에 맞춤 | 이 열은 남은 공간(*)" Grid.Column="2" VerticalAlignment="Center" Margin="8,0"/>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;  &lt;!-- 콘텐츠 크기 --&gt;&#10;        &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;  &lt;!-- 콘텐츠 크기 --&gt;&#10;        &lt;ColumnDefinition/&gt;              &lt;!-- 남은 공간 (기본값 *) --&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;    &lt;Button Content=&quot;짧은 텍스트&quot; Grid.Column=&quot;0&quot;/&gt;&#10;    &lt;Button Content=&quot;긴 텍스트&quot; Grid.Column=&quot;1&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <!-- Star 비율 -->
                    <GroupBox Header="Star(*) - 비율로 분배" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="1* : 2* : 3* = 전체를 1:2:3 비율로 분배" Margin="8,8,8,4"/>
                            <Grid Height="60" ShowGridLines="True" Background="#F5F5F5" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#BBDEFB" Margin="2">
                                    <TextBlock Text="1*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="1" Background="#90CAF9" Margin="2">
                                    <TextBlock Text="2*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="2" Background="#64B5F6" Margin="2">
                                    <TextBlock Text="3*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="행에도 동일하게 적용됩니다: 1* : 2*" Margin="8,8,8,4"/>
                            <Grid Height="120" ShowGridLines="True" Background="#F5F5F5" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#C8E6C9" Margin="2">
                                    <TextBlock Text="1*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="1" Background="#A5D6A7" Margin="2">
                                    <TextBlock Text="2*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 열을 1:2:3 비율로 분배 --&gt;&#10;&lt;Grid.ColumnDefinitions&gt;&#10;    &lt;ColumnDefinition Width=&quot;1*&quot;/&gt;&#10;    &lt;ColumnDefinition Width=&quot;2*&quot;/&gt;&#10;    &lt;ColumnDefinition Width=&quot;3*&quot;/&gt;&#10;&lt;/Grid.ColumnDefinitions&gt;&#10;&#10;&lt;!-- 행을 1:2 비율로 분배 --&gt;&#10;&lt;Grid.RowDefinitions&gt;&#10;    &lt;RowDefinition Height=&quot;1*&quot;/&gt;&#10;    &lt;RowDefinition Height=&quot;2*&quot;/&gt;&#10;&lt;/Grid.RowDefinitions&gt;&#10;&#10;&lt;!-- * 만 쓰면 1*과 동일 --&gt;&#10;&lt;!-- Width를 생략하면 기본값은 1* --&gt;"/>
                    </Expander>

                    <!-- Pixel 고정 -->
                    <GroupBox Header="Pixel - 고정 크기" Margin="0,0,0,8">
                        <Grid Height="60" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#FFE0B2" Margin="2">
                                <TextBlock Text="100px" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" Background="#FFCC80" Margin="2">
                                <TextBlock Text="200px" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="2" Background="#FFB74D" Margin="2">
                                <TextBlock Text="나머지 (*)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid.ColumnDefinitions&gt;&#10;    &lt;ColumnDefinition Width=&quot;100&quot;/&gt;   &lt;!-- 100 픽셀 고정 --&gt;&#10;    &lt;ColumnDefinition Width=&quot;200&quot;/&gt;   &lt;!-- 200 픽셀 고정 --&gt;&#10;    &lt;ColumnDefinition/&gt;              &lt;!-- 남은 공간 (1*) --&gt;&#10;&lt;/Grid.ColumnDefinitions&gt;"/>
                    </Expander>

                    <!-- 혼합 사용 -->
                    <GroupBox Header="Auto + Star + Pixel 혼합 사용" Margin="0,0,0,8">
                        <Grid Height="80" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#E1BEE7" Margin="2" Padding="8,4">
                                <TextBlock Text="Auto" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" Background="#CE93D8" Margin="2">
                                <TextBlock Text="150px" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="2" Background="#BA68C8" Margin="2">
                                <TextBlock Text="2*" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Grid.Column="3" Background="#AB47BC" Margin="2">
                                <TextBlock Text="1*" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid.ColumnDefinitions&gt;&#10;    &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;  &lt;!-- 콘텐츠 맞춤 --&gt;&#10;    &lt;ColumnDefinition Width=&quot;150&quot;/&gt;   &lt;!-- 150px 고정 --&gt;&#10;    &lt;ColumnDefinition Width=&quot;2*&quot;/&gt;    &lt;!-- 남은 공간의 2/3 --&gt;&#10;    &lt;ColumnDefinition Width=&quot;1*&quot;/&gt;    &lt;!-- 남은 공간의 1/3 --&gt;&#10;&lt;/Grid.ColumnDefinitions&gt;&#10;&#10;&lt;!-- 크기 계산 순서:&#10;     1. Auto → 콘텐츠 크기 확보&#10;     2. Pixel → 고정 크기 확보&#10;     3. Star → 남은 공간을 비율로 분배 --&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭3: ColumnSpan / RowSpan -->
        <TabItem Header="Span / 셀 병합">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="ColumnSpan과 RowSpan" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="Grid.ColumnSpan과 Grid.RowSpan을 사용하면 여러 셀을 병합하여 하나의 요소를 배치할 수 있습니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- ColumnSpan -->
                    <GroupBox Header="ColumnSpan - 열 병합" Margin="0,0,0,8">
                        <Grid Height="120" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="ColumnSpan=2" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" Background="#BBDEFB"/>
                            <Button Content="(0,2)" Grid.Row="0" Grid.Column="2" Margin="4"/>
                            <Button Content="(1,0)" Grid.Row="1" Grid.Column="0" Margin="4"/>
                            <Button Content="ColumnSpan=2" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="4" Background="#BBDEFB"/>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;!-- 0열부터 2개 열 병합 --&gt;&#10;    &lt;Button Content=&quot;ColumnSpan=2&quot;&#10;            Grid.Row=&quot;0&quot; Grid.Column=&quot;0&quot;&#10;            Grid.ColumnSpan=&quot;2&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <!-- RowSpan -->
                    <GroupBox Header="RowSpan - 행 병합" Margin="0,0,0,8">
                        <Grid Height="150" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="RowSpan=3" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Margin="4" Background="#C8E6C9"/>
                            <Button Content="(0,1)" Grid.Row="0" Grid.Column="1" Margin="4"/>
                            <Button Content="(1,1)" Grid.Row="1" Grid.Column="1" Margin="4"/>
                            <Button Content="(2,1)" Grid.Row="2" Grid.Column="1" Margin="4"/>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;!-- 0행부터 3개 행 병합 --&gt;&#10;    &lt;Button Content=&quot;RowSpan=3&quot;&#10;            Grid.Row=&quot;0&quot; Grid.Column=&quot;0&quot;&#10;            Grid.RowSpan=&quot;3&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <!-- RowSpan + ColumnSpan 복합 -->
                    <GroupBox Header="RowSpan + ColumnSpan 복합 레이아웃" Margin="0,0,0,8">
                        <Grid Height="180" ShowGridLines="True" Background="#F5F5F5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <!-- 상단 헤더 (3열 병합) -->
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#1976D2" Padding="8">
                                <TextBlock Text="헤더 (ColumnSpan=3)" Foreground="White" HorizontalAlignment="Center"/>
                            </Border>
                            <!-- 왼쪽 사이드바 -->
                            <Border Grid.Row="1" Grid.Column="0" Background="#E3F2FD" Padding="8">
                                <TextBlock Text="사이드바"/>
                            </Border>
                            <!-- 중앙 콘텐츠 -->
                            <Border Grid.Row="1" Grid.Column="1" Background="White" Padding="8">
                                <TextBlock Text="메인 콘텐츠" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <!-- 오른쪽 패널 -->
                            <Border Grid.Row="1" Grid.Column="2" Background="#FBE9E7" Padding="8">
                                <TextBlock Text="속성 패널"/>
                            </Border>
                            <!-- 하단 풋터 (3열 병합) -->
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="#E0E0E0" Padding="6">
                                <TextBlock Text="풋터 (ColumnSpan=3)" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition Height=&quot;Auto&quot;/&gt;&#10;        &lt;RowDefinition/&gt;&#10;        &lt;RowDefinition Height=&quot;Auto&quot;/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition Width=&quot;120&quot;/&gt;&#10;        &lt;ColumnDefinition/&gt;&#10;        &lt;ColumnDefinition Width=&quot;120&quot;/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;!-- 헤더: 3열 병합 --&gt;&#10;    &lt;Border Grid.Row=&quot;0&quot; Grid.Column=&quot;0&quot;&#10;            Grid.ColumnSpan=&quot;3&quot;&gt;&#10;        &lt;TextBlock Text=&quot;헤더&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&#10;    &lt;!-- 풋터: 3열 병합 --&gt;&#10;    &lt;Border Grid.Row=&quot;2&quot; Grid.Column=&quot;0&quot;&#10;            Grid.ColumnSpan=&quot;3&quot;&gt;&#10;        &lt;TextBlock Text=&quot;풋터&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭4: GridSplitter -->
        <TabItem Header="GridSplitter">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="GridSplitter" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="GridSplitter는 사용자가 드래그하여 Grid의 행/열 크기를 런타임에 조절할 수 있게 해주는 컨트롤입니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- 수직 GridSplitter -->
                    <GroupBox Header="수직 GridSplitter (열 크기 조절)" Margin="0,0,0,8">
                        <Grid Height="160">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" MinWidth="80"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*" MinWidth="80"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#BBDEFB" Padding="12">
                                <TextBlock Text="왼쪽 패널&#10;← 드래그 →" TextAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#666666"/>
                            <Border Grid.Column="2" Background="#C8E6C9" Padding="12">
                                <TextBlock Text="오른쪽 패널" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition Width=&quot;1*&quot; MinWidth=&quot;80&quot;/&gt;&#10;        &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;&#10;        &lt;ColumnDefinition Width=&quot;2*&quot; MinWidth=&quot;80&quot;/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;Border Grid.Column=&quot;0&quot;&gt;왼쪽&lt;/Border&gt;&#10;&#10;    &lt;!-- GridSplitter는 별도 Auto 열에 배치 --&gt;&#10;    &lt;GridSplitter Grid.Column=&quot;1&quot;&#10;                  Width=&quot;5&quot;&#10;                  HorizontalAlignment=&quot;Center&quot;&#10;                  VerticalAlignment=&quot;Stretch&quot;/&gt;&#10;&#10;    &lt;Border Grid.Column=&quot;2&quot;&gt;오른쪽&lt;/Border&gt;&#10;&lt;/Grid&gt;&#10;&#10;&lt;!-- MinWidth/MinHeight로 최소 크기를 지정할 수 있습니다 --&gt;"/>
                    </Expander>

                    <!-- 수평 GridSplitter -->
                    <GroupBox Header="수평 GridSplitter (행 크기 조절)" Margin="0,0,0,8">
                        <Grid Height="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" MinHeight="40"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*" MinHeight="40"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#FFE0B2" Padding="12">
                                <TextBlock Text="위쪽 패널 ↕ 드래그" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#666666"/>
                            <Border Grid.Row="2" Background="#E1BEE7" Padding="12">
                                <TextBlock Text="아래쪽 패널" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition Height=&quot;1*&quot; MinHeight=&quot;40&quot;/&gt;&#10;        &lt;RowDefinition Height=&quot;Auto&quot;/&gt;&#10;        &lt;RowDefinition Height=&quot;1*&quot; MinHeight=&quot;40&quot;/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;&#10;    &lt;Border Grid.Row=&quot;0&quot;&gt;위쪽&lt;/Border&gt;&#10;&#10;    &lt;GridSplitter Grid.Row=&quot;1&quot;&#10;                  Height=&quot;5&quot;&#10;                  HorizontalAlignment=&quot;Stretch&quot;&#10;                  VerticalAlignment=&quot;Center&quot;/&gt;&#10;&#10;    &lt;Border Grid.Row=&quot;2&quot;&gt;아래쪽&lt;/Border&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                    <!-- 2방향 GridSplitter -->
                    <GroupBox Header="수직 + 수평 복합 Splitter" Margin="0,0,0,8">
                        <Grid Height="220">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" MinHeight="40"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*" MinHeight="40"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" MinWidth="60"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*" MinWidth="60"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" Background="#BBDEFB" Padding="4">
                                <TextBlock Text="좌상" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Background="#C8E6C9" Padding="4">
                                <TextBlock Text="우상" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0" Background="#FFE0B2" Padding="4">
                                <TextBlock Text="좌하" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="2" Background="#E1BEE7" Padding="4">
                                <TextBlock Text="우하" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <!-- 수직 Splitter (전체 행 관통) -->
                            <GridSplitter Grid.Column="1" Grid.RowSpan="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#666666"/>
                            <!-- 수평 Splitter (전체 열 관통) -->
                            <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#666666"/>
                        </Grid>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;Grid&gt;&#10;    &lt;Grid.RowDefinitions&gt;&#10;        &lt;RowDefinition Height=&quot;1*&quot;/&gt;&#10;        &lt;RowDefinition Height=&quot;Auto&quot;/&gt;&#10;        &lt;RowDefinition Height=&quot;1*&quot;/&gt;&#10;    &lt;/Grid.RowDefinitions&gt;&#10;    &lt;Grid.ColumnDefinitions&gt;&#10;        &lt;ColumnDefinition Width=&quot;1*&quot;/&gt;&#10;        &lt;ColumnDefinition Width=&quot;Auto&quot;/&gt;&#10;        &lt;ColumnDefinition Width=&quot;2*&quot;/&gt;&#10;    &lt;/Grid.ColumnDefinitions&gt;&#10;&#10;    &lt;!-- 수직 Splitter: RowSpan으로 전체 행 관통 --&gt;&#10;    &lt;GridSplitter Grid.Column=&quot;1&quot; Grid.RowSpan=&quot;3&quot;&#10;                  Width=&quot;5&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;&#10;    &lt;!-- 수평 Splitter: ColumnSpan으로 전체 열 관통 --&gt;&#10;    &lt;GridSplitter Grid.Row=&quot;1&quot; Grid.ColumnSpan=&quot;3&quot;&#10;                  Height=&quot;5&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/Grid&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭5: 코드비하인드 -->
        <TabItem Header="코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="코드비하인드로 Grid 제어" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                    <!-- 동적으로 행/열 추가 -->
                    <GroupBox Header="동적으로 행/열 추가" Margin="0,0,0,8">
                        <StackPanel>
                            <Grid x:Name="gdDynamic" ShowGridLines="True" Height="160" Background="#F5F5F5" Margin="0,0,0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="tbDynamicInfo" Text="1행 × 1열" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="행 추가" Click="AddRow_Click" Padding="12,6" Margin="4"/>
                                <Button Content="열 추가" Click="AddCol_Click" Padding="12,6" Margin="4"/>
                                <Button Content="초기화" Click="ResetGrid_Click" Padding="12,6" Margin="4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 행 추가&#10;gdDynamic.RowDefinitions.Add(new RowDefinition());&#10;&#10;// 열 추가&#10;gdDynamic.ColumnDefinitions.Add(new ColumnDefinition());&#10;&#10;// 자식 요소 배치&#10;var border = new Border { Background = brush };&#10;Grid.SetRow(border, row);&#10;Grid.SetColumn(border, col);&#10;gdDynamic.Children.Add(border);"/>
                    </Expander>

                    <!-- Grid.SetRow / SetColumn으로 위치 변경 -->
                    <GroupBox Header="요소 위치 동적 변경 (Grid.SetRow / SetColumn)" Margin="0,0,0,8">
                        <StackPanel>
                            <Grid Height="150" ShowGridLines="True" Background="#F5F5F5" Margin="0,0,0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="bdMovable" Grid.Row="1" Grid.Column="1" Background="#FF7043" CornerRadius="4" Margin="4">
                                    <TextBlock x:Name="tbPosition" Text="(1, 1)" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="↑ 위" Click="MoveUp_Click" Padding="12,6" Margin="4"/>
                                <Button Content="↓ 아래" Click="MoveDown_Click" Padding="12,6" Margin="4"/>
                                <Button Content="← 왼쪽" Click="MoveLeft_Click" Padding="12,6" Margin="4"/>
                                <Button Content="→ 오른쪽" Click="MoveRight_Click" Padding="12,6" Margin="4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 현재 위치 가져오기&#10;int row = Grid.GetRow(bdMovable);&#10;int col = Grid.GetColumn(bdMovable);&#10;&#10;// 위치 변경&#10;Grid.SetRow(bdMovable, row - 1);    // 위로 이동&#10;Grid.SetRow(bdMovable, row + 1);    // 아래로 이동&#10;Grid.SetColumn(bdMovable, col - 1); // 왼쪽 이동&#10;Grid.SetColumn(bdMovable, col + 1); // 오른쪽 이동&#10;&#10;// Grid.SetRow/SetColumn은 Grid.Row/Grid.Column&#10;// 첨부 속성(Attached Property)을 코드에서 설정하는 방법입니다"/>
                    </Expander>

                    <!-- 행/열 크기 동적 변경 -->
                    <GroupBox Header="행/열 크기 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <Grid Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="colLeft" Width="1*"/>
                                    <ColumnDefinition x:Name="colRight" Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#BBDEFB" Margin="2">
                                    <TextBlock x:Name="tbLeftSize" Text="1*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="1" Background="#C8E6C9" Margin="2">
                                    <TextBlock x:Name="tbRightSize" Text="1*" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="왼쪽 넓히기" Click="ExpandLeft_Click" Padding="12,6" Margin="4"/>
                                <Button Content="오른쪽 넓히기" Click="ExpandRight_Click" Padding="12,6" Margin="4"/>
                                <Button Content="균등 분배" Click="EqualSize_Click" Padding="12,6" Margin="4"/>
                                <Button Content="왼쪽 200px" Click="FixedLeft_Click" Padding="12,6" Margin="4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Star 비율 변경&#10;colLeft.Width = new GridLength(3, GridUnitType.Star);&#10;colRight.Width = new GridLength(1, GridUnitType.Star);&#10;&#10;// 고정 Pixel 크기&#10;colLeft.Width = new GridLength(200);&#10;// 또는&#10;colLeft.Width = new GridLength(200, GridUnitType.Pixel);&#10;&#10;// Auto 크기&#10;colLeft.Width = GridLength.Auto;&#10;&#10;// GridLength 생성자:&#10;// new GridLength(value)           → Pixel&#10;// new GridLength(value, Star)     → 비율&#10;// GridLength.Auto                 → Auto"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
