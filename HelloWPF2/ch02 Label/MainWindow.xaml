<Window x:Class="ch02_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch02_Label"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label>안녕하세요</Label>
        <Label Content="안녕하세요"></Label>
        <StackPanel Orientation="Vertical">
            <Label HorizontalContentAlignment="Center">Center</Label>
            <Label HorizontalContentAlignment="Left">Left</Label>
            <Label HorizontalContentAlignment="Right">Right</Label>
            <Label HorizontalContentAlignment="Stretch">Stretch</Label>

            <Label HorizontalAlignment="Center">Center</Label>
            <Label HorizontalAlignment="Left">Left</Label>
            <Label HorizontalAlignment="Right">Right</Label>
            <Label HorizontalAlignment="Stretch">Stretch</Label>

            <Label>
                <StackPanel Orientation="Vertical">
                    <Image Width="50" Height="50" Source="https://cdn0.iconfinder.com/data/icons/business-startup-10/50/65-512.png"/>
                    <AccessText Text="이미지와 텍스트가 있는 레이블"/>
                </StackPanel>
            </Label>

            <Label Content="Hello" FontSize="32" FontWeight="Bold" Background="Salmon" Foreground="White"></Label>

            <Label Content="myLabel(_N)" Target="{Binding ElementName=myTextBox}"></Label>
            <TextBox x:Name="myTextBox" Width="200" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
