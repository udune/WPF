        <StackPanel>
            <WrapPanel Orientation="Horizontal">
                <Button Content="Item 1" Width="100"/>
                <Button Content="Item 2" Width="100"/>
                <Button Content="Item 3" Width="100"/>
            </WrapPanel>
        
            <WrapPanel x:Name="myWrapPanel" Orientation="Horizontal">
                
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
