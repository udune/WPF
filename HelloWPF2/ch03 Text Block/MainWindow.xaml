<Window x:Class="ch03_Text_Block.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch03_Text_Block"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock>안녕하세요</TextBlock>
            <TextBlock Text="안녕하세요"/>

            <TextBlock>
                <Bold>안녕</Bold>
                <Italic>하세요</Italic>
            </TextBlock>

            <TextBlock>
                <LineBreak/>
                안녕하세요
            </TextBlock>

            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://www.google.co.kr" Cursor="Hand">구글 바로가기</Hyperlink>
            </TextBlock>

            <TextBlock FontSize="20" Background="Salmon" Foreground="White" TextTrimming="CharacterEllipsis">우리나라 우리님군 황천이 도으사
                <Span Foreground="Black">님군과 백성이 한가지로</Span>
            </TextBlock>

            <TextBlock FontSize="20" Background="Salmon" Foreground="White" TextTrimming="WordEllipsis">
                우리나라 우리님군 황천이 도으사
            </TextBlock>

            <TextBlock FontSize="20" Background="Salmon" Foreground="White" TextWrapping="Wrap">
                우리나라 우리님군 황천이 도으사
            </TextBlock>

            <TextBlock FontSize="20" Background="Salmon" Foreground="White" TextWrapping="WrapWithOverflow">
                우리나라 우리님군 황천이 도으사
            </TextBlock>

            <TextBlock FontSize="20" Background="Salmon" Foreground="White" TextWrapping="WrapWithOverflow">
                <Span Foreground="Black">
                    님군과 <Underline>백성이</Underline> 한 가지로
                </Span>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
