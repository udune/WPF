<!-- 
    App.xaml - Canvas 학습 애플리케이션의 진입점
    WPF 애플리케이션의 전역 설정 및 리소스를 정의합니다.
-->
<Application x:Class="ch19_캔버스.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ch19_캔버스"
             StartupUri="MainWindow.xaml">
    <!-- 
        Application 속성 설명:
        
        x:Class: 코드 비하인드 파일(App.xaml.cs)과 연결
        StartupUri: 애플리케이션 시작 시 표시될 윈도우 지정
        xmlns:local: 현재 프로젝트의 네임스페이스 참조
    -->
    
    <!-- 
        Application.Resources: 애플리케이션 전역 리소스 정의 영역
        
        Canvas 관련 전역 스타일 예제:
        <Application.Resources>
            <Style TargetType="Canvas">
                <Setter Property="Background" Value="White"/>
            </Style>
            
            그래픽용 Canvas 스타일:
            <Style x:Key="DrawingCanvasStyle" TargetType="Canvas">
                <Setter Property="Background" Value="White"/>
                <Setter Property="ClipToBounds" Value="True"/>
            </Style>
            
            게임용 Canvas 스타일:
            <Style x:Key="GameCanvasStyle" TargetType="Canvas">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="ClipToBounds" Value="True"/>
                <Setter Property="Focusable" Value="True"/>
            </Style>
            
            다이어그램용 Canvas 스타일:
            <Style x:Key="DiagramCanvasStyle" TargetType="Canvas">
                <Setter Property="Background" Value="WhiteSmoke"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Background" Value="LightBlue"/>
                    </Style>
                    <Style TargetType="Line">
                        <Setter Property="Stroke" Value="Black"/>
                        <Setter Property="StrokeThickness" Value="2"/>
                    </Style>
                </Style.Resources>
            </Style>
            
            드래그 가능한 요소 스타일:
            <Style x:Key="DraggableStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Background" Value="LightYellow"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Yellow"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            Shape 공통 스타일:
            <Style x:Key="ShapeStyle" TargetType="Shape">
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="Stroke" Value="Black"/>
            </Style>
            
            <Style x:Key="CircleStyle" TargetType="Ellipse" BasedOn="{StaticResource ShapeStyle}">
                <Setter Property="Fill" Value="Red"/>
            </Style>
            
            <Style x:Key="RectangleStyle" TargetType="Rectangle" BasedOn="{StaticResource ShapeStyle}">
                <Setter Property="Fill" Value="Blue"/>
            </Style>
            
            게임 스프라이트 템플릿:
            <ControlTemplate x:Key="PlayerTemplate">
                <Border Width="30" Height="30" 
                        Background="Green" 
                        BorderBrush="DarkGreen" 
                        BorderThickness="2"/>
            </ControlTemplate>
            
            <ControlTemplate x:Key="EnemyTemplate">
                <Ellipse Width="40" Height="40" 
                        Fill="Red" 
                        Stroke="DarkRed" 
                        StrokeThickness="2"/>
            </ControlTemplate>
            
            다이어그램 노드 템플릿:
            <ControlTemplate x:Key="FlowchartNodeTemplate">
                <Border BorderBrush="Black" 
                        BorderThickness="2" 
                        Background="LightBlue"
                        CornerRadius="5"
                        Padding="10">
                    <TextBlock Text="{Binding}" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
            
            그리드 배경 (그래프 용지 효과):
            <DrawingBrush x:Key="GridBackgroundBrush" 
                         TileMode="Tile" 
                         Viewport="0,0,20,20" 
                         ViewportUnits="Absolute">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing>
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,20,20"/>
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Pen>
                                <Pen Brush="LightGray" Thickness="0.5"/>
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
            
            Canvas 사용 예제:
            <Canvas Style="{StaticResource DrawingCanvasStyle}">
                <Ellipse Style="{StaticResource CircleStyle}"
                        Canvas.Left="100" Canvas.Top="100"
                        Width="100" Height="100"/>
                        
                <Rectangle Style="{StaticResource RectangleStyle}"
                          Canvas.Left="250" Canvas.Top="100"
                          Width="120" Height="80"/>
            </Canvas>
        </Application.Resources>
    -->
    <Application.Resources>
         <!-- 현재 비어 있음 - 필요시 전역 Canvas 스타일이나 리소스 추가 -->
    </Application.Resources>
</Application>
