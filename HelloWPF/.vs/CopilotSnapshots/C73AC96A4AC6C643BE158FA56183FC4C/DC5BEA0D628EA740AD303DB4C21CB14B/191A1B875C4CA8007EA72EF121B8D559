<!-- 
    App.xaml - StatusBar 학습 애플리케이션의 진입점
    WPF 애플리케이션의 전역 설정 및 리소스를 정의합니다.
-->
<Application x:Class="ch21_스테이터스바.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ch21_스테이터스바"
             StartupUri="MainWindow.xaml">
    <!-- 
        Application 속성 설명:
        
        x:Class: 코드 비하인드 파일(App.xaml.cs)과 연결
        StartupUri: 애플리케이션 시작 시 표시될 윈도우 지정
        xmlns:local: 현재 프로젝트의 네임스페이스 참조
    -->
    
    <!-- 
        Application.Resources: 애플리케이션 전역 리소스 정의 영역
        
        StatusBar 관련 전역 스타일 예제:
        <Application.Resources>
            <Style TargetType="StatusBar">
                <Setter Property="Background" Value="WhiteSmoke"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="0,1,0,0"/>
            </Style>
            
            StatusBarItem 기본 스타일:
            <Style TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
            </Style>
            
            정보 표시용 StatusBarItem:
            <Style x:Key="InfoStatusItemStyle" TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            
            강조 StatusBarItem:
            <Style x:Key="HighlightStatusItemStyle" TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="Blue"/>
            </Style>
            
            경고 StatusBarItem:
            <Style x:Key="WarningStatusItemStyle" TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="Foreground" Value="Orange"/>
            </Style>
            
            오류 StatusBarItem:
            <Style x:Key="ErrorStatusItemStyle" TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="Red"/>
            </Style>
            
            연결 상태 표시 스타일:
            <Style x:Key="ConnectionStatusStyle" TargetType="StatusBarItem">
                <Setter Property="Padding" Value="5,2"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                        <Setter Property="Foreground" Value="Green"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                        <Setter Property="Foreground" Value="Red"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            
            StatusBar 내부 ProgressBar 스타일:
            <Style x:Key="StatusProgressBarStyle" TargetType="ProgressBar">
                <Setter Property="Height" Value="12"/>
                <Setter Property="Width" Value="150"/>
                <Setter Property="Foreground" Value="Blue"/>
            </Style>
            
            StatusBar Separator 스타일:
            <Style TargetType="{x:Type Separator}" x:Key="StatusSeparatorStyle">
                <Setter Property="Margin" Value="5,2"/>
            </Style>
            
            시간 표시 템플릿:
            <ControlTemplate x:Key="TimeStatusTemplate">
                <StatusBarItem>
                    <TextBlock Name="timeText" 
                              Text="{Binding CurrentTime, StringFormat=yyyy-MM-dd HH:mm:ss}"/>
                </StatusBarItem>
            </ControlTemplate>
            
            파일 정보 표시 템플릿:
            <ControlTemplate x:Key="FileInfoStatusTemplate">
                <StackPanel Orientation="Horizontal">
                    <StatusBarItem Content="파일: "/>
                    <StatusBarItem Content="{Binding FileName}"/>
                    <Separator/>
                    <StatusBarItem Content="크기: "/>
                    <StatusBarItem Content="{Binding FileSize}"/>
                    <Separator/>
                    <StatusBarItem Content="수정일: "/>
                    <StatusBarItem Content="{Binding ModifiedDate, StringFormat=yyyy-MM-dd}"/>
                </StackPanel>
            </ControlTemplate>
            
            네트워크 상태 템플릿:
            <ControlTemplate x:Key="NetworkStatusTemplate">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" 
                                Fill="{Binding NetworkColor}"/>
                        <TextBlock Text="{Binding NetworkStatus}" 
                                  Margin="5,0,0,0"/>
                    </StackPanel>
                </StatusBarItem>
            </ControlTemplate>
            
            진행률 표시 템플릿:
            <ControlTemplate x:Key="ProgressStatusTemplate">
                <StackPanel Orientation="Horizontal">
                    <StatusBarItem Content="{Binding StatusMessage}"/>
                    <Separator/>
                    <StatusBarItem>
                        <ProgressBar Width="200" 
                                    Height="15" 
                                    Value="{Binding ProgressValue}"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem Content="{Binding ProgressValue, StringFormat={}{0:0}%}"/>
                </StackPanel>
            </ControlTemplate>
            
            텍스트 편집기 상태바 템플릿:
            <ControlTemplate x:Key="TextEditorStatusTemplate">
                <StatusBar>
                    <StatusBarItem Content="{Binding DocumentStatus}"/>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock>
                            <Run Text="줄: "/>
                            <Run Text="{Binding LineNumber}"/>
                        </TextBlock>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock>
                            <Run Text="열: "/>
                            <Run Text="{Binding ColumnNumber}"/>
                        </TextBlock>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem Content="{Binding Encoding}"/>
                    <Separator/>
                    <StatusBarItem Content="{Binding LineEnding}"/>
                    <StatusBarItem HorizontalAlignment="Right" 
                                  Content="{Binding ZoomLevel, StringFormat={}{0}%}"/>
                </StatusBar>
            </ControlTemplate>
            
            다운로드 상태바 템플릿:
            <ControlTemplate x:Key="DownloadStatusTemplate">
                <StatusBar>
                    <StatusBarItem Content="{Binding DownloadStatus}"/>
                    <Separator/>
                    <StatusBarItem>
                        <ProgressBar Width="250" 
                                    Height="15" 
                                    Value="{Binding DownloadProgress}"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem Content="{Binding DownloadProgress, StringFormat={}{0:F1}%}"/>
                    <Separator/>
                    <StatusBarItem Content="{Binding DownloadSpeed}"/>
                    <Separator/>
                    <StatusBarItem Content="{Binding RemainingTime}"/>
                </StatusBar>
            </ControlTemplate>
            
            데이터베이스 연결 상태바 템플릿:
            <ControlTemplate x:Key="DatabaseStatusTemplate">
                <StatusBar>
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" 
                                    Fill="{Binding ConnectionColor}"/>
                            <TextBlock Text="{Binding ConnectionStatus}" 
                                      Margin="5,0,0,0"/>
                        </StackPanel>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem Content="{Binding ServerName}"/>
                    <Separator/>
                    <StatusBarItem Content="{Binding DatabaseName}"/>
                    <Separator/>
                    <StatusBarItem Content="{Binding RecordCount, StringFormat=레코드: {0:#,0}}"/>
                </StatusBar>
            </ControlTemplate>
            
            사용 예제:
            <StatusBar>
                <StatusBarItem Style="{StaticResource InfoStatusItemStyle}" 
                              Content="준비"/>
                <Separator/>
                <StatusBarItem Style="{StaticResource HighlightStatusItemStyle}" 
                              Content="작업 진행 중"/>
                <Separator/>
                <ProgressBar Style="{StaticResource StatusProgressBarStyle}" 
                            Value="50"/>
            </StatusBar>
        </Application.Resources>
    -->
    <Application.Resources>
         <!-- 현재 비어 있음 - 필요시 전역 StatusBar 스타일이나 리소스 추가 -->
    </Application.Resources>
</Application>
