<!-- 
    App.xaml - 유저컨트롤 학습 애플리케이션의 진입점
    WPF 애플리케이션의 전역 설정 및 리소스를 정의합니다.
-->
<Application x:Class="ch31_유저컨트롤.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ch31_유저컨트롤"
             StartupUri="MainWindow.xaml">
    <!-- 
        Application 속성 설명:
        
        x:Class: 코드 비하인드 파일(App.xaml.cs)과 연결
        StartupUri: 애플리케이션 시작 시 표시될 윈도우 지정
        xmlns:local: 현재 프로젝트의 네임스페이스 참조
    -->
    
    <!-- 
        Application.Resources: 애플리케이션 전역 리소스 정의 영역
        
        UserControl 관련 전역 리소스 예제:
        <Application.Resources>
            ========== UserControl 공통 Style ==========
            
            1. UserControl 기본 스타일:
            <Style x:Key="BaseUserControlStyle" TargetType="UserControl">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
            
            사용:
            <local2:UserControl1 Style="{StaticResource BaseUserControlStyle}"/>
            
            2. TextBox 스타일 (UserControl 내부용):
            <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Gray"/>
            </Style>
            
            UserControl1.xaml:
            <TextBox Style="{StaticResource InputTextBoxStyle}"/>
            
            3. ProgressBar 스타일:
            <Style x:Key="CustomProgressBarStyle" TargetType="ProgressBar">
                <Setter Property="Height" Value="20"/>
                <Setter Property="Foreground" Value="Green"/>
                <Setter Property="Background" Value="LightGray"/>
            </Style>
            
            ========== 데이터 템플릿 (DataTemplate) ==========
            
            UserControl을 ItemsControl에서 사용:
            <DataTemplate x:Key="UserControlTemplate">
                <local:UserControl1 
                    Title="{Binding Title}"
                    MaxLength="{Binding MaxChars}"
                    PbHeight="20"/>
            </DataTemplate>
            
            사용:
            <ItemsControl ItemsSource="{Binding Items}" 
                         ItemTemplate="{StaticResource UserControlTemplate}"/>
            
            ========== 컨버터 (Converter) ==========
            
            string을 int로 변환:
            <local:StringToIntConverter x:Key="StringToIntConverter"/>
            
            사용:
            <TextBox MaxLength="{Binding MaxLength, Converter={StaticResource StringToIntConverter}}"/>
            
            ========== 전역 색상 리소스 ==========
            
            <SolidColorBrush x:Key="PrimaryBrush" Color="#007ACC"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#DC3545"/>
            
            사용:
            <ProgressBar Foreground="{StaticResource SuccessBrush}"/>
            
            ========== 실전 활용 예제 ==========
            
            1. 테마별 스타일:
               <ResourceDictionary>
                   <ResourceDictionary.MergedDictionaries>
                       <ResourceDictionary Source="Themes/LightTheme.xaml"/>
                       <!-- 또는 -->
                       <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
                   </ResourceDictionary.MergedDictionaries>
               </ResourceDictionary>
            
            2. UserControl 컬렉션 스타일:
               <Style x:Key="UserControlListStyle" TargetType="ItemsControl">
                   <Setter Property="ItemsPanel">
                       <Setter.Value>
                           <ItemsPanelTemplate>
                               <StackPanel Orientation="Vertical"/>
                           </ItemsPanelTemplate>
                       </Setter.Value>
                   </Setter>
               </Style>
            
            3. 애니메이션 스타일:
               <Storyboard x:Key="FadeInAnimation">
                   <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.5"/>
               </Storyboard>
            
            4. 공통 명령 (ICommand):
               전역으로 명령 객체 등록
            
            ========== 주의사항 ==========
            
            1. 전역 리소스:
               - 모든 윈도우/UserControl에서 접근 가능
               - 일관된 UI 스타일 유지
            
            2. 네임스페이스:
               - UserControl이 있는 네임스페이스 참조 필요
               - xmlns:local="clr-namespace:네임스페이스"
            
            3. 성능:
               - 필요한 리소스만 정의
               - 사용하지 않는 리소스는 제거
            
            4. 유지보수:
               - 별도 ResourceDictionary 파일로 분리 권장
               - Themes 폴더에 정리
        </Application.Resources>
    -->
    <Application.Resources>
         <!-- 현재 비어 있음 - 필요시 전역 Style, DataTemplate, Converter 추가 -->
    </Application.Resources>
</Application>
