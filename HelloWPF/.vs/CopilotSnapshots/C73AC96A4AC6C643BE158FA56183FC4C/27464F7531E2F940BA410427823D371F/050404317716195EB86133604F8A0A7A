<!-- 
    ch2 Label - WPF Label 컨트롤의 다양한 사용 예제를 보여주는 파일
    이 파일은 Label 컨트롤의 여러 속성과 기능을 학습하기 위한 데모 프로젝트입니다.
-->
<Window x:Class="ch2_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch2_Label"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- 
        Grid: 최상위 레이아웃 컨테이너
        주의: 첫 두 Label은 Grid에 직접 배치되어 StackPanel의 내용과 겹칩니다.
    -->
    <Grid>
        <!-- 예제 1: Label 콘텐츠를 여는/닫는 태그 사이에 직접 작성 -->
        <Label>안녕하세요</Label>
        
        <!-- 예제 2: Label 콘텐츠를 Content 속성으로 지정 (더 명시적이고 권장되는 방식) -->
        <Label Content="안녕하세요"></Label>
        
        <!-- 
            StackPanel: 자식 요소들을 세로 방향으로 순차적으로 배치
            Orientation="Vertical": 수직 방향 배치 (기본값이므로 생략 가능)
        -->
        <StackPanel Orientation="Vertical">
            <!-- 
                HorizontalContentAlignment 속성 예제:
                Label 내부의 콘텐츠를 어떻게 정렬할지 결정합니다.
                Label의 크기는 부모 컨테이너에 맞춰 늘어나고, 내부 텍스트만 정렬됩니다.
            -->
            <!-- 콘텐츠를 Label 내부의 중앙에 정렬 -->
            <Label HorizontalContentAlignment="Center">HorizontalContentAlignment</Label>
            <!-- 콘텐츠를 Label 내부의 왼쪽에 정렬 (기본값) -->
            <Label HorizontalContentAlignment="Left">HorizontalContentAlignment</Label>
            <!-- 콘텐츠를 Label 내부의 오른쪽에 정렬 -->
            <Label HorizontalContentAlignment="Right">HorizontalContentAlignment</Label>
            <!-- 콘텐츠를 Label 내부에 가득 채움 -->
            <Label HorizontalContentAlignment="Stretch">HorizontalContentAlignment</Label>
            
            <!-- 
                HorizontalAlignment 속성 예제:
                Label 컨트롤 자체를 부모 컨테이너(StackPanel) 내에서 어떻게 정렬할지 결정합니다.
                Label의 크기가 콘텐츠에 맞춰 조정되고, 컨테이너 내에서 정렬됩니다.
            -->
            <!-- Label을 StackPanel의 중앙에 배치 -->
            <Label HorizontalAlignment="Center">HorizontalAlignment</Label>
            <!-- Label을 StackPanel의 왼쪽에 배치 -->
            <Label HorizontalAlignment="Left">HorizontalAlignment</Label>
            <!-- Label을 StackPanel의 오른쪽에 배치 -->
            <Label HorizontalAlignment="Right">HorizontalAlignment</Label>
            <!-- Label을 StackPanel의 전체 너비로 늘림 (기본값) -->
            <Label HorizontalAlignment="Stretch">HorizontalAlignment</Label>
            
            <!-- 
                예제 3: Label에 복합 콘텐츠 배치하기
                Label은 단순 텍스트뿐만 아니라 다른 컨트롤들도 포함할 수 있습니다.
            -->
            <Label>
                <!-- Label 내부에 StackPanel을 사용하여 여러 요소를 배치 -->
                <StackPanel Orientation="Vertical">
                    <!-- Image 컨트롤: 외부 URL에서 아이콘 이미지 로드 -->
                    <Image Width="30" Source="https://cdn0.iconfinder.com/data/icons/business-startup-10/50/65-512.png"/>
                    <!-- AccessText: 밑줄(_)을 사용하여 액세스 키를 지정할 수 있는 텍스트 -->
                    <AccessText Text="원하는 문자열"/>
                </StackPanel>
            </Label>
            
            <!-- 
                예제 4: Label 스타일링
                다양한 폰트, 색상 속성을 사용하여 Label의 외관 커스터마이징
            -->
            <Label Content="Hello"
                   FontSize="30"
                   FontWeight="Bold"
                   Background="Salmon"
                   Foreground="White">
                <!-- 
                    FontSize: 폰트 크기를 30으로 설정
                    FontWeight: 폰트를 굵게 표시
                    Background: 배경색을 연어색(Salmon)으로 설정
                    Foreground: 텍스트 색상을 흰색으로 설정
                -->
            </Label>
            
            <!-- 
                예제 5: Label의 Target 속성
                Target을 사용하여 Label과 다른 컨트롤을 연결합니다.
                Label을 클릭하면 연결된 컨트롤(여기서는 TextBox)로 포커스가 이동합니다.
                
                참고: Content에 밑줄(_)을 사용하면 Alt+키 단축키로 포커스 이동이 가능합니다.
                예: Content="_label"로 설정하면 Alt+L로 TextBox에 포커스 이동
            -->
            <Label Content="label"
                   Target="{Binding ElementName=textBox}">
                <!-- Target="{Binding ElementName=textBox}": textBox라는 이름의 컨트롤과 연결 -->
            </Label>
            <!-- Label과 연결된 TextBox 컨트롤 -->
            <TextBox x:Name="textBox"/>
        </StackPanel>
    </Grid>
</Window>
