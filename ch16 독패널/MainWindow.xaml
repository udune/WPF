        <!-- 탭4: 스타일과 외관 -->
        <TabItem Header="4. 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="스타일과 외관" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                    <!-- Background -->
                    <GroupBox Header="Background 설정" Margin="0,0,0,8">
                        <DockPanel Height="120" Background="#E8F5E9">
                            <Button DockPanel.Dock="Top" Background="#A5D6A7" Padding="6">Top 영역</Button>
                            <Button DockPanel.Dock="Left" Background="#81C784" Padding="6" Width="80">Left</Button>
                            <Border Background="#C8E6C9">
                                <TextBlock Text="DockPanel Background=#E8F5E9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel Background=&quot;#E8F5E9&quot;&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top 영역&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot; Width=&quot;80&quot;&gt;Left&lt;/Button&gt;&#10;    &lt;Border Background=&quot;#C8E6C9&quot;&gt;&#10;        &lt;TextBlock Text=&quot;중앙&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DockPanel에 Background=&quot;LightBlue&quot;를 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;DockPanel Height=&quot;100&quot;&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;상단&lt;/Button&gt;&#x0a;    &lt;TextBlock Text=&quot;콘텐츠&quot;/&gt;&#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_1"
                                       Text="힌트: Background=&quot;LightBlue&quot;를 DockPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Margin과 자식 간격 -->
                    <GroupBox Header="Margin으로 자식 요소 간격 조절" Margin="0,0,0,8">
                        <DockPanel Height="150" Background="#F5F5F5">
                            <Border DockPanel.Dock="Top" Background="#BBDEFB" Margin="4" Padding="8">
                                <TextBlock Text="Top (Margin=4)"/>
                            </Border>
                            <Border DockPanel.Dock="Bottom" Background="#C8E6C9" Margin="4" Padding="8">
                                <TextBlock Text="Bottom (Margin=4)"/>
                            </Border>
                            <Border DockPanel.Dock="Left" Background="#FFE0B2" Margin="4" Padding="8">
                                <TextBlock Text="Left"/>
                            </Border>
                            <Border Background="#FFFDE7" Margin="4" Padding="8">
                                <TextBlock Text="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- DockPanel 자체에는 자식 간격 속성이 없으므로&#10;     각 자식의 Margin으로 간격을 조절합니다 --&gt;&#10;&lt;DockPanel&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Top&quot; Margin=&quot;4&quot;&gt;...&lt;/Border&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Left&quot; Margin=&quot;4&quot;&gt;...&lt;/Border&gt;&#10;    &lt;Border Margin=&quot;4&quot;&gt;...&lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 자식 요소들에 Margin=&quot;5&quot;를 추가하여 간격을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="&lt;DockPanel Height=&quot;100&quot; Background=&quot;Gray&quot;&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top&lt;/Button&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left&lt;/Button&gt;&#x0a;    &lt;Button&gt;Center&lt;/Button&gt;&#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_2"
                                       Text="힌트: 각 Button에 Margin=&quot;5&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Width/Height 고정 -->
                    <GroupBox Header="도킹 요소에 Width/Height 지정" Margin="0,0,0,8">
                        <DockPanel Height="160" Background="#F5F5F5">
                            <Border DockPanel.Dock="Top" Background="#BBDEFB" Height="40" Padding="8">
                                <TextBlock Text="Top (Height=40)" VerticalAlignment="Center"/>
                            </Border>
                            <Border DockPanel.Dock="Left" Background="#FFE0B2" Width="120" Padding="8">
                                <TextBlock Text="Left&#10;(Width=120)" VerticalAlignment="Center"/>
                            </Border>
                            <Border DockPanel.Dock="Right" Background="#E1BEE7" Width="80" Padding="8">
                                <TextBlock Text="Right&#10;(W=80)" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#FFFDE7" Padding="8">
                                <TextBlock Text="Center (자동 크기)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Top&quot; Height=&quot;40&quot;&gt;Top&lt;/Border&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Left&quot; Width=&quot;120&quot;&gt;Left&lt;/Border&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Right&quot; Width=&quot;80&quot;&gt;Right&lt;/Border&gt;&#10;    &lt;Border&gt;Center (자동 크기)&lt;/Border&gt;&#10;&lt;/DockPanel&gt;&#10;&#10;&lt;!-- Top/Bottom은 Height, Left/Right는 Width를 지정 --&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭5: 코드비하인드 -->
        <TabItem Header="5. 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="코드비하인드로 DockPanel 제어" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                    <!-- 동적 Dock 위치 변경 -->
                    <GroupBox Header="동적 Dock 위치 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <DockPanel x:Name="dpDockChange" Height="150" Background="#F5F5F5" Margin="0,0,0,8">
                                <Border x:Name="bdMovable" DockPanel.Dock="Top" Background="#BBDEFB" Padding="8">
                                    <TextBlock x:Name="tbDockPos" Text="현재: Top" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Background="#FFFDE7">
                                    <TextBlock Text="남은 공간" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="Top" Click="DockTop_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="Bottom" Click="DockBottom_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="Left" Click="DockLeft_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="Right" Click="DockRight_Click" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// DockPanel.SetDock으로 도킹 위치를 동적으로 변경&#10;DockPanel.SetDock(bdMovable, Dock.Top);&#10;DockPanel.SetDock(bdMovable, Dock.Bottom);&#10;DockPanel.SetDock(bdMovable, Dock.Left);&#10;DockPanel.SetDock(bdMovable, Dock.Right);&#10;&#10;// 현재 Dock 값 가져오기&#10;Dock currentDock = DockPanel.GetDock(bdMovable);"/>
                    </Expander>

                    <!-- 직접 해보기 5_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DockPanel.SetDock을 사용하여 요소를 Bottom으로 이동하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void MoveToBottom()&#x0a;{&#x0a;    // myElement를 Bottom으로 이동&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_1"
                                       Text="힌트: DockPanel.SetDock(element, Dock.Bottom);"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_1"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- 동적으로 자식 추가/삭제 -->
                    <GroupBox Header="동적으로 자식 추가/삭제" Margin="0,0,0,8">
                        <StackPanel>
                            <DockPanel x:Name="dpDynamic" Height="150" Background="#F5F5F5" Margin="0,0,0,8">
                                <Border Background="#FFFDE7">
                                    <TextBlock x:Name="tbDynamicInfo" Text="자식 요소: 0개 (Center 제외)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Content="Left 추가" Click="AddLeft_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="Top 추가" Click="AddTop_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="Right 추가" Click="AddRight_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="전체 삭제" Click="ClearDock_Click" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// DockPanel에 동적으로 자식 추가&#10;var btn = new Button { Content = &quot;Left&quot; };&#10;DockPanel.SetDock(btn, Dock.Left);&#10;dpDynamic.Children.Insert(0, btn);  // 맨 앞에 삽입&#10;&#10;// 주의: LastChildFill=True일 때&#10;// 마지막 자식이 Center 역할을 하므로&#10;// 새 자식은 Insert(0, ...)로 앞에 추가해야 합니다&#10;&#10;// 전체 삭제&#10;dpDynamic.Children.Clear();"/>
                    </Expander>

                    <!-- 직접 해보기 5_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DockPanel에 Button을 추가하고 Left에 도킹하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="private void AddLeftButton()&#x0a;{&#x0a;    var btn = new Button { Content = &quot;새 버튼&quot; };&#x0a;    // btn을 Left에 도킹하고 myDockPanel에 추가&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_2"
                                       Text="힌트: DockPanel.SetDock(btn, Dock.Left); 후 Children.Add 또는 Insert 사용"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- LastChildFill 토글 -->
                    <GroupBox Header="LastChildFill 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <DockPanel x:Name="dpLastChild" LastChildFill="True" Height="120" Background="#F5F5F5" Margin="0,0,0,8">
                                <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="8,4">Left</Button>
                                <Button DockPanel.Dock="Right" Background="#E1BEE7" Padding="8,4">Right</Button>
                                <Border x:Name="bdCenter" Background="#C8E6C9" Padding="8">
                                    <TextBlock x:Name="tbLastChild" Text="LastChildFill = True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="True로 설정" Click="SetLastChildTrue_Click" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="False로 설정" Click="SetLastChildFalse_Click" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// LastChildFill 속성 동적 변경&#10;dpLastChild.LastChildFill = true;&#10;dpLastChild.LastChildFill = false;&#10;&#10;// 변경 후 레이아웃이 즉시 업데이트됩니다"/>
                    </Expander>

                    <!-- 직접 해보기 5_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: LastChildFill을 false로 변경하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void DisableLastChildFill()&#x0a;{&#x0a;    // myDockPanel의 LastChildFill 변경&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
