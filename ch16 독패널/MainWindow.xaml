<Window x:Class="ch16_독패널.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ch16 DockPanel 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭1: 기본 사용법 -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="DockPanel 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="DockPanel은 자식 요소를 부모의 가장자리(Top, Bottom, Left, Right)에 도킹시키는 레이아웃 패널입니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- 기본 도킹 -->
                    <GroupBox Header="기본 Dock 방향" Margin="0,0,0,8">
                        <DockPanel Height="180" Background="#F5F5F5">
                            <Button DockPanel.Dock="Top" Background="#BBDEFB" Padding="8,6">Top (상단)</Button>
                            <Button DockPanel.Dock="Bottom" Background="#C8E6C9" Padding="8,6">Bottom (하단)</Button>
                            <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="8,6">Left&#10;(좌)</Button>
                            <Button DockPanel.Dock="Right" Background="#E1BEE7" Padding="8,6">Right&#10;(우)</Button>
                            <Border Background="#FFFDE7">
                                <TextBlock Text="Center (마지막 자식)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel Height=&quot;180&quot;&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top (상단)&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Bottom&quot;&gt;Bottom (하단)&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left (좌)&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Right&quot;&gt;Right (우)&lt;/Button&gt;&#10;    &lt;Border&gt;&#10;        &lt;TextBlock Text=&quot;Center (마지막 자식)&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DockPanel에 Button을 Top과 Left에 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;DockPanel Height=&quot;120&quot;&gt;&#x0a;    &#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: DockPanel.Dock=&quot;Top&quot;과 DockPanel.Dock=&quot;Left&quot;를 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 같은 방향 여러 개 도킹 -->
                    <GroupBox Header="같은 방향에 여러 요소 도킹" Margin="0,0,0,8">
                        <DockPanel Height="160" Background="#F5F5F5">
                            <Button DockPanel.Dock="Left" Background="#BBDEFB" Padding="8,6">Left 1</Button>
                            <Button DockPanel.Dock="Left" Background="#90CAF9" Padding="8,6">Left 2</Button>
                            <Button DockPanel.Dock="Left" Background="#64B5F6" Padding="8,6">Left 3</Button>
                            <Border Background="#FFFDE7">
                                <TextBlock Text="남은 공간" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel Height=&quot;160&quot;&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left 1&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left 2&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left 3&lt;/Button&gt;&#10;    &lt;Border&gt;&#10;        &lt;TextBlock Text=&quot;남은 공간&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/DockPanel&gt;&#10;&#10;&lt;!-- 같은 방향에 여러 요소를 도킹하면 순서대로 안쪽으로 배치됩니다 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: DockPanel.Dock=&quot;Top&quot;으로 Button 2개를 순서대로 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;DockPanel Height=&quot;120&quot;&gt;&#x0a;    &#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: DockPanel.Dock=&quot;Top&quot;을 두 개의 Button에 적용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Dock 미지정 시 기본값 -->
                    <GroupBox Header="Dock 미지정 시 기본 동작" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="DockPanel.Dock을 지정하지 않으면 Left로 기본 배치됩니다." Margin="8" TextWrapping="Wrap"/>
                            <DockPanel Height="100" Background="#F5F5F5" Margin="8">
                                <Button Background="#BBDEFB" Padding="8,6">Dock 미지정 (Left)</Button>
                                <Button Background="#C8E6C9" Padding="8,6">Dock 미지정 (Left)</Button>
                                <Border Background="#FFFDE7">
                                    <TextBlock Text="마지막 자식 (Fill)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel Height=&quot;100&quot;&gt;&#10;    &lt;!-- DockPanel.Dock 미지정 → 기본값 Left --&gt;&#10;    &lt;Button&gt;Dock 미지정 (Left)&lt;/Button&gt;&#10;    &lt;Button&gt;Dock 미지정 (Left)&lt;/Button&gt;&#10;    &lt;Border&gt;&#10;        &lt;TextBlock Text=&quot;마지막 자식 (Fill)&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭2: 배치 순서와 LastChildFill -->
        <TabItem Header="2. 배치순서/LastChildFill">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="배치 순서와 LastChildFill" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="DockPanel에서 자식 요소의 선언 순서는 레이아웃 결과에 큰 영향을 미칩니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- 배치 순서 비교: Top 먼저 -->
                    <GroupBox Header="Top을 먼저 배치" Margin="0,0,0,8">
                        <DockPanel Height="150" Background="#F5F5F5">
                            <Button DockPanel.Dock="Top" Background="#BBDEFB" Padding="6">Top (전체 너비 차지)</Button>
                            <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="6" Width="100">Left</Button>
                            <Border Background="#FFFDE7">
                                <TextBlock Text="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>

                    <!-- 배치 순서 비교: Left 먼저 -->
                    <GroupBox Header="Left를 먼저 배치" Margin="0,0,0,8">
                        <DockPanel Height="150" Background="#F5F5F5">
                            <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="6" Width="100">Left&#10;(전체 높이)</Button>
                            <Button DockPanel.Dock="Top" Background="#BBDEFB" Padding="6">Top</Button>
                            <Border Background="#FFFDE7">
                                <TextBlock Text="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- Top을 먼저 배치 → Top이 전체 너비 차지 --&gt;&#10;&lt;DockPanel&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot; Width=&quot;100&quot;&gt;Left&lt;/Button&gt;&#10;    &lt;Border&gt;&lt;TextBlock Text=&quot;Center&quot;/&gt;&lt;/Border&gt;&#10;&lt;/DockPanel&gt;&#10;&#10;&lt;!-- Left를 먼저 배치 → Left가 전체 높이 차지 --&gt;&#10;&lt;DockPanel&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot; Width=&quot;100&quot;&gt;Left&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top&lt;/Button&gt;&#10;    &lt;Border&gt;&lt;TextBlock Text=&quot;Center&quot;/&gt;&lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Left를 먼저 배치하여 Left가 전체 높이를 차지하도록 해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="&lt;DockPanel Height=&quot;120&quot;&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Top&quot;&gt;Top&lt;/Button&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left&lt;/Button&gt;&#x0a;    &lt;Border Background=&quot;LightYellow&quot;&gt;&#x0a;        &lt;TextBlock Text=&quot;Center&quot;/&gt;&#x0a;    &lt;/Border&gt;&#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: Left Button을 Top Button보다 먼저 선언합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- LastChildFill=True -->
                    <GroupBox Header="LastChildFill=True (기본값)" Margin="0,0,0,8">
                        <DockPanel LastChildFill="True" Height="120" Background="#F5F5F5">
                            <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="8,6">Left</Button>
                            <Button DockPanel.Dock="Right" Background="#E1BEE7" Padding="8,6">Right</Button>
                            <Border Background="#C8E6C9">
                                <TextBlock Text="마지막 자식이 남은 공간 전부 채움" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>

                    <!-- LastChildFill=False -->
                    <GroupBox Header="LastChildFill=False" Margin="0,0,0,8">
                        <DockPanel LastChildFill="False" Height="120" Background="#F5F5F5">
                            <Button DockPanel.Dock="Left" Background="#FFE0B2" Padding="8,6">Left</Button>
                            <Button DockPanel.Dock="Right" Background="#E1BEE7" Padding="8,6">Right</Button>
                            <Button DockPanel.Dock="Left" Background="#BBDEFB" Padding="8,6">마지막도 Left에 도킹</Button>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- LastChildFill=True (기본값) --&gt;&#10;&lt;DockPanel LastChildFill=&quot;True&quot;&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Right&quot;&gt;Right&lt;/Button&gt;&#10;    &lt;Border&gt;&#10;        &lt;TextBlock Text=&quot;남은 공간 전부 채움&quot;/&gt;&#10;    &lt;/Border&gt;&#10;&lt;/DockPanel&gt;&#10;&#10;&lt;!-- LastChildFill=False --&gt;&#10;&lt;DockPanel LastChildFill=&quot;False&quot;&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Right&quot;&gt;Right&lt;/Button&gt;&#10;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;마지막도 Left에 도킹&lt;/Button&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: LastChildFill=&quot;False&quot;를 설정하여 마지막 자식도 도킹되도록 해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="&lt;DockPanel Height=&quot;100&quot;&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Left&quot;&gt;Left&lt;/Button&gt;&#x0a;    &lt;Button DockPanel.Dock=&quot;Right&quot;&gt;Right&lt;/Button&gt;&#x0a;&lt;/DockPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: DockPanel에 LastChildFill=&quot;False&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭3: 실용 레이아웃 패턴 -->
        <TabItem Header="3. 실용 레이아웃">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <TextBlock Text="실용 레이아웃 패턴" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <TextBlock Text="DockPanel은 전형적인 애플리케이션 레이아웃을 쉽게 구현할 수 있습니다." TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <!-- 앱 레이아웃 -->
                    <GroupBox Header="전형적인 앱 레이아웃 (메뉴 + 사이드바 + 상태바)" Margin="0,0,0,8">
                        <DockPanel Height="250" Background="#FAFAFA">
                            <Border DockPanel.Dock="Top" Background="#1976D2" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="파일" Foreground="White" Margin="0,0,12,0"/>
                                    <TextBlock Text="편집" Foreground="White" Margin="0,0,12,0"/>
                                    <TextBlock Text="보기" Foreground="White" Margin="0,0,12,0"/>
                                    <TextBlock Text="도움말" Foreground="White"/>
                                </StackPanel>
                            </Border>
                            <Border DockPanel.Dock="Top" Background="#42A5F5" Padding="4">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="새로 만들기" Margin="2" Padding="4,2"/>
                                    <Button Content="열기" Margin="2" Padding="4,2"/>
                                    <Button Content="저장" Margin="2" Padding="4,2"/>
                                </StackPanel>
                            </Border>
                            <Border DockPanel.Dock="Bottom" Background="#E0E0E0" Padding="6,2">
                                <TextBlock Text="준비 완료 | 줄 1, 열 1"/>
                            </Border>
                            <Border DockPanel.Dock="Left" Background="#E3F2FD" Width="140" Padding="4">
                                <StackPanel>
                                    <TextBlock Text="탐색기" FontWeight="Bold" Margin="4"/>
                                    <TextBlock Text="  프로젝트" Margin="4,2"/>
                                    <TextBlock Text="    파일1.txt" Margin="4,2"/>
                                    <TextBlock Text="    파일2.txt" Margin="4,2"/>
                                    <TextBlock Text="  리소스" Margin="4,2"/>
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="12">
                                <TextBlock Text="메인 콘텐츠 영역&#10;(LastChildFill로 남은 공간 채움)" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;DockPanel&gt;&#10;    &lt;!-- 메뉴바 --&gt;&#10;    &lt;Menu DockPanel.Dock=&quot;Top&quot;&gt;...&lt;/Menu&gt;&#10;    &lt;!-- 툴바 --&gt;&#10;    &lt;ToolBar DockPanel.Dock=&quot;Top&quot;&gt;...&lt;/ToolBar&gt;&#10;    &lt;!-- 상태바 --&gt;&#10;    &lt;StatusBar DockPanel.Dock=&quot;Bottom&quot;&gt;...&lt;/StatusBar&gt;&#10;    &lt;!-- 사이드바 --&gt;&#10;    &lt;Border DockPanel.Dock=&quot;Left&quot; Width=&quot;140&quot;&gt;...&lt;/Border&gt;&#10;    &lt;!-- 메인 콘텐츠 (LastChildFill) --&gt;&#10;    &lt;Border&gt;메인 콘텐츠&lt;/Border&gt;&#10;&lt;/DockPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Top에 헤더, Bottom에 상태바, 중앙에 콘텐츠를 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="140"
