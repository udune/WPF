<Window x:Class="ch14_스택패널.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch14_스택패널"
        mc:Ignorable="d"
        Title="ch14 StackPanel 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <!-- 예제 시각화를 위한 버튼 스타일 -->
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="StackPanel 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 기본 Vertical -->
                    <GroupBox Header="Orientation=Vertical (기본값) - 위에서 아래로 쌓임" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 3&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Orientation 기본값은 Vertical --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: StackPanel 안에 Button 2개를 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel&gt;&#x0a;    &#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: &lt;Button Content=&quot;버튼&quot;/&gt;을 2개 넣습니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Horizontal -->
                    <GroupBox Header="Orientation=Horizontal - 왼쪽에서 오른쪽으로" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 3&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Orientation이 Horizontal인 StackPanel을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;Button Content=&quot;A&quot;/&gt;&#x0a;    &lt;Button Content=&quot;B&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: Orientation=&quot;Horizontal&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 다양한 컨트롤 혼합 -->
                    <GroupBox Header="다양한 컨트롤 혼합 배치" Margin="0,0,0,8">
                        <StackPanel Background="LightGray" Margin="4">
                            <TextBlock Text="이름을 입력하세요:" Margin="4"/>
                            <TextBox Width="200" HorizontalAlignment="Left" Margin="4"/>
                            <Button Content="확인" HorizontalAlignment="Left" Padding="12,6" Margin="4"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;TextBlock Text=&quot;이름을 입력하세요:&quot;/&gt;&#10;    &lt;TextBox Width=&quot;200&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;Button Content=&quot;확인&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: TextBlock, TextBox, Button을 순서대로 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;StackPanel&gt;&#x0a;    &#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_3"
                                       Text="힌트: TextBlock, TextBox, Button 순서로 배치합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 (Alignment) -->
        <TabItem Header="2. 정렬">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="StackPanel 정렬" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- HorizontalAlignment -->
                    <GroupBox Header="Vertical StackPanel에서 HorizontalAlignment" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="Left" HorizontalAlignment="Left" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Center" HorizontalAlignment="Center" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Right" HorizontalAlignment="Right" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Stretch (기본)" HorizontalAlignment="Stretch" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Vertical&quot;&gt;&#10;    &lt;Button Content=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Button Content=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot;/&gt;&#10;    &lt;Button Content=&quot;Stretch&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Button의 HorizontalAlignment를 Center로 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;Button Content=&quot;중앙 정렬&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: HorizontalAlignment=&quot;Center&quot;를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- VerticalAlignment -->
                    <GroupBox Header="Horizontal StackPanel에서 VerticalAlignment" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Height="120" Background="LightGray">
                            <Button Content="Top" VerticalAlignment="Top" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Center" VerticalAlignment="Center" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Bottom" VerticalAlignment="Bottom" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Stretch" VerticalAlignment="Stretch" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Height=&quot;120&quot;&gt;&#10;    &lt;Button Content=&quot;Top&quot; VerticalAlignment=&quot;Top&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Button Content=&quot;Bottom&quot; VerticalAlignment=&quot;Bottom&quot;/&gt;&#10;    &lt;Button Content=&quot;Stretch&quot; VerticalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Horizontal StackPanel에서 Button의 VerticalAlignment를 Bottom으로 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Height=&quot;100&quot;&gt;&#x0a;    &lt;Button Content=&quot;아래 정렬&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: VerticalAlignment=&quot;Bottom&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Margin -->
                    <GroupBox Header="Margin으로 간격 조절" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="Margin=4" Margin="4" Padding="12,6"/>
                            <Button Content="Margin=10" Margin="10" Padding="12,6"/>
                            <Button Content="Margin=&quot;20,4,20,4&quot;" Margin="20,4,20,4" Padding="12,6"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;Button Content=&quot;Margin=4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;Margin=10&quot; Margin=&quot;10&quot;/&gt;&#10;    &lt;Button Content=&quot;좌우20, 상하4&quot; Margin=&quot;20,4,20,4&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Margin=&quot;전체&quot; --&gt;&#10;&lt;!-- Margin=&quot;좌우, 상하&quot; --&gt;&#10;&lt;!-- Margin=&quot;좌, 상, 우, 하&quot; --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Button에 Margin=&quot;10&quot;을 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;Button Content=&quot;여백 있음&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_3"
                                       Text="힌트: Margin=&quot;10&quot;을 Button에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 중첩과 레이아웃 패턴 -->
        <TabItem Header="3. 중첩 패턴">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="StackPanel 중첩과 레이아웃 패턴" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 중첩 예제 -->
                    <GroupBox Header="Vertical 안에 Horizontal 중첩 (가장 흔한 패턴)" Margin="0,0,0,8">
                        <StackPanel Background="#F5F5F5">
                            <TextBlock Text="항목 1" FontWeight="Bold" Margin="8,8,8,4"/>
                            <StackPanel Orientation="Horizontal" Margin="8,0,8,8">
                                <Button Content="수정" Padding="12,4" Margin="0,0,4,0"/>
                                <Button Content="삭제" Padding="12,4"/>
                            </StackPanel>
                            <TextBlock Text="항목 2" FontWeight="Bold" Margin="8,8,8,4"/>
                            <StackPanel Orientation="Horizontal" Margin="8,0,8,8">
                                <Button Content="수정" Padding="12,4" Margin="0,0,4,0"/>
                                <Button Content="삭제" Padding="12,4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Vertical&quot;&gt;&#10;    &lt;TextBlock Text=&quot;항목 1&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Button Content=&quot;수정&quot;/&gt;&#10;        &lt;Button Content=&quot;삭제&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Vertical StackPanel 안에 Horizontal StackPanel을 중첩하여 버튼 2개를 가로로 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;TextBlock Text=&quot;제목&quot;/&gt;&#x0a;    &#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt; 안에 Button을 넣습니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 폼 레이아웃 -->
                    <GroupBox Header="폼 레이아웃 패턴" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="이름: " Width="60" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="이메일: " Width="60" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="저장" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="취소" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot; Margin=&quot;0,0,0,8&quot;&gt;&#10;        &lt;TextBlock Text=&quot;이름: &quot; Width=&quot;60&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;        &lt;TextBox Width=&quot;200&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot; HorizontalAlignment=&quot;Right&quot;&gt;&#10;        &lt;Button Content=&quot;저장&quot;/&gt;&#10;        &lt;Button Content=&quot;취소&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: 라벨과 입력 필드를 가로로 배치하는 패턴을 만들어보세요. (TextBlock Width=&quot;80&quot; + TextBox)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#x0a;    &#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2"
                                       Text="힌트: TextBlock에 Width=&quot;80&quot;을 설정하고 TextBox를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 도구 모음 -->
                    <GroupBox Header="도구 모음(Toolbar) 패턴" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Background="#E0E0E0" Height="40">
                            <Button Content="새로 만들기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="열기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="저장" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Separator Margin="4,8"/>
                            <Button Content="복사" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="붙여넣기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Background=&quot;#E0E0E0&quot; Height=&quot;40&quot;&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Separator Margin=&quot;4,8&quot;/&gt;&#10;    &lt;Button Content=&quot;복사&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 스타일과 외관 -->
        <TabItem Header="4. 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="StackPanel 스타일과 외관" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Background -->
                    <GroupBox Header="Background 설정" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Background="LightBlue" Margin="0,0,0,8">
                                <TextBlock Text="LightBlue 배경" Margin="10"/>
                            </StackPanel>
                            <StackPanel Background="#FFE0B2" Margin="0,0,0,8">
                                <TextBlock Text="#FFE0B2 (Hex 색상) 배경" Margin="10"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Background=&quot;LightBlue&quot;&gt;&#10;    &lt;TextBlock Text=&quot;배경색 적용&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;StackPanel Background=&quot;#FFE0B2&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Hex 색상&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: StackPanel에 Background=&quot;LightGreen&quot;을 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel&gt;&#x0a;    &lt;TextBlock Text=&quot;배경색 있는 패널&quot; Margin=&quot;10&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_1"
                                       Text="힌트: Background=&quot;LightGreen&quot;을 StackPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- FlowDirection -->
                    <GroupBox Header="FlowDirection (RTL 지원)" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Background="#E3F2FD" Margin="0,0,0,8">
                                <TextBlock Text="LeftToRight (기본): " VerticalAlignment="Center" Margin="4"/>
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="#FFF3E0">
                                <TextBlock Text="RightToLeft: " VerticalAlignment="Center" Margin="4"/>
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 기본: 왼쪽에서 오른쪽 --&gt;&#10;&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Button Content=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;2&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- 오른쪽에서 왼쪽 (RTL) --&gt;&#10;&lt;StackPanel Orientation=&quot;Horizontal&quot; FlowDirection=&quot;RightToLeft&quot;&gt;&#10;    &lt;Button Content=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;2&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FlowDirection=&quot;RightToLeft&quot;를 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#x0a;    &lt;Button Content=&quot;첫번째&quot;/&gt;&#x0a;    &lt;Button Content=&quot;두번째&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_2"
                                       Text="힌트: FlowDirection=&quot;RightToLeft&quot;를 StackPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Width, HorizontalAlignment -->
                    <GroupBox Header="StackPanel 자체의 정렬과 크기" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Background="LightGreen" HorizontalAlignment="Left" Margin="0,0,0,4">
                                <TextBlock Text="HorizontalAlignment=Left" Margin="8"/>
                            </StackPanel>
                            <StackPanel Background="LightCoral" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <TextBlock Text="HorizontalAlignment=Center" Margin="8"/>
                            </StackPanel>
                            <StackPanel Background="LightSkyBlue" Width="300" HorizontalAlignment="Left">
                                <TextBlock Text="Width=300" Margin="8"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Background=&quot;LightGreen&quot; HorizontalAlignment=&quot;Left&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Left 정렬&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;StackPanel Background=&quot;LightSkyBlue&quot; Width=&quot;300&quot;&gt;&#10;    &lt;TextBlock Text=&quot;고정 너비&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 코드비하인드 -->
        <TabItem Header="5. 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="코드비하인드에서 StackPanel 제어" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 동적 요소 추가 -->
                    <GroupBox Header="동적으로 자식 요소 추가" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spDynamic" Background="#F5F5F5" MinHeight="40" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="버튼 추가" Click="AddButton_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="텍스트 추가" Click="AddText_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="전체 삭제" Click="ClearAll_Click" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 버튼 추가&#10;spDynamic.Children.Add(new Button&#10;{&#10;    Content = &quot;동적 버튼&quot;,&#10;    Margin = new Thickness(4)&#10;});&#10;&#10;// 전체 삭제&#10;spDynamic.Children.Clear();"/>
                    </Expander>

                    <!-- 직접 해보기 5_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Children.Add를 사용하여 Button을 추가하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void AddButton()&#x0a;{&#x0a;    // myPanel에 Button 추가&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_1"
                                       Text="힌트: myPanel.Children.Add(new Button { ... });"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_1"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- Orientation 변경 -->
                    <GroupBox Header="Orientation 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spOrientation" Background="#E8F5E9" MinHeight="50">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Vertical로 변경" Click="SetVertical_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="Horizontal로 변경" Click="SetHorizontal_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbOrientation" Text="현재: Vertical" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Vertical로 변경&#10;spOrientation.Orientation = Orientation.Vertical;&#10;&#10;// Horizontal로 변경&#10;spOrientation.Orientation = Orientation.Horizontal;"/>
                    </Expander>

                    <!-- 직접 해보기 5_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: StackPanel의 Orientation을 Horizontal로 변경하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void ChangeOrientation()&#x0a;{&#x0a;    // myPanel의 Orientation 변경&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_2"
                                       Text="힌트: .Orientation = Orientation.Horizontal;"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- Children.Count -->
                    <GroupBox Header="자식 요소 개수 확인" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spCount" Background="#FFF3E0">
                                <TextBlock Text="요소 1" Margin="4"/>
                                <TextBlock Text="요소 2" Margin="4"/>
                                <TextBlock Text="요소 3" Margin="4"/>
                            </StackPanel>
                            <Button Content="자식 요소 개수 확인" Click="CheckCount_Click" HorizontalAlignment="Left" Padding="12,6" Margin="0,8,0,0"/>
                            <TextBlock x:Name="tbCount" Text="" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 자식 요소 개수 확인&#10;int count = spCount.Children.Count;&#10;tbCount.Text = &quot;자식 요소 수: &quot; + count;"/>
                    </Expander>

                    <!-- 직접 해보기 5_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Children.Count를 사용하여 자식 요소 수를 확인하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void ShowCount()&#x0a;{&#x0a;    // myPanel의 자식 요소 수를 txtResult.Text에 표시&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_3"
                                       Text="힌트: myPanel.Children.Count를 사용합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_3"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
