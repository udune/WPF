<Window x:Class="ch14_스택패널.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch14_스택패널"
        mc:Ignorable="d"
        Title="ch14 StackPanel 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <!-- 예제 시각화를 위한 버튼 스타일 -->
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 기본 StackPanel (Vertical)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Orientation=Vertical (기본값) - 위에서 아래로 쌓임" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 3&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Orientation 기본값은 Vertical --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. Orientation=Horizontal" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="왼쪽에서 오른쪽으로 쌓임" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 3&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 다양한 컨트롤 혼합 배치" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="TextBlock, TextBox, Button 등을 함께 배치" Margin="0,0,0,8">
                        <StackPanel Background="LightGray" Margin="4">
                            <TextBlock Text="이름을 입력하세요:" Margin="4"/>
                            <TextBox Width="200" HorizontalAlignment="Left" Margin="4"/>
                            <Button Content="확인" HorizontalAlignment="Left" Padding="12,6" Margin="4"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;TextBlock Text=&quot;이름을 입력하세요:&quot;/&gt;&#10;    &lt;TextBox Width=&quot;200&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;Button Content=&quot;확인&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="4. Vertical vs Horizontal 비교" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="같은 자식 요소, 다른 방향" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="200" Background="#E3F2FD" Margin="0,0,20,0">
                                <TextBlock Text="Vertical" FontWeight="Bold" HorizontalAlignment="Center" Margin="4"/>
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Background="#E8F5E9" Height="80">
                                <TextBlock Text="Horizontal" FontWeight="Bold" VerticalAlignment="Center" Margin="4"/>
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- Vertical (기본) --&gt;&#10;&lt;StackPanel Orientation=&quot;Vertical&quot;&gt;&#10;    &lt;Button Content=&quot;A&quot;/&gt;&#10;    &lt;Button Content=&quot;B&quot;/&gt;&#10;    &lt;Button Content=&quot;C&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Horizontal --&gt;&#10;&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Button Content=&quot;A&quot;/&gt;&#10;    &lt;Button Content=&quot;B&quot;/&gt;&#10;    &lt;Button Content=&quot;C&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 정렬 (Alignment) -->
        <TabItem Header="정렬 (Alignment)">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Vertical StackPanel에서 HorizontalAlignment" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="자식 요소의 가로 정렬" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="Left" HorizontalAlignment="Left" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Center" HorizontalAlignment="Center" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Right" HorizontalAlignment="Right" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Stretch (기본)" HorizontalAlignment="Stretch" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Vertical&quot;&gt;&#10;    &lt;Button Content=&quot;Left&quot; HorizontalAlignment=&quot;Left&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; HorizontalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Button Content=&quot;Right&quot; HorizontalAlignment=&quot;Right&quot;/&gt;&#10;    &lt;Button Content=&quot;Stretch (기본)&quot; HorizontalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Vertical StackPanel에서는 HorizontalAlignment가 적용됨 --&gt;&#10;&lt;!-- VerticalAlignment는 무시됨 (각 자식 높이가 콘텐츠에 맞춰짐) --&gt;"/>
                    </Expander>

                    <TextBlock Text="2. Horizontal StackPanel에서 VerticalAlignment" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="자식 요소의 세로 정렬" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Height="120" Background="LightGray">
                            <Button Content="Top" VerticalAlignment="Top" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Center" VerticalAlignment="Center" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Bottom" VerticalAlignment="Bottom" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="Stretch" VerticalAlignment="Stretch" Style="{StaticResource DemoButtonStyle}"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Height=&quot;120&quot;&gt;&#10;    &lt;Button Content=&quot;Top&quot; VerticalAlignment=&quot;Top&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Button Content=&quot;Bottom&quot; VerticalAlignment=&quot;Bottom&quot;/&gt;&#10;    &lt;Button Content=&quot;Stretch&quot; VerticalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Horizontal StackPanel에서는 VerticalAlignment가 적용됨 --&gt;&#10;&lt;!-- HorizontalAlignment는 무시됨 (각 자식 너비가 콘텐츠에 맞춰짐) --&gt;"/>
                    </Expander>

                    <TextBlock Text="3. Margin으로 간격 조절" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Margin을 사용해 자식 요소 사이 간격 설정" Margin="0,0,0,8">
                        <StackPanel Background="LightGray">
                            <Button Content="Margin=4" Margin="4" Padding="12,6"/>
                            <Button Content="Margin=10" Margin="10" Padding="12,6"/>
                            <Button Content="Margin=&quot;20,4,20,4&quot;" Margin="20,4,20,4" Padding="12,6"/>
                            <Button Content="Margin=&quot;0,0,0,20&quot; (아래만)" Margin="0,0,0,20" Padding="12,6"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;Button Content=&quot;Margin=4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;Margin=10&quot; Margin=&quot;10&quot;/&gt;&#10;    &lt;Button Content=&quot;좌우20, 상하4&quot; Margin=&quot;20,4,20,4&quot;/&gt;&#10;    &lt;Button Content=&quot;아래만 20&quot; Margin=&quot;0,0,0,20&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- Margin=&quot;전체&quot; --&gt;&#10;&lt;!-- Margin=&quot;좌우, 상하&quot; --&gt;&#10;&lt;!-- Margin=&quot;좌, 상, 우, 하&quot; --&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 중첩과 레이아웃 패턴 -->
        <TabItem Header="중첩과 레이아웃 패턴">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. StackPanel 중첩" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="Vertical 안에 Horizontal 중첩 (가장 흔한 패턴)" Margin="0,0,0,8">
                        <StackPanel Background="#F5F5F5">
                            <TextBlock Text="항목 1" FontWeight="Bold" Margin="8,8,8,4"/>
                            <StackPanel Orientation="Horizontal" Margin="8,0,8,8">
                                <Button Content="수정" Padding="12,4" Margin="0,0,4,0"/>
                                <Button Content="삭제" Padding="12,4"/>
                            </StackPanel>
                            <TextBlock Text="항목 2" FontWeight="Bold" Margin="8,8,8,4"/>
                            <StackPanel Orientation="Horizontal" Margin="8,0,8,8">
                                <Button Content="수정" Padding="12,4" Margin="0,0,4,0"/>
                                <Button Content="삭제" Padding="12,4"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Vertical&quot;&gt;&#10;    &lt;TextBlock Text=&quot;항목 1&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Button Content=&quot;수정&quot;/&gt;&#10;        &lt;Button Content=&quot;삭제&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;    &lt;TextBlock Text=&quot;항목 2&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;        &lt;Button Content=&quot;수정&quot;/&gt;&#10;        &lt;Button Content=&quot;삭제&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="2. 폼 레이아웃 패턴" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="라벨-입력 쌍을 Horizontal로, 전체는 Vertical로" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="이름: " Width="60" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="이메일: " Width="60" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="전화: " Width="60" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                <Button Content="저장" Padding="12,6" Margin="0,0,4,0"/>
                                <Button Content="취소" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot; Margin=&quot;0,0,0,8&quot;&gt;&#10;        &lt;TextBlock Text=&quot;이름: &quot; Width=&quot;60&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;        &lt;TextBox Width=&quot;200&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot; Margin=&quot;0,0,0,8&quot;&gt;&#10;        &lt;TextBlock Text=&quot;이메일: &quot; Width=&quot;60&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;        &lt;TextBox Width=&quot;200&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;    &lt;StackPanel Orientation=&quot;Horizontal&quot; HorizontalAlignment=&quot;Right&quot;&gt;&#10;        &lt;Button Content=&quot;저장&quot;/&gt;&#10;        &lt;Button Content=&quot;취소&quot;/&gt;&#10;    &lt;/StackPanel&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="3. 도구 모음(Toolbar) 패턴" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Horizontal StackPanel로 도구 모음 구성" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Background="#E0E0E0" Height="40">
                            <Button Content="새로 만들기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="열기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="저장" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Separator Margin="4,8"/>
                            <Button Content="잘라내기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="복사" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                            <Button Content="붙여넣기" Padding="8,4" Margin="4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Orientation=&quot;Horizontal&quot; Background=&quot;#E0E0E0&quot; Height=&quot;40&quot;&gt;&#10;    &lt;Button Content=&quot;새로 만들기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;열기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;저장&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Separator Margin=&quot;4,8&quot;/&gt;&#10;    &lt;Button Content=&quot;잘라내기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;복사&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;    &lt;Button Content=&quot;붙여넣기&quot; Padding=&quot;8,4&quot; Margin=&quot;4&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 스타일과 외관 -->
        <TabItem Header="스타일과 외관">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. Background" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="StackPanel에 배경색 적용" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Background="LightBlue" Margin="0,0,0,8">
                                <TextBlock Text="LightBlue 배경" Margin="10"/>
                            </StackPanel>
                            <StackPanel Background="#FFE0B2" Margin="0,0,0,8">
                                <TextBlock Text="#FFE0B2 (Hex 색상) 배경" Margin="10"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,8">
                                <StackPanel.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="LightPink" Offset="0"/>
                                        <GradientStop Color="LightBlue" Offset="1"/>
                                    </LinearGradientBrush>
                                </StackPanel.Background>
                                <TextBlock Text="LinearGradientBrush 배경" Margin="10"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Background=&quot;LightBlue&quot;&gt; ... &lt;/StackPanel&gt;&#10;&lt;StackPanel Background=&quot;#FFE0B2&quot;&gt; ... &lt;/StackPanel&gt;&#10;&#10;&lt;!-- 그라데이션 배경 --&gt;&#10;&lt;StackPanel&gt;&#10;    &lt;StackPanel.Background&gt;&#10;        &lt;LinearGradientBrush StartPoint=&quot;0,0&quot; EndPoint=&quot;1,0&quot;&gt;&#10;            &lt;GradientStop Color=&quot;LightPink&quot; Offset=&quot;0&quot;/&gt;&#10;            &lt;GradientStop Color=&quot;LightBlue&quot; Offset=&quot;1&quot;/&gt;&#10;        &lt;/LinearGradientBrush&gt;&#10;    &lt;/StackPanel.Background&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="2. StackPanel 자체의 정렬과 크기" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="HorizontalAlignment, Width, Height" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Background="LightGreen" HorizontalAlignment="Left" Margin="0,0,0,4">
                                <TextBlock Text="HorizontalAlignment=Left" Margin="8"/>
                            </StackPanel>
                            <StackPanel Background="LightCoral" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <TextBlock Text="HorizontalAlignment=Center" Margin="8"/>
                            </StackPanel>
                            <StackPanel Background="LightSkyBlue" Width="300" HorizontalAlignment="Left">
                                <TextBlock Text="Width=300" Margin="8"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;StackPanel Background=&quot;LightGreen&quot; HorizontalAlignment=&quot;Left&quot;&gt;&#10;    &lt;TextBlock Text=&quot;HorizontalAlignment=Left&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;StackPanel Background=&quot;LightCoral&quot; HorizontalAlignment=&quot;Center&quot;&gt;&#10;    &lt;TextBlock Text=&quot;HorizontalAlignment=Center&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;StackPanel Background=&quot;LightSkyBlue&quot; Width=&quot;300&quot;&gt;&#10;    &lt;TextBlock Text=&quot;Width=300&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>

                    <TextBlock Text="3. FlowDirection (RTL 지원)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="FlowDirection으로 쌓이는 방향 반전" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Background="#E3F2FD" Margin="0,0,0,8">
                                <TextBlock Text="LeftToRight (기본): " VerticalAlignment="Center" Margin="4"/>
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="#FFF3E0">
                                <TextBlock Text="RightToLeft: " VerticalAlignment="Center" Margin="4"/>
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- 기본: 왼쪽에서 오른쪽 --&gt;&#10;&lt;StackPanel Orientation=&quot;Horizontal&quot;&gt;&#10;    &lt;Button Content=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;2&quot;/&gt;&#10;    &lt;Button Content=&quot;3&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&#10;&lt;!-- 오른쪽에서 왼쪽 (RTL) --&gt;&#10;&lt;StackPanel Orientation=&quot;Horizontal&quot; FlowDirection=&quot;RightToLeft&quot;&gt;&#10;    &lt;Button Content=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;2&quot;/&gt;&#10;    &lt;Button Content=&quot;3&quot;/&gt;&#10;&lt;/StackPanel&gt;"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 코드비하인드 -->
        <TabItem Header="코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="1. 동적으로 자식 요소 추가" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <GroupBox Header="버튼 클릭 시 StackPanel에 요소 추가" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spDynamic" Background="#F5F5F5" MinHeight="40" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="버튼 추가" Click="AddButton_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="텍스트 추가" Click="AddText_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="전체 삭제" Click="ClearAll_Click" Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;StackPanel x:Name=&quot;spDynamic&quot; Background=&quot;#F5F5F5&quot;/&gt;&#10;&lt;Button Content=&quot;버튼 추가&quot; Click=&quot;AddButton_Click&quot;/&gt;&#10;&lt;Button Content=&quot;텍스트 추가&quot; Click=&quot;AddText_Click&quot;/&gt;&#10;&lt;Button Content=&quot;전체 삭제&quot; Click=&quot;ClearAll_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private int count = 0;&#10;private void AddButton_Click(object sender, RoutedEventArgs e)&#10;{&#10;    count++;&#10;    spDynamic.Children.Add(new Button&#10;    {&#10;        Content = &quot;동적 버튼 &quot; + count,&#10;        Margin = new Thickness(4),&#10;        Padding = new Thickness(12, 4, 12, 4)&#10;    });&#10;}&#10;private void AddText_Click(object sender, RoutedEventArgs e)&#10;{&#10;    count++;&#10;    spDynamic.Children.Add(new TextBlock&#10;    {&#10;        Text = &quot;동적 텍스트 &quot; + count,&#10;        Margin = new Thickness(4)&#10;    });&#10;}&#10;private void ClearAll_Click(object sender, RoutedEventArgs e)&#10;{&#10;    spDynamic.Children.Clear();&#10;    count = 0;&#10;}"/>
                    </Expander>

                    <TextBlock Text="2. Orientation 동적 변경" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="버튼으로 Vertical / Horizontal 전환" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spOrientation" Background="#E8F5E9" MinHeight="50">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Vertical로 변경" Click="SetVertical_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="Horizontal로 변경" Click="SetHorizontal_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbOrientation" Text="현재: Vertical" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;StackPanel x:Name=&quot;spOrientation&quot;&gt;&#10;    &lt;Button Content=&quot;A&quot;/&gt;&#10;    &lt;Button Content=&quot;B&quot;/&gt;&#10;    &lt;Button Content=&quot;C&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&lt;Button Content=&quot;Vertical로 변경&quot; Click=&quot;SetVertical_Click&quot;/&gt;&#10;&lt;Button Content=&quot;Horizontal로 변경&quot; Click=&quot;SetHorizontal_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void SetVertical_Click(object sender, RoutedEventArgs e)&#10;{&#10;    spOrientation.Orientation = Orientation.Vertical;&#10;    tbOrientation.Text = &quot;현재: Vertical&quot;;&#10;}&#10;private void SetHorizontal_Click(object sender, RoutedEventArgs e)&#10;{&#10;    spOrientation.Orientation = Orientation.Horizontal;&#10;    tbOrientation.Text = &quot;현재: Horizontal&quot;;&#10;}"/>
                    </Expander>

                    <TextBlock Text="3. 자식 요소 개수 확인" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>

                    <GroupBox Header="Children.Count로 자식 요소 수 확인" Margin="0,0,0,8">
                        <StackPanel>
                            <StackPanel x:Name="spCount" Background="#FFF3E0">
                                <TextBlock Text="요소 1" Margin="4"/>
                                <TextBlock Text="요소 2" Margin="4"/>
                                <TextBlock Text="요소 3" Margin="4"/>
                            </StackPanel>
                            <Button Content="자식 요소 개수 확인" Click="CheckCount_Click" HorizontalAlignment="Left" Padding="12,6" Margin="0,8,0,0"/>
                            <TextBlock x:Name="tbCount" Text="" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;!-- XAML --&gt;&#10;&lt;StackPanel x:Name=&quot;spCount&quot;&gt;&#10;    &lt;TextBlock Text=&quot;요소 1&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;요소 2&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;요소 3&quot;/&gt;&#10;&lt;/StackPanel&gt;&#10;&lt;Button Content=&quot;자식 요소 개수 확인&quot; Click=&quot;CheckCount_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void CheckCount_Click(object sender, RoutedEventArgs e)&#10;{&#10;    tbCount.Text = &quot;자식 요소 수: &quot; + spCount.Children.Count;&#10;}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
