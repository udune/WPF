<Window x:Class="ch15_랩패널.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch15_랩패널"
        mc:Ignorable="d"
        Title="ch15 WrapPanel 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>

        <!-- 직접 해보기 스타일 -->
        <Style x:Key="PracticeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="직접 해보기"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="PracticeInputStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="RunButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="HintButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>

        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="1. 기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="WrapPanel 기본 사용법" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 기본 Horizontal -->
                    <GroupBox Header="Horizontal (기본값) - 공간 부족 시 자동 줄바꿈" Margin="0,0,0,8">
                        <WrapPanel Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 4" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 5" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 6" Style="{StaticResource DemoButtonStyle}"/>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 3&quot;/&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;&#10;&#10;&lt;!-- Orientation 기본값은 Horizontal --&gt;&#10;&lt;!-- 가로로 배치하다 공간 부족 시 다음 줄로 이동 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: WrapPanel 안에 Button 3개를 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_1"
                                       Text="힌트: &lt;Button Content=&quot;버튼&quot;/&gt;을 3개 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- Vertical -->
                    <GroupBox Header="Orientation=Vertical - 세로로 배치 후 다음 열로" Margin="0,0,0,8">
                        <WrapPanel Orientation="Vertical" Height="120" Background="LightGray">
                            <Button Content="버튼 1" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 2" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 3" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 4" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 5" Style="{StaticResource DemoButtonStyle}"/>
                            <Button Content="버튼 6" Style="{StaticResource DemoButtonStyle}"/>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel Orientation=&quot;Vertical&quot; Height=&quot;120&quot;&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;&#10;&#10;&lt;!-- 세로로 배치하다 높이 초과 시 다음 열로 이동 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 1_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Orientation이 Vertical인 WrapPanel을 만들어보세요. (Height=&quot;100&quot; 필요)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice1_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel Height=&quot;100&quot;&gt;&#x0a;    &lt;Button Content=&quot;A&quot;/&gt;&#x0a;    &lt;Button Content=&quot;B&quot;/&gt;&#x0a;    &lt;Button Content=&quot;C&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="1_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="1_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="1_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint1_2"
                                       Text="힌트: Orientation=&quot;Vertical&quot;을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder1_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel1_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- StackPanel과 비교 -->
                    <GroupBox Header="StackPanel vs WrapPanel 비교" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="StackPanel (줄바꿈 없음)" FontWeight="Bold" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal" Background="#FFCDD2" Height="40">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="D" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="E" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="F" Style="{StaticResource DemoButtonStyle}"/>
                            </StackPanel>
                            <TextBlock Text="WrapPanel (자동 줄바꿈)" FontWeight="Bold" Margin="0,12,0,4"/>
                            <WrapPanel Background="#C8E6C9">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="D" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="E" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="F" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: ItemWidth / ItemHeight -->
        <TabItem Header="2. ItemWidth/Height">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="ItemWidth / ItemHeight 속성" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- ItemWidth -->
                    <GroupBox Header="ItemWidth (균일한 너비)" Margin="0,0,0,8">
                        <WrapPanel ItemWidth="100" Background="LightGray">
                            <Button Content="짧은" Margin="4" Padding="4"/>
                            <Button Content="조금 긴 텍스트" Margin="4" Padding="4"/>
                            <Button Content="A" Margin="4" Padding="4"/>
                            <Button Content="중간" Margin="4" Padding="4"/>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel ItemWidth=&quot;100&quot;&gt;&#10;    &lt;Button Content=&quot;짧은&quot;/&gt;&#10;    &lt;Button Content=&quot;조금 긴 텍스트&quot;/&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;&#10;&#10;&lt;!-- 모든 자식이 100px 너비 셀 안에 배치됨 --&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ItemWidth=&quot;120&quot;을 설정한 WrapPanel을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Button Content=&quot;항목 1&quot;/&gt;&#x0a;    &lt;Button Content=&quot;항목 2&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_1"
                                       Text="힌트: ItemWidth=&quot;120&quot;을 WrapPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- ItemHeight -->
                    <GroupBox Header="ItemHeight (균일한 높이)" Margin="0,0,0,8">
                        <WrapPanel ItemHeight="50" Background="LightGray">
                            <Button Content="Top" Margin="4" Padding="8,4" VerticalAlignment="Top"/>
                            <Button Content="Center" Margin="4" Padding="8,4" VerticalAlignment="Center"/>
                            <Button Content="Bottom" Margin="4" Padding="8,4" VerticalAlignment="Bottom"/>
                            <Button Content="Stretch" Margin="4" Padding="8,4" VerticalAlignment="Stretch"/>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel ItemHeight=&quot;50&quot;&gt;&#10;    &lt;Button Content=&quot;Top&quot; VerticalAlignment=&quot;Top&quot;/&gt;&#10;    &lt;Button Content=&quot;Center&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;Button Content=&quot;Bottom&quot; VerticalAlignment=&quot;Bottom&quot;/&gt;&#10;    &lt;Button Content=&quot;Stretch&quot; VerticalAlignment=&quot;Stretch&quot;/&gt;&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ItemHeight=&quot;60&quot;을 설정한 WrapPanel을 만들어보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Button Content=&quot;항목 1&quot;/&gt;&#x0a;    &lt;Button Content=&quot;항목 2&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_2"
                                       Text="힌트: ItemHeight=&quot;60&quot;을 WrapPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- ItemWidth + ItemHeight -->
                    <GroupBox Header="ItemWidth + ItemHeight (그리드 효과)" Margin="0,0,0,8">
                        <WrapPanel ItemWidth="120" ItemHeight="50" Background="LightGray">
                            <Button Content="항목 1" Margin="4" Padding="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Button Content="항목 2" Margin="4" Padding="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Button Content="항목 3" Margin="4" Padding="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Button Content="항목 4" Margin="4" Padding="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel ItemWidth=&quot;120&quot; ItemHeight=&quot;50&quot;&gt;&#10;    &lt;Button Content=&quot;항목 1&quot; HorizontalAlignment=&quot;Stretch&quot; VerticalAlignment=&quot;Stretch&quot;/&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 2_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ItemWidth=&quot;100&quot;과 ItemHeight=&quot;40&quot;을 함께 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice2_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Button Content=&quot;A&quot;/&gt;&#x0a;    &lt;Button Content=&quot;B&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="2_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="2_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="2_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint2_3"
                                       Text="힌트: ItemWidth=&quot;100&quot; ItemHeight=&quot;40&quot;을 함께 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder2_3" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel2_3"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: 실용 패턴 -->
        <TabItem Header="3. 실용 패턴">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="WrapPanel 실용 패턴" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 태그 목록 -->
                    <GroupBox Header="태그(Tag) 목록 패턴" Margin="0,0,0,8">
                        <WrapPanel>
                            <Border Background="#E3F2FD" CornerRadius="12" Padding="10,4" Margin="4">
                                <TextBlock Text="C#" Foreground="#1565C0"/>
                            </Border>
                            <Border Background="#E8F5E9" CornerRadius="12" Padding="10,4" Margin="4">
                                <TextBlock Text="WPF" Foreground="#2E7D32"/>
                            </Border>
                            <Border Background="#FFF3E0" CornerRadius="12" Padding="10,4" Margin="4">
                                <TextBlock Text="XAML" Foreground="#E65100"/>
                            </Border>
                            <Border Background="#FCE4EC" CornerRadius="12" Padding="10,4" Margin="4">
                                <TextBlock Text="MVVM" Foreground="#C62828"/>
                            </Border>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel&gt;&#10;    &lt;Border Background=&quot;#E3F2FD&quot; CornerRadius=&quot;12&quot; Padding=&quot;10,4&quot; Margin=&quot;4&quot;&gt;&#10;        &lt;TextBlock Text=&quot;C#&quot; Foreground=&quot;#1565C0&quot;/&gt;&#10;    &lt;/Border&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Border와 TextBlock을 사용해 태그 스타일을 만들어보세요. (CornerRadius=&quot;10&quot;, Padding=&quot;8,4&quot;)" FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Border Background=&quot;LightBlue&quot;&gt;&#x0a;        &lt;TextBlock Text=&quot;태그&quot;/&gt;&#x0a;    &lt;/Border&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_1"
                                       Text="힌트: Border에 CornerRadius와 Padding을 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- 이미지 갤러리 패턴 -->
                    <GroupBox Header="이미지 갤러리 패턴" Margin="0,0,0,8">
                        <WrapPanel ItemWidth="150" ItemHeight="100">
                            <Border Background="#BBDEFB" Margin="4" CornerRadius="4">
                                <TextBlock Text="사진 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#C8E6C9" Margin="4" CornerRadius="4">
                                <TextBlock Text="사진 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#FFE0B2" Margin="4" CornerRadius="4">
                                <TextBlock Text="사진 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#F8BBD0" Margin="4" CornerRadius="4">
                                <TextBlock Text="사진 4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </WrapPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel ItemWidth=&quot;150&quot; ItemHeight=&quot;100&quot;&gt;&#10;    &lt;Border Background=&quot;#BBDEFB&quot; Margin=&quot;4&quot; CornerRadius=&quot;4&quot;&gt;&#10;        &lt;TextBlock Text=&quot;사진 1&quot; HorizontalAlignment=&quot;Center&quot; VerticalAlignment=&quot;Center&quot;/&gt;&#10;    &lt;/Border&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 3_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: ItemWidth=&quot;100&quot; ItemHeight=&quot;80&quot;을 설정하고 Border 2개를 배치해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice3_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="120"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Border Background=&quot;LightCoral&quot; Margin=&quot;4&quot;&gt;&#x0a;        &lt;TextBlock Text=&quot;카드 1&quot;/&gt;&#x0a;    &lt;/Border&gt;&#x0a;    &lt;Border Background=&quot;LightGreen&quot; Margin=&quot;4&quot;&gt;&#x0a;        &lt;TextBlock Text=&quot;카드 2&quot;/&gt;&#x0a;    &lt;/Border&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="3_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="3_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="3_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint3_2"
                                       Text="힌트: WrapPanel에 ItemWidth와 ItemHeight를 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder3_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel3_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 스타일과 외관 -->
        <TabItem Header="4. 스타일">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="WrapPanel 스타일과 외관" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Background -->
                    <GroupBox Header="Background 설정" Margin="0,0,0,8">
                        <StackPanel>
                            <WrapPanel Background="LightBlue" Margin="0,0,0,8">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                            <WrapPanel Background="#FFE0B2">
                                <Button Content="D" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="E" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="F" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel Background=&quot;LightBlue&quot;&gt;&#10;    &lt;Button Content=&quot;A&quot;/&gt;&#10;    &lt;Button Content=&quot;B&quot;/&gt;&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: WrapPanel에 Background=&quot;LightGreen&quot;을 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Button Content=&quot;버튼 1&quot;/&gt;&#x0a;    &lt;Button Content=&quot;버튼 2&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_1"
                                       Text="힌트: Background=&quot;LightGreen&quot;을 WrapPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_1" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_1"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <!-- FlowDirection -->
                    <GroupBox Header="FlowDirection (RTL 지원)" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="LeftToRight (기본)" FontWeight="Bold" Margin="0,0,0,4"/>
                            <WrapPanel Background="#E3F2FD" Margin="0,0,0,8">
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="4" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                            <TextBlock Text="RightToLeft" FontWeight="Bold" Margin="0,0,0,4"/>
                            <WrapPanel FlowDirection="RightToLeft" Background="#FFF3E0">
                                <Button Content="1" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="2" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="3" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="4" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="&lt;WrapPanel FlowDirection=&quot;RightToLeft&quot;&gt;&#10;    &lt;Button Content=&quot;1&quot;/&gt;&#10;    &lt;Button Content=&quot;2&quot;/&gt;&#10;    ...&#10;&lt;/WrapPanel&gt;"/>
                    </Expander>

                    <!-- 직접 해보기 4_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: FlowDirection=&quot;RightToLeft&quot;를 설정해보세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice4_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="80"
                                     Text="&lt;WrapPanel&gt;&#x0a;    &lt;Button Content=&quot;첫번째&quot;/&gt;&#x0a;    &lt;Button Content=&quot;두번째&quot;/&gt;&#x0a;&lt;/WrapPanel&gt;"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="실행" Style="{StaticResource RunButtonStyle}" Click="BtnRun_Click" Tag="4_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="4_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="4_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint4_2"
                                       Text="힌트: FlowDirection=&quot;RightToLeft&quot;를 WrapPanel에 추가합니다."
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <Border x:Name="resultBorder4_2" Background="White" Margin="0,8,0,0" Padding="10" Visibility="Collapsed">
                                <StackPanel x:Name="resultPanel4_2"/>
                            </Border>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 5: 코드비하인드 -->
        <TabItem Header="5. 코드비하인드">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="코드비하인드에서 WrapPanel 제어" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- 동적 요소 추가 -->
                    <GroupBox Header="동적으로 자식 요소 추가" Margin="0,0,0,8">
                        <StackPanel>
                            <WrapPanel x:Name="wpDynamic" Background="#F5F5F5" MinHeight="40" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="버튼 추가" Click="AddItem_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="전체 삭제" Click="ClearItems_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbDynamicCount" Text="자식 요소: 0개" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// 버튼 추가&#10;wpDynamic.Children.Add(new Button&#10;{&#10;    Content = &quot;항목&quot;,&#10;    Margin = new Thickness(4)&#10;});&#10;&#10;// 전체 삭제&#10;wpDynamic.Children.Clear();"/>
                    </Expander>

                    <!-- 직접 해보기 5_1 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: Children.Add를 사용하여 Button을 추가하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_1"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void AddButton()&#x0a;{&#x0a;    // myWrapPanel에 Button 추가&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_1"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_1"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_1"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_1"
                                       Text="힌트: myWrapPanel.Children.Add(new Button { ... });"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_1"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- Orientation 변경 -->
                    <GroupBox Header="Orientation 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <WrapPanel x:Name="wpOrientation" Background="#E8F5E9" MinHeight="80" Height="120">
                                <Button Content="A" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="B" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="C" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="D" Style="{StaticResource DemoButtonStyle}"/>
                                <Button Content="E" Style="{StaticResource DemoButtonStyle}"/>
                            </WrapPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Horizontal" Click="SetWrapHorizontal_Click" Padding="12,6" Margin="0,0,8,0"/>
                                <Button Content="Vertical" Click="SetWrapVertical_Click" Padding="12,6"/>
                            </StackPanel>
                            <TextBlock x:Name="tbWrapOrientation" Text="현재: Horizontal" FontSize="13" Margin="0,6,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// Horizontal로 변경&#10;wpOrientation.Orientation = Orientation.Horizontal;&#10;&#10;// Vertical로 변경&#10;wpOrientation.Orientation = Orientation.Vertical;"/>
                    </Expander>

                    <!-- 직접 해보기 5_2 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: WrapPanel의 Orientation을 Vertical로 변경하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_2"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void ChangeOrientation()&#x0a;{&#x0a;    // myWrapPanel의 Orientation 변경&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_2"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_2"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_2"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_2"
                                       Text="힌트: .Orientation = Orientation.Vertical;"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_2"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                    <!-- ItemWidth 변경 -->
                    <GroupBox Header="ItemWidth 동적 변경" Margin="0,0,0,8">
                        <StackPanel>
                            <WrapPanel x:Name="wpItemWidth" ItemWidth="100" Background="#FFF3E0" MinHeight="60">
                                <Button Content="항목 1" Margin="4" Padding="4" HorizontalAlignment="Stretch"/>
                                <Button Content="항목 2" Margin="4" Padding="4" HorizontalAlignment="Stretch"/>
                                <Button Content="항목 3" Margin="4" Padding="4" HorizontalAlignment="Stretch"/>
                                <Button Content="항목 4" Margin="4" Padding="4" HorizontalAlignment="Stretch"/>
                            </WrapPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="ItemWidth: " VerticalAlignment="Center"/>
                                <Slider x:Name="sliderItemWidth" Minimum="60" Maximum="250" Value="100" Width="300"
                                        ValueChanged="sliderItemWidth_ValueChanged" VerticalAlignment="Center"/>
                                <TextBlock x:Name="tbItemWidth" Text="100" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Expander Style="{StaticResource CodeExpanderStyle}">
                        <TextBox Style="{StaticResource CodeTextBoxStyle}" Text="// ItemWidth 변경&#10;wpItemWidth.ItemWidth = sliderItemWidth.Value;"/>
                    </Expander>

                    <!-- 직접 해보기 5_3 -->
                    <Expander Style="{StaticResource PracticeExpanderStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Text="과제: WrapPanel의 ItemWidth를 150으로 변경하는 코드를 작성하세요." FontWeight="Bold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                            <TextBox x:Name="txtPractice5_3"
                                     Style="{StaticResource PracticeInputStyle}"
                                     Height="100"
                                     Text="private void ChangeItemWidth()&#x0a;{&#x0a;    // myWrapPanel의 ItemWidth 변경&#x0a;    &#x0a;}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="확인" Style="{StaticResource RunButtonStyle}" Click="BtnCheck_Click" Tag="5_3"/>
                                <Button Content="힌트" Style="{StaticResource HintButtonStyle}" Click="BtnHint_Click" Tag="5_3"/>
                                <Button Content="정답 보기" Style="{StaticResource AnswerButtonStyle}" Click="BtnAnswer_Click" Tag="5_3"/>
                            </StackPanel>
                            <TextBlock x:Name="txtHint5_3"
                                       Text="힌트: .ItemWidth = 150;"
                                       Foreground="#FF9800" Margin="0,5,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                            <TextBlock x:Name="txtResult5_3"
                                       Margin="0,8,0,0" FontWeight="Bold" Visibility="Collapsed"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>
