<Window x:Class="ch19_캔버스.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch19_캔버스"
        mc:Ignorable="d"
        Title="ch19 Canvas 튜토리얼" Height="600" Width="850">

    <Window.Resources>
        <Style x:Key="CodeExpanderStyle" TargetType="Expander">
            <Setter Property="Header" Value="코드 보기"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="IsExpanded" Value="False"/>
        </Style>
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <!-- 탭 1: 기본 사용법 -->
        <TabItem Header="기본 사용법">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="Canvas 기본 사용법" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Canvas는 자식 요소를 절대 좌표로 배치하는 패널입니다. 연결 속성(Attached Property)인 Canvas.Left, Canvas.Top, Canvas.Right, Canvas.Bottom을 사용하여 위치를 지정합니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 Canvas -->
                    <GroupBox Header="기본 Canvas" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="150" Background="#F5F5F5">
                                <Rectangle Fill="SteelBlue" Width="80" Height="60" Canvas.Left="20" Canvas.Top="20"/>
                                <Ellipse Fill="Coral" Width="70" Height="70" Canvas.Left="120" Canvas.Top="40"/>
                                <TextBlock Text="텍스트" Canvas.Left="220" Canvas.Top="60" FontSize="16"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;150&quot; Background=&quot;#F5F5F5&quot;&gt;&#10;    &lt;Rectangle Fill=&quot;SteelBlue&quot; Width=&quot;80&quot; Height=&quot;60&quot;&#10;               Canvas.Left=&quot;20&quot; Canvas.Top=&quot;20&quot;/&gt;&#10;    &lt;Ellipse Fill=&quot;Coral&quot; Width=&quot;70&quot; Height=&quot;70&quot;&#10;             Canvas.Left=&quot;120&quot; Canvas.Top=&quot;40&quot;/&gt;&#10;    &lt;TextBlock Text=&quot;텍스트&quot; Canvas.Left=&quot;220&quot; Canvas.Top=&quot;60&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: 컨트롤 배치 -->
                    <GroupBox Header="다양한 컨트롤 배치" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="120" Background="#E8F5E9">
                                <Button Content="버튼 1" Canvas.Left="30" Canvas.Top="30"/>
                                <Button Content="버튼 2" Canvas.Left="130" Canvas.Top="50"/>
                                <CheckBox Content="체크박스" Canvas.Left="250" Canvas.Top="40"/>
                                <TextBox Text="텍스트박스" Width="100" Canvas.Left="380" Canvas.Top="35"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;120&quot; Background=&quot;#E8F5E9&quot;&gt;&#10;    &lt;Button Content=&quot;버튼 1&quot; Canvas.Left=&quot;30&quot; Canvas.Top=&quot;30&quot;/&gt;&#10;    &lt;Button Content=&quot;버튼 2&quot; Canvas.Left=&quot;130&quot; Canvas.Top=&quot;50&quot;/&gt;&#10;    &lt;CheckBox Content=&quot;체크박스&quot; Canvas.Left=&quot;250&quot; Canvas.Top=&quot;40&quot;/&gt;&#10;    &lt;TextBox Text=&quot;텍스트박스&quot; Width=&quot;100&quot;&#10;             Canvas.Left=&quot;380&quot; Canvas.Top=&quot;35&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: Canvas 크기 동작 -->
                    <GroupBox Header="Canvas의 크기 특성" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Canvas는 자식 요소의 크기를 고려하지 않습니다. 자식이 Canvas 경계를 벗어나도 클리핑되지 않습니다 (ClipToBounds=False가 기본값)."
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <Border BorderBrush="Gray" BorderThickness="1" Height="100" Width="300">
                                <Canvas Background="#FFF3E0" ClipToBounds="False">
                                    <Rectangle Fill="Orange" Width="100" Height="80" Canvas.Left="230" Canvas.Top="30"/>
                                </Canvas>
                            </Border>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- ClipToBounds=&quot;False&quot;가 기본값 --&gt;&#10;&lt;Border BorderBrush=&quot;Gray&quot; BorderThickness=&quot;1&quot; Height=&quot;100&quot; Width=&quot;300&quot;&gt;&#10;    &lt;Canvas Background=&quot;#FFF3E0&quot; ClipToBounds=&quot;False&quot;&gt;&#10;        &lt;Rectangle Fill=&quot;Orange&quot; Width=&quot;100&quot; Height=&quot;80&quot;&#10;                   Canvas.Left=&quot;230&quot; Canvas.Top=&quot;30&quot;/&gt;&#10;    &lt;/Canvas&gt;&#10;&lt;/Border&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 2: 위치 지정 -->
        <TabItem Header="위치 지정">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="위치 지정 속성" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Canvas는 4개의 연결 속성으로 위치를 지정합니다: Canvas.Left(왼쪽에서), Canvas.Top(위에서), Canvas.Right(오른쪽에서), Canvas.Bottom(아래에서)."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: Left와 Top -->
                    <GroupBox Header="Canvas.Left와 Canvas.Top" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="130" Background="#E3F2FD">
                                <Button Content="Left=10, Top=10" Canvas.Left="10" Canvas.Top="10"/>
                                <Button Content="Left=150, Top=50" Canvas.Left="150" Canvas.Top="50"/>
                                <Button Content="Left=300, Top=80" Canvas.Left="300" Canvas.Top="80"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;130&quot; Background=&quot;#E3F2FD&quot;&gt;&#10;    &lt;Button Content=&quot;Left=10, Top=10&quot;&#10;            Canvas.Left=&quot;10&quot; Canvas.Top=&quot;10&quot;/&gt;&#10;    &lt;Button Content=&quot;Left=150, Top=50&quot;&#10;            Canvas.Left=&quot;150&quot; Canvas.Top=&quot;50&quot;/&gt;&#10;    &lt;Button Content=&quot;Left=300, Top=80&quot;&#10;            Canvas.Left=&quot;300&quot; Canvas.Top=&quot;80&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: Right와 Bottom -->
                    <GroupBox Header="Canvas.Right와 Canvas.Bottom" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="130" Background="#FCE4EC">
                                <Button Content="Right=10, Bottom=10" Canvas.Right="10" Canvas.Bottom="10"/>
                                <Button Content="Right=200, Bottom=50" Canvas.Right="200" Canvas.Bottom="50"/>
                                <Button Content="Right=400, Top=10" Canvas.Right="400" Canvas.Top="10"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;130&quot; Background=&quot;#FCE4EC&quot;&gt;&#10;    &lt;Button Content=&quot;Right=10, Bottom=10&quot;&#10;            Canvas.Right=&quot;10&quot; Canvas.Bottom=&quot;10&quot;/&gt;&#10;    &lt;Button Content=&quot;Right=200, Bottom=50&quot;&#10;            Canvas.Right=&quot;200&quot; Canvas.Bottom=&quot;50&quot;/&gt;&#10;    &lt;Button Content=&quot;Right=400, Top=10&quot;&#10;            Canvas.Right=&quot;400&quot; Canvas.Top=&quot;10&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 모서리 배치 -->
                    <GroupBox Header="4개 모서리에 배치" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="150" Background="#F3E5F5">
                                <Rectangle Fill="Purple" Width="60" Height="40" Canvas.Left="5" Canvas.Top="5"/>
                                <Rectangle Fill="Indigo" Width="60" Height="40" Canvas.Right="5" Canvas.Top="5"/>
                                <Rectangle Fill="DarkMagenta" Width="60" Height="40" Canvas.Left="5" Canvas.Bottom="5"/>
                                <Rectangle Fill="Violet" Width="60" Height="40" Canvas.Right="5" Canvas.Bottom="5"/>
                                <TextBlock Text="중앙" Canvas.Left="370" Canvas.Top="65" FontSize="14"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;150&quot; Background=&quot;#F3E5F5&quot;&gt;&#10;    &lt;!-- 좌상단 --&gt;&#10;    &lt;Rectangle Fill=&quot;Purple&quot; Width=&quot;60&quot; Height=&quot;40&quot;&#10;               Canvas.Left=&quot;5&quot; Canvas.Top=&quot;5&quot;/&gt;&#10;    &lt;!-- 우상단 --&gt;&#10;    &lt;Rectangle Fill=&quot;Indigo&quot; Width=&quot;60&quot; Height=&quot;40&quot;&#10;               Canvas.Right=&quot;5&quot; Canvas.Top=&quot;5&quot;/&gt;&#10;    &lt;!-- 좌하단 --&gt;&#10;    &lt;Rectangle Fill=&quot;DarkMagenta&quot; Width=&quot;60&quot; Height=&quot;40&quot;&#10;               Canvas.Left=&quot;5&quot; Canvas.Bottom=&quot;5&quot;/&gt;&#10;    &lt;!-- 우하단 --&gt;&#10;    &lt;Rectangle Fill=&quot;Violet&quot; Width=&quot;60&quot; Height=&quot;40&quot;&#10;               Canvas.Right=&quot;5&quot; Canvas.Bottom=&quot;5&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 위치 미지정 시 -->
                    <GroupBox Header="위치 미지정 시 동작" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="위치를 지정하지 않으면 (0, 0) 좌표에 배치됩니다." Margin="0,0,0,10"/>
                            <Canvas Height="100" Background="#FFFDE7">
                                <Button Content="위치 미지정"/>
                                <Button Content="Left만 지정" Canvas.Left="150"/>
                                <Button Content="Top만 지정" Canvas.Top="50"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;100&quot; Background=&quot;#FFFDE7&quot;&gt;&#10;    &lt;Button Content=&quot;위치 미지정&quot;/&gt;  &lt;!-- (0, 0)에 배치 --&gt;&#10;    &lt;Button Content=&quot;Left만 지정&quot; Canvas.Left=&quot;150&quot;/&gt;&#10;    &lt;Button Content=&quot;Top만 지정&quot; Canvas.Top=&quot;50&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 3: ZIndex와 겹침 -->
        <TabItem Header="ZIndex와 겹침">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="ZIndex와 겹침 순서" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Canvas에서 요소가 겹칠 때 Panel.ZIndex 속성으로 표시 순서를 제어합니다. ZIndex 값이 클수록 위에 표시됩니다. 기본값은 0입니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: 기본 겹침 순서 -->
                    <GroupBox Header="기본 겹침 순서 (XAML 순서)" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ZIndex를 지정하지 않으면 XAML에서 나중에 선언된 요소가 위에 표시됩니다." Margin="0,0,0,10"/>
                            <Canvas Height="150" Background="#ECEFF1">
                                <Rectangle Fill="Red" Width="100" Height="100" Canvas.Left="50" Canvas.Top="25"/>
                                <Rectangle Fill="Green" Width="100" Height="100" Canvas.Left="100" Canvas.Top="35"/>
                                <Rectangle Fill="Blue" Width="100" Height="100" Canvas.Left="150" Canvas.Top="45"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- ZIndex 미지정: 나중 요소가 위에 --&gt;&#10;&lt;Canvas Height=&quot;150&quot; Background=&quot;#ECEFF1&quot;&gt;&#10;    &lt;Rectangle Fill=&quot;Red&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;50&quot; Canvas.Top=&quot;25&quot;/&gt;&#10;    &lt;Rectangle Fill=&quot;Green&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;100&quot; Canvas.Top=&quot;35&quot;/&gt;&#10;    &lt;Rectangle Fill=&quot;Blue&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;150&quot; Canvas.Top=&quot;45&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: ZIndex 사용 -->
                    <GroupBox Header="Panel.ZIndex로 순서 변경" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="빨간색에 가장 높은 ZIndex를 주어 맨 위로 올렸습니다." Margin="0,0,0,10"/>
                            <Canvas Height="150" Background="#ECEFF1">
                                <Rectangle Fill="Red" Width="100" Height="100" Canvas.Left="50" Canvas.Top="25" Panel.ZIndex="3"/>
                                <Rectangle Fill="Green" Width="100" Height="100" Canvas.Left="100" Canvas.Top="35" Panel.ZIndex="1"/>
                                <Rectangle Fill="Blue" Width="100" Height="100" Canvas.Left="150" Canvas.Top="45" Panel.ZIndex="2"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;150&quot; Background=&quot;#ECEFF1&quot;&gt;&#10;    &lt;Rectangle Fill=&quot;Red&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;50&quot; Canvas.Top=&quot;25&quot;&#10;               Panel.ZIndex=&quot;3&quot;/&gt;  &lt;!-- 맨 위 --&gt;&#10;    &lt;Rectangle Fill=&quot;Green&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;100&quot; Canvas.Top=&quot;35&quot;&#10;               Panel.ZIndex=&quot;1&quot;/&gt;  &lt;!-- 맨 아래 --&gt;&#10;    &lt;Rectangle Fill=&quot;Blue&quot; Width=&quot;100&quot; Height=&quot;100&quot;&#10;               Canvas.Left=&quot;150&quot; Canvas.Top=&quot;45&quot;&#10;               Panel.ZIndex=&quot;2&quot;/&gt;  &lt;!-- 중간 --&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 3: 음수 ZIndex -->
                    <GroupBox Header="음수 ZIndex" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ZIndex는 음수도 가능합니다. 값이 작을수록 뒤로 갑니다." Margin="0,0,0,10"/>
                            <Canvas Height="130" Background="#E8EAF6">
                                <Ellipse Fill="Salmon" Width="200" Height="100" Canvas.Left="100" Canvas.Top="15" Panel.ZIndex="-1"/>
                                <TextBlock Text="텍스트가 원 위에" Canvas.Left="150" Canvas.Top="50" FontSize="16" FontWeight="Bold"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;130&quot; Background=&quot;#E8EAF6&quot;&gt;&#10;    &lt;Ellipse Fill=&quot;Salmon&quot; Width=&quot;200&quot; Height=&quot;100&quot;&#10;             Canvas.Left=&quot;100&quot; Canvas.Top=&quot;15&quot;&#10;             Panel.ZIndex=&quot;-1&quot;/&gt;  &lt;!-- 배경으로 --&gt;&#10;    &lt;TextBlock Text=&quot;텍스트가 원 위에&quot;&#10;               Canvas.Left=&quot;150&quot; Canvas.Top=&quot;50&quot;&#10;               FontSize=&quot;16&quot; FontWeight=&quot;Bold&quot;/&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 4: 코드로 ZIndex 변경 -->
                    <GroupBox Header="코드로 ZIndex 변경" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="130" Background="#FFF8E1">
                                <Rectangle x:Name="rectA" Fill="Tomato" Width="80" Height="80" Canvas.Left="150" Canvas.Top="25"/>
                                <Rectangle x:Name="rectB" Fill="MediumSeaGreen" Width="80" Height="80" Canvas.Left="190" Canvas.Top="35"/>
                            </Canvas>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="빨강을 위로" Click="BringRedToFront_Click" Margin="0,0,10,0" Padding="10,5"/>
                                <Button Content="초록을 위로" Click="BringGreenToFront_Click" Padding="10,5"/>
                            </StackPanel>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;!-- XAML --&gt;&#10;&lt;Rectangle x:Name=&quot;rectA&quot; Fill=&quot;Tomato&quot; .../&gt;&#10;&lt;Rectangle x:Name=&quot;rectB&quot; Fill=&quot;MediumSeaGreen&quot; .../&gt;&#10;&lt;Button Content=&quot;빨강을 위로&quot; Click=&quot;BringRedToFront_Click&quot;/&gt;&#10;&#10;// C# 코드비하인드&#10;private void BringRedToFront_Click(object sender, RoutedEventArgs e)&#10;{&#10;    Panel.SetZIndex(rectA, 1);&#10;    Panel.SetZIndex(rectB, 0);&#10;}&#10;private void BringGreenToFront_Click(object sender, RoutedEventArgs e)&#10;{&#10;    Panel.SetZIndex(rectA, 0);&#10;    Panel.SetZIndex(rectB, 1);&#10;}"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- 탭 4: 도형 그리기 -->
        <TabItem Header="도형 그리기">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="Canvas에서 도형 그리기" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Canvas는 그래픽 작업에 최적화된 패널입니다. Rectangle, Ellipse, Line, Polyline, Polygon 등 다양한 도형을 그릴 수 있습니다."
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- 예제 1: Rectangle과 Ellipse -->
                    <GroupBox Header="Rectangle과 Ellipse" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="130" Background="#E0F7FA">
                                <Rectangle Fill="DodgerBlue" Stroke="Navy" StrokeThickness="2"
                                           Width="100" Height="70" Canvas.Left="30" Canvas.Top="30"/>
                                <Ellipse Fill="LightCoral" Stroke="DarkRed" StrokeThickness="2"
                                         Width="100" Height="70" Canvas.Left="160" Canvas.Top="30"/>
                                <Rectangle Fill="Transparent" Stroke="Green" StrokeThickness="3"
                                           Width="80" Height="80" Canvas.Left="290" Canvas.Top="25"
                                           RadiusX="15" RadiusY="15"/>
                                <Ellipse Fill="Gold" Width="60" Height="60" Canvas.Left="400" Canvas.Top="35"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
                                         Text="&lt;Canvas Height=&quot;130&quot; Background=&quot;#E0F7FA&quot;&gt;&#10;    &lt;Rectangle Fill=&quot;DodgerBlue&quot; Stroke=&quot;Navy&quot; StrokeThickness=&quot;2&quot;&#10;               Width=&quot;100&quot; Height=&quot;70&quot; Canvas.Left=&quot;30&quot; Canvas.Top=&quot;30&quot;/&gt;&#10;    &lt;Ellipse Fill=&quot;LightCoral&quot; Stroke=&quot;DarkRed&quot; StrokeThickness=&quot;2&quot;&#10;             Width=&quot;100&quot; Height=&quot;70&quot; Canvas.Left=&quot;160&quot; Canvas.Top=&quot;30&quot;/&gt;&#10;    &lt;!-- 둥근 모서리 사각형 --&gt;&#10;    &lt;Rectangle Fill=&quot;Transparent&quot; Stroke=&quot;Green&quot; StrokeThickness=&quot;3&quot;&#10;               Width=&quot;80&quot; Height=&quot;80&quot; RadiusX=&quot;15&quot; RadiusY=&quot;15&quot;/&gt;&#10;    &lt;Ellipse Fill=&quot;Gold&quot; Width=&quot;60&quot; Height=&quot;60&quot;/&gt;  &lt;!-- 원 --&gt;&#10;&lt;/Canvas&gt;"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- 예제 2: Line -->
                    <GroupBox Header="Line (선)" Margin="0,0,0,15">
                        <StackPanel>
                            <Canvas Height="120" Background="#FFF3E0">
                                <Line X1="20" Y1="20" X2="200" Y2="20" Stroke="Black" StrokeThickness="2"/>
                                <Line X1="20" Y1="50" X2="200" Y2="100" Stroke="Blue" StrokeThickness="3"/>
                                <Line X1="250" Y1="20" X2="250" Y2="100" Stroke="Red" StrokeThickness="4"/>
                                <Line X1="300" Y1="60" X2="500" Y2="60" Stroke="Green" StrokeThickness="2"
                                      StrokeDashArray="5,3"/>
                            </Canvas>
                            <Expander Style="{StaticResource CodeExpanderStyle}">
                                <TextBox Style="{StaticResource CodeTextBoxStyle}"
